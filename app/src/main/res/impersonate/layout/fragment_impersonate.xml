<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cloud_0"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cloud_0"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_margin="@dimen/dimen_16dp"
            android:background="@color/transparent"
            android:contentDescription="@string/content_description_return_button"
            app:srcCompat="@drawable/ic_directions_arrow_left_brand_400_24_dp" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/bold_montserrat_20_cloud_800"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/super_link_impersonating_title" />

        <TextView
            android:id="@+id/tvSubtitle"
            style="@style/regular_montserrat_16_cloud_400_spacing_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            tools:text="@string/super_link_impersonating_subtitle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/cloud_200" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListEcs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_weight="1"
            tools:itemCount="5"
            tools:listitem="@layout/layout_impersonate_item_option_ec" />

    </LinearLayout>

    <br.com.cielo.libflue.loading.TokenLoadingViewFlui
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>