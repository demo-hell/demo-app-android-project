<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:context=".accessManager.customProfile.detail.AccessManagerCustomProfileDetailFragment">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingVertical="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_21dp"
        android:paddingEnd="@dimen/dimen_48dp"
        android:contentDescription="@string/back"
        app:srcCompat="@drawable/ic_left_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/Heading_600_regular_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:textColor="@color/brand_600"
        android:text="@string/access_manager_custom_profiles_detail_title"
        app:layout_constraintTop_toBottomOf="@id/btBackArrow" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubtitle"
        style="@style/Paragraph_400_regular_16_display_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:lineSpacingExtra="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/access_manager_custom_profiles_detail_subtitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerDetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:padding="@dimen/dimen_16dp"
        android:background="@drawable/background_display_50_radius_8"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitleProfile"
            style="@style/bold_montserrat_16_neutral_800_spacing_4"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Perfil Vendedor Ecommerce" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReadAccess"
            style="@style/semi_bold_montserrat_14_cloud_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleProfile"
            android:text="@string/access_manager_custom_profiles_detail_funcitions_read" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReadAccessDesc"
            style="@style/regular_montserrat_12_cloud_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvReadAccess"
            android:text="@string/access_manager_custom_profiles_detail_funcitions_read_desc" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReadWriteAccess"
            style="@style/semi_bold_montserrat_14_cloud_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvReadAccessDesc"
            android:text="@string/access_manager_custom_profiles_detail_funcitions_read_write" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReadWriteAccessDesc"
            style="@style/regular_montserrat_12_cloud_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvReadWriteAccess"
            android:text="@string/access_manager_custom_profiles_detail_funcitions_read_write_desc" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFreeAccess"
            style="@style/semi_bold_montserrat_14_cloud_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvReadWriteAccessDesc"
            android:text="@string/access_manager_custom_profiles_detail_funcitions_free" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFreeAccessDesc"
            style="@style/regular_montserrat_12_cloud_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFreeAccess"
            android:text="@string/access_manager_custom_profiles_detail_funcitions_free_desc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/transparent_50">
        <ProgressBar
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_16dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>