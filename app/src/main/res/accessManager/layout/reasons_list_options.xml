<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/radioGroupAccountType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_radius8dp_display_50"
        android:padding="@dimen/dimen_16dp"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbCheckingAccount"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_circle_radio_button"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_12dp"
            android:layoutDirection="ltr"
            android:text="@string/assigned_user_remove_reason_1" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbSavingsAccount"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_circle_radio_button"
            android:layoutDirection="ltr"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/assigned_user_remove_reason_2" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbPaymentAccount"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_circle_radio_button"
            android:layoutDirection="ltr"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/assigned_user_remove_reason_3" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>
