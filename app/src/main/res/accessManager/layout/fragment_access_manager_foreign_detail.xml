<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back"
        android:paddingVertical="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_21dp"
        android:paddingEnd="@dimen/dimen_48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left_arrow" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/regular_montserrat_20_brand_600_spacing_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/access_manager_foreign_detail_title"
        android:textColor="@color/brand_600"
        app:layout_constraintTop_toBottomOf="@id/btBackArrow" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgForeign"
        android:layout_width="@dimen/dimen_150dp"
        android:layout_height="@dimen/dimen_200dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:src="@tools:sample/avatars" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerInfo"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginVertical="@dimen/dimen_16dp"
        app:layout_constraintBottom_toTopOf="@id/containerActions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgForeign"
        app:layout_constraintVertical_bias="0">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvForeignName"
            style="@style/bold_ubuntu_16_display_500_spacing_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Joel Miller Sobrenome Grande" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lblPermission"
            style="@style/regular_ubuntu_12_cloud_400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/access_manager_foreign_detail_permission"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvForeignName" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icPerson"
            android:layout_width="@dimen/dimen_16dp"
            android:layout_height="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_user_foreign_300_24_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblPermission" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvForeignPermission"
            style="@style/bold_ubuntu_16_display_500_spacing_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:textColor="@color/display_400"
            app:layout_constraintBottom_toBottomOf="@id/icPerson"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/icPerson"
            app:layout_constraintTop_toTopOf="@id/icPerson"
            tools:text="Administrador" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lblPhone"
            style="@style/regular_ubuntu_12_cloud_400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/text_title_phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icPerson" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icPhone"
            android:layout_width="@dimen/dimen_16dp"
            android:layout_height="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:src="@drawable/ic_phone_black"
            android:tint="@color/cloud_300"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblPhone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvForeignPhone"
            style="@style/bold_ubuntu_16_display_500_spacing_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:textColor="@color/display_400"
            app:layout_constraintBottom_toBottomOf="@id/icPhone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/icPhone"
            app:layout_constraintTop_toTopOf="@id/icPhone"
            tools:text="(85) 99115-5443" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lblEmail"
            style="@style/regular_ubuntu_12_cloud_400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/access_manager_foreign_detail_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icPhone" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:src="@drawable/ic_documents_mail"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblEmail" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvForeignEmail"
            style="@style/bold_ubuntu_16_display_500_spacing_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:textColor="@color/display_400"
            app:layout_constraintBottom_toBottomOf="@id/icEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/icEmail"
            app:layout_constraintTop_toTopOf="@id/icEmail"
            tools:text="carol.castro@gmail.com" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/color_C5CED7"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnDecline"
            style="@style/bold_montserrat_center_16_spacing_2"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_48dp"
            android:background="@drawable/cielo_white_button_view_selector"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/deny"
            android:textAllCaps="false"
            android:textColor="@color/brand_400"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dividerVertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dividerVertical"
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_48dp"
            android:background="@color/color_C5CED7"
            app:layout_constraintEnd_toStartOf="@id/btnAccept"
            app:layout_constraintStart_toEndOf="@id/btnDecline"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAccept"
            style="@style/bold_montserrat_center_16_spacing_2"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_48dp"
            android:background="@drawable/cielo_white_button_view_selector"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/aprove"
            android:textAllCaps="false"
            android:textColor="@color/brand_400"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dividerVertical"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/white">
        <ProgressBar
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_16dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>