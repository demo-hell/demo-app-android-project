<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:context=".accessManager.assignRole.AccessManagerSelectRoleFragment">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingVertical="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_21dp"
        android:paddingEnd="@dimen/dimen_48dp"
        android:contentDescription="@string/back"
        app:srcCompat="@drawable/ic_left_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/Heading_600_regular_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:textColor="@color/brand_600"
        android:text="@string/access_manager_select_role_title"
        app:layout_constraintTop_toBottomOf="@id/btBackArrow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginVertical="@dimen/dimen_8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_24dp">

            <br.com.mobicare.cielo.accessManager.view.roleGroupCard.AccessManagerRoleGroupCard
                android:id="@+id/cardAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardType="ADMIN_DESC"
                app:layout_constraintTop_toTopOf="parent" />

            <br.com.mobicare.cielo.accessManager.view.roleGroupCard.AccessManagerRoleGroupCard
                android:id="@+id/cardReader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardType="READER_DESC"
                app:layout_constraintTop_toBottomOf="@id/cardAdmin" />

            <br.com.mobicare.cielo.accessManager.view.roleGroupCard.AccessManagerRoleGroupCard
                android:id="@+id/cardAnalyst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardType="ANALYST_DESC"
                app:layout_constraintTop_toBottomOf="@id/cardReader" />

            <br.com.mobicare.cielo.accessManager.view.roleGroupCard.AccessManagerRoleGroupCard
                android:id="@+id/cardTechnical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardType="TECHNICAL_DESC"
                app:layout_constraintTop_toBottomOf="@id/cardAnalyst" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>