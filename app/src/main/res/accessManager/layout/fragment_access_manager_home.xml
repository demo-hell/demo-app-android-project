<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".accessManager.home.AccessManagerHomeFragment">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back"
        android:paddingVertical="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_21dp"
        android:paddingEnd="@dimen/dimen_48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left_arrow" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/Heading_600_regular_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/access_manager_home_title"
        android:textColor="@color/brand_600"
        app:layout_constraintTop_toBottomOf="@id/btBackArrow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginVertical="@dimen/dimen_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_24dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubtitle"
                style="@style/Paragraph_400_regular_16_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:lineSpacingExtra="@dimen/dimen_8dp"
                android:text="@string/access_manager_home_desc"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:indeterminateTint="@color/brand_400"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />

            <br.com.mobicare.cielo.accessManager.view.roleGroupCard.AccessManagerRoleGroupCard
                android:id="@+id/cardForeign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardType="FOREIGN"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
                app:layout_goneMarginTop="@dimen/dimen_16dp"
                tools:visibility="visible" />

            <br.com.mobicare.cielo.accessManager.view.roleGroupCard.AccessManagerRoleGroupCard
                android:id="@+id/cardExpired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardType="EXPIRED"
                app:layout_constraintTop_toBottomOf="@id/cardForeign"
                app:layout_goneMarginTop="@dimen/dimen_16dp"
                tools:visibility="visible" />

            <br.com.mobicare.cielo.accessManager.view.roleGroupCard.AccessManagerRoleGroupCard
                android:id="@+id/cardNoRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardType="NONE"
                app:layout_constraintTop_toBottomOf="@id/cardExpired"
                app:layout_goneMarginTop="@dimen/dimen_16dp"
                tools:visibility="visible" />

            <br.com.mobicare.cielo.accessManager.view.roleGroupCard.AccessManagerRoleGroupCard
                android:id="@+id/cardAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:cardType="ADMIN"
                app:layout_constraintTop_toBottomOf="@id/cardNoRole"
                app:layout_goneMarginTop="@dimen/dimen_8dp"
                tools:visibility="visible" />

            <br.com.mobicare.cielo.accessManager.view.roleGroupCard.AccessManagerRoleGroupCard
                android:id="@+id/cardReader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardType="READER"
                app:layout_constraintTop_toBottomOf="@id/cardAdmin"
                tools:visibility="visible" />

            <br.com.mobicare.cielo.accessManager.view.roleGroupCard.AccessManagerRoleGroupCard
                android:id="@+id/cardAnalyst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_23dp"
                android:visibility="gone"
                app:cardType="ANALYST"
                app:layout_constraintTop_toBottomOf="@id/cardReader"
                tools:visibility="visible" />

            <br.com.mobicare.cielo.accessManager.view.roleGroupCard.AccessManagerRoleGroupCard
                android:id="@+id/cardCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_23dp"
                android:visibility="gone"
                app:cardType="CUSTOM"
                app:layout_constraintTop_toBottomOf="@id/cardAnalyst"
                tools:visibility="visible" />

            <br.com.mobicare.cielo.accessManager.view.roleGroupCard.AccessManagerRoleGroupCard
                android:id="@+id/carTechnical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_23dp"
                android:visibility="gone"
                app:cardType="TECHNICAL"
                app:layout_constraintTop_toBottomOf="@id/cardCustom"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addUserButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:background="@drawable/button_full_width_brand_selector"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Heading_500_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_add_user"
            android:drawablePadding="@dimen/dimen_5dp"
            android:text="@string/addUser"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>