<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:context=".accessManager.assignedUsers.AccessManagerAssignedUsersFragment">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingVertical="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_21dp"
        android:paddingEnd="@dimen/dimen_48dp"
        android:contentDescription="@string/back"
        app:srcCompat="@drawable/ic_left_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/Heading_600_regular_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:textColor="@color/brand_600"
        android:text="@string/access_manager_assigned_users_admin_title"
        app:layout_constraintTop_toBottomOf="@id/btBackArrow" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubtitle"
        style="@style/Paragraph_400_regular_16_display_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:lineSpacingExtra="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/access_manager_assigned_users_admin_desc"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btSelectAll"
        style="@style/Label_300_Alternate_14_brand_400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingHorizontal="@dimen/dimen_24dp"
        android:text="@string/access_manager_assign_role_select_all"
        android:textColor="@drawable/text_color_brand_400_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@id/rvUsers"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUsers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:paddingVertical="@dimen/dimen_16dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        tools:listitem="@layout/card_access_manager_user_item"
        app:layout_constraintTop_toBottomOf="@id/btSelectAll"
        app:layout_constraintBottom_toTopOf="@id/bt_continue"/>

    <br.com.cielo.libflue.button.v2.CieloButton
        android:id="@+id/bt_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_profile"
        android:textSize="@dimen/dimen_16sp"
        app:buttonEnabled="false"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginVertical="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/rvUsers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/transparent_50">
        <ProgressBar
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_16dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>