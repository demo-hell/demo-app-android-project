<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:context=".accessManager.addUser.AccessManagerAddUserEmailFragment">

<androidx.appcompat.widget.AppCompatImageButton
    android:id="@+id/btBackArrow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingVertical="@dimen/dimen_16dp"
    android:paddingStart="@dimen/dimen_21dp"
    android:paddingEnd="@dimen/dimen_48dp"
    android:contentDescription="@string/back"
    app:srcCompat="@drawable/ic_left_arrow"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/regular_montserrat_20_brand_600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:text="@string/access_manager_addUser_cpf_title"
        android:textColor="@color/brand_600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btBackArrow" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginVertical="@dimen/dimen_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_24dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubtitle"
                style="@style/regular_montserrat_16_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:lineSpacingExtra="@dimen/dimen_8dp"
                android:text="@string/access_manager_addUser_cpf_desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/cpftv"
                style="@style/regular_ubuntu_16_display_600"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:background="@drawable/bg_flui_rounded_border"
                android:imeOptions="actionDone"
                android:paddingVertical="@dimen/dimen_6dp"
                android:paddingHorizontal="@dimen/dimen_8dp"
                app:hint="@string/cpf_hint"
                tools:hint="@string/cpf_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
                app:layout_goneMarginEnd="@dimen/dimen_16dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cpftvValueErrorLabel"
                style="@style/regular_ubuntu_12_danger_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:drawablePadding="@dimen/dimen_5dp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_alert_red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cpftv"
                tools:text="@string/invalid_cpf"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbWithoutCpf"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@drawable/checkbox_selector"
                android:button="@null"
                app:layout_constraintTop_toBottomOf="@+id/cpftvValueErrorLabel"
                app:layout_constraintStart_toStartOf="parent"/>

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/tvWithoutCpfDescription"
                style="@style/regular_ubuntu_16_display_400"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@+id/cpftvValueErrorLabel"
                app:layout_constraintStart_toEndOf="@id/cbWithoutCpf"
                android:text="@string/access_manager_cpf_foreign_description" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:indeterminateTint="@color/brand_400"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/nextButtonAddUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_button_disabled"
        android:fontFamily="@font/montserrat"
        android:text="@string/access_manager_addUser_type"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"
        android:clickable="false"
        android:enabled="false" />

</androidx.constraintlayout.widget.ConstraintLayout>