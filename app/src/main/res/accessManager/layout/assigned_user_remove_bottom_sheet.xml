<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingVertical="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_21dp"
        android:paddingEnd="@dimen/dimen_48dp"
        android:contentDescription="@string/content_description_return_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left_arrow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/dimen_50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBack">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_36dp"
                android:paddingHorizontal="@dimen/dimen_16dp"
                app:srcCompat="@drawable/ic_remove_assigned_user"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/Heading_600_bold_18_brand_600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/dimen_32dp"
                android:text="@string/assigned_user_remove_title"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <include
                android:id="@+id/reasonsList"
                layout="@layout/reasons_list_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginHorizontal="@dimen/dimen_8dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <TextView
                android:id="@+id/tvMessage"
                style="@style/label_16_display_400_ubuntu_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/assigned_user_remove_message_cnpj"
                app:layout_constraintTop_toBottomOf="@+id/reasonsList" />

            <TextView
                android:id="@+id/tvMessageConfirmation"
                style="@style/label_16_display_400_ubuntu_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/assigned_user_remove_message_confirm"
                app:layout_constraintTop_toBottomOf="@+id/tvMessage" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReturn"
                style="@style/label_18_brand_400_montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_38dp"
                android:background="@color/transparent"
                android:padding="@dimen/dimen_9dp"
                android:text="@string/cancelar"
                android:textColor="@color/brand_400"
                app:layout_constraintTop_toBottomOf="@+id/tvMessageConfirmation" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRemoveProceed"
                style="@style/Label_montserrat_regular_18_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brand_400"
                android:padding="@dimen/dimen_9dp"
                android:text="@string/btn_remover"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnReturn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>