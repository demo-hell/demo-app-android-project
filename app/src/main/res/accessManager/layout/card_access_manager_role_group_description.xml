<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:context=".accessManager.addUser.AccessManagerAddUserTypeFragment">

    <RadioGroup
        android:id="@+id/radioGroupAccountType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbAdmin"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_solid_white_border_color_c5ced7"
            android:button="@drawable/custom_selector_radio_button"
            android:checked="true"
            android:layoutDirection="rtl"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_20dp"
            android:text="@string/access_manager_role_group_card_admin_description_subtitle" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbReader"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@drawable/shape_solid_white_border_color_c5ced7"
            android:button="@drawable/custom_selector_radio_button"
            android:layoutDirection="rtl"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_20dp"
            android:text="@string/access_manager_role_group_card_reader_description_subtitle" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbAnalyst"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@drawable/shape_solid_white_border_color_c5ced7"
            android:button="@drawable/custom_selector_radio_button"
            android:layoutDirection="rtl"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_20dp"
            android:text="@string/access_manager_role_group_card_analyst_description_subtitle" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbTechnical"
            style="@style/regular_ubuntu_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@drawable/background_white_stroke_cloud_200_2dp_radius_8dp"
            android:button="@drawable/custom_selector_radio_button"
            android:layoutDirection="rtl"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_20dp"
            android:text="@string/access_manager_role_group_card_technical_description_subtitle" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>