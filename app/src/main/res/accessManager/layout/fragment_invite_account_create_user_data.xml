<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@android:color/white">

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnNext">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingVertical="@dimen/dimen_16dp"
                android:paddingEnd="@dimen/dimen_48dp"
                android:contentDescription="@string/back"
                app:srcCompat="@drawable/ic_left_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/Heading_600_regular_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:textColor="@color/brand_600"
                android:text="@string/access_manager_whats_your_cpf"
                app:layout_constraintTop_toBottomOf="@+id/btBackArrow" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubtitle"
                style="@style/Paragraph_400_Regular_16_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:lineSpacingExtra="@dimen/dimen_8sp"
                android:text="@string/access_manager_information_needed_message"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etTypedValue"
                style="@style/Paragraph_700_regular_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:background="@color/transparent"
                android:textColor="@color/display_600"
                android:imeOptions="actionDone"
                android:hint="@string/text_pix_insert_key_transfer_hint_document"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTypedValueErrorLabel"
                style="@style/Label_200_Regular_12_Danger_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2dp"
                app:drawableStartCompat="@drawable/ic_close_round_red"
                android:drawablePadding="@dimen/dimen_5dp"
                android:text="@string/id_onboarding_update_cpf_error"
                tools:visibility="visible"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/etTypedValue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        style="@style/Heading_500_18"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:background="@drawable/button_full_width_brand_selector"
        android:text="@string/text_next_label"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>