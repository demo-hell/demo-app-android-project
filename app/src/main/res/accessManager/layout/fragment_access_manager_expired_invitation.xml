<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".accessManager.expired.AccessManagerExpiredInvitationFragment">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back"
        android:paddingVertical="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_21dp"
        android:paddingEnd="@dimen/dimen_48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left_arrow" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/Heading_600_regular_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/access_manager_resend_invite"
        android:textColor="@color/brand_600"
        app:layout_constraintTop_toBottomOf="@id/btBackArrow" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubtitle"
        style="@style/Paragraph_400_regular_16_display_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:lineSpacingExtra="@dimen/dimen_8dp"
        android:text="@string/access_manager_resend_invite_title"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivUsersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_21dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:srcCompat="@drawable/ic_users" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUsersCount"
        style="@style/Label_200_Bold_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:textColor="@color/display_400"
        app:layout_constraintBottom_toBottomOf="@id/ivUsersCount"
        app:layout_constraintStart_toEndOf="@id/ivUsersCount"
        app:layout_constraintTop_toTopOf="@id/ivUsersCount"
        tools:text="0/60" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btSelectAll"
        style="@style/Label_300_Alternate_14_brand_400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingHorizontal="@dimen/dimen_24dp"
        android:text="@string/access_manager_assign_role_select_all"
        android:textColor="@drawable/text_color_brand_400_selector"
        android:translationZ="@dimen/dimen_4dp"
        app:layout_constraintBottom_toBottomOf="@id/ivUsersCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivUsersCount" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintBottom_toTopOf="@id/btnDeleteInvite"
        app:layout_constraintTop_toBottomOf="@id/btSelectAll">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerExpiredInvites"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvInvites"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:paddingTop="@dimen/dimen_8dp"
                app:layout_constraintBottom_toTopOf="@id/loadingMore"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp"
                tools:listitem="@layout/card_access_manager_user_expired_invitation_item" />

            <ProgressBar
                android:id="@+id/loadingMore"
                android:layout_width="@dimen/dimen_32dp"
                android:layout_height="@dimen/dimen_32dp"
                android:layout_marginVertical="@dimen/dimen_24dp"
                android:theme="@style/progress_bar_blue"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvInvites"
                app:layout_constraintVertical_bias="1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivNoInvites"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_120dp"
                android:layout_marginTop="@dimen/dimen_40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_link_pgto_empty_state" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNoInvites"
                style="@style/Paragraph_500_regular_16_display_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:gravity="center"
                android:text="@string/access_manager_resend_invite_no_invites_message"
                app:layout_constraintTop_toBottomOf="@+id/ivNoInvites" />

            <br.com.cielo.libflue.button.CieloRegularBlueButton
                android:id="@+id/btnTryAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@color/blue_0774E7"
                android:text="@string/text_recharge"
                app:layout_constraintTop_toBottomOf="@+id/tvNoInvites" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/grey_C5CED7"
        app:layout_constraintBottom_toTopOf="@id/btnDeleteInvite"
        app:layout_constraintTop_toBottomOf="@+id/containerView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnDeleteInvite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/line_view"
        app:layout_constraintBottom_toTopOf="@id/btnResendInvite">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnTextDeleteInvite"
            style="@style/Heading_500_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/access_manager_delete_invite"
            android:textColor="@color/red_DC392A"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnResendInvite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:background="@drawable/button_full_width_brand_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDeleteInvite">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnTextResendInvite"
            style="@style/Heading_500_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/access_manager_resend_invite"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>