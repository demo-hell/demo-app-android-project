<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnNext"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back"
                android:paddingVertical="@dimen/dimen_16dp"
                android:paddingEnd="@dimen/dimen_48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_left_arrow" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/Heading_600_regular_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/access_manager_verify_your_data"
                android:textColor="@color/brand_600"
                app:layout_constraintTop_toBottomOf="@+id/btBackArrow" />

            <LinearLayout
                android:id="@+id/llUserData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@drawable/rounded_border_gray"
                android:orientation="vertical"
                android:padding="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvUserDataTitle"
                    style="@style/Paragraph_200_brand_600"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/access_manager_user_data"
                    android:textAllCaps="true"
                    android:textColor="@color/brand_600"
                    app:layout_constraintTop_toBottomOf="@+id/btBackArrow" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCPF"
                    style="@style/label_12_display_400_ubuntu_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_28dp"
                    android:text="@string/access_manager_cpf"
                    android:textAllCaps="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCPFNumber"
                    style="@style/label_16_display_400_ubuntu_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:drawableStart="@drawable/ic_documents_cnh"
                    android:drawablePadding="@dimen/dimen_8dp"
                    android:textAllCaps="true"
                    tools:text="***.123.456-**" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvName"
                    style="@style/regular_ubuntu_12_cloud_400"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_28dp"
                    android:text="@string/nome" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvForeignName"
                    style="@style/bold_ubuntu_16_cloud_400"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:drawableStart="@drawable/ic_documents_cnh"
                    android:drawablePadding="@dimen/dimen_8dp"
                    tools:text="Joel Miller" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEmail"
                    style="@style/label_12_display_400_ubuntu_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_28dp"
                    android:text="@string/access_manager_e_mail" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEmailData"
                    style="@style/label_16_display_400_ubuntu_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:drawableStart="@drawable/ic_documents_mail"
                    android:drawablePadding="@dimen/dimen_8dp"
                    tools:text="darth*****@*****.com.br" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDataWarning"
                    style="@style/Label_200_Regular_12_Brand_600"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:background="@drawable/round_square_banner_shape"
                    android:drawableStart="@drawable/ic_circle_alert_blue"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:lineSpacingExtra="@dimen/dimen_4sp"
                    android:padding="@dimen/dimen_12dp"
                    android:paddingStart="@dimen/dimen_14dp"
                    android:text="@string/access_manager_verify_your_data_informative" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        style="@style/Heading_500_18"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:background="@drawable/button_full_width_brand_selector"
        android:text="@string/text_next_label"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>