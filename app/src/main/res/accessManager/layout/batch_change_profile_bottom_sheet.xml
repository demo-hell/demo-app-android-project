<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:paddingBottom="@dimen/dimen_16dp">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/ic_drag_bottom_sheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/bold_montserrat_20_cloud_800"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:text="@string/batch_profile_change_bs_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubtitle"
                style="@style/regular_montserrat_16_cloud_600"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/batch_profile_change_bs_subtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clUserData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvSubtitle">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvProfileType"
                    style="@style/regular_ubuntu_16_cloud_500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:text="@string/assigned_user_bs_profile_type"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/containerProfileType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:background="@drawable/shape_solid_white_border_color_c5ced7"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvProfileType">

                    <RadioGroup
                        android:id="@+id/rgProfileType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_16dp"
                        tools:layout_constraintBottom_toBottomOf="parent"
                        tools:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rbAdmin"
                            style="@style/regular_ubuntu_16_display_500"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:button="@drawable/custom_circle_radio_button"
                            android:checked="true"
                            android:layoutDirection="ltr"
                            android:paddingHorizontal="@dimen/dimen_16dp"
                            android:paddingVertical="@dimen/dimen_12dp"
                            android:text="@string/admin_rb" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rbReader"
                            style="@style/regular_ubuntu_16_display_500"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:button="@drawable/custom_circle_radio_button"
                            android:layoutDirection="ltr"
                            android:paddingHorizontal="@dimen/dimen_16dp"
                            android:paddingVertical="@dimen/dimen_12dp"
                            android:text="@string/reader_rb" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rbAnalyst"
                            style="@style/regular_ubuntu_16_display_500"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:button="@drawable/custom_circle_radio_button"
                            android:layoutDirection="ltr"
                            android:paddingHorizontal="@dimen/dimen_16dp"
                            android:paddingVertical="@dimen/dimen_12dp"
                            android:text="@string/analyst_rb" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rbTechnical"
                            style="@style/regular_ubuntu_16_display_500"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:button="@drawable/custom_circle_radio_button"
                            android:layoutDirection="ltr"
                            android:paddingHorizontal="@dimen/dimen_16dp"
                            android:paddingVertical="@dimen/dimen_12dp"
                            android:text="@string/technical_rb" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rbCustomProfile"
                            style="@style/regular_ubuntu_16_display_500"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:button="@drawable/custom_circle_radio_button"
                            android:layoutDirection="ltr"
                            android:visibility="gone"
                            android:paddingHorizontal="@dimen/dimen_16dp"
                            android:paddingVertical="@dimen/dimen_12dp"
                            android:text="@string/customProfile_rb" />

                        <br.com.cielo.libflue.button.v2.CieloButton
                            android:id="@+id/btnSaveChanges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:text="@string/save_changes"
                            android:textSize="@dimen/dimen_16sp"
                            android:padding="@dimen/dimen_4dp"
                            app:buttonEnabled="false" />

                        <br.com.cielo.libflue.button.v2.CieloButton
                            android:id="@+id/btnSelectCustomProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:text="@string/select_custom_profile"
                            android:textSize="@dimen/dimen_16sp"
                            android:visibility="gone"
                            android:padding="@dimen/dimen_4dp"
                            app:buttonType="outlined"
                            tools:visibility="visible" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>