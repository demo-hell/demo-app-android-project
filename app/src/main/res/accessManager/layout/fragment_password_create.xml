<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnNext"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back"
                android:paddingVertical="@dimen/dimen_16dp"
                android:paddingStart="@dimen/dimen_21dp"
                android:paddingEnd="@dimen/dimen_48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_left_arrow" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/Heading_600_regular_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/access_manager_create_password"
                android:textColor="@color/brand_600"
                app:layout_constraintTop_toBottomOf="@+id/btBackArrow" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubtitle"
                style="@style/Paragraph_200_regular_12_display_600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16dp"
                android:background="@drawable/round_square_banner_shape"
                android:drawableLeft="@drawable/ic_security_lock"
                android:drawablePadding="@dimen/dimen_12dp"
                android:lineSpacingExtra="@dimen/dimen_8sp"
                android:padding="@dimen/dimen_12dp"
                android:paddingEnd="@dimen/dimen_12dp"
                android:text="@string/access_manager_password_tips"
                android:textColor="@color/brand_600"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLabel"
                style="@style/Heading_300_regular_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_28dp"
                android:text="@string/access_manager_type_password"
                android:textColor="@color/brand_600"
                app:layout_constraintTop_toBottomOf="@+id/tvSubtitle" />

            <br.com.cielo.libflue.inputtext.CieloPasswordTextInputView
                android:id="@+id/tiPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:maxLines="1"
                android:padding="@dimen/dimen_16dp"
                app:disableCopyToClipboard="true"
                app:hint="@string/access_manager_create_password_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLabel" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTypedValueErrorLabel"
                style="@style/Label_200_Regular_12_Danger_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:drawablePadding="@dimen/dimen_5dp"
                android:text="@string/access_manager_password_six_digits"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_alert_red"
                app:layout_constraintTop_toBottomOf="@id/tiPassword"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvConfirmation"
                style="@style/Heading_300_regular_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_28dp"
                android:text="@string/access_manager_type_confirmation"
                android:textColor="@color/brand_600"
                app:layout_constraintTop_toBottomOf="@+id/tiPassword" />

            <br.com.cielo.libflue.inputtext.CieloPasswordTextInputView
                android:id="@+id/tiConfirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:maxLines="1"
                android:padding="@dimen/dimen_16dp"
                app:disableCopyToClipboard="true"
                app:hint="@string/access_manager_repeat_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvConfirmation" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        style="@style/Heading_500_18"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:background="@drawable/button_full_width_brand_selector"
        android:enabled="false"
        android:text="@string/text_next_label"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>