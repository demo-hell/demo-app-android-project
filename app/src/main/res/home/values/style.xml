<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="grid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alignmentMode">alignMargins</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:columnCount">3</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="card_servico">
        <item name="cardElevation">5dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="card_servico_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="card_servico_icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="card_servico_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#263238</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="typeface">MuseoSans-500.ttf</item>
    </style>

</resources>
