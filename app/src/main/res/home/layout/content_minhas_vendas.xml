<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_minhas_vendas"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/ic_menu_vendas" />

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/home_minhas_vendas_title"
            android:textColor="@color/text_color_263238"
            android:textSize="16sp"
            app:typeface="Museo700-Regular.ttf" />

        <LinearLayout
            android:id="@+id/layout_home_minnhas_vendas_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:clickable="true"
            android:orientation="horizontal">

            <!--<ImageView-->
                <!--android:id="@+id/button_home_minhas_vendas_atualizar"-->
                <!--android:layout_width="24dp"-->
                <!--android:layout_height="24dp"-->
                <!--android:layout_marginRight="8dp"-->
                <!--app:srcCompat="@drawable/ic_refresh" />-->


            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_minhas_vendas_atualizar"
                android:textColor="@color/purple"
                android:textSize="14sp"
                app:typeface="Museo700-Regular.ttf" />


        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_minhas_vendas_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout android:id="@+id/container_minhas_vendas_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                        android:id="@+id/textview_minhas_vendas_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/blue"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        app:typeface="MuseoSans-700.ttf" />

                    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                        android:id="@+id/textview_minhas_vendas_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_light"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        app:typeface="MuseoSans-500.ttf" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_recycleview_minhas_vendas_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#33838383" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="16dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp">

                        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                            android:id="@+id/textview_minhas_vendas_ultimas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_0dp"
                            android:textColor="@color/text_color_263238"
                            android:textSize="12sp"
                            app:typeface="Museo700-Regular.ttf" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_extrato_minhas_vendas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="false"
                            android:clipToPadding="false" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <include layout="@layout/card_error"/>

            <include layout="@layout/content_ver_mais"/>

        </LinearLayout>

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progress_minhas_vendas_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:visibility="gone" />


    </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>
