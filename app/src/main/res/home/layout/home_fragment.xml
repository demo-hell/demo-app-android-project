<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layoutDescription="@xml/header_views_layout_scene">

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:background="@drawable/background_header_home"
        app:layout_constraintBottom_toBottomOf="@id/tv_client_ec_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lottieAnimationContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/whatsappContainer"
        app:layout_constraintEnd_toEndOf="@id/whatsappContainer"
        app:layout_constraintStart_toStartOf="@id/whatsappContainer"
        app:layout_constraintTop_toTopOf="@id/whatsappContainer">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationOnboardContactCielo"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="@dimen/dimen_48dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/contact_cielo_onboard_whatsapp_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="lottie/contact_cielo_onboard_whatsapp.json"
            app:lottie_loop="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/whatsappContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/actionBarItemBackground"
        android:minHeight="?attr/actionBarSize"
        android:padding="@dimen/dimen_4dp"
        app:layout_constraintBottom_toTopOf="@id/tv_client_name_header"
        app:layout_constraintEnd_toStartOf="@id/helpContainer"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/whatsapp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_whatsapp_small" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/helpContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/actionBarItemBackground"
        android:minHeight="?attr/actionBarSize"
        android:padding="@dimen/dimen_4dp"
        app:layout_constraintBottom_toTopOf="@id/tv_client_name_header"
        app:layout_constraintEnd_toStartOf="@+id/notificationContainer"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/helpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_help_center_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_help"
            app:tint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notificationContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/actionBarItemBackground"
        android:minHeight="?attr/actionBarSize"
        android:padding="@dimen/dimen_4dp"
        app:layout_constraintBottom_toTopOf="@id/tv_client_name_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_notification_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_notification_button"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_bell" />

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/text_notification_count"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:background="@drawable/circle_red_notification"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.26999998"
            app:typeface="MuseoSans-500.ttf" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/switchEC_click_area"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        android:focusable="false"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintEnd_toStartOf="@id/ecSwitchButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/helpButton" />

    <TextView
        android:id="@+id/tv_client_name_header"
        style="@style/Heading_700_montserrat_bold_14_white"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@id/ecSwitchButton"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Olá, CASA DO SILENCIO" />

    <ImageView
        android:id="@+id/iv_store"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toTopOf="@+id/tv_client_ec_header"
        app:srcCompat="@drawable/ic_store_home" />

    <TextView
        android:id="@+id/tv_client_ec_header"
        style="@style/Label_montserrat_regular_12_white"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="@dimen/dimen_20dp"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@id/ecSwitchButton"
        app:layout_constraintStart_toEndOf="@id/iv_store"
        app:layout_constraintTop_toBottomOf="@id/tv_client_name_header"
        tools:text="Número de EC: 1234568" />

    <Button
        android:id="@+id/ecSwitchButton"
        style="@style/Label_300_Alternate_regular_14_Brand_400"
        android:layout_width="@dimen/dimen_61dp"
        android:layout_height="@dimen/dimen_32dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_24dp"
        android:background="@drawable/shape_round_square_button"
        android:contentDescription="@string/ec_switch_button_description_home"
        android:text="@string/ec_switch_button_label_home"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/helpButton"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedHomeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_60dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearMainHomeContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linearLayoutBannerRRandArv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <include layout="@layout/layout_mfa_ec_status_alert" />

                        <include
                            android:id="@+id/customProfileIndicator"
                            layout="@layout/layout_custom_profile_indicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <br.com.mobicare.cielo.idOnboarding.updateUser.homeCard.IDOnboardingHomeCardStatusView
                            android:id="@+id/cardIdOnboardingStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="gone" />

                        <include
                            android:id="@+id/userStatus"
                            layout="@layout/item_verify_status_user" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progress_registration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/container_home_services"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/linearLayoutBannerRRandArv" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRequiresUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/yellow_100"
                        app:cardCornerRadius="@dimen/dimen_12dp"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@id/linearLayoutBannerRRandArv"
                        app:cardElevation="@dimen/dimen_0dp"
                        >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/dimen_16dp"
                            android:paddingHorizontal="@dimen/dimen_12dp">

                            <ImageView
                                android:id="@+id/iv_alert"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:importantForAccessibility="no"
                                android:src="@drawable/ic_warning_update"
                                app:layout_constraintBottom_toBottomOf="@id/tv_message"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.07999998" />

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_16dp"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:text="@string/finish_your_registration"
                                android:textColor="@color/contrast_1000"
                                android:textSize="@dimen/dimen_14sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/iv_alert"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_message"
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/tv_title"
                                app:layout_constraintStart_toStartOf="@id/tv_title"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/contrast_1000"
                                android:textSize="@dimen/dimen_14sp"
                                android:layout_marginTop="@dimen/dimen_6dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="@string/message_registration_update"
                                />

                            <Button
                                android:id="@+id/bt_finish_registration"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_35dp"
                                style="@style/semibold_montserrat_14_constrast_1000"
                                app:layout_constraintStart_toStartOf="@id/tv_message"
                                app:layout_constraintTop_toBottomOf="@id/tv_message"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text="@string/finish_registration"
                                android:layout_marginTop="@dimen/dimen_16dp"
                                android:paddingHorizontal="@dimen/dimen_16dp"
                                android:background="@drawable/background_button_finish"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_home_services"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dimen_24dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardRequiresUpdate">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_home_services_title"
                            style="@style/Heading_400_Bold_16_display_400"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dimen_16dp"
                            android:text="@string/home_main_services"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="RtlSymmetry" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_services_home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/dimen_12dp"
                            app:layout_constraintTop_toBottomOf="@+id/tv_home_services_title"
                            tools:itemCount="1"
                            tools:listitem="@layout/item_services_home" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/dividerView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_8dp"
                        android:background="@color/display_50"
                        app:layout_constraintTop_toBottomOf="@id/container_home_services" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/containerSales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/dimen_6dp"
                        app:layout_constraintTop_toBottomOf="@+id/dividerView">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabLayoutSales"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingTop="@dimen/dimen_8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tabBackground="@drawable/view_pager_tab_indicator_selector"
                            app:tabGravity="fill"
                            app:tabIndicator="@android:color/transparent"
                            app:tabIndicatorFullWidth="true"
                            app:tabSelectedTextColor="@color/color_017CEB"
                            app:tabTextAppearance="@style/ConciliadorTabAppearance"
                            app:tabTextColor="@color/grey_8A99A8" />

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPagerSales"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:layout_marginBottom="@dimen/dimen_1dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tabLayoutSales" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <FrameLayout
                        android:id="@+id/frameInteractLeaderboardBannersOffers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/containerSales" />

                    <FrameLayout
                        android:id="@+id/postecipadoSummaryContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_24dp"
                        app:layout_constraintTop_toBottomOf="@id/frameInteractLeaderboardBannersOffers" />

                    <FrameLayout
                        android:id="@+id/arvAlertContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/postecipadoSummaryContainer" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/containerCieloFarol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_6dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dimen_16dp"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@+id/arvAlertContainer">

                        <TextView
                            android:id="@+id/tvCieloFarolTitle"
                            style="@style/bold_montserrat_14_cloud_500"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_24dp"
                            android:layout_marginEnd="@dimen/dimen_16dp"
                            android:text="@string/cielo_farol_title"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvCieloFarolDescription"
                            style="@style/regular_montserrat_14_cloud_400_spacing_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_9dp"
                            android:layout_marginEnd="@dimen/dimen_16dp"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/tvCieloFarolTitle"
                            tools:text="Seus clientes gastaram em média 22% a mais que os clientes dos concorrentes." />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvCieloFarol"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_24dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/dimen_40dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvCieloFarolDescription"
                            tools:ignore="RtlSymmetry"
                            tools:itemCount="3"
                            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/cielo_farol_item" />

                        <br.com.cielo.libflue.button.CieloRegularSecondaryButton
                            android:id="@+id/btCieloFarol"
                            style="@style/regular_montserrat_16_brand_600"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:layout_marginEnd="@dimen/dimen_16dp"
                            android:contentDescription="@string/access_cielo_farol_content_description"
                            android:text="@string/access_cielo_farol"
                            app:layout_constraintTop_toBottomOf="@+id/rvCieloFarol" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/dividerView3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_8dp"
                        android:layout_marginTop="@dimen/dimen_24dp"
                        android:background="@color/display_50"
                        app:layout_constraintTop_toBottomOf="@id/containerCieloFarol" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clContainerTaxPerBrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dividerView3">

                        <TextView
                            android:id="@+id/tvTaxTitle"
                            style="@style/Heading_300_bold_14_display_500"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dimen_16dp"
                            android:layout_marginTop="@dimen/dimen_28dp"
                            android:text="@string/fee_per_brand_title"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvFees"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/dimen_16dp"
                            android:paddingBottom="@dimen/dimen_40dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvTaxTitle"
                            tools:ignore="RtlSymmetry"
                            tools:itemCount="3"
                            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/brands_tax_home_item" />

                        <br.com.cielo.libflue.button.CieloRegularSecondaryButton
                            android:id="@+id/btFeeAndPlans"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dimen_14dp"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:text="@string/fee_per_brand_action_button"
                            app:layout_constraintTop_toBottomOf="@+id/rvFees" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/frameInteractRectangleBannersOffers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@+id/frameProdutos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8dp" />

                <ProgressBar
                    android:id="@+id/progressFragmentsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </LinearLayout>

            <include
                android:id="@+id/includeLockedProfile"
                layout="@layout/layout_locked_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dimen_20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dimen_20dp" />

</androidx.constraintlayout.motion.widget.MotionLayout>