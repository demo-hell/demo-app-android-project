<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_solid_success_50_rounded_8dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerTotalSalesTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_14dp"
        android:layout_marginVertical="@dimen/dimen_12dp"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginEnd="@dimen/dimen_60dp"
        android:background="@color/display_100"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_auto_start="true"
        app:shimmer_base_alpha="1"
        app:shimmer_highlight_alpha="0"
        shimmer:duration="800" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerTotalSalesValue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginVertical="@dimen/dimen_12dp"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginEnd="@dimen/dimen_180dp"
        android:background="@color/display_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerTotalSalesTitle"
        app:shimmer_auto_start="true"
        app:shimmer_base_alpha="1"
        app:shimmer_highlight_alpha="0"
        shimmer:duration="800" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/loadingShimmerTodaySaleGroupViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="shimmerTotalSalesTitle, shimmerTotalSalesValue"/>

</androidx.constraintlayout.widget.ConstraintLayout>
