<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_solid_success_50_rounded_8dp"
    android:padding="@dimen/dimen_12dp">

    <TextView
        android:id="@+id/tvTotalSalesQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Label_200_Regular_12_Display_500"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Total de vendas hoje â€¢ 56 vendas aprovadas:"/>

    <TextView
        android:id="@+id/tvTotalSalesValue"
        style="@style/Label_600_bold_20_Success_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivCheck"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:drawablePadding="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalSalesQuantity"
        tools:text="R$ 154.631,67" />

    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/tvTotalSalesValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTotalSalesValue"
        app:srcCompat="@drawable/ic_success_new" />

</androidx.constraintlayout.widget.ConstraintLayout>