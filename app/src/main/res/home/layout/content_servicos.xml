                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@drawable/bg_card">

                <LinearLayout style="@style/card_servico_layout">

                    <ImageView
                        style="@style/card_servico_icon"
                        app:srcCompat="@drawable/ic_user_cards"/>

                    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                        android:id="@+id/textMeusCartoes"
                        style="@style/card_servico_label"
                        android:text="@string/text_my_cards_title_ln" />

                </LinearLayout>
            </RelativeLayout>
        </br.com.mobicare.cielo.home.presentation.servicos.ui.fragment.CustomCardView>

        <br.com.mobicare.cielo.home.presentation.servicos.ui.fragment.CustomCardView
            android:id="@+id/card_view_servicos_receba_mais"
            android:visibility="gone"
            style="@style/card_servico">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@drawable/bg_card">

                <LinearLayout style="@style/card_servico_layout">

                    <ImageView
                        style="@style/card_servico_icon"
                        app:srcCompat="@drawable/ic_user_cards"/>

                    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                        android:id="@+id/textRecebaMais"
                        style="@style/card_servico_label"
                        android:text="@string/text_receba_mais_title_ln" />

                </LinearLayout>
            </RelativeLayout>
        </br.com.mobicare.cielo.home.presentation.servicos.ui.fragment.CustomCardView>



    </GridLayout>

</LinearLayout>
