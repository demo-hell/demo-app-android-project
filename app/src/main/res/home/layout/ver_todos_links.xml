<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:duplicateParentState="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearSeeMoreContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="@string/ver_todos_links"
                android:textColor="@color/color_017CEB"
                android:textSize="14sp"
                app:typeface="MuseoSans-700.ttf" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>