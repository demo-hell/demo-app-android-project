<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_140dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvErrorInfo"
        style="@style/Paragraph_300_regular_14_display_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/error_on_show_fees"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btTryAgain"
        style="@style/Label_300_Alternate_14_brand_400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:drawablePadding="@dimen/dimen_8dp"
        android:text="@string/bt_reload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvErrorInfo"
        app:drawableEndCompat="@drawable/ic_refresh_new" />

</androidx.constraintlayout.widget.ConstraintLayout>