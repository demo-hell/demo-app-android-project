<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:id="@+id/layout_item_extrato_time_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/layout_time_line_detail"
            android:layout_width="match_parent"
            android:paddingTop="14dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout_time_line"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layout_item_extrato_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="15dp">

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/textview_item_extrato_timeline_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_263238"
                    android:textSize="12sp"
                    app:typeface="MuseoSans-500.ttf"
                    tools:text="16:09"
                    />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/textview_item_extrato_timeline_payment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_item_extrato_timeline_hour"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text_color_263238"
                    android:textSize="12sp"
                    app:typeface="MuseoSans-500.ttf"
                    tools:text="DÃ©bito"
                    />


                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/textview_item_extrato_timeline_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textview_item_extrato_timeline_hour"
                    android:gravity="right"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_color_263238"
                    android:textSize="12sp"
                    app:typeface="MuseoSans-700.ttf"
                    tools:text="R$ 9,50"
                    />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/textview_item_extrato_timeline_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_item_extrato_timeline_value"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/green"
                    android:textSize="12sp"
                    app:typeface="MuseoSans-700.ttf"
                    tools:text="Aprovada"/>

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_time_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/layout_time_line_detail"
            android:layout_alignBottom="@+id/layout_time_line_detail"
            android:layout_marginLeft="@dimen/dimen_0dp"
            android:layout_marginRight="8dp">

            <View
                android:id="@+id/view_item_extrato_time_line_top_vertical"
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_centerHorizontal="true"
                android:alpha="0.2"
                android:background="@color/gray_light" />

            <ImageView
                android:id="@+id/imageview_item_extrato_timeline_circle"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_below="@+id/view_item_extrato_time_line_top_vertical"
                android:layout_marginTop="8dp"
                android:contentDescription="@null"
                android:background="@drawable/circle_gray"/>

            <View
                android:id="@+id/view_item_extrato_time_line_vertical"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageview_item_extrato_timeline_circle"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:alpha="0.2"
                android:background="@color/gray_light" />

        </RelativeLayout>


    </RelativeLayout>


</layout>