<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/dimen_12dp"
    android:paddingBottom="@dimen/dimen_12dp">

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/display_200" />

    <TextView
        android:id="@+id/tvActionButton"
        style="@style/Label_300_Alternate_14_brand_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:text="@string/bt_text_see_more_sales"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider3"/>

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:srcCompat="@drawable/ic_arrow"
        app:tint="@color/brand_400" />


</androidx.constraintlayout.widget.ConstraintLayout>