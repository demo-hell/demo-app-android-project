<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_180dp"
    android:layout_height="wrap_content">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loadingShimmerFeeAndPlans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_auto_start="false"
        app:shimmer_base_alpha="1"
        app:shimmer_highlight_alpha="0"
        shimmer:duration="800">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/viewBrandLoading"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_gravity="center"
                android:background="@drawable/background_solid_display_100_rounded_4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewBrandNameLoading"
                android:layout_width="@dimen/dimen_96dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:background="@drawable/background_solid_display_100_rounded_4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewBrandLoading" />

            <View
                android:id="@+id/viewCreditTitleLoading"
                android:layout_width="@dimen/dimen_52dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:background="@drawable/background_solid_display_100_rounded_4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewBrandNameLoading" />

            <View
                android:id="@+id/viewCreditValueLoading"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:background="@drawable/background_solid_display_100_rounded_4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewBrandNameLoading" />

            <View
                android:id="@+id/viewDebitTitleLoading"
                android:layout_width="@dimen/dimen_96dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginVertical="@dimen/dimen_6dp"
                android:background="@drawable/background_solid_display_100_rounded_4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewCreditTitleLoading" />

            <View
                android:id="@+id/viewDebitValueLoading"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginVertical="@dimen/dimen_6dp"
                android:background="@drawable/background_solid_display_100_rounded_4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewCreditValueLoading" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>