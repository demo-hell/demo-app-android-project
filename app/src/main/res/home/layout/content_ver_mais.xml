<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:duplicateParentState="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearSeeMoreContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:clickable="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.2"
            android:background="@color/gray_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ver_mais">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/home_ver_mais"
                android:textColor="@color/gray_light"
                android:textSize="12sp"
                app:typeface="MuseoSans-700.ttf" />


            <ImageView
                android:id="@+id/imageview_meus_recebimentos_item_card_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_arrow" />


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>