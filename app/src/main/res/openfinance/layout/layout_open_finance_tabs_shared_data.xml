<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@color/border_neutral"
        android:layout_gravity="bottom" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TabLayout.SingleLine"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextAppearance="@style/semi_bold_montserrat_14_brand_400"
        app:tabTextColor="@color/neutral_800"
        app:tabSelectedTextColor="@color/brand_400"
        app:tabIndicatorColor="@color/brand_400"
        app:tabIndicatorHeight="@dimen/dimen_4dp"
        app:tabRippleColor="@color/cloud_200">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Recebidos" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Enviados" />

    </com.google.android.material.tabs.TabLayout>

</FrameLayout>