<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/containerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_72dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:background="@drawable/background_cloud_200_radius_8"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoOriginData"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_weight="0.3"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_banco_do_brasil_square" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_weight="6.0"
                    android:orientation="vertical">

                    <TextView
                        style="@style/regular_montserrat_12_cloud_600"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/data_origin" />

                    <TextView
                        android:id="@+id/tvDataOrigin"
                        style="@style/bold_montserrat_16_cloud_800"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/access_manager_loading" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:orientation="vertical">

                <TextView
                    style="@style/regular_montserrat_12_cloud_600"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sharing_situation" />

                <LinearLayout
                    android:id="@+id/contentStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:background="@drawable/background_green800_radius_8"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_5dp">

                    <ImageView
                        android:id="@+id/iconStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:importantForAccessibility="no"
                        app:srcCompat="@drawable/ic_check_round_green" />

                    <TextView
                        android:id="@+id/tvStatus"
                        style="@style/bold_montserrat_14_green_800"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/access_manager_loading" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/descExpires"
                    style="@style/regular_montserrat_12_cloud_600"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/expires_in_opf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconExpires"
                        android:layout_width="@dimen/dimen_16dp"
                        android:layout_height="@dimen/dimen_16dp"
                        android:layout_marginRight="@dimen/dimen_8dp"
                        android:importantForAccessibility="no"
                        app:srcCompat="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/tvDateExpires"
                        style="@style/bold_montserrat_16_cloud_800"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/access_manager_loading" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutIdentification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:orientation="vertical">

                <TextView
                    style="@style/regular_montserrat_12_cloud_600"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/identification" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconIdentification"
                        android:layout_width="@dimen/dimen_16dp"
                        android:layout_height="@dimen/dimen_16dp"
                        android:layout_marginRight="@dimen/dimen_8dp"
                        android:importantForAccessibility="no"
                        app:srcCompat="@drawable/ic_user_neutral_600" />

                    <TextView
                        android:id="@+id/tvIdentification"
                        style="@style/bold_montserrat_16_cloud_800"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/access_manager_loading" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:orientation="vertical">

                <TextView
                    style="@style/regular_montserrat_12_cloud_600"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_document_open_finance" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconDocumentation"
                        android:layout_width="@dimen/dimen_16dp"
                        android:layout_height="@dimen/dimen_16dp"
                        android:layout_marginRight="@dimen/dimen_8dp"
                        android:importantForAccessibility="no"
                        app:srcCompat="@drawable/ic_cnh" />

                    <TextView
                        android:id="@+id/tvDocumentation"
                        style="@style/bold_montserrat_16_cloud_800"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/access_manager_loading" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginBottom="@dimen/dimen_24dp"
                android:orientation="vertical">

                <TextView
                    style="@style/regular_montserrat_12_cloud_600"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/requested_in" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconRequested"
                        android:layout_width="@dimen/dimen_16dp"
                        android:layout_height="@dimen/dimen_16dp"
                        android:layout_marginRight="@dimen/dimen_8dp"
                        android:importantForAccessibility="no"
                        app:srcCompat="@drawable/ic_calendar_clock_neutral_600" />

                    <TextView
                        android:id="@+id/tvDateRequested"
                        style="@style/bold_montserrat_16_cloud_800"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/access_manager_loading" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/closedShared"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_24dp"
                android:background="@drawable/background_color_eaeef3_radius_8"
                android:padding="@dimen/dimen_12dp">

                <TextView
                    android:id="@+id/tvClosedShared"
                    style="@style/regular_montserrat_12_cloud_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/data_share_expired" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/endSharing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_35dp"
                android:gravity="start|center"
                android:orientation="horizontal">

                <TextView
                    style="@style/regular_montserrat_14_red_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end_sharing" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_4dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_arrow_right_red_500" />
            </LinearLayout>

            <View
                android:id="@+id/viewLineSeparator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_20dp"
                android:background="@drawable/shape_shimmer_chargeback_lifecycle" />

            <LinearLayout
                android:id="@+id/containerOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/bold_montserrat_16_cloud_800"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:layout_marginBottom="@dimen/dimen_24dp"
                    android:text="@string/sharing_manager" />

                <LinearLayout
                    android:id="@+id/containerUpdateTerm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconUpdateTerm"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_calendar_clock_brand_400" />

                    <TextView
                        android:id="@+id/tvUpdateTerm"
                        style="@style/regular_montserrat_16_cloud_600"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_weight="0.7"
                        android:text="@string/update_term" />

                    <ImageView
                        android:id="@+id/arrowUpdateTerm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@drawable/shape_shimmer_chargeback_lifecycle" />

                <LinearLayout
                    android:id="@+id/containerSimpleRenovation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconSimpleRenovation"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_calendar_pix_qr_code_16dp_blue" />

                    <TextView
                        android:id="@+id/tvSimpleRenovation"
                        style="@style/regular_montserrat_16_cloud_600"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_weight="0.7"
                        android:text="@string/simple_renovation" />

                    <ImageView
                        android:id="@+id/arrowSimpleRenovation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@drawable/shape_shimmer_chargeback_lifecycle" />

                <LinearLayout
                    android:id="@+id/containerChangeInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconChangeInformation"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_edit_brand_400" />

                    <TextView
                        android:id="@+id/tvChangeInformation"
                        style="@style/regular_montserrat_16_cloud_600"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_weight="0.7"
                        android:text="@string/change_information" />

                    <ImageView
                        android:id="@+id/arrowChangeInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginBottom="@dimen/dimen_24dp"
                    android:background="@drawable/shape_shimmer_chargeback_lifecycle" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_20dp"
                android:background="@drawable/shape_shimmer_chargeback_lifecycle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:orientation="vertical">

                <TextView
                    style="@style/bold_montserrat_16_cloud_800"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/data_share_opf" />

                <TextView
                    style="@style/regular_montserrat_14_cloud_600_spacing_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:text="@string/know_origin_opf" />
            </LinearLayout>

            <br.com.cielo.libflue.carousel.Carousel
                android:id="@+id/carousel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp" />

            <LinearLayout
                android:id="@+id/citizenPortal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@drawable/background_border_brand_400_radius_100"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_link_external_brand_400" />

                <TextView
                    style="@style/bold_montserrat_16_brand_400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_4dp"
                    android:text="@string/access_citizen_portal" />
            </LinearLayout>
        </LinearLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginEnd="@dimen/dimen_12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/shimmer_resume_payment_holder" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <LinearLayout
            android:id="@+id/containerError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:layout_weight="1"
                android:src="@drawable/ic_07" />

            <TextView
                style="@style/regular_montserrat_16_cloud_500_spacing_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/commons_generic_error_title" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>