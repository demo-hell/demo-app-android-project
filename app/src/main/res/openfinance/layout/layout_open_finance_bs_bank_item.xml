<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_16dp"
    android:layout_marginBottom="@dimen/dimen_19dp"
    android:background="@drawable/selector_background_radio_button_bs_change_bank_opf"
    android:padding="@dimen/dimen_16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIconBank"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_gravity="center_vertical"
        android:elevation="@dimen/dimen_10dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_bank_default" />

    <LinearLayout
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBankName"
            style="@style/regular_montserrat_16_cloud_600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="Banco do Brasil" />

        <TextView
            android:id="@+id/tvInstitutions"
            style="@style/regular_montserrat_12_cloud_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:maxLines="1"
            tools:text="2 instituições" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/selector_radio_button_bs_change_bank"
        android:importantForAccessibility="no" />

</LinearLayout>