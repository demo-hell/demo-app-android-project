<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/containerItemSharedData"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_112dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:orientation="horizontal"
        android:background="@drawable/ajuda_header_background"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iconBank"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:layout_weight="0.3"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_bank_brand_caixa_square" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/bold_montserrat_16_cloud_500_spacing_0"
                android:text="@string/item_dc_name_title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDescDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/regular_montserrat_14_cloud_400"
                    android:text="@string/expires_in_opf" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    style="@style/bold_montserrat_14_cloud_500"
                    android:layout_weight="1"
                    android:text="@string/access_manager_loading" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/background_green800_radius_8"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    app:srcCompat="@drawable/ic_check_round_green" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/bold_montserrat_14_green_800"
                    android:text="@string/access_manager_loading" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/goToSharedData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/ic_arrow_end" />
    </LinearLayout>

</LinearLayout>