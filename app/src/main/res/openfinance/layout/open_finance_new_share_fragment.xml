<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/containerCreateShare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="@dimen/dimen_180dp"
                android:layout_height="@dimen/dimen_2dp"
                android:background="@color/brand_400" />

            <LinearLayout
                android:id="@+id/containerInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:visibility="visible"
                android:background="@drawable/background_cloud_100_radius_12_dp"
                android:padding="@dimen/dimen_16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textInfo"
                    style="@style/regular_montserrat_14_contrast_1000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/access_manager_loading" />
            </LinearLayout>

            <TextView
                style="@style/bold_montserrat_14_cloud_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginBottom="@dimen/dimen_24dp"
                android:text="@string/institution_receiving_data"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/containerBankNewShare"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_128dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:background="@drawable/background_8dp_radius_stroke_cloud_200"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_14dp"
                android:paddingLeft="@dimen/dimen_16dp"
                android:paddingRight="@dimen/dimen_16dp"
                android:paddingTop="@dimen/dimen_16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconBrand"
                        android:layout_width="@dimen/dimen_40dp"
                        android:layout_height="@dimen/dimen_40dp"
                        android:layout_gravity="start"
                        android:layout_weight="0.1"
                        android:importantForAccessibility="no"
                        app:srcCompat="@drawable/ic_bank_brand_banco_do_brasil_square" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:layout_weight="0.8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvBrand"
                            style="@style/regular_montserrat_16_cloud_600"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/access_manager_loading" />

                        <TextView
                            android:id="@+id/tvInstitutions"
                            style="@style/regular_montserrat_14_cloud_600_spacing_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:text="@string/access_manager_loading" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/infoInstitution"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:layout_gravity="top"
                        android:layout_weight="0.1"
                        android:importantForAccessibility="no"
                        android:rotationX="180"
                        app:srcCompat="@drawable/info_cloud_500" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_14dp"
                    android:background="@color/cloud_200" />

                <LinearLayout
                    android:id="@+id/changeInstitution"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_22dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/semi_bold_montserrat_14_brand_400_spacing_minus_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:text="@string/set_institution" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        app:srcCompat="@drawable/chevron_right_brand_400" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerBankChangeOrRenew"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_75dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:background="@drawable/background_8dp_radius_stroke_cloud_200"
                android:orientation="vertical"
                android:padding="@dimen/dimen_16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconBrandChangeOrRenew"
                        android:layout_width="@dimen/dimen_40dp"
                        android:layout_height="@dimen/dimen_40dp"
                        android:layout_gravity="start"
                        android:layout_weight="0.1"
                        android:importantForAccessibility="no"
                        app:srcCompat="@drawable/ic_bank_brand_banco_do_brasil_square" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:layout_weight="0.8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvBrandChangeOrRenew"
                            style="@style/regular_montserrat_16_cloud_600"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/access_manager_loading" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/bold_montserrat_16_cloud_800"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:layout_marginBottom="@dimen/dimen_24dp"
                    android:text="@string/how_to_use_data" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/store_cloud_500" />

                    <TextView
                        style="@style/regular_montserrat_16_neutral_600_spacing_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_weight="0.7"
                        android:text="@string/practicality_business" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/light_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:layout_marginBottom="@dimen/dimen_12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ticket_cloud_500" />

                    <TextView
                        style="@style/regular_montserrat_16_neutral_600_spacing_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_weight="0.7"
                        android:text="@string/custom_recommendation" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/light_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:layout_marginBottom="@dimen/dimen_36dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconChangeInformation"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/credit_card_scan_cloud_500" />

                    <TextView
                        android:id="@+id/tvChangeInformation"
                        style="@style/regular_montserrat_16_neutral_600_spacing_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_weight="0.7"
                        android:text="@string/analysis_offer_credit_product" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/bold_montserrat_16_cloud_800"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_24dp"
                    android:text="@string/data_will_receiving" />

                <LinearLayout
                    android:id="@+id/containerRegisterData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:orientation="vertical">

                        <TextView
                            style="@style/semi_bold_montserrat_16_cloud_800"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/data_register" />

                        <TextView
                            style="@style/regular_montserrat_14_cloud_500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_6dp"
                            android:text="@string/data_register_desc" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/arrowUpdateTerm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/light_gray" />

                <LinearLayout
                    android:id="@+id/containerComplementaryData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:orientation="vertical">

                        <TextView
                            style="@style/semi_bold_montserrat_16_cloud_800"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/complementary_information" />

                        <TextView
                            android:id="@+id/tvUpdateTerm"
                            style="@style/regular_montserrat_14_cloud_500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_6dp"
                            android:text="@string/complementary_information_desc" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/arrowSimpleRenovation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/bold_montserrat_14_cloud_800"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/sharing_information" />

            <TextView
                style="@style/regular_montserrat_14_cloud_600_spacing_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/txt_document_open_finance" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_16dp"
                    android:layout_height="@dimen/dimen_16dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_cnh" />

                <TextView
                    android:id="@+id/tvDocument"
                    style="@style/bold_montserrat_16_cloud_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:text="@string/access_manager_loading" />
            </LinearLayout>

            <TextView
                style="@style/regular_montserrat_14_cloud_600_spacing_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/deadline_share" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginBottom="@dimen/dimen_18dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_16dp"
                    android:layout_height="@dimen/dimen_16dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/tvDatePeriod"
                    style="@style/bold_montserrat_16_cloud_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:text="@string/access_manager_loading" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:orientation="vertical">

                <TextView
                    style="@style/semi_bold_montserrat_14_cloud_400"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sharing_period" />

                <Spinner
                    android:id="@+id/spinnerPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_44dp"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:overlapAnchor="false" />

                <LinearLayout
                    android:id="@+id/periodRenew"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dimen_44dp"
                    android:visibility="visible"
                    android:background="@drawable/background_surface_neutral_border_neutral_radius_12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textRenew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        style="@style/regular_montserrat_16_neutral_600"
                        android:text="@string/access_manager_loading" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        app:srcCompat="@drawable/ic_directions_chevron_down_neutral_600_24_dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="#C5CED7" />

            <TextView
                style="@style/regular_montserrat_16_neutral_600_spacing_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/confirm_sharing_terms_conditions" />

            <LinearLayout
                android:id="@+id/termsOfUse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginTop="27dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/semi_bold_montserrat_14_brand_400_spacing_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pos_virtual_accreditation_label_button_terms" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_4dp"
                    android:importantForAccessibility="no"
                    app:srcCompat="@drawable/chevron_right_brand_400" />

                <ProgressBar
                    android:id="@+id/loadDocument"
                    android:visibility="gone"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:theme="@style/progress_bar_blue"
                    android:contentDescription="@string/wait_terms_of_use_opf"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_82dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@drawable/background_fill_purple_100"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dimen_10dp"
                    android:paddingVertical="@dimen/dimen_10dp">

                    <ImageView
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:layout_gravity="top"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_info_purple_700" />

                    <TextView
                        android:id="@+id/tvRedirectInstitution"
                        style="@style/regular_montserrat_14_contrast_1000_spacing_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_7dp"
                        android:text="@string/you_are_redirect_to_bank" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44dp"
                android:layout_marginHorizontal="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@drawable/background_color_brand_400_radius_30"
                android:gravity="center">

                <TextView
                    style="@style/bold_montserrat_16_brand_400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/du_btn_cancelar" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnConfirmConsent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44dp"
                android:layout_marginHorizontal="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:background="@drawable/background_fill_color_0774e7"
                android:gravity="center">

                <TextView
                    style="@style/semi_bold_montserrat_16_cloud_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_sharing" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerErrorConfirmShare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_07" />

            <TextView
                style="@style/bold_montserrat_16_cloud_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_weight="1"
                android:text="@string/error_title_service_unavailable" />

            <TextView
                style="@style/regular_montserrat_16_neutral_600_spacing_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_50dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_weight="1"
                android:text="@string/try_again_later"
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/btnBackStart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44dp"
                android:layout_marginHorizontal="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:background="@drawable/background_fill_color_0774e7"
                android:gravity="center">

                <TextView
                    style="@style/semi_bold_montserrat_16_cloud_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/back_start" />
            </LinearLayout>
        </LinearLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLifecycleIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginEnd="@dimen/dimen_12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/shimmer_open_finance_new_share" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <LinearLayout
            android:id="@+id/unexpectedError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/block_ec" />

            <TextView
                style="@style/bold_montserrat_20_cloud_800"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_26dp"
                android:text="@string/text_title_server_generic_error" />

            <TextView
                style="@style/regular_montserrat_16_neutral_600_spacing_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/unexpected_error_desc" />

            <LinearLayout
                android:id="@+id/cancelSharing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_marginTop="@dimen/dimen_53dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_gravity="top"
                    android:background="@color/cloud_200" />

                <TextView
                    style="@style/semi_bold_montserrat_center_16_brand_400_spacing_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:text="@string/cancel_sharing" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/updatePage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:background="@color/brand_400"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/semi_bold_montserrat_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_page"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="@dimen/dimen_150dp"
                android:layout_marginTop="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_40dp"
                android:theme="@style/progress_bar_blue" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>