<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/display_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btnNewSharing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44dp"
            android:layout_marginHorizontal="@dimen/dimen_18dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@drawable/background_brand_400_radius_100"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_plus" />

            <TextView
                android:id="@+id/tvNewSharing"
                style="@style/semi_bold_montserrat_16_cloud_0_spacing_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:text="@string/new_share_opf" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listReceived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:visibility="gone"
            tools:listitem="@layout/layout_open_finance_shared_data_item"
            tools:itemCount="3"/>

        <LinearLayout
            android:id="@+id/container_show_final_list_received"
            android:layout_width="@dimen/dimen_128dp"
            android:layout_height="@dimen/dimen_54dp"
            android:elevation="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_check_round_gray" />

            <TextView
                android:id="@+id/tvFinalList"
                style="@style/regular_montserrat_14_cloud_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/final_list_opf"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dontHaveSharedDataReceived"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_01" />

            <TextView
                android:id="@+id/tvNotSharingData"
                style="@style/regular_montserrat_16_cloud_600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_weight="1"
                android:text="@string/you_dont_shared_opf" />

        </LinearLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerIndicatorReceived"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/shimmer_open_finance_shared_data" />
        </com.facebook.shimmer.ShimmerFrameLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
