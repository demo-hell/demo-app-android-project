<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_display_50_radius_8">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_subtitle_terms_p2m"
        style="@style/regular_ubuntu_14_display_400_spacing_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.17"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:text="@string/p2m_terms_description"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_read_p2m_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:background="@drawable/background_pix_terms"
        android:paddingVertical="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_terms_p2m">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_read_p2m_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_read_p2m_terms"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_read_p2m_terms"
            app:srcCompat="@drawable/ic_circle_arrow_blue" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_read_p2m_terms"
            style="@style/semibold_montserrat_14_display_400_spacing_8"
            android:layout_width="@dimen/dimen_0dp"
            android:fontFamily="@font/font_montserrat_semi_bold"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:text="@string/p2m_terms_policy_privacy"
            android:contentDescription="@string/terms_privacy_accessibility"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_read_p2m_terms"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/include"
        layout="@layout/component_p2m_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@+id/container_read_p2m_terms"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>