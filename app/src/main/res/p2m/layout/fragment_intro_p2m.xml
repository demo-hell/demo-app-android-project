<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".p2m.presentation.IntroP2mFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_view_p2m"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_image_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_negative_16dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:importantForAccessibility="no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_315_cielo_whatsapp_juntos_v01"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/tv_title_p2m_today"
                style="@style/bold_montserrat_20_brand_600_spacing_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:gravity="center_horizontal|bottom"
                android:text="@string/title_p2m_sales_today"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ic_image_intro" />

            <TextView
                android:id="@+id/tv_description_p2m_today"
                style="@style/regular_ubuntu_16_cloud_400_spacing_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:gravity="center_horizontal|top"
                android:text="@string/title_p2m_sales_today_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_p2m_today" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_container_konw_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_33dp"
            android:layout_marginHorizontal="@dimen/dimen_50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_description_p2m_today">

            <TextView
                android:id="@+id/tv_more_info_link"
                style="@style/semibold_montserrat_14_brand_400_spacing_minus_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/dimen_50dp"
                android:gravity="center_horizontal"
                android:text="@string/title_p2m_link_more_info"
                android:contentDescription="@string/title_p2m_link_more_info_accessibility"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/iv_chevron_rigth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:importantForAccessibility="no"
                app:layout_constraintTop_toTopOf="@+id/tv_more_info_link"
                app:layout_constraintBottom_toBottomOf="@+id/tv_more_info_link"
                app:layout_constraintStart_toEndOf="@+id/tv_more_info_link"
                app:srcCompat="@drawable/ic_chevron_right_blue_flui"
                />


    </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_second"
                style="@style/semibold_montserrat_16_cloud_0_spacing_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:background="@drawable/button_full_width_brand_selector"
                android:text="@string/title_p2m_btn2"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>