<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbarCanceledDetails"
        layout="@layout/toolbar_main" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollCanceledSaleDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/dimen_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCanceledSaleDetailsObs"
                style="@style/Paragraph_300_Regular_14_display_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_24dp"
                android:background="@drawable/background_solid_cloud_100_border_rounded"
                android:padding="@dimen/dimen_16dp"
                android:textColor="@color/display_500"
                android:visibility="gone"
                tools:text="Todas as solicitações passam primeiro por esta etapa de análise. Geralmente o tempo de processamento é de até 5 dias." />

            <TextView
                android:id="@+id/txtCanceledDataLabel"
                style="@style/Paragraph_300_Regular_14_display_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:text="@string/text_canceled_data_label"
                android:textColor="@color/display_500" />

            <include layout="@layout/layout_canceled_sale_details_request_data" />

            <TextView
                android:id="@+id/txtCanceledSaleDateLabel"
                style="@style/Paragraph_300_Regular_14_display_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:text="@string/text_canceled_sale_data_label"
                android:textColor="@color/display_500" />

            <include layout="@layout/layout_canceled_sale_details_sale_data" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
