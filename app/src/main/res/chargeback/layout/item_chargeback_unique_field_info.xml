<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_300dp"
    android:layout_height="@dimen/dimen_136dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="@dimen/dimen_16dp"
    android:background="@drawable/background_transparent_stroke_cloud_200_radius_8_dp"
    android:padding="@dimen/dimen_16dp">

     <TextView
         style="@style/regular_montserrat_14_cloud_400"
         android:id="@+id/tvChargebackUniqueInfoCardLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         tools:text="@string/chargeback_rdr_card_label" />

    <ImageView
        android:id="@+id/ivChargebackUniqueInfoCardIcon"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="@+id/tvChargebackUniqueInfoCardLabel"
        app:layout_constraintTop_toBottomOf="@id/tvChargebackUniqueInfoCardLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dimen_8dp"
        tools:srcCompat="@drawable/ic_cards_credit_card_check_cloud_300_24dp" />

    <TextView
        style="@style/bold_montserrat_14_cloud_400"
        android:id="@+id/tvChargebackUniqueInfoCardContent"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_4dp"
        android:maxLines="6"
        app:layout_constraintTop_toBottomOf="@id/tvChargebackUniqueInfoCardLabel"
        app:layout_constraintStart_toEndOf="@id/ivChargebackUniqueInfoCardIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="@string/chargeback_rdr_card_content" />

</androidx.constraintlayout.widget.ConstraintLayout>