<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:lineHeight="@dimen/dimen_24dp"
            android:maxLines="1"
            android:paddingVertical="@dimen/dimen_24dp"
            android:textColor="@color/neutral_600"
            android:textSize="@dimen/dimen_16dp"
            tools:text="Comprovante-Envio.pdf" />

        <ImageButton
            android:id="@+id/btn_download_file"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/transparent"
            android:src="@drawable/ic_storage_download_cloud_0_16_dp"
            app:tint="@color/cielo_accent_500" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/cloud_300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_file" />

</androidx.constraintlayout.widget.ConstraintLayout>