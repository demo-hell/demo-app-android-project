<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_sender"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:lineHeight="@dimen/dimen_24dp"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_8dp"
            android:text="@string/chargeback_text_choose_document"
            android:textColor="@color/cloud_400"
            android:textSize="@dimen/dimen_16dp"
            app:layout_constraintStart_toStartOf="@id/layout_sender"
            app:layout_constraintTop_toTopOf="@id/layout_sender" />

        <TextView
            android:id="@+id/tv_count_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/cloud_600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="@string/message_documents_found" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleview"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintEnd_toEndOf="@id/tv_count_item"
            app:layout_constraintStart_toStartOf="@id/tv_count_item"
            app:layout_constraintTop_toBottomOf="@id/tv_count_item" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_container_shimmer"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/tv_count_item"
            app:layout_constraintStart_toStartOf="@id/tv_count_item"
            app:layout_constraintTop_toBottomOf="@id/tv_count_item">

            <include
                android:id="@+id/include_shimmer_item_chargeback_1"
                layout="@layout/shimmer_item_chargeback_sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/include_shimmer_item_chargeback_2"
                layout="@layout/shimmer_item_chargeback_sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp" />

            <include
                android:id="@+id/include_shimmer_item_chargeback_3"
                layout="@layout/shimmer_item_chargeback_sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingVertical="@dimen/dimen_8dp"
            android:text="@string/text_close"
            android:textAllCaps="false"
            android:textColor="@color/color_blue_0774E7"
            android:textFontWeight="600"
            android:textSize="@dimen/dimen_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/includeError"
        layout="@layout/error_chargeback_document"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>