<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/vw_shimmer_icon"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:background="@drawable/shape_shimmer_chargeback_lifecycle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vw_shimmer_title"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:background="@drawable/shape_shimmer_chargeback_lifecycle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vw_shimmer_icon"
        app:layout_constraintTop_toTopOf="@+id/vw_shimmer_icon" />

    <View
        android:id="@+id/vw_shimmer_subtitle"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/shape_shimmer_chargeback_lifecycle"
        app:layout_constraintStart_toStartOf="@+id/vw_shimmer_title"
        app:layout_constraintTop_toBottomOf="@+id/vw_shimmer_title"
        app:layout_constraintWidth_percent=".5" />

</androidx.constraintlayout.widget.ConstraintLayout>