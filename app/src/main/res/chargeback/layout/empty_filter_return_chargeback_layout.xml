<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_cloud_50">
    
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dimen_280dp"
        android:layout_height="@dimen/dimen_120dp"
        android:src="@drawable/ic_filter_empty"
        android:importantForAccessibility="no"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_24dp"
        android:text="@string/chargeback_filter_empty_results"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        style="@style/regular_ubuntu_16_display_500_spacing_6"
        />


    <Button
        android:id="@+id/buttonClearFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:text="@string/chargeback_filter_clear_filter_button_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/semibold_montserrat_16_brand_400"
        />

</androidx.constraintlayout.widget.ConstraintLayout>