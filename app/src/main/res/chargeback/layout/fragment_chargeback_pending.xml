<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ns_chargeback_pending"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_cloud_50"
    android:fillViewport="true"
    tools:context=".chargeback.presentation.home.pendingList.ChargebackPendingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/filter_area_container_layout"
            layout="@layout/filter_area_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            />

        <include
            android:id="@+id/include_filter_empty_result"
            layout="@layout/empty_filter_return_chargeback_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            app:layout_constraintTop_toBottomOf="@id/filter_area_container_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chargeback_pending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/filter_area_container_layout"
            tools:listitem="@layout/item_chargeback"
            />

        <include
            android:id="@+id/include_error_pending_chargeback"
            layout="@layout/error_chargeback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/filter_area_container_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <include
            android:id="@+id/include_empty_pending_chargeback"
            layout="@layout/does_not_own_pending_chargeback"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filter_area_container_layout"
            tools:visibility="gone" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_container_shimmer"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filter_area_container_layout"
            tools:visibility="gone">

            <include
                android:id="@+id/include_shimmer_item_chargeback_1"
                layout="@layout/shimmer_item_chargeback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/include_shimmer_item_chargeback_2"
                layout="@layout/shimmer_item_chargeback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp" />

            <include
                android:id="@+id/include_shimmer_item_chargeback_3"
                layout="@layout/shimmer_item_chargeback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_container_pagination_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_32dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0">

            <ProgressBar
                android:layout_width="@dimen/dimen_26dp"
                android:layout_height="@dimen/dimen_26dp"
                android:indeterminateTint="@color/brand_400"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>