<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_16dp"
    android:background="@drawable/background_item_chargeback_cloud_0"
    app:cardCornerRadius="@dimen/dimen_6sp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_content"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/vw_shimmer_left"
                    android:layout_width="@dimen/dimen_200dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:background="@drawable/shimmer_background" />

                <View
                    android:id="@+id/vw_shimmer_right"
                    android:layout_width="@dimen/dimen_82dp"
                    android:layout_height="@dimen/dimen_36dp"
                    android:layout_marginStart="@dimen/dimen_54dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:background="@drawable/shimmer_background" />

            </LinearLayout>

            <View
                android:id="@+id/vw_divide_card_chargeback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@color/color_cloud_200" />

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>