<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/grey_99000000">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/nestedScrollView"
            android:background="@drawable/background_welcome_notification">

            <View
                android:id="@+id/viewDivider"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_4dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@drawable/ic_drag_bottom_sheet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/Heading_700_bold_16"
                android:id="@+id/tvTitle"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:textColor="@color/display_500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewDivider"
                app:layout_constraintEnd_toStartOf="@+id/ibClose"
                android:text="@string/chargeback_accept_confirm_title" />

            <ImageButton
                android:id="@+id/ibClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/text_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvTitle"
                app:layout_constraintTop_toTopOf="@+id/tvTitle"
                app:srcCompat="@drawable/ic_close"
                app:tint="@color/cloud_400" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:importantForAccessibility="no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:srcCompat="@drawable/img_chargeback_accept" />

            <TextView
                android:id="@+id/tvConfirmMessage"
                style="@style/Paragraph_400_regular_16_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:text="@string/chargeback_accept_confirm_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvConfirmMessage">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/color_C5CED7"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    style="@style/Heading_400_bold_16"
                    android:id="@+id/btnCancel"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:background="@drawable/cielo_white_button_view_selector"
                    android:foreground="?attr/selectableItemBackground"
                    android:textAllCaps="false"
                    android:textColor="@color/brand_400"
                    android:text="@string/cancelar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dividerVertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <View
                    android:id="@+id/dividerVertical"
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:background="@color/color_C5CED7"
                    app:layout_constraintStart_toEndOf="@id/btnCancel"
                    app:layout_constraintEnd_toStartOf="@id/btnConfirm"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    style="@style/Heading_400_bold_16"
                    android:id="@+id/btnConfirm"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:background="@drawable/cielo_white_button_view_selector"
                    android:foreground="?attr/selectableItemBackground"
                    android:textAllCaps="false"
                    android:textColor="@color/brand_400"
                    android:text="@string/confirmar"
                    app:layout_constraintStart_toEndOf="@id/dividerVertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>