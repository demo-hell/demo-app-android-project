<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_cielo_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_nothing_chargeback_pending"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_hello_your_chargeback"
        app:srcCompat="@drawable/ic_cielo_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_hello_your_chargeback"
        style="@style/Label_100_regular_14_brand_600"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/your_chargeback_treated_look_here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ic_cielo_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_nothing_chargeback_pending"
        style="@style/Label_100_ubuntu_12_cloud_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:text="@string/you_not_have_chargeback_treated"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_hello_your_chargeback"
        app:layout_constraintTop_toBottomOf="@id/tv_hello_your_chargeback" />

</androidx.constraintlayout.widget.ConstraintLayout>