<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="br.com.mobicare.cielo.interactBannersOffersNew.presentation.InteractBannersOffersNewFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBanners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:paddingBottom="@dimen/dimen_20dp"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:clipChildren="false"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_banner_list" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loadingShimmer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_250dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:visibility="gone"
        app:shimmer_auto_start="true"
        app:shimmer_base_alpha="1"
        app:shimmer_highlight_alpha="0"
        app:shimmer_repeat_mode="restart"
        shimmer:duration="800">

        <View
            android:id="@+id/viewShimmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_solid_display_100_round_8dp" />
    </com.facebook.shimmer.ShimmerFrameLayout>
</FrameLayout>

