<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_48dp"
    android:background="@drawable/background_transparent_border_cloud_200_rounded"
    android:paddingHorizontal="@dimen/dimen_8dp"
    android:paddingVertical="@dimen/dimen_6dp">

    <TextView
        android:id="@+id/txtHint"
        style="@style/Label_100_regular_10_display_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_6dp"
        android:maxLines="1"
        android:paddingBottom="@dimen/dimen_5dp"
        android:textColor="@color/color_cloud_300"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/icCalendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="hint" />

    <TextView
        android:id="@+id/txtValue"
        style="@style/Paragraph_400_regular_16_display_300"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_6dp"
        android:maxLines="1"
        android:textColor="@color/color_cloud_600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/icCalendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHint"
        tools:text="Data inicial" />

    <ImageView
        android:id="@+id/icCalendar"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginVertical="@dimen/dimen_12dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_calendar" />

</androidx.constraintlayout.widget.ConstraintLayout>