<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_stablishment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/global_establishment_number_short_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:errorTextAppearance="@style/ErrorAppearance">

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
            android:id="@+id/edit_text_stablishment"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_shape"
            android:imeOptions="actionNext"
            android:importantForAutofill="noExcludeDescendants"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1"
            android:textColor="@color/text_color_263238"
            android:textColorHint="@color/gray_light"
            android:textSize="16sp"
            android:drawableTint="@color/gray_light"
            app:typeface="MuseoSans-500.ttf" />

    </com.google.android.material.textfield.TextInputLayout>


    <ImageView
        android:id="@+id/text_input_stablishment_Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/text_input_stablishment"
        android:layout_alignRight="@+id/text_input_stablishment"
        android:layout_alignBottom="@+id/text_input_stablishment"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_input_stablishment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_input_stablishment"
        app:srcCompat="@drawable/ic_info_white" />

</androidx.constraintlayout.widget.ConstraintLayout>