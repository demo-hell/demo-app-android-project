<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/esqueci_senha_card_confirmar_dados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/include_account_profile_choose"
            layout="@layout/global_content_account_profile_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/text_input_esqueci_senha_banco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:visibility="visible">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/text_input_esqueci_senha_banco_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="9dp"
                android:text="@string/esqueci_senha_banco_hint"
                android:textSize="12sp"
                android:visibility="invisible"
                app:typeface="MuseoSans-500.ttf" />

            <Spinner
                android:id="@+id/spinner_esqueci_senha_banco"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="@dimen/dimen_0dp"
                android:visibility="gone"
                android:spinnerMode="dialog" />

            <RelativeLayout
                android:id="@+id/bankLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/dimen_8dp"
                >

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/bankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:hint="Banco"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textColor="@color/text_color_263238"
                    android:textColorHint="@color/gray_light"
                    android:textSize="16sp"
                    app:typeface="MuseoSans-500.ttf" />
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:layout_alignParentEnd="true"
                    android:src="@android:drawable/arrow_down_float"
                    android:tint="@color/display_400"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/text_input_esqueci_senha_banco_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/gray_light" />

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/text_input_esqueci_senha_banco_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ErrorAppearance"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- tipo de conta -->
        <LinearLayout
            android:id="@+id/text_input_esqueci_minha_conta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:visibility="visible">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/text_input_esqueci_minha_conta_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="9dp"
                android:text="@string/esqueci_senha_conta_hint"
                android:textSize="12sp"
                android:visibility="invisible"
                app:typeface="MuseoSans-500.ttf" />

            <Spinner
                android:id="@+id/spinner_esqueci_minha_conta"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="@dimen/dimen_0dp"
                android:spinnerMode="dropdown"
                android:visibility="visible"
                app:typeface="MuseoSans-500.ttf" />

            <View
                android:id="@+id/text_input_esqueci_minha_conta_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="6dp"
                android:background="@color/gray_light" />

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/text_input_esqueci_minha_conta_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ErrorAppearance"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_esqueci_senha_agencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:errorTextAppearance="@style/ErrorAppearance">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                android:id="@+id/edit_text_esqueci_senha_agencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_shape"
                android:hint="@string/esqueci_senha_agencia_hint"
                android:maxLength="20"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/text_color_263238"
                android:textColorHint="@color/gray_light"
                android:textSize="16sp"
                app:typeface="MuseoSans-500.ttf" />

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_esqueci_senha_numero_conta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                app:errorTextAppearance="@style/ErrorAppearance">

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                    android:id="@+id/edit_text_esqueci_senha_numero_conta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/esqueci_senha_numero_conta_hint"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textColor="@color/text_color_263238"
                    android:textColorHint="@color/gray_light"
                    android:textSize="16sp"
                    app:typeface="MuseoSans-500.ttf" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_esqueci_senha_digito_conta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="2"
                app:errorTextAppearance="@style/ErrorAppearance">

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                    android:id="@+id/edit_text_esqueci_senha_digito_conta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/esqueci_senha_digito_conta_hint"
                    android:imeOptions="actionDone"
                    android:inputType="number|textCapCharacters|textNoSuggestions"
                    android:digits="QWERTYYUIOPASDFGHJKLZXCVBNM1234567890"
                    android:maxLines="1"
                    android:textColor="@color/text_color_263238"
                    android:textColorHint="@color/gray_light"
                    android:textSize="16sp"
                    app:typeface="MuseoSans-500.ttf" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

