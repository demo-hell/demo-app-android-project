<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.mobicare.cielo.newLogin.updateregister.OnBoardUpdateRegister">

    <FrameLayout
        android:id="@+id/view"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_24dp"
            android:layout_marginRight="@dimen/dimen_24dp"
            android:lineSpacingExtra="@dimen/dimen_6sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/dimen_18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu"
            android:text="@string/update_register_title"/>

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewUpdateRegister"
        android:layout_width="@dimen/dimen_240dp"
        android:layout_height="@dimen/dimen_240dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_marginLeft="@dimen/dimen_60dp"
        android:layout_marginRight="@dimen/dimen_60dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_img_update_register"/>
    
    <TextView
        android:id="@+id/updateRegister"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageViewUpdateRegister"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:textSize="@dimen/dimen_18sp"
        android:textColor="@color/colorPrimary"
        android:text="@string/update_register"
        android:fontFamily="@font/montserrat_bold"/>

    <TextView
        android:id="@+id/updateRegisterInfo"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/updateRegister"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:layout_marginRight="@dimen/dimen_24dp"
        android:lineSpacingExtra="@dimen/dimen_6sp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:gravity="center"
        android:textSize="@dimen/dimen_14sp"
        android:textColor="@color/color_5A646E"
        android:fontFamily="@font/ubuntu"
        android:text="@string/update_register_info"/>

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/updateRegisterInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:layout_marginRight="@dimen/dimen_24dp"
        android:lineSpacingExtra="@dimen/dimen_6sp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:gravity="center"
        android:textSize="@dimen/dimen_14sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/ubuntu"
        android:text="@string/update_register_phone_number"/>

    <TextView
        android:id="@+id/phoneNumber0800"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phoneNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:layout_marginRight="@dimen/dimen_24dp"
        android:lineSpacingExtra="@dimen/dimen_6sp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:gravity="center"
        android:textSize="@dimen/dimen_14sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/ubuntu"
        android:text="@string/update_register_phone_number_0800"/>

    <TextView
        android:id="@+id/textViewFreedomForYou"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phoneNumber0800"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/logoutButton"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:layout_marginRight="@dimen/dimen_24dp"
        android:lineSpacingExtra="@dimen/dimen_6sp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:textSize="@dimen/dimen_14sp"
        android:textColor="@color/color_5A646E"
        android:fontFamily="@font/ubuntu"
        android:text="@string/update_register_freedom_for_you"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutButton"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_margin="@dimen/dimen_20dp"
        android:background="@drawable/background_buttom_update_register"
        android:text="@string/text_logout_label"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_16sp"
        android:fontFamily="@font/montserrat"/>
</androidx.constraintlayout.widget.ConstraintLayout>
