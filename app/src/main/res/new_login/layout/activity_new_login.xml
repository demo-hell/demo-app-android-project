<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_login">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lottie/lottie_login.json"
        app:lottie_loop="true" />

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_shadow_white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16dp"
        android:translationY="380dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:id="@+id/frameBackArrowGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8dp"
                android:contentDescription="Entrar em outra conta, botÃ£o"
                app:srcCompat="@drawable/ic_left_arrow" />
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitleNewLogin"
            style="@style/semi_bold_montserrat_16_cloud_800"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/login_title"/>

        <br.com.cielo.libflue.card.CieloCardInformation
            android:id="@+id/cardLoginError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:cardTextAppearance="@style/regular_montserrat_14"
            app:textColor="@color/black_000000"
            android:visibility="gone"
            app:cardInformationType="danger" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:focusableInTouchMode="false"
            android:orientation="vertical">

            <br.com.cielo.libflue.inputtext.CieloTextInputField
                android:id="@+id/textInputEditNewLogin"
                style="@style/regular_montserrat_16_neutral_600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:endIconType="none"
                android:hint="@string/login_ec_hint"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1" />

            <include layout="@layout/layout_new_login_first_step"/>

            <include layout="@layout/layout_new_login_second_step"/>

        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/frameNewLoginProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
