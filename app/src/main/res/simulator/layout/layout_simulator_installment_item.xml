<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dimen_16dp"
    android:animateLayoutChanges="true">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCostumerInstallment"
        style="@style/medium_montserrat_12"
        android:textColor="@color/neutral_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sales_simulator_costumer_installment_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivInstallmentIcon"
        style="@style/semi_bold_montserrat_12_neutral_main"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_cielo_system_customer_installment_24dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCostumerInstallment" />

    <ImageButton
        android:id="@+id/ivInstallmentArrowIndicator"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_0dp"
        android:contentDescription="@string/expand_brands_button_description"
        android:rotation="90"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/tvInstallmentValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCostumerInstallment"
        app:srcCompat="@drawable/ic_chevron_rgt"
        app:tint="@color/cielo_accent_500"
        android:foregroundGravity="right"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvInstallmentValue"
        style="@style/bold_montserrat_14_neutral_800"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/ivInstallmentIcon"
        app:layout_constraintStart_toEndOf="@id/ivInstallmentIcon"
        app:layout_constraintTop_toTopOf="@id/ivInstallmentIcon"
        android:layout_marginStart="@dimen/dimen_8dp"
        tools:text="1x de R$ 1.5000,00" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTotalFeeLabel"
        style="@style/medium_montserrat_12"
        android:textColor="@color/neutral_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:text="@string/sales_simulator_total_fee_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInstallmentValue" />

    <ImageView
        android:id="@+id/ivFeeIcon"
        style="@style/semi_bold_montserrat_12_neutral_main"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_chart_percent_square_24dp"
        app:tint="@color/neutral_main"
        android:layout_marginTop="@dimen/dimen_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTotalFeeLabel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFeeValue"
        style="@style/bold_montserrat_16_neutral_600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/ivFeeIcon"
        app:layout_constraintStart_toEndOf="@id/ivFeeIcon"
        app:layout_constraintTop_toTopOf="@id/ivFeeIcon"
        android:layout_marginStart="@dimen/dimen_8dp"
        tools:text="5.62%" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMDRValue"
        style="@style/medium_montserrat_12_neutral_600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvFeeValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvFeeValue"
        tools:text="MDR 4.00% + RA 1.62%" />

    <View
        android:id="@+id/divider_line_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/cloud_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/ivFeeIcon"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTotalReceivingValueLabel"
        style="@style/medium_montserrat_12"
        android:textColor="@color/neutral_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:text="@string/sales_simulator_you_receive_total_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_line_1" />

    <ImageView
        android:id="@+id/ivTotalReceivingIcon"
        style="@style/semi_bold_montserrat_12_neutral_main"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_cielo_system_customer_installment_24dp"
        app:tint="@color/success_500"
        android:layout_marginTop="@dimen/dimen_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTotalReceivingValueLabel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTotalReceivingValue"
        style="@style/bold_montserrat_14_success_500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/ivTotalReceivingIcon"
        app:layout_constraintStart_toEndOf="@id/ivTotalReceivingIcon"
        app:layout_constraintTop_toTopOf="@id/ivTotalReceivingIcon"
        android:layout_marginStart="@dimen/dimen_8dp"
        tools:text="R$1.415,70" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvReceivingTermValue"
        style="@style/medium_montserrat_12_neutral_600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvTotalReceivingValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTotalReceivingValue"
        tools:text="em 1 dia Ãºtil" />

    <View
        android:id="@+id/divider_line_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/cloud_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/ivTotalReceivingIcon"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvToReceiveSimulatedValueLabel"
        style="@style/medium_montserrat_12"
        android:textColor="@color/neutral_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        tools:text="@string/sales_simulator_to_receive_simulated_value_charge_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_line_2" />

    <ImageView
        android:id="@+id/ivToReceiveSimulatedValueIcon"
        style="@style/semi_bold_montserrat_12_neutral_main"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_money_coin"
        android:layout_marginTop="@dimen/dimen_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvToReceiveSimulatedValueLabel"
        app:tint="@color/accent_800" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvToReceiveSimulatedValue"
        style="@style/bold_montserrat_14"
        android:textColor="@color/accent_800"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/ivToReceiveSimulatedValueIcon"
        app:layout_constraintStart_toEndOf="@id/ivToReceiveSimulatedValueIcon"
        app:layout_constraintTop_toTopOf="@id/ivToReceiveSimulatedValueIcon"
        android:layout_marginStart="@dimen/dimen_8dp"
        tools:text="R$1.584,30" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/expandableGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:constraint_referenced_ids="tvTotalFeeLabel, ivFeeIcon, tvFeeValue, tvMDRValue,divider_line_1">

    </androidx.constraintlayout.widget.Group>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/totalReceivingValueGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:constraint_referenced_ids="divider_line_2, tvToReceiveSimulatedValueLabel, ivToReceiveSimulatedValueIcon, tvToReceiveSimulatedValue">

    </androidx.constraintlayout.widget.Group>

</androidx.constraintlayout.widget.ConstraintLayout>