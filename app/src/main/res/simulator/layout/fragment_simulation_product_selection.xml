<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/dimen_16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubtitle"
        style="@style/medium_montserrat_16"
        android:textColor="@color/neutral_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/sales_simulator_product_selection_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvValueLabel"
        style="@style/bold_montserrat_16_neutral_dark_spacing_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:text="@string/sales_simulator_value_label"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />

    <br.com.cielo.libflue.button.CieloTextButton
        android:id="@+id/tvValue"
        style="@style/bold_montserrat_20"
        android:textColor="@color/cielo_accent_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="R$ 1.500,00"
        app:layout_constraintTop_toBottomOf="@id/tvValueLabel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBrandLabel"
        style="@style/bold_montserrat_16_neutral_dark_spacing_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="@string/sales_simulator_brand_selection_label"
        app:layout_constraintTop_toBottomOf="@id/tvValue" />

    <br.com.cielo.libflue.field.CieloSelectField
        android:id="@+id/btnBrandSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:hint="@string/sales_simulator_brand_selection_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBrandLabel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSellTypeLabel"
        style="@style/bold_montserrat_16_neutral_dark_spacing_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:text="@string/sales_simulator_sell_type_selection_label"
        app:layout_constraintTop_toBottomOf="@id/btnBrandSelection" />

    <br.com.cielo.libflue.field.CieloSelectField
        android:id="@+id/btnSellTypeSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:hint="@string/sales_simulator_sell_type_selection_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSellTypeLabel"
        android:enabled="false" />

</androidx.constraintlayout.widget.ConstraintLayout>