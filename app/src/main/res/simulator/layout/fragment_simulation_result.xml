<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingBottom="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

            <include layout="@layout/loading_shimmer_header_simulation_result" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvValueLabel"
            style="@style/medium_montserrat_14_neutral_800"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sales_simulator_simulated_value_label"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvValue"
            style="@style/bold_montserrat_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_actions_edit_cielo_accent_500_24_dp"
            android:drawablePadding="@dimen/dimen_16dp"
            android:minHeight="@dimen/dimen_48dp"
            android:paddingVertical="@dimen/dimen_12dp"
            android:textColor="@color/neutral_800"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvValueLabel"
            tools:text="R$ 1.500,00" />

        <br.com.cielo.libflue.button.CieloTextButton
            android:id="@+id/tvDetails"
            style="@style/semibold_montserrat_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawable="@drawable/ic_directions_chevron_right_brand_400_16_dp"
            android:text="@string/sales_simulator_details_label"
            android:textColor="@color/cielo_accent_500"
            app:layout_constraintBottom_toBottomOf="@+id/tvValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvValue" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPlanLabel"
            style="@style/medium_montserrat_14"
            android:textColor="@color/neutral_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:text="@string/sales_simulator_current_plan_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvValue" />

        <include
            layout="@layout/layout_monthly_badge"
            android:id="@+id/ftPaymentTermBadge"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPlanLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPlanLabel"
            tools:visibility="visible"/>

        <include
            layout="@layout/layout_ra_badge"
            android:id="@+id/ftPaymentTermRABadge"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_24dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tvPlanLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPlanLabel"
            tools:visibility="gone"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/headerContentGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:constraint_referenced_ids="tvValueLabel, tvValue, tvDetails, tvPlanLabel, ftPaymentTermBadge, ftPaymentTermRABadge"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:background="@color/cloud_100"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dimen_16dp">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

            <include layout="@layout/loading_shimmer_content_simulation_result" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen_16dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/color_C5CED7"
            app:strokeWidth="@dimen/dimen_1dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvInstallments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constrainedHeight="true"
                tools:itemCount="1"
                tools:listitem="@layout/layout_simulator_installment_item" />
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/contentContentGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:constraint_referenced_ids="card"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>