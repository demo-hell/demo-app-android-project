<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meuCadastroNovo.presetantion.ui.TrocaDomicilioSolicitacoesActivity">

    <include
        android:id="@+id/toolbar_domicile"
        layout="@layout/toolbar_main"
        app:layout_constraintBottom_toTopOf="@+id/rv_change_domicile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_change_domicile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:clipToPadding="false"
        android:paddingTop="@dimen/dimen_16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/progressBarMore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_domicile"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_conta_status" />

    <ProgressBar
        android:id="@+id/progressBarMore"
        android:layout_width="@dimen/dimen_26dp"
        android:layout_height="@dimen/dimen_26dp"
        android:layout_margin="@dimen/dimen_16dp"
        android:progressTint="@color/brand_400"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <!-- Loading -->
    <ProgressBar
        android:id="@id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/progressBarMore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_domicile"
        app:layout_constraintVertical_bias="0.475"
        tools:ignore="MissingConstraints" />

    <br.com.mobicare.cielo.commons.ui.widget.AlertHandlerCieloView
        android:id="@+id/errorView"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        android:visibility="gone"
        app:cieloErrorButtonLabel="@string/text_try_again_label"
        app:cieloErrorContentImage="@drawable/ic_generic_error_image"
        app:cieloErrorMessage="@string/text_message_generic_error"
        app:cieloErrorTitle="@string/text_title_generic_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <br.com.mobicare.cielo.commons.ui.widget.AlertHandlerCieloView
        android:id="@+id/errorToggle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:cieloErrorButtonLabel="@string/onboard_first_accesses_ok"
        app:cieloErrorContentImage="@drawable/img_maintenance_mfa"
        app:cieloErrorMessage="@string/error_maintenance_content"
        app:cieloErrorTitle="@string/error_maintenance_title" />


</androidx.constraintlayout.widget.ConstraintLayout>





