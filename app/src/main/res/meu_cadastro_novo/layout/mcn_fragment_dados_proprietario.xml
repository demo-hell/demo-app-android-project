<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        app:cardCornerRadius="@dimen/dimen_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_view_title_pro"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:paddingHorizontal="@dimen/dimen_6dp"
                app:layout_constraintBottom_toBottomOf="@+id/constraint_view_details_owner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/alertIcon"
                    android:layout_width="@dimen/dimen_17dp"
                    android:layout_height="@dimen/dimen_17dp"
                    app:srcCompat="@drawable/ic_circle_alert"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/pendency_image_text"
                    android:importantForAccessibility="yes"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:tint="@color/alert_400" />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/text_title"
                    style="@style/MCN_TextTitleContent"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_16dp"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/mcn_text_title_section_owner"
                    app:layout_constraintBottom_toBottomOf="@+id/chevron_icon"
                    app:layout_constraintEnd_toStartOf="@+id/chevron_icon"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/alertIcon"
                    app:layout_constraintTop_toTopOf="@+id/chevron_icon" />

                <ImageView
                    android:id="@+id/chevron_icon"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginVertical="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ic_arrow" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_view_details_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/constraint_view_title_pro">

                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:background="@color/withe_eaeaea"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
                
                <br.com.cielo.libflue.button.CieloRegularSecondaryButton
                    android:id="@+id/alertButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_24dp"
                    android:layout_marginTop="@dimen/dimen_14dp"
                    android:textSize="@dimen/dimen_12sp"
                    android:visibility="gone"
                    android:text="@string/confirm_data_button"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvOwner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dimen_18dp"
                    tools:listitem="@layout/mcn_fragment_item_owner"
                    app:layout_constraintTop_toBottomOf="@+id/alertButton"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/content_msg_error_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_information_to_display"
                    android:textColor="@color/blue_005195"
                    android:layout_marginHorizontal="@dimen/dimen_24dp"
                    android:layout_marginTop="@dimen/dimen_33dp"
                    android:layout_marginBottom="@dimen/dimen_24dp"
                    app:layout_constraintTop_toBottomOf="@+id/alertButton"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>