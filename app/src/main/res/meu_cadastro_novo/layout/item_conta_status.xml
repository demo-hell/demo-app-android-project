<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dc_iv_brand"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_name_bank_and_date"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:singleLine="true"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/black_5A646E"
        android:textSize="@dimen/dimen_12sp"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dc_iv_brand"
        app:layout_constraintEnd_toEndOf="@+id/tv_status_label_track"
        />

    <TextView
        android:id="@+id/tv_agencia_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:textColor="@color/black_5A646E"
        android:text="@string/item_track_agency"
        android:textSize="@dimen/dimen_12sp"
        android:fontFamily="@font/ubuntu"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_bank_and_date"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_name_bank_and_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_bank_and_date" />

    <TextView
        android:id="@+id/tv_agencia_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_5A646E"
        android:textSize="@dimen/dimen_12sp"
        android:fontFamily="@font/ubuntu"
        android:layout_marginStart="@dimen/dimen_5dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_agencia_label"
        app:layout_constraintStart_toEndOf="@+id/tv_agencia_label"
        app:layout_constraintTop_toTopOf="@+id/tv_agencia_label"
        />

    <TextView
        android:id="@+id/tv_conta__label_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_5A646E"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:text="@string/item_track_account"
        android:textSize="@dimen/dimen_12sp"
        android:fontFamily="@font/ubuntu"
        app:layout_constraintEnd_toEndOf="@+id/tv_agencia_label"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_agencia_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_agencia_label" />

    <TextView
        android:id="@+id/tv_conta_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_5A646E"
        android:textSize="@dimen/dimen_12sp"
        android:fontFamily="@font/ubuntu"
        android:layout_marginStart="@dimen/dimen_5dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_conta__label_track"
        app:layout_constraintStart_toEndOf="@+id/tv_conta__label_track"
        app:layout_constraintTop_toTopOf="@+id/tv_conta__label_track"
        app:layout_constraintVertical_bias="1.0"
        />

    <TextView
        android:id="@+id/tv_protocol_label_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:textColor="@color/black_5A646E"
        android:text="@string/item_track_protocol"
        android:textSize="@dimen/dimen_12sp"
        android:fontFamily="@font/ubuntu"
        app:layout_constraintEnd_toEndOf="@+id/tv_conta__label_track"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_conta__label_track"
        app:layout_constraintTop_toBottomOf="@+id/tv_conta__label_track" />

    <TextView
        android:id="@+id/tv_protocol_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_5A646E"
        android:textSize="@dimen/dimen_12sp"
        android:fontFamily="@font/ubuntu"
        android:layout_marginStart="@dimen/dimen_5dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_protocol_label_track"
        app:layout_constraintStart_toEndOf="@+id/tv_protocol_label_track"
        app:layout_constraintTop_toTopOf="@+id/tv_protocol_label_track"
        />


    <TextView
        android:id="@+id/tv_status_label_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:textSize="@dimen/dimen_16sp"
        android:fontFamily="@font/ubuntu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.504" />

    <View
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:background="@color/color_C5CED7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_protocol_track"/>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/dimen_8dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_marginEnd="@dimen/dimen_21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_flui"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>

