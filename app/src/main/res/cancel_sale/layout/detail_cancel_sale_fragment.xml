<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ViewFlipper
        android:id="@+id/containerCancelSale"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            tools:ignore="MissingConstraints">

            <include
                android:id="@+id/toolbar_include"
                layout="@layout/toolbar_main"
                android:layout_marginTop="@dimen/dimen_180dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="IncludeLayoutParam" />

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/tvDetailSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/tv_title"
                android:textColor="@color/color_231F20"
                android:textSize="@dimen/dimen_16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_include"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_14dp"
                android:background="@drawable/ft_dc_uncheck"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvDetailSale"
                app:layout_constraintTop_toBottomOf="@+id/tvDetailSale"
                tools:ignore="MissingConstraints">

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/tv_cd_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_13dp"
                    android:layout_marginTop="@dimen/dimen_13dp"
                    android:layout_marginEnd="@dimen/dimen_154dp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/tv_cd_data"
                    android:textColor="@color/color_8A99A8"
                    android:textSize="@dimen/dimen_16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/tvDateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_17dp"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/color_8A99A8"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_cd_data"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/tv_cd_data"
                    app:layout_constraintTop_toTopOf="@+id/tv_cd_data"
                    tools:ignore="MissingConstraints" />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/tv_cd_vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/tv_cd_vs"
                    android:textColor="@color/color_8A99A8"
                    android:textSize="@dimen/dimen_16sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_cd_data"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/tv_cd_data"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cd_data"
                    tools:ignore="MissingConstraints" />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/tvValueSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/color_8A99A8"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tvDateValue"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/tv_cd_vs"
                    app:layout_constraintTop_toBottomOf="@+id/tvDateValue"
                    tools:ignore="MissingConstraints" />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/tv_cd_vs_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/tv_cd_brand"
                    android:textColor="@color/color_8A99A8"
                    android:textSize="@dimen/dimen_16sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_cd_vs"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/tv_cd_vs"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cd_vs"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/imgBrand"
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/color_8A99A8"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tvValueSale"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/tv_cd_vs_brand"
                    app:layout_constraintTop_toBottomOf="@+id/tvValueSale"
                    tools:ignore="MissingConstraints" />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/tv_cd_formpayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/tv_cd_formpayment"
                    android:textColor="@color/color_8A99A8"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_cd_vs_brand"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/tv_cd_vs_brand"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cd_vs_brand"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="MissingConstraints" />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/tvFormPaymentValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/color_8A99A8"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/imgBrand"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/tv_cd_formpayment"
                    app:layout_constraintTop_toBottomOf="@+id/imgBrand"
                    tools:ignore="MissingConstraints" />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/tv_cd_vs_disponivel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/tv_cd_vs_disponivel"
                    android:textColor="@color/color_8A99A8"
                    android:textSize="@dimen/dimen_16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tv_cd_formpayment"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/tv_cd_formpayment"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cd_formpayment"
                    tools:ignore="MissingConstraints" />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/tvDisponibleValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/color_8A99A8"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tvFormPaymentValue"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/tv_cd_vs_disponivel"
                    app:layout_constraintTop_toBottomOf="@+id/tvFormPaymentValue"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/tv_subtitle_cd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/tv_subtitle"
                android:textColor="@color/color_231F20"
                android:textSize="@dimen/dimen_16sp"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                tools:ignore="MissingConstraints" />

            <RadioGroup
                android:id="@+id/rg_options_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="@+id/tv_subtitle_cd"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_subtitle_cd"
                app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_cd"
                app:layout_goneMarginEnd="@dimen/dimen_8dp">

                <RadioButton
                    android:id="@+id/radioFullValue"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="@dimen/dimen_64dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_cancel_selector"
                    android:button="@android:color/transparent"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_16sp"
                    android:paddingTop="@dimen/dimen_3sp"
                    android:paddingRight="@dimen/dimen_16sp"
                    android:paddingBottom="@dimen/dimen_3sp"
                    android:text="@string/valor_total"
                    android:textColor="@drawable/radio_cancel_text_flat_selector" />

                <RadioButton
                    android:id="@+id/radioOtherValue"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="@dimen/dimen_64dp"
                    android:layout_marginStart="@dimen/dimen_8sp"
                    android:layout_marginLeft="@dimen/dimen_8sp"
                    android:layout_marginEnd="@dimen/dimen_8sp"
                    android:layout_marginRight="@dimen/dimen_8sp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_cancel_selector"
                    android:button="@android:color/transparent"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_16sp"
                    android:paddingTop="@dimen/dimen_3sp"
                    android:paddingRight="@dimen/dimen_16sp"
                    android:paddingBottom="@dimen/dimen_3sp"
                    android:text="@string/cancel_vl_outros"
                    android:textColor="@drawable/radio_cancel_text_flat_selector" />

            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputDisponibleValue"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:errorTextAppearance="@style/error_appearance"
                app:layout_constraintEnd_toEndOf="@+id/rg_options_cancel"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/rg_options_cancel"
                app:layout_constraintTop_toBottomOf="@+id/rg_options_cancel"
                tools:ignore="MissingConstraints">

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                    android:id="@+id/ev_valor_disponivel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_shape"
                    android:digits="1234567890.,"
                    android:hint="@string/tv_cd_vs_disponivel"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="numberDecimal"
                    android:maxLength="13"
                    android:maxLines="1"
                    android:textColor="@color/text_color_263238"
                    android:textColorHint="@color/gray_light"
                    android:textSize="@dimen/dimen_16sp"
                    app:typeface="MuseoSans-500.ttf" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnConfirmCancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_14dp"
                android:background="@drawable/btn_cancel_unselector"
                android:fontFamily="@font/montserrat"
                android:text="@string/btn_cancel_detalhes"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/inputDisponibleValue"
                app:layout_constraintStart_toStartOf="@+id/inputDisponibleValue"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ViewFlipper>
</androidx.constraintlayout.widget.ConstraintLayout>