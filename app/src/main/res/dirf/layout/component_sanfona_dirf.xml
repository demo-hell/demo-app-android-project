<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_16dp"
    android:background="@drawable/custom_text_input_view_selector"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:id="@+id/layout_setinha"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:weightSum="2"
        tools:ignore="Suspicious0dp">

        <TextView
            style="@style/Heading_500_Bold_18_display_500"
            android:id="@+id/textView"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1.7"
            android:singleLine="true"
            android:text="@string/txt_dirf_file_01"
            android:textSize="14dp"
            android:textColor="@color/color_5A646E"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".3"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_setinha_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="VectorDrawableCompat"
                android:background="@drawable/ic_setinha_down"
                tools:layout_editor_absoluteX="123dp"
                tools:layout_editor_absoluteY="225dp" />

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/item_file_dirf"
        android:visibility="gone"
        android:id="@+id/layout_item_dirf"
        />

</LinearLayout>

