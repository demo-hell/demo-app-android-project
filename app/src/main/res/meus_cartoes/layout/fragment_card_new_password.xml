<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/button_card_activate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <include
                android:id="@+id/toolbarBackCardActivation"
                layout="@layout/toolbar_main" />

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/txtTitle"
                style="@style/TextBlack24spTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="@string/txt_title_step_new_password" />


            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                style="@style/TextBlack14spNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="@string/txt_description_step_new_password1" />

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                style="@style/TextBlack14spNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/txt_description_step_new_password2" />

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                style="@style/TextBlack14spNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/txt_description_step_new_password3" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:theme="@style/TextInputHintMeuCadastro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/me_cp_title"
                app:layout_constraintVertical_bias="0.0"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/gray_light"
                app:errorTextAppearance="@style/ErrorAppearance"
                tools:ignore="MissingConstraints">

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                    android:id="@+id/textInputPassword"
                    style="@style/TextInputEditMeuCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_shape_bank_account"
                    android:hint="Senha"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="textPassword"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:textSize="16sp"
                    app:typeface="MuseoSans-500.ttf"
                    app:disableCopyToClipboard="true"/>


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:theme="@style/TextInputHintMeuCadastro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/me_cp_title"
                app:layout_constraintVertical_bias="0.0"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/gray_light"
                app:errorTextAppearance="@style/ErrorAppearance"
                tools:ignore="MissingConstraints">

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                    android:id="@+id/textInputPasswordConfirm"
                    style="@style/TextInputEditMeuCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_shape_bank_account"
                    android:hint="Confirme Senha"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="textPassword"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:textSize="16sp"
                    app:typeface="MuseoSans-500.ttf"
                    app:disableCopyToClipboard="true"/>

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/button_card_activate"
            style="@style/ButtonShapedPurpleStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:padding="15dp"
            app:fb_text="PrÃ³ximo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/frame_progress_view"
        layout="@layout/frame_progress" />

    <include layout="@layout/content_error"/>


</androidx.constraintlayout.widget.ConstraintLayout>
