<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="46dp"
    android:layout_marginEnd="46dp"
    android:layout_height="match_parent">


    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/textActivationTitle"
        android:layout_width="wrap_content"
        android:maxWidth="295dp"
        android:layout_height="wrap_content"
        android:text="Falta só mais um passo!Desbloqueie seu cartão agora mesmo."
        style="@style/TextBlack24spTitle"/>

    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/textActivationDescription"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextBlack14spNormal"
        android:text="@string/text_card_fwd_account"/>


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/buttonUnlockCreditCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonShapedPurpleStyle"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="41dp"
        android:padding="15dp"
        app:fb_text="@string/text_card_fwd_site"/>

</LinearLayout>