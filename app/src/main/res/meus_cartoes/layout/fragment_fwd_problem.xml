<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/im_lock_card" />

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/textActivationTitleError"
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="13dp"
            android:maxWidth="295dp"
            android:text="Validação não disponível." />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="46dp"
        android:layout_marginStart="46dp"
        android:orientation="vertical">

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/textActivationTitle"
            style="@style/TextBlack14spTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="295dp"
            android:text="Não foi possível validar a sua conta." />

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/textActivationDescription"
            style="@style/TextBlack14spNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/text_card_error_fwd_account" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/buttonAcessChat"
            style="@style/ButtonShapedPurpleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:padding="15dp"
            app:fb_text="@string/text_my_cards_access_the_chat" />


        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/textCallPhone"
            style="@style/TextBlack14spNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="41dp"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="@string/text_my_cards_call_phone"
            android:textColor="@color/purple" />
    </LinearLayout>
</LinearLayout>