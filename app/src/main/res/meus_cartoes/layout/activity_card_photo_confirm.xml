<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollMyCardsBelowContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbarBackCardActivation"
            layout="@layout/toolbar_main"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_content"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarBackCardActivation">

            <TextView
                android:id="@+id/textMessageTitle"
                style="@style/TextBlack24spTitle"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="39dp"
                android:layout_marginLeft="41dp"


                android:layout_marginRight="39dp"
                android:layout_marginStart="41dp"
                android:layout_marginTop="8dp"
                android:text="@string/text_card_photo_confirm"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/textFirstBackCardActivationDescription"
                style="@style/TextBlack14spNormal"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="39dp"
                android:layout_marginLeft="41dp"
                android:layout_marginRight="39dp"
                android:layout_marginStart="41dp"
                android:layout_marginTop="14dp"
                android:text="@string/text_card_photo_confirm_descriptiion"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textMessageTitle"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtCardConfVerse"
                style="@style/TextBlack18spTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:text="@string/text_card_photo_confirm_verse"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_photo_front"
                app:layout_constraintTop_toBottomOf="@+id/textFirstBackCardActivationDescription"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtCardConfFront"
                style="@style/TextBlack18spTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:text="@string/text_card_photo_confirm_front"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textFirstBackCardActivationDescription"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/img_photo_front"
                android:layout_width="141dp"
                android:layout_height="241dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txtCardConfFront"
                app:layout_constraintTop_toBottomOf="@+id/txtCardConfFront"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/img_photo_verse"
                android:layout_width="141dp"
                android:layout_height="241dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_photo_front"
                app:layout_constraintTop_toBottomOf="@+id/txtCardConfVerse"
                app:layout_constraintVertical_bias="0.0" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_send_document"
                style="@style/ButtonShapedPurpleStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="23dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="23dp"
                android:layout_marginStart="24dp"
                android:clickable="true"
                android:onClick="btnSendDocumentOnClick"
                android:padding="15dp"
                app:fb_text="@string/button_card_photo_confirm_send"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/progress"
            layout="@layout/frame_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            layout="@layout/content_error"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>