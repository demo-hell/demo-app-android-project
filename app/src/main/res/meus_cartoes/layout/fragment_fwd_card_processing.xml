<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/im_lock_card" />

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/textActivationTitleError"
            style="@style/TextGrey12spWarning"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="13dp"
            android:text="@string/text_card_processing_warning" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="46dp"
        android:layout_marginStart="46dp"
        android:orientation="vertical">

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/textActivationTitle"
            style="@style/TextBlack24spTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="295dp"
            android:text="@string/text_message_documentation_send" />

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/textActivationDescription"
            style="@style/TextBlack14spNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/text_card_document_sent_success_description" />

    </LinearLayout>


</LinearLayout>