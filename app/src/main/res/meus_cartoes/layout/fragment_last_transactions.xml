<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearStatementHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="8dp"
                app:srcCompat="@drawable/ic_my_cards_header_symbol" />

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/textMySellsWidgetTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_statement_title"
                android:textColor="@color/text_color_263238"
                android:textSize="16sp"
                app:typeface="Museo700-Regular.ttf" />

            <LinearLayout
                android:id="@+id/linearUpdateAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:clickable="true"
                android:orientation="horizontal">

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/textUpdateTransactions"
                    style="@style/Paragraph_300_Regular_14_Brand_400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_minhas_vendas_atualizar"
                    android:textColor="@color/brand_400"/>


            </LinearLayout>


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardStatementsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">


            <LinearLayout android:id="@+id/linearStatementsContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:duplicateParentState="true"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/linearMySells"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                        android:id="@+id/textLastTransactionsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/black_000000"
                        android:text="Últimas transações"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        app:typeface="MuseoSans-700.ttf" />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/linearStatementsListContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#33838383" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerStatementsList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="false"
                            android:clipToPadding="false"
                            tools:listitem="@layout/item_extrato_time_line"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/linearErrorNotTransaction"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:visibility="gone">
                        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                            android:id="@+id/text_view_error_msg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:text="@string/extrato_meus_cartoes_empty"
                            android:alpha="0.4"
                            android:visibility="gone"
                            android:gravity="center"
                            android:textColor="@color/gray_light"
                            android:textSize="14sp"
                            app:typeface="MuseoSans-500.ttf" />

                    </RelativeLayout>
                </LinearLayout>

                <include
                    layout="@layout/card_error"/>

                <include
                    android:id="@+id/linearSeeMoreAction"
                    android:duplicateParentState="true"
                    layout="@layout/content_ver_mais"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressLastTransactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>



</LinearLayout>