<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_24dp"
    android:paddingTop="@dimen/dimen_32dp"
    android:paddingRight="@dimen/dimen_24dp"
    android:background="@drawable/background_white_arround">

    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/typefaceTextView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="@string/conta_digital_step03_title"
        android:textColor="@color/color_353A40"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/txtStep03Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/ubuntu"
        android:text="@string/conta_digital_step03_subtitle_01"
        android:textColor="@color/color_353A40"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/typefaceTextView33"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/typefaceTextView33"
        app:layout_constraintTop_toBottomOf="@+id/typefaceTextView33" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtStep03Subtitle"
        app:layout_constraintStart_toStartOf="@+id/txtStep03Subtitle"
        app:layout_constraintTop_toBottomOf="@+id/txtStep03Subtitle"
        app:srcCompat="@drawable/ic_15" />


</androidx.constraintlayout.widget.ConstraintLayout>