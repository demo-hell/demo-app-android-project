<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="46dp"
    android:layout_marginEnd="46dp"
    android:orientation="vertical">


    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/textActivationTitle"
        style="@style/TextBlack24spTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="295dp"
        android:text="Falta só mais um passo! Desbloqueie seu cartão agora mesmo." />

    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/textActivationDescription"
        style="@style/TextBlack14spNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/text_card_activation_description" />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/buttonUnlockCreditCard"
        style="@style/ButtonShapedPurpleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:padding="15dp"
        app:fb_text="@string/text_card_unlock_label" />

</LinearLayout>