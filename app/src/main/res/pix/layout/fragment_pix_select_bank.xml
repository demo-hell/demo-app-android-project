<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dimen_16dp">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Heading_500_18_display_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/text_institution_name"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etBankSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/shape_solid_white_border_color_c5ced7"
        android:drawableStart="@drawable/ic_mearchant_search"
        android:drawablePadding="@dimen/dimen_10dp"
        android:fontFamily="@font/ubuntu"
        android:inputType="text"
        android:enabled="false"
        android:hint="@string/type_the_bank_name_or_code"
        android:imeOptions="actionSearch"
        android:lineSpacingExtra="@dimen/dimen_8sp"
        android:maxLength="30"
        android:maxLines="1"
        android:paddingVertical="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_10dp"
        android:textColorHint="@color/color_8A99A8"
        android:textSize="@dimen/dimen_14sp"
        android:theme="@style/InputHintCentralAjuda"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivClearSearch"
        android:layout_width="@dimen/dimen_48dp"
        android:layout_height="@dimen/dimen_48dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingVertical="@dimen/dimen_16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/etBankSearch"
        app:layout_constraintEnd_toEndOf="@+id/etBankSearch"
        app:layout_constraintTop_toTopOf="@+id/etBankSearch"
        app:srcCompat="@drawable/ic_close_gray" />

    <ProgressBar
        android:id="@+id/pbProgress"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/brand_400"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBankSearch"
        app:layout_constraintVertical_bias="0.328" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBanks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintTop_toBottomOf="@id/etBankSearch" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_without_banks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/etBankSearch">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_empty_state"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_without_items" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_empty_state_title"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_22dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:gravity="center"
            android:text="@string/could_not_find_any_banks"
            app:layout_constraintTop_toBottomOf="@+id/iv_empty_state" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>