<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        style="@style/bold_ubuntu_12_cloud_300"
        android:id="@+id/tvLabelValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_8dp"
        android:text="@string/text_pix_extract_detail_transaction_receipt_amount"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:background="@drawable/background_success_100_radius_8"
        app:layout_constraintTop_toBottomOf="@id/tvLabelValue">

        <TextView
            style="@style/medium_montserrat_14_success_500"
            android:id="@+id/tvLabelAmountReceived"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_pix_extract_detail_received_amount"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/tvTransactionAmount"
            app:layout_constraintBottom_toBottomOf="@id/tvTransactionAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTransactionAmount" />

        <TextView
            android:id="@+id/tvTransactionAmount"
            style="@style/bold_ubuntu_20_success_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvLabelAmountReceived"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="R$ 500,00" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerQrCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTransactionAmount"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                style="@style/medium_montserrat_14_cloud_400"
                android:id="@+id/tvSale"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_value_sale_pix"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintEnd_toStartOf="@id/tvSaleValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvSaleValue"
                app:layout_constraintBottom_toBottomOf="@id/tvSaleValue"/>

            <TextView
                style="@style/bold_montserrat_14_cloud_400"
                android:id="@+id/tvSaleValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvSale"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="R$ 500,00" />

            <TextView
                style="@style/medium_montserrat_14_cloud_400"
                android:id="@+id/tvChange"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_value_change_pix"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintEnd_toStartOf="@id/tvChangeValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSale"
                app:layout_constraintTop_toTopOf="@id/tvChangeValue"
                app:layout_constraintBottom_toBottomOf="@id/tvChangeValue" />

            <TextView
                style="@style/bold_montserrat_14_cloud_400"
                android:id="@+id/tvChangeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvChange"
                app:layout_constraintTop_toBottomOf="@id/tvSale"
                tools:text="R$ 500,00" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/containerFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/dimen_16dp"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/containerQrCode">

            <TextView
                style="@style/medium_montserrat_14_success_500"
                android:id="@+id/tvLabelFee"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_pix_extract_detail_fee"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="InefficientWeight" />

            <TextView
                style="@style/bold_montserrat_14_success_500"
                android:id="@+id/tvFeeAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="- R$ 10,00" />

        </LinearLayout>

        <View
            android:id="@+id/dividerNetAmount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/cloud_200"
            app:layout_constraintTop_toBottomOf="@id/containerFee" />

        <LinearLayout
            android:id="@+id/containerNetAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/dimen_16dp"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/dividerNetAmount">

            <TextView
                style="@style/medium_montserrat_14_success_500"
                android:id="@+id/tvLabelNetAmount"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_pix_extract_detail_net_amount_in_account"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="InefficientWeight" />

            <TextView
                style="@style/bold_montserrat_14_success_500"
                android:id="@+id/tvNetAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="R$ 490,00" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
