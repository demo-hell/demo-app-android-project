<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".pix.ui.transfer.amount.PixEnterTransferAmountBottomSheet">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_16dp">

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_4dp"
            android:background="@drawable/ic_drag_bottom_sheet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_enter_amount_pix"
            style="@style/label_18_display_500_montserrat_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/text_pix_enter_amount_title"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/message_enter_amount_pix"
            style="@style/label_14_display_400_ubuntu_pix_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/pix_text_my_limits_add_new_trusted_destination_value_message"
            android:textColor="@color/display_500"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/title_enter_amount_pix" />

        <br.com.cielo.libflue.inputtext.CieloInputText
            android:id="@+id/input_amount_pix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:imeOptions="actionDone"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/message_enter_amount_pix" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_balance_pix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@drawable/background_my_keys_pix_information"
            android:padding="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/input_amount_pix">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_balance"
                style="@style/label_14_display_500_ubuntu"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_pix_enter_amount_title_balance"
                app:layout_constraintBottom_toBottomOf="@+id/container_balance_transfer_pix"
                app:layout_constraintEnd_toStartOf="@+id/container_balance_transfer_pix"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/container_balance_transfer_pix" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_balance_transfer_pix"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/title_balance"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/container_value_pix_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_pix_balance_show"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_pix_balance_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:textColor="@color/display_500"
                        android:textSize="@dimen/dimen_14sp"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="R$ 21.526,87"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_pix_balance_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_oculto_80dp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_pix_balance_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/container_value_pix_balance"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/container_value_pix_balance"
                    tools:srcCompat="@drawable/ic_eye" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/reversal_separator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/display_200"
            android:layout_marginVertical="@dimen/dimen_16dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/title_balance"
            app:layout_constraintBottom_toTopOf="@+id/title_reversal"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_reversal"
            style="@style/label_14_display_500_ubuntu"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_pix_enter_amount_reversal_available"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_pix_reversal_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="@color/display_500"
            android:textSize="@dimen/dimen_14sp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title_reversal"
            tools:text="R$ 500,00" />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <br.com.cielo.libflue.button.CieloRegularBlueButton
            android:id="@+id/btn_save_amount_pix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:background="@color/blue_0774E7"
            android:text="@string/confirmar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container_balance_pix"
            app:layout_constraintVertical_bias="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>