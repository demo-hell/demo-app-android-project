<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".pix.ui.home.account.PixFreeMovementAccountManagementFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/label_12_display_400_ubuntu_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_5dp"
            android:text="@string/screen_account_management_title"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@color/display_200"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFreeTransferActiveTitle"
            style="@style/label_18_display_500_montserrat_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:text="@string/screen_account_management_free_movement_is_active_title"
            android:textColor="@color/success_500"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFreeMovementSubtitle"
            style="@style/label_16_display_400_ubuntu_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:lineSpacingExtra="@dimen/dimen_5dp"
            android:text="@string/screen_account_management_automatic_free_movement_subtitle"
            app:layout_constraintTop_toBottomOf="@+id/tvFreeTransferActiveTitle"
            tools:layout_editor_absoluteX="16dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerFreeMovementInformative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/background_blue_corners_8dp"
            android:padding="@dimen/dimen_12dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFreeMovementSubtitle">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFreeMovementInformative"
                style="@style/label_12_brand_600_ubuntu_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:lineSpacingExtra="@dimen/dimen_5dp"
                android:text="@string/screen_account_management_automatic_free_movement_informative"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/viewFreeMovement"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@color/display_200"
            app:layout_constraintTop_toBottomOf="@+id/containerFreeMovementInformative"
            tools:layout_editor_absoluteX="16dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAutomaticTransferTitle"
            style="@style/label_18_display_500_montserrat_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:text="@string/screen_account_management_automatic_movement_title"
            app:layout_constraintTop_toBottomOf="@id/viewFreeMovement" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAutomaticTransferInformation"
            style="@style/label_16_display_400_ubuntu_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:lineSpacingExtra="@dimen/dimen_5dp"
            android:text="@string/screen_account_management_automatic_transfer_information"
            app:layout_constraintTop_toBottomOf="@+id/tvAutomaticTransferTitle"
            tools:layout_editor_absoluteX="16dp" />

        <include
            android:id="@+id/containerBankAccount"
            layout="@layout/layout_pix_bank_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAutomaticTransferInformation"
            tools:layout_editor_absoluteX="16dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvActivateAutomaticTransferQuestion"
            style="@style/label_14_display_400_ubuntu_pix_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/screen_account_management_automatic_movement_active_question"
            app:layout_constraintTop_toBottomOf="@+id/containerBankAccount" />

        <br.com.cielo.libflue.button.CieloRegularBlueButton
            android:id="@+id/btnActiveAutomaticTransfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@color/blue_0774E7"
            android:text="@string/screen_account_management_automatic_movement_active_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvActivateAutomaticTransferQuestion"
            app:layout_constraintVertical_bias="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>