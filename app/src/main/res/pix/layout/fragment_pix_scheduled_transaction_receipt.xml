<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".pix.ui.extract.receipt.PixScheduledTransactionReceiptFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_cielo_logo_pix" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleReceipt"
                style="@style/label_18_brand_600_montserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/text_pix_scheduled_appointment_receipt"
                app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDateReceipt"
                style="@style/label_16_display_400_ubuntu_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/tvTitleReceipt"
                tools:text="Agendado em 29/04/2022 Ã s 15:22:40" />

            <View
                android:id="@+id/dividerOne"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@color/display_200"
                app:layout_constraintTop_toBottomOf="@+id/tvDateReceipt" />

            <include
                android:id="@+id/includeSchedulingAboutTransaction"
                layout="@layout/layout_pix_scheduled_about_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/dividerOne" />

            <View
                android:id="@+id/dividerTwo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@color/display_200"
                app:layout_constraintTop_toBottomOf="@+id/includeSchedulingAboutTransaction" />

            <include
                android:id="@+id/includeSchedulingDestinationTransaction"
                layout="@layout/layout_pix_transfer_destination_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/dividerTwo" />

            <View
                android:id="@+id/dividerThree"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@color/display_200"
                app:layout_constraintTop_toBottomOf="@+id/includeSchedulingDestinationTransaction" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAuthenticationCodeTitle"
                style="@style/label_16_display_300_montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/text_pix_transfer_auth_code"
                app:layout_constraintTop_toBottomOf="@+id/dividerThree" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAuthenticationCodeValue"
                style="@style/label_16_display_400_ubuntu_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                app:layout_constraintTop_toBottomOf="@+id/tvAuthenticationCodeTitle"
                tools:text="58D5E212165B4CA0909BC86B9CEE0111" />

            <View
                android:id="@+id/dividerFour"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@color/display_200"
                app:layout_constraintTop_toBottomOf="@+id/tvAuthenticationCodeValue" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvInfoReceipt"
                style="@style/label_12_display_400_ubuntu_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/text_pix_transfer_receipt_informative"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/dividerFour" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCieloReceipt"
                style="@style/label_16_display_400_montserrat_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/text_pix_transfer_receipt_informative_cielo"
                app:layout_constraintTop_toBottomOf="@+id/tvInfoReceipt" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCNPJCieloReceipt"
                style="@style/label_16_display_400_montserrat_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_pix_transfer_receipt_informative_cnpj_cielo"
                app:layout_constraintTop_toBottomOf="@+id/tvCieloReceipt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/containerReceipt"
            app:layout_constraintVertical_bias="1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvShareReceipt"
                style="@style/light_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_share_24dp"
                android:drawablePadding="@dimen/dimen_10dp"
                android:text="@string/text_pix_transfer_receipt_share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>