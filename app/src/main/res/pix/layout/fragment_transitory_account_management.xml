<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".pix.ui.extract.account.management.PixTransitoryAccountManagementFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            style="@style/label_12_display_400_ubuntu_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_5dp"
            android:text="@string/screen_account_management_title"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@color/display_200"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_automatic_transfer_active_title"
            style="@style/label_18_display_500_montserrat_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:text="@string/screen_account_management_automatic_transfer_active"
            android:textColor="@color/success_500"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_automatic_transfer_information"
            style="@style/label_16_display_400_ubuntu_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:lineSpacingExtra="@dimen/dimen_5dp"
            android:text="@string/screen_account_management_automatic_transfer_information"
            app:layout_constraintTop_toBottomOf="@id/tv_automatic_transfer_active_title" />

        <include
            android:id="@+id/container_bank_account"
            layout="@layout/layout_pix_bank_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_automatic_transfer_information" />

        <View
            android:id="@+id/view_free_movement"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@color/display_200"
            app:layout_constraintTop_toBottomOf="@+id/container_bank_account" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_free_movement_title"
            style="@style/label_18_display_500_montserrat_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:text="@string/screen_account_management_automatic_free_movement_title"
            app:layout_constraintTop_toBottomOf="@id/view_free_movement" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_free_movement_subtitle"
            style="@style/label_16_display_400_ubuntu_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:lineSpacingExtra="@dimen/dimen_5dp"
            android:text="@string/screen_account_management_automatic_free_movement_subtitle"
            app:layout_constraintTop_toBottomOf="@id/tv_free_movement_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_free_movement_informative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/background_blue_corners_8dp"
            android:padding="@dimen/dimen_12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_free_movement_subtitle">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_free_movement_informative"
                style="@style/label_12_brand_600_ubuntu_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:lineSpacingExtra="@dimen/dimen_5dp"
                android:text="@string/screen_account_management_automatic_free_movement_informative"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_free_movement_active_title"
            style="@style/label_14_display_400_ubuntu_pix_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/screen_account_management_automatic_free_movement_active"
            app:layout_constraintTop_toBottomOf="@id/container_free_movement_informative" />

        <include
            android:id="@+id/include_authorization"
            layout="@layout/layout_pix_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_free_movement_active_title" />

        <br.com.cielo.libflue.button.CieloRegularBlueButton
            android:id="@+id/btn_active_free_movement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/blue_0774E7"
            android:enabled="false"
            android:text="@string/screen_account_management_automatic_free_movement_active_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_authorization"
            app:layout_constraintVertical_bias="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>