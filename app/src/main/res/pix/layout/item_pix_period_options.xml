<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/radioGroupPeriodType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbRecents"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_selector_radio_button"
            android:checked="true"
            android:layoutDirection="rtl"
            android:paddingVertical="@dimen/dimen_16dp"
            android:text="@string/txt_pix_extract_filter_option_period_recents" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/display_200" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbLast7days"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_selector_radio_button"
            android:layoutDirection="rtl"
            android:paddingVertical="@dimen/dimen_16dp"
            android:text="@string/filter_ultimos_7_dias" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/display_200" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbLast15Days"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_selector_radio_button"
            android:layoutDirection="rtl"
            android:paddingVertical="@dimen/dimen_16dp"
            android:text="@string/filter_ultimos_15_dias" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/display_200" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbLast30Days"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_selector_radio_button"
            android:layoutDirection="rtl"
            android:paddingVertical="@dimen/dimen_16dp"
            android:text="@string/filter_ultimos_30_dias" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/display_200" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbOthersPeriods"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_selector_radio_button"
            android:layoutDirection="rtl"
            android:paddingVertical="@dimen/dimen_16dp"
            android:text="@string/text_pix_extract_filter_choose_other_period_item" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_24dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtSetDates"
                style="@style/Paragraph_200_Bold_12_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/text_pix_extract_filter_title_define_date"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/shape_solid_white_border_color_c5ced7"
                app:layout_constraintTop_toBottomOf="@id/txtSetDates">

                <TextView
                    android:id="@+id/btPeriodInitial"
                    style="@style/Paragraph_400_regular_16_display_300"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_14dp"
                    android:hint="@string/text_pix_extract_filter_date_start"
                    android:padding="@dimen/dimen_18dp"
                    android:textColor="@color/display_600"
                    android:textColorHint="@color/display_300"
                    app:drawableStartCompat="@drawable/ic_calendar"
                    app:drawableTint="@color/display_300"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txtMsgEmptyStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:drawablePadding="@dimen/dimen_5dp"
                android:text="@string/text_pix_extract_filter_choose_other_period"
                android:textColor="@color/red_DC392A"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_alert_red"
                app:layout_constraintTop_toBottomOf="@id/containerStartDate" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@drawable/shape_solid_white_border_color_c5ced7"
                app:layout_constraintTop_toBottomOf="@id/txtMsgEmptyStartDate">

                <TextView
                    android:id="@+id/btPeriodEnd"
                    style="@style/Paragraph_400_regular_16_display_300"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_14dp"
                    android:hint="@string/text_pix_extract_filter_date_end"
                    android:padding="@dimen/dimen_18dp"
                    android:textColor="@color/display_600"
                    android:textColorHint="@color/display_300"
                    app:drawableStartCompat="@drawable/ic_calendar"
                    app:drawableTint="@color/display_300"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txtMsgEmptyEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:drawablePadding="@dimen/dimen_5dp"
                android:text="@string/text_pix_extract_filter_choose_other_period"
                android:textColor="@color/red_DC392A"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_alert_red"
                app:layout_constraintTop_toBottomOf="@id/containerEndDate" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/display_200" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
