<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_stroke_1dp_round_color_c5ced7"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:paddingTop="@dimen/dimen_16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/include_show_pix_balance"
            layout="@layout/layout_pix_balance_value"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/include_try_again"
            layout="@layout/layout_try_again"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_balance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/display_200"
        app:layout_constraintTop_toBottomOf="@+id/container_balance" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_show_extract_pix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/view_balance">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_show_extract_pix"
            style="@style/label_14_brand_400_montserrat_pix_home"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_pix_show_extract_title"
            app:layout_constraintEnd_toStartOf="@+id/iv_show_extract_pix"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_show_extract_pix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:padding="@dimen/dimen_3dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_show_extract_pix"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_show_extract_pix"
            app:layout_constraintTop_toTopOf="@id/tv_show_extract_pix"
            app:srcCompat="@drawable/ic_chevron_right_gray" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
