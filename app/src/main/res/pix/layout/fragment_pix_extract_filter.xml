<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_4dp"
            android:layout_marginVertical="@dimen/dimen_16dp"
            android:background="@drawable/ic_drag_bottom_sheet"
            app:layout_constraintBottom_toTopOf="@id/scrollViewFilter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollViewFilter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/containerButtons"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintVertical_bias="0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTransactionsFiltered"
                    style="@style/Heading_500_18_display_500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:text="@string/text_pix_extract_filter_title"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvRelease"
                    style="@style/Paragraph_700_bold_16_display_500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:lineSpacingExtra="@dimen/dimen_6sp"
                    android:text="@string/text_pix_extract_filter_title_entries"
                    app:layout_constraintTop_toBottomOf="@+id/tvTransactionsFiltered" />

                <include
                    android:id="@+id/includeReleasesFilter"
                    layout="@layout/item_pix_releases_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    app:layout_constraintTop_toBottomOf="@id/tvRelease" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_16dp"
                    android:background="@color/display_50"
                    android:paddingVertical="@dimen/dimen_negative_16dp"
                    app:layout_constraintTop_toBottomOf="@id/includeReleasesFilter" />

                <TextView
                    android:id="@+id/tvTransactions"
                    style="@style/Paragraph_700_bold_16_display_500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:text="@string/text_pix_extract_filter_title_transactions"
                    app:layout_constraintTop_toBottomOf="@+id/view1" />

                <include
                    android:id="@+id/includeTransactionsFilter"
                    layout="@layout/item_pix_transactions_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    app:layout_constraintTop_toBottomOf="@id/tvTransactions" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_16dp"
                    android:background="@color/display_50"
                    android:paddingVertical="-16dp"
                    app:layout_constraintTop_toBottomOf="@id/includeTransactionsFilter" />

                <TextView
                    android:id="@+id/tvPeriod"
                    style="@style/Paragraph_700_bold_16_display_500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:text="@string/text_pix_extract_filter_title_periodo"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />

                <include
                    android:id="@+id/includePeriodsFilter"
                    layout="@layout/item_pix_period_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    app:layout_constraintTop_toBottomOf="@id/tvPeriod" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/btnClearFilter"
                style="@style/Label_400_Alternate_regular_16_brand_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:paddingVertical="@dimen/dimen_16dp"
                android:text="@string/text_clear_filters_label"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent" />

            <br.com.cielo.libflue.button.CieloRegularBlueButton
                android:id="@+id/btnApplyFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:background="@color/blue_0774E7"
                android:text="@string/text_pix_extract_button_apply_filter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnClearFilter" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>