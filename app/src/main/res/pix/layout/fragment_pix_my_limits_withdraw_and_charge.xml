<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_my_limits_title"
            style="@style/medium_montserrat_18_cloud_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_3dp"
            android:text="@string/text_pix_my_limits_title_withdraw_and_change"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_my_limits_change"
            style="@style/regular_ubuntu_14_cloud_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:lineSpacingExtra="@dimen/dimen_3dp"
            android:text="@string/text_my_limits_transaction_change"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_limits_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_pix_my_limits_dot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:lineSpacingExtra="@dimen/dimen_3dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_limits_change">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_limits_dot"
                style="@style/bold_ubuntu_12_cloud_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:text="@string/pix_marker"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_limits_options"
                style="@style/bold_ubuntu_12_cloud_400"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:text="@string/text_pix_my_limits_withdraw"
                app:layout_constraintStart_toEndOf="@+id/tv_my_limits_dot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_my_limits_check_daytime_and_nighttime"
            style="@style/regular_ubuntu_14_cloud_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:lineSpacingExtra="@dimen/dimen_6sp"
            android:text="@string/text_my_limits_transaction_check_daytime_and_nighttime"
            app:layout_constraintTop_toBottomOf="@+id/container_pix_my_limits_dot" />

        <include
            android:id="@+id/container_pix_my_limits_daytime"
            layout="@layout/layout_pix_my_limits_daytime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_limits_check_daytime_and_nighttime"/>

        <include
            android:id="@+id/container_pix_my_limits_nighttime"
            layout="@layout/layout_pix_my_limits_nighttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@id/container_pix_my_limits_daytime"/>

        <include
            android:id="@+id/container_pix_my_limits_monthly"
            layout="@layout/layout_pix_my_limits_monthly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@id/container_pix_my_limits_nighttime" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>