<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_solid_white_border_color_c5ced7"
        android:minHeight="@dimen/dimen_98dp"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_15dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/container_key"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rbMyKey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_my_key_name"
                style="@style/label_18_display_500_montserrat_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="000.111.222-33" />

            <TextView
                android:id="@+id/tv_my_key_type"
                style="@style/label_12_display_400_ubuntu_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="CPF" />

        </LinearLayout>

        <RadioButton
            android:id="@+id/rbMyKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:button="@drawable/custom_selector_radio_button"
            android:gravity="end"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@id/container_key"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/container_key"
            app:layout_constraintTop_toTopOf="@id/container_key" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>