<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/radioGroupAccountType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbCheckingAccount"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_selector_radio_button"
            android:checked="true"
            android:background="@drawable/shape_solid_white_border_color_c5ced7"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_20dp"
            android:layoutDirection="rtl"
            android:text="@string/text_checking_account_type_label" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbSavingsAccount"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_selector_radio_button"
            android:layoutDirection="rtl"
            android:background="@drawable/shape_solid_white_border_color_c5ced7"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/text_savings_account_type_label" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbPaymentAccount"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_selector_radio_button"
            android:layoutDirection="rtl"
            android:background="@drawable/shape_solid_white_border_color_c5ced7"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/text_payment_account_type" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>
