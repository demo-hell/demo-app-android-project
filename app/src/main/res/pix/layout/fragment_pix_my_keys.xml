<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".pix.ui.keys.myKeys.home.PixMyKeysFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title_my_keys"
            style="@style/Heading_500_18_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_title_screen_my_keys_pix"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_subtitle_my_keys"
            style="@style/Paragraph_400_regular_16_display_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:lineSpacingExtra="@dimen/dimen_3dp"
            android:text="@string/text_subtitle_screen_my_keys_pix"
            app:layout_constraintTop_toBottomOf="@id/tv_title_my_keys" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_add_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_26dp"
            android:background="@drawable/background_stroke_1dp_round_color_c5ced7"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_my_keys">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_add_key"
                android:layout_width="@dimen/dimen_26dp"
                android:layout_height="@dimen/dimen_26dp"
                android:layout_marginStart="@dimen/dimen_18dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_add_key"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_add_key"
                app:srcCompat="@drawable/plus_circle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_add_key"
                style="@style/Paragraph_400_regular_16_display_500"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_28dp"
                android:importantForAccessibility="yes"
                android:text="@string/text_register_a_pix_key"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/appCompatImageView3"
                app:layout_constraintStart_toEndOf="@+id/iv_add_key"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView3"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_add_key"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_add_key"
                app:srcCompat="@drawable/ic_chevron_right_gray"
                app:tint="@color/display_200" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/color_C5CED7"
            app:layout_constraintTop_toBottomOf="@+id/container_add_key" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_with_keys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/viewDivider">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_key_quantity"
                style="@style/Label_300_Bold_14_display_300"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_16dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1 de 20 chaves" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_my_keys_pix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_key_quantity"
                tools:itemCount="1"
                tools:listitem="@layout/layout_pix_my_keys_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_verification_keys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/container_with_keys"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_verification_keys"
                style="@style/Label_300_Bold_14_display_300"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_pix_home_mey_keys_verification_keys"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_verification_keys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_verification_keys"
                tools:itemCount="1"
                tools:listitem="@layout/layout_pix_my_keys_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_without_main_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/container_add_key">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_empty_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_120dp"
                android:layout_marginStart="@dimen/dimen_18dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_link_pgto_empty_state" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_empty_state_title"
                style="@style/Paragraph_300_bold_14_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:gravity="center"
                android:text="@string/text_my_keys_main_key_empty_title"
                app:layout_constraintTop_toBottomOf="@+id/iv_empty_state" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_empty_state_subtitle"
                style="@style/Paragraph_300_regular_14_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:text="@string/text_my_keys_main_key_empty_subtitle"
                app:layout_constraintTop_toBottomOf="@+id/tv_empty_state_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_more_information_keys_pix"
                style="@style/Label_300_Alternate_14_brand_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_20dp"
                android:paddingVertical="@dimen/dimen_10dp"
                android:text="@string/text_btn_pix_my_keys_more_information"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_empty_state_subtitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
