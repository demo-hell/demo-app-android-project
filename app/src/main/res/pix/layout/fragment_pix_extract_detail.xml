<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".pix.ui.extract.detail.PixExtractDetailFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/llButtonFooter"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/dimen_16dp">

            <LinearLayout
                android:id="@+id/bannerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16dp"
                android:background="@drawable/background_status_my_keys_pix_alert_100"
                android:orientation="vertical"
                android:padding="@dimen/dimen_8dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tvBannerTitle"
                    style="@style/label_14_alert_600_montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    tools:text="Em processamento" />

                <TextView
                    android:id="@+id/tvBannerContent"
                    style="@style/label_12_display_500_ubuntu_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:textAlignment="center"
                    app:lineHeight="@dimen/dimen_18sp"
                    tools:text="@string/text_pix_extract_detail_processing_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTransactionStatus"
                style="@style/Paragraph_400_bold_16_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/bannerContainer"
                tools:text="Transferência recebida - Pix" />

            <TextView
                android:id="@+id/tvTransactionDatetime"
                style="@style/label_12_display_400_ubuntu_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/tvTransactionStatus"
                tools:text="em 25/03/2022 às 21:53:04" />

            <LinearLayout
                android:id="@+id/container_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:background="@drawable/background_stroke_1dp_round_color_c5ced7"
                android:orientation="vertical"
                android:padding="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@id/tvTransactionDatetime">

                <TextView
                    android:id="@+id/tvTransactionReceivedFrom"
                    style="@style/label_12_display_300_ubuntu_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_pix_extract_detail_received_from"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tvTransactionSender"
                    style="@style/label_16_display_500_montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:textAlignment="center"
                    tools:text="Livia Silva" />

                <TextView
                    android:id="@+id/tvTransactionBankAndDocument"
                    style="@style/label_12_ubuntu_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginBottom="@dimen/dimen_24dp"
                    android:textAlignment="center"
                    tools:text="Caixa Econômica • CPF: ***.282.123-**" />

                <FrameLayout
                    android:id="@+id/containerAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvTransactionMessageReceivedSent"
                    style="@style/label_12_display_300_ubuntu_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:text="@string/text_pix_extract_detail_message_received"
                    android:textAlignment="center"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvTransactionMessage"
                    style="@style/label_16_display_400_ubuntu_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:paddingHorizontal="@dimen/dimen_16dp"
                    android:textAlignment="center"
                    android:visibility="gone"
                    tools:text="”action figure Han Solo”"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/showReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingVertical="@dimen/dimen_16dp"
                    android:text="@string/text_pix_summary_transfer_show_receipt"
                    android:textAlignment="center"
                    android:textColor="@color/blue_0774E7"
                    android:textSize="@dimen/dimen_16sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/informativeTransactionGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <View
                        android:id="@+id/viewDividerInformative"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_1dp"
                        android:background="@color/display_200"
                        android:paddingHorizontal="@dimen/dimen_16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvTitleInformative"
                        style="@style/Label_200_Bold_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dimen_24dp"
                        android:paddingBottom="@dimen/dimen_16dp"
                        android:textAlignment="center"
                        android:textColor="@color/display_300"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewDividerInformative"
                        tools:text="Informativo deste recebimento de R$" />

                    <TextView
                        android:id="@+id/tvChannelUsedLabel"
                        style="@style/Label_200_Regular_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_pix_transfer_channel_used_receiving"
                        android:textColor="@color/twilight_400"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTitleInformative" />

                    <TextView
                        android:id="@+id/tvChannelUsedValue"
                        style="@style/Label_200_Bold_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/twilight_400"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitleInformative"
                        tools:text="App Cielo Gestão" />

                    <TextView
                        android:id="@+id/tvMerchantLabel"
                        style="@style/Label_200_Regular_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:text="@string/text_pix_transfer_merchant_receiving"
                        android:textColor="@color/twilight_400"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvChannelUsedLabel" />

                    <TextView
                        android:id="@+id/tvMerchantValue"
                        style="@style/Label_200_Bold_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:textColor="@color/twilight_400"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvChannelUsedValue"
                        tools:text="1234567890" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@color/display_50"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/container_information"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/transactionLink"
                style="@style/Label_300_Alternate_14_brand_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:gravity="center"
                android:text="@string/text_pix_extract_detail_transaction_link"
                android:visibility="gone"
                app:drawableEndCompat="@drawable/ic_arrow"
                app:drawableTint="@color/brand_400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/separator"
                app:layout_constraintVertical_bias="0"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/pbReversalReceipts"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:theme="@style/progress_bar_blue"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/transactionLink" />

            <LinearLayout
                android:id="@+id/ll_reversal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dimen_16dp"
                android:paddingTop="@dimen/dimen_16dp"
                android:paddingBottom="@dimen/dimen_24dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/transactionLink"
                tools:visibility="visible">

                <TextView
                    style="@style/label_14_display_400_ubuntu_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:text="@string/pix_reversal_question" />

                <TextView
                    android:id="@+id/tvRefundMessage"
                    style="@style/label_14_display_400_ubuntu_pix_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/pix_reversal_due_date_message" />

                <TextView
                    android:id="@+id/tvRefundExpired"
                    style="@style/label_14_display_400_montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_11dp"
                    android:text="@string/pix_reversal_expired"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvRefundFull"
                    style="@style/label_14_display_400_montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_11dp"
                    android:text="@string/pix_reversal_full"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvGoToReversal"
                    style="@style/label_14_brand_400_montserrat_pix_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_11dp"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:text="@string/pix_reversal_i_want_to_reversal"
                    android:visibility="gone"
                    app:drawableEndCompat="@drawable/ic_union"
                    tools:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llReversalReceipts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:background="@drawable/background_stroke_1dp_round_color_c5ced7"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dimen_18dp"
                android:paddingVertical="@dimen/dimen_16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/ll_reversal"
                tools:visibility="visible">

                <TextView
                    style="@style/label_12_display_300_ubuntu_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:text="@string/pix_reversal_history" />

                <ProgressBar
                    android:id="@+id/pbRefundsErrorLoading"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/dimen_10dp"
                    android:theme="@style/progress_bar_blue"
                    android:visibility="gone" />

                <include
                    android:id="@+id/tryAgainContainerInclude"
                    layout="@layout/layout_try_again"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_reversal_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/refund_history_item" />

                <View
                    android:id="@+id/availableToRefundSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:background="@color/display_200"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/llAvailableToRefund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/dimen_14dp"
                        android:layout_height="@dimen/dimen_18dp"
                        android:importantForAccessibility="no"
                        app:srcCompat="@drawable/ic_money_sign"
                        app:tint="@color/display_400" />

                    <TextView
                        style="@style/Label_300_regular_14_display_400"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_weight="2"
                        android:text="@string/text_pix_amount_available_to_reversal" />

                    <TextView
                        android:id="@+id/tvAvailableRefundAmount"
                        style="@style/Label_300_regular_14_display_400"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        tools:text="R$ 50,00" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/separator2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_8dp"
                android:layout_marginVertical="@dimen/dimen_24dp"
                android:background="@color/display_50"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/llReversalReceipts"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/llRefundTroco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dimen_16dp"
                android:paddingTop="@dimen/dimen_16dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/separator2"
                tools:visibility="visible">

                <TextView
                    style="@style/label_14_display_400_ubuntu_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:text="@string/pix_reversal_question_troco" />

                <TextView
                    android:id="@+id/tvRefundTrocoMessage"
                    style="@style/label_14_display_400_ubuntu_pix_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="A devolução integral ou parcial para quem te pagou, pode ser feita até 21:53:04 do dia 29/03/2021." />

                <TextView
                    android:id="@+id/tvRefundTrocoExpired"
                    style="@style/label_14_display_400_montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_11dp"
                    android:text="@string/pix_reversal_expired" />

                <TextView
                    android:id="@+id/tvRefundFullTroco"
                    style="@style/label_14_display_400_montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_11dp"
                    android:text="@string/pix_reversal_full" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/llButtonFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/cloud_200" />

        <Button
            android:id="@+id/btnTransactionAnalyse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/pix_infringement_label_button_transaction_analyse"
            android:textAppearance="@style/semi_bold_montserrat_center_16_brand_400_spacing_4" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>