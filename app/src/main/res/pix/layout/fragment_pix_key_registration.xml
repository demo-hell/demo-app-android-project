<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".pix.ui.keys.myKeys.register.registration.PixKeyRegistrationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_16dp">

        <TextView
            android:id="@+id/tv_title_register_key"
            style="@style/label_18_display_500_montserrat_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/text_pix_key_registration_cnpj" />

        <TextView
            android:id="@+id/tv_subtitle_insert_key"
            style="@style/label_16_display_400_ubuntu_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_register_key"
            tools:text="@string/text_pix_key_registration_cnpj_subtitle" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_data_register_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@drawable/background_stroke_1dp_round_color_c5ced7"
            android:padding="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_insert_key">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_data_register_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/display_300"
                app:layout_constraintBottom_toBottomOf="@+id/container_text_data_register_key"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/container_text_data_register_key"
                tools:srcCompat="@drawable/ic_document_key_pix" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_text_data_register_key"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_data_register_key"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_title_type_key_register_key"
                    style="@style/label_16_display_500_montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/text_pix_my_keys_cnpf" />

                <TextView
                    android:id="@+id/tv_key_register_key"
                    style="@style/label_12_display_400_ubuntu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_type_key_register_key"
                    tools:text="11.222.111/0001-21" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_informative_register_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/background_blue_corners_8dp"
            android:padding="@dimen/dimen_12dp"
            app:layout_constraintTop_toBottomOf="@id/container_data_register_key">

            <TextView
                android:id="@+id/tv_title_informative_register_key"
                style="@style/label_12_display_400_ubuntu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_pix_key_registration_informative_title"
                android:textColor="@color/brand_600"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_message_informative_register_key"
                style="@style/label_12_ubuntu_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:lineSpacingExtra="@dimen/dimen_6sp"
                android:text="@string/text_pix_key_registration_informative_message"
                android:textColor="@color/brand_600"
                app:layout_constraintTop_toBottomOf="@id/tv_title_informative_register_key" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>