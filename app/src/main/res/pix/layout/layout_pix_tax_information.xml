<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_information_amount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_error_amount"
        style="@style/label_12_ubuntu_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:drawableStart="@drawable/ic_alert_16dp"
        android:drawablePadding="@dimen/dimen_8dp"
        android:text="@string/text_pix_transfer_amount_error"
        android:textColor="@color/color_EA7F06"
        android:visibility="gone"
        app:drawableTint="@color/color_EA7F06"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/background_pix_information_4dp_radius"
        android:padding="@dimen/dimen_8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_error_amount">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_rate_pix"
            style="@style/label_12_ubuntu_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_pix_summary_transfer_rate"
            android:textColor="@color/twilight_400"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_total_transfer"
            style="@style/label_12_ubuntu_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:text="@string/text_pix_summary_transfer_total"
            android:textColor="@color/twilight_400"
            app:layout_constraintTop_toBottomOf="@+id/tv_rate_pix" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>