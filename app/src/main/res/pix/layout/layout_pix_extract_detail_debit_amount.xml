<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:background="@drawable/background_display_50_radius_8">

    <TextView
        style="@style/medium_montserrat_14_cloud_400"
        android:id="@+id/tvLabelAmount"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_pix_extract_detail_fee_amount"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/tvAmount"
        app:layout_constraintBottom_toBottomOf="@id/tvAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvAmount" />

    <TextView
        style="@style/bold_ubuntu_20_cloud_400"
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvLabelAmount"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="- R$ 10,00" />

    <LinearLayout
        android:id="@+id/containerReceivingAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/dimen_16dp"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvAmount"
        tools:visibility="visible">

        <TextView
            style="@style/medium_montserrat_14_cloud_400"
            android:id="@+id/tvLabelReceivingAmount"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_pix_extract_detail_receiving"
            android:maxLines="1"
            android:ellipsize="end"
            android:importantForAccessibility="no"
            tools:ignore="InefficientWeight" />

        <TextView
            style="@style/bold_montserrat_14_cloud_400"
            android:id="@+id/tvReceivingAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            tools:text="R$ 100,00" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/cloud_200"
        app:layout_constraintTop_toBottomOf="@id/containerReceivingAmount" />

    <LinearLayout
        android:id="@+id/containerNetAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/dimen_16dp"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/divider"
        tools:visibility="visible">

        <TextView
            style="@style/medium_montserrat_14_cloud_400"
            android:id="@+id/tvLabelNetAmount"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_pix_extract_detail_net_amount_in_account"
            android:maxLines="1"
            android:ellipsize="end"
            android:importantForAccessibility="no"
            tools:ignore="InefficientWeight" />

        <TextView
            style="@style/bold_montserrat_14_cloud_400"
            android:id="@+id/tvNetAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            tools:text="R$ 490,00" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerReceivingDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_16dp"
        android:paddingBottom="@dimen/dimen_7dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/containerNetAmount"
        tools:visibility="visible">

        <TextView
            style="@style/medium_montserrat_12_cloud_400"
            android:id="@+id/tvReceivingDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_pix_extract_detail_receiving_details_text"
            app:layout_constraintTop_toBottomOf="@id/containerNetAmount" />

        <FrameLayout
            android:id="@+id/btnReceivingDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dimen_8dp"
            android:focusable="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/text_pix_extract_detail_content_description_button_see_receiving_details">

            <TextView
                style="@style/semi_bold_montserrat_14_brand_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_4dp"
                android:text="@string/text_pix_extract_detail_receiving_details_button"
                android:textColor="@color/brand_400"
                android:importantForAccessibility="no"
                app:drawableEndCompat="@drawable/ic_chevron_right_blue_flui"
                app:drawableTint="@color/brand_400" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        style="@style/medium_montserrat_12_cloud_400"
        android:id="@+id/tvFeeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dimen_16dp"
        android:text="@string/text_pix_extract_detail_fee_info"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/containerReceivingDetails"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
