<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_error_loading_pix"
        style="@style/label_14_display_400_ubuntu_pix_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="@string/text_pix_try_again_message" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_9dp"
        android:paddingVertical="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_error_loading_pix">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_try_again_pix"
            style="@style/label_14_brand_400_montserrat_pix_home"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_pix_try_again"
            app:layout_constraintEnd_toStartOf="@+id/iv_try_again_pix"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_try_again_pix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:padding="@dimen/dimen_3dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_try_again_pix"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_try_again_pix"
            app:layout_constraintTop_toTopOf="@id/tv_try_again_pix"
            app:srcCompat="@drawable/ic_refresh_blue" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>