<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/Heading_500_18_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/type_agency_without_digit"
            app:layout_constraintTop_toTopOf="parent" />

        <br.com.cielo.libflue.inputtext.CieloInputText
            android:id="@+id/etAgencyNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/shape_solid_white_border_color_c5ced7"
            android:fontFamily="@font/ubuntu"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:lineSpacingExtra="@dimen/dimen_8sp"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="@dimen/dimen_14sp"
            app:hint="@string/hint_agency_without_digit"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@color/display_50"
            app:layout_constraintTop_toBottomOf="@id/etAgencyNumber" />

        <TextView
            android:id="@+id/tvTitle2"
            style="@style/Heading_500_18_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/type_account_with_digit"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <br.com.cielo.libflue.inputtext.CieloInputText
            android:id="@+id/etAccountNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/shape_solid_white_border_color_c5ced7"
            android:fontFamily="@font/ubuntu"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:lineSpacingExtra="@dimen/dimen_8sp"
            android:maxLength="21"
            android:maxLines="1"
            android:textSize="@dimen/dimen_14sp"
            app:hint="@string/hint_account_number_with_digit"
            app:layout_constraintTop_toBottomOf="@id/tvTitle2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clContainerTextAgencyInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/background_grey_receba_rapido_info"
            app:layout_constraintTop_toBottomOf="@id/etAccountNumber">

            <TextView
                style="@style/Paragraph_200_regular_12_display_600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dimen_12dp"
                android:paddingVertical="@dimen/dimen_12dp"
                android:text="@string/text_agency_digit_info"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/includeTransferDetails"
            layout="@layout/layout_pix_details_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            app:layout_constraintTop_toBottomOf="@id/clContainerTextAgencyInfo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
