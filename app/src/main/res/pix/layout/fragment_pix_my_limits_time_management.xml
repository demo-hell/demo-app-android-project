<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_my_limits_title"
            style="@style/medium_montserrat_18_cloud_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_3dp"
            android:text="@string/text_pix_my_limits_title_time_management"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_my_limits_subtile"
            style="@style/regular_ubuntu_14_cloud_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:lineSpacingExtra="@dimen/dimen_3dp"
            android:text="@string/text_my_limits_subtitle_time_management"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_limits_title" />

        <include
            android:id="@+id/container_pix_my_limits_change"
            layout="@layout/layout_pix_my_limits_time_management_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_limits_subtile" />

        <include
            android:id="@+id/container_pix_my_limits_actual"
            layout="@layout/layout_pix_my_limits_time_management_actual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/container_pix_my_limits_change" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>