<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_stroke_1dp_round_color_c5ced7">

    <ProgressBar
        android:id="@+id/progress_bar_my_keys"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:layout_marginBottom="@dimen/dimen_18dp"
        android:theme="@style/progress_bar_blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_keys_pix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_pix_keys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_status_my_keys_item_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/label_12_display_400_ubuntu_active_key_alert_100"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@+id/tv_status_my_keys_item_main"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_status_my_keys_item_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/label_12_display_400_ubuntu_main_key_alert_100"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_key_pix_random"
                style="@style/label_14_display_400_ubuntu_pix_home"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:maxLines="2"
                app:layout_constraintEnd_toStartOf="@+id/ivCopy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_status_my_keys_item_active"
                tools:text="Aleatória: d8cadd08-88db-4bc7-a9c3-b844e6147a95" />

            <ImageView
                android:id="@+id/ivCopy"
                android:layout_width="@dimen/dimen_34dp"
                android:layout_height="@dimen/dimen_34dp"
                android:layout_marginEnd="@dimen/dimen_14dp"
                android:padding="@dimen/dimen_5dp"
                android:contentDescription="@string/copy_pix_key"
                android:importantForAccessibility="yes"
                app:layout_constraintBottom_toBottomOf="@+id/tv_my_key_pix_random"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_my_key_pix_random"
                app:srcCompat="@drawable/ic_copy_super_link" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_without_main_keys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNoMainKeyTitle"
                style="@style/Paragraph_300_bold_14_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:maxLines="2"
                android:text="@string/no_main_key_title"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNoMainKeysMessage"
                style="@style/Paragraph_300_regular_14_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:lineSpacingExtra="@dimen/dimen_4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNoMainKeyTitle"
                tools:text="Cadastre uma chave aleatória como principal para gerar suas cobranças de forma prática com o Pix nas suas soluções de captura. Ou gerencie suas outras chaves cadastradas." />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_try_again_keys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_error_loading_pix_keys"
                style="@style/label_14_display_400_ubuntu_pix_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/text_pix_try_again_message_my_keys" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_try_again_keys_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_9dp"
                android:paddingVertical="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_error_loading_pix_keys">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_try_again_pix_keys"
                    style="@style/label_14_brand_400_montserrat_pix_home"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text_pix_try_again"
                    app:layout_constraintEnd_toStartOf="@+id/iv_try_again_pix_keys"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_try_again_pix_keys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:padding="@dimen/dimen_3dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_try_again_pix_keys"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_try_again_pix_keys"
                    app:layout_constraintTop_toTopOf="@id/tv_try_again_pix_keys"
                    app:srcCompat="@drawable/ic_refresh_blue" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_manage_pix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@+id/container_keys_pix">

        <View
            android:id="@+id/view_keys"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/display_200"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_manage_my_keys_pix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/view_keys">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_manage_my_keys_pix"
                style="@style/label_14_brand_400_montserrat_pix_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_pix_my_keys_manage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_my_key_pix_random_alert"
                android:layout_width="@dimen/dimen_14dp"
                android:layout_height="@dimen/dimen_14dp"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_1dp"
                android:contentDescription="@string/alert_message_icon"
                android:importantForAccessibility="yes"
                app:layout_constraintBottom_toBottomOf="@+id/tv_manage_my_keys_pix"
                app:layout_constraintStart_toEndOf="@id/tv_manage_my_keys_pix"
                app:layout_constraintTop_toTopOf="@+id/tv_manage_my_keys_pix"
                app:srcCompat="@drawable/ic_alert_16dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_manage_my_keys_pix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_chevron_right_gray" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>