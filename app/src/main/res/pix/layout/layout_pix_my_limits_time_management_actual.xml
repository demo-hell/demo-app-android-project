<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/limitsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_my_limits_title_schedule"
        style="@style/Heading_300_bold_14_display_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/text_pix_my_limits_schedule"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_my_limits_subtitle_schedule"
        style="@style/Paragraph_200_regular_12_display_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:text="@string/text_pix_my_limits_schedule_brasilia"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_limits_title_schedule" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_my_limits_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/background_stroke_1dp_round_color_c5ced7"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_limits_subtitle_schedule">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_my_limits_daytime"
            style="@style/Label_300_regular_14_display_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_pix_my_limits_daytime"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_my_limits_daytime_value"
            style="@style/Paragraph_500_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:fontFamily="@font/ubuntu"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_limits_daytime"
            tools:text="Das 06h às 22h" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/display_200"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_limits_daytime_value" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_my_limits_nighttime"
            style="@style/Label_300_regular_14_display_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/text_pix_my_limits_nighttime"
            app:layout_constraintTop_toTopOf="@id/view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_my_limits_nighttime_value"
            style="@style/Paragraph_500_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:fontFamily="@font/ubuntu"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_limits_nighttime"
            tools:text="Das 22h às 06h" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>