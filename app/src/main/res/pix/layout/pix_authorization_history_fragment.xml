<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_16dp"
            android:orientation="vertical">

            <TextView
                style="@style/Heading_500_Bold_16_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/txt_pix_history_title" />

            <TextView
                style="@style/Label_300_subtitle_pix_16_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_pix_history_subtitle" />

            <TextView
                style="@style/Paragraph_300_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/txt_pix_box_detail" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@drawable/custom_text_input_view_selector"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:id="@+id/layout_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_16dp"
                            android:layout_marginLeft="@dimen/dimen_16dp"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:layout_marginEnd="@dimen/dimen_16dp"
                            android:layout_marginRight="@dimen/dimen_16dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                style="@style/Label_300_item_pix_16_display_400"
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="@string/text_pix_history_de" />

                            <TextView
                                android:id="@+id/text_pix_history_de_value"
                                style="@style/Label_300_item_pix_16_display_400_bold"
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                tools:text="@string/text_br_history_de_value" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_1dp"
                            android:layout_marginStart="@dimen/dimen_16dp"
                            android:layout_marginLeft="@dimen/dimen_16dp"
                            android:layout_marginTop="@dimen/dimen_12dp"
                            android:layout_marginEnd="@dimen/dimen_16dp"
                            android:layout_marginRight="@dimen/dimen_16dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:background="@color/nublado_200" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_16dp"
                            android:layout_marginLeft="@dimen/dimen_16dp"
                            android:layout_marginEnd="@dimen/dimen_16dp"
                            android:layout_marginRight="@dimen/dimen_16dp"
                            android:layout_marginBottom="@dimen/dimen_10dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                style="@style/Label_300_item_pix_16_display_400"
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:gravity="start"
                                android:singleLine="true"
                                android:text="@string/text_pix_history_status" />

                            <TextView
                                android:id="@+id/text_pix_history_status_value"
                                style="@style/Label_300_item_pix_16_display_400_bold"
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.6"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/color_009e55"
                                android:textStyle="bold"
                                tools:text="Habilitado" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_pix_benefits_message"
                style="@style/Label_300_subtitle_pix_16_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/txt_pix_history_search_doc" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/link_access_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:paddingVertical="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pix_benefits_message">

                <ImageView
                    android:id="@+id/iv_pix_authorization_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/tv_pix_authorization_history"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_circle_arrow_blue" />

                <TextView
                    android:id="@+id/tv_pix_authorization_history"
                    style="@style/Paragraph_300_display_400"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:text="@string/txt_link_authorization_history"
                    android:textColor="@color/blue_0774E7"
                    app:layout_constraintBottom_toBottomOf="@id/iv_pix_authorization_history"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_pix_authorization_history"
                    app:layout_constraintTop_toTopOf="@+id/iv_pix_authorization_history" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>