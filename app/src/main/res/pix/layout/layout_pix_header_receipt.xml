<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cielo_logo_pix" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_receipt"
        style="@style/label_18_brand_600_montserrat_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/text_pix_transfer_receipt_title"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_date_receipt"
        style="@style/label_16_display_400_ubuntu_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_receipt"
        tools:text="Realizado Ã s 17:39:31 em 31/12/2021 " />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@color/display_200"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_receipt" />

</androidx.constraintlayout.widget.ConstraintLayout>