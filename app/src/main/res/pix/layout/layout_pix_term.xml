<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_pix_terms"
    android:padding="@dimen/dimen_16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_subtitle_terms_pix"
        style="@style/label_12_display_400_ubuntu_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.17"
        android:text="@string/text_pix_terms_subtitle"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_read_pix_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/background_pix_terms"
        android:paddingVertical="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_terms_pix">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_read_pix_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_read_pix_terms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_read_pix_terms"
            app:srcCompat="@drawable/ic_circle_arrow_blue" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_read_pix_terms"
            style="@style/Paragraph_300_display_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:text="@string/text_pix_terms_read_conditions"
            android:textColor="@color/blue_0774E7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_read_pix_terms"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_terms_pix_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/background_pix_terms"
        android:paddingVertical="@dimen/dimen_10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/container_read_pix_terms">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_terms_pix_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_terms_pix_terms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_terms_pix_terms"
            app:srcCompat="@drawable/ic_circle_arrow_blue" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_terms_pix_terms"
            style="@style/Paragraph_300_display_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:text="@string/text_pix_terms_cielo"
            android:textColor="@color/brand_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_terms_pix_terms"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/include"
        layout="@layout/component_pix_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@+id/container_terms_pix_terms"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>