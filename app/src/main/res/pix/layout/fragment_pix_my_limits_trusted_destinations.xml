<?xml version="1.0" encoding="UTF-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title_my_limits_trusted"
            style="@style/medium_montserrat_18_cloud_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_pix_my_limits_title_account_registration"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_subtitle_my_limits_trusted"
            style="@style/regular_ubuntu_14_cloud_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:lineSpacingExtra="@dimen/dimen_3dp"
            android:text="@string/text_pix_my_limits_subtitle_account_registration"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_my_limits_trusted" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_add_trusted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_26dp"
            android:background="@drawable/background_stroke_1dp_round_color_c5ced7"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle_my_limits_trusted">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_add_trusted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_18dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_add_trusted"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_add_trusted"
                app:srcCompat="@drawable/plus_circle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_add_trusted"
                style="@style/regular_ubuntu_16_cloud_500"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_28dp"
                android:importantForAccessibility="yes"
                android:text="@string/text_pix_my_limits_register_new_account"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_arrow_right"
                app:layout_constraintStart_toEndOf="@+id/iv_add_trusted"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_21dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_add_trusted"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_add_trusted"
                app:layout_constraintTop_toTopOf="@+id/tv_add_trusted"
                app:srcCompat="@drawable/ic_arrow_flui_display_200" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/color_C5CED7"
            app:layout_constraintTop_toBottomOf="@id/container_add_trusted" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_trusted_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@id/view"
            tools:itemCount="1"
            tools:listitem="@layout/layout_pix_my_limits_trusted_destinations_item" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_without_main_trusted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/view">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_empty_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_120dp"
                android:layout_marginStart="@dimen/dimen_18dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_link_pgto_empty_state" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_empty_state_subtitle"
                style="@style/bold_ubuntu_14_cloud_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:gravity="center"
                android:text="@string/text_pix_my_limits_empty_title_account_registration"
                app:layout_constraintTop_toBottomOf="@id/iv_empty_state" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>