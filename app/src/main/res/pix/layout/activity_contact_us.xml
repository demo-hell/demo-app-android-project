<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/text_talk_with_customer_service"
        style="@style/TextGray16spUbuntuRegularDisplay400_5A646E"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_contact_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:layout_marginVertical="@dimen/dimen_16dp"
        android:layout_marginHorizontal="@dimen/dimen_12dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/montserrat"
        fancy:fb_defaultColor="@color/blue_0774E7"
        fancy:fb_disabledColor="@color/color_C5CED7"
        fancy:fb_disabledTextColor="@android:color/white"
        fancy:fb_radius="@dimen/dimen_8dp"
        fancy:fb_text="@string/text_contact_us"
        fancy:fb_textSize="@dimen/dimen_16sp" />

</LinearLayout>