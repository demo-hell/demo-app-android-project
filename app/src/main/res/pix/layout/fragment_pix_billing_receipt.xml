<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".pix.ui.qrCode.decode.receipt.PixBillingReceiptFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_receipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/include_header_receipt"
                layout="@layout/layout_pix_header_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/include_about_transaction_receipt"
                layout="@layout/layout_pix_transfer_receipt_about_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/include_header_receipt" />

            <View
                android:id="@+id/view_destination"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@color/display_200"
                app:layout_constraintTop_toBottomOf="@+id/include_about_transaction_receipt" />

            <include
                android:id="@+id/include_destination_receipt"
                layout="@layout/layout_pix_transfer_destination_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/view_destination" />

            <View
                android:id="@+id/view_origin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@color/display_200"
                app:layout_constraintTop_toBottomOf="@+id/include_destination_receipt" />

            <include
                android:id="@+id/include_origin_receipt"
                layout="@layout/layout_pix_transfer_origin_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/view_origin" />

            <include
                android:id="@+id/include_billing_other_information"
                layout="@layout/layout_pix_billing_other_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dimen_24dp"
                app:layout_constraintTop_toBottomOf="@+id/include_origin_receipt" />

            <View
                android:id="@+id/view_authentication_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@color/display_200"
                app:layout_constraintTop_toBottomOf="@+id/include_billing_other_information" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_authentication_code_title_receipt"
                style="@style/label_16_display_300_montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/text_pix_transfer_receipt_authentication_code"
                app:layout_constraintTop_toBottomOf="@+id/view_authentication_code" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_authentication_code_receipt"
                style="@style/label_16_display_400_ubuntu_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                app:layout_constraintTop_toBottomOf="@+id/tv_authentication_code_title_receipt"
                tools:text="58D5E212165B4CA0909BC86B9CEE0111" />

            <View
                android:id="@+id/view_informative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:background="@color/display_200"
                app:layout_constraintTop_toBottomOf="@+id/tv_authentication_code_receipt" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_informative_receipt"
                style="@style/label_12_display_400_ubuntu_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/text_pix_transfer_receipt_informative"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/view_informative" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cielo_receipt"
                style="@style/label_16_display_400_montserrat_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/text_pix_transfer_receipt_informative_cielo"
                app:layout_constraintTop_toBottomOf="@+id/tv_informative_receipt" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cnpj_cielo_receipt"
                style="@style/label_16_display_400_montserrat_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_pix_transfer_receipt_informative_cnpj_cielo"
                app:layout_constraintTop_toBottomOf="@+id/tv_cielo_receipt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/share_receipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:layout_marginBottom="@dimen/dimen_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_receipt"
            app:layout_constraintVertical_bias="1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_share_receipt"
                style="@style/light_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_share_24dp"
                android:drawablePadding="@dimen/dimen_10dp"
                android:text="@string/text_pix_transfer_receipt_share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>