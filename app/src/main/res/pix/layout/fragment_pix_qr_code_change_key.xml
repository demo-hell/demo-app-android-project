<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dimen_16dp">

    <TextView
        android:id="@+id/tv_change_key_title"
        style="@style/label_18_display_500_montserrat_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/screen_text_qr_code_change_key_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_change_key_subtitle"
        style="@style/label_16_display_400_ubuntu_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/screen_text_qr_code_change_key_subtitle"
        app:layout_constraintTop_toBottomOf="@id/tv_change_key_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMyKeys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tv_change_key_subtitle"
        tools:listitem="@layout/card_view_my_key_info" />

</androidx.constraintlayout.widget.ConstraintLayout>