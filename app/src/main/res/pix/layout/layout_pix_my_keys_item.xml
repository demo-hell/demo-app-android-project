<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/keyContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:background="@drawable/background_stroke_1dp_round_color_c5ced7">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_my_key_icon"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_margin="@dimen/dimen_18dp"
        app:layout_constraintBottom_toBottomOf="@+id/container_my_keys_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/container_my_keys_item"
        tool:srcCompat="@drawable/ic_random_key_pix" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_my_keys_item"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:paddingVertical="@dimen/dimen_16dp"
        app:layout_constraintEnd_toStartOf="@+id/ivArrow"
        app:layout_constraintStart_toEndOf="@+id/iv_my_key_icon">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title_my_keys_item"
            style="@style/Label_400_Regular_16_Display_500_ubuntu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_2dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="11.222.111/0001-21" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_status_my_keys_item"
            style="@style/Paragraph_200_regular_12_storm_500"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:background="@drawable/background_status_my_keys_pix_storm_100"
            android:drawablePadding="@dimen/dimen_9dp"
            android:paddingHorizontal="@dimen/dimen_12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_my_keys_item"
            android:paddingVertical="@dimen/dimen_5dp"
            app:layout_constraintStart_toStartOf="parent"
            tool:text="@string/text_pix_my_keys_portability_request_send" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_status_my_keys_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Paragraph_200_regular_12_success_500"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:background="@drawable/background_status_my_keys_pix_success_100"
            android:ellipsize="end"
            android:maxLines="1"
            android:drawablePadding="@dimen/dimen_9dp"
            android:paddingHorizontal="@dimen/dimen_12dp"
            android:paddingVertical="@dimen/dimen_5dp"
            android:text="@string/text_pix_my_keys_active_key"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_my_keys_item"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/tv_status_my_keys_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivArrow"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chevron_right_gray"
        app:tint="@color/display_200" />

</androidx.constraintlayout.widget.ConstraintLayout>