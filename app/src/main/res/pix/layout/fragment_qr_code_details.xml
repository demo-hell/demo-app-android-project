<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/dimen_16dp"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvShowQrCode"
            style="@style/Heading_500_18_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_44dp"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:gravity="center"
            android:text="@string/text_share_or_show_your_qr_code"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivQrCodeImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:contentDescription="@string/qr_code_image_content_description"
            android:importantForAccessibility="yes"
            app:layout_constraintTop_toBottomOf="@id/tvShowQrCode"
            app:srcCompat="@drawable/img_qr_code_not_found" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            app:layout_constraintTop_toBottomOf="@id/ivQrCodeImage">

            <TextView
                android:id="@+id/tvCode"
                style="@style/Label_300_Alternate_14_brand_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_26dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:importantForAccessibility="no"
                app:layout_constraintEnd_toStartOf="@+id/ivCopy"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="00020101021226720014br.gov.b-cb.pix..." />

            <ImageView
                android:id="@+id/ivCopy"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/qr_code_description_copy_code"
                android:importantForAccessibility="yes"
                app:srcCompat="@drawable/ic_copy_super_link"
                app:tint="@color/brand_400" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clContainerShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:paddingVertical="@dimen/dimen_4dp"
            app:layout_constraintTop_toBottomOf="@id/clCode">

            <TextView
                android:id="@+id/btShare"
                style="@style/Label_300_Alternate_14_brand_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_50dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="@string/text_pix_transfer_receipt_share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="@dimen/dimen_12dp"
                android:layout_height="@dimen/dimen_12dp"
                android:layout_marginStart="@dimen/dimen_8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btShare"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_share_blue" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/includeQrCodeDetails"
            layout="@layout/layout_qr_code_charge_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clContainerShare" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>