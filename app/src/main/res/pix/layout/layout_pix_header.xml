<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_corner_blue_pix"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_client_name_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_bold"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="Olá, CASA DO SILENCIO" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_document_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tv_client_document_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_client_document_header"
            app:srcCompat="@drawable/ic_store" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_client_document_header"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_6dp"
                app:layout_constraintStart_toEndOf="@id/iv_document_header"
                app:layout_constraintTop_toBottomOf="@id/tv_client_name_header"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/dimen_14sp"
                tool:text="11.222.111/0001-21 • EC 1112220037" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_pix_explanation_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:fontFamily="@font/ubuntu"
            android:text="@string/text_pix_explanation"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_client_document_header" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>