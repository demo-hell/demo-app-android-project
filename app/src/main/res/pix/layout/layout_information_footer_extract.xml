<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:background="@drawable/ic_pix_extract_informacao" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_footer"
            style="@style/Label_200_Regular_12_Brand_600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_pix_extract_title_information" />

        <TextView
            android:id="@+id/tv_message_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:lineSpacingExtra="@dimen/dimen_4sp"
            android:text="@string/text_pix_extract_message_information"
            android:theme="@style/label_14_display_500_ubuntu" />
    </LinearLayout>

</LinearLayout>
