<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".pix.ui.transfer.key.PixInsertKeyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_16dp">

        <TextView
            android:id="@+id/tv_title_insert_key"
            style="@style/label_18_display_500_montserrat_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/text_pix_insert_key_transfer_title_document" />

        <TextView
            android:id="@+id/tv_subtitle_insert_key"
            style="@style/label_16_display_400_ubuntu_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/text_pix_insert_key_transfer_subtitle"
            app:layout_constraintTop_toBottomOf="@id/tv_title_insert_key" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_transfer_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle_insert_key">

            <include
                android:id="@+id/include_insert_account"
                layout="@layout/item_pix_selector_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_input_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <br.com.cielo.libflue.inputtext.CieloInputText
                    android:id="@+id/input_text_document"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:visibility="gone"
                    app:hint="@string/text_pix_insert_key_transfer_hint_document"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible" />

                <br.com.cielo.libflue.inputtext.CieloInputText
                    android:id="@+id/input_text_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:visibility="gone"
                    app:hint="@string/text_pix_insert_key_transfer_hint_phone"
                    app:layout_constraintTop_toTopOf="parent" />

                <br.com.cielo.libflue.inputtext.CieloInputText
                    android:id="@+id/input_text_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:visibility="gone"
                    app:hint="@string/text_pix_insert_key_transfer_hint_email"
                    app:layout_constraintTop_toTopOf="parent" />

                <br.com.cielo.libflue.inputtext.CieloInputText
                    android:id="@+id/input_text_random"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:visibility="gone"
                    android:inputType="text"
                    app:hint="@string/text_pix_insert_key_transfer_hint_random"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_change_key_type"
            style="@style/label_14_brand_400_montserrat_pix_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:drawableEnd="@drawable/ic_repeat"
            android:drawablePadding="@dimen/dimen_8dp"
            android:paddingVertical="@dimen/dimen_10dp"
            android:text="@string/text_pix_insert_key_transfer_change_key"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_transfer_data" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>