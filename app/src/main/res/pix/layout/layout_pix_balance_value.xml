<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dimen_10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_pix_balance_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        android:text="@string/text_pix_coin"
        android:textColor="@color/display_500"
        android:textSize="@dimen/dimen_24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar_pix_balance"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:theme="@style/progress_bar_blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_pix_balance_coin"
        app:layout_constraintStart_toEndOf="@id/tv_pix_balance_coin"
        app:layout_constraintTop_toTopOf="@id/tv_pix_balance_coin" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_pix_balance_value"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_pix_balance_coin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_pix_balance_coin"
        app:layout_constraintTop_toTopOf="@id/tv_pix_balance_coin">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/container_value_pix_balance"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_pix_balance_show"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_pix_balance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/display_500"
                android:textSize="@dimen/dimen_24sp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="21.526,87"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_pix_balance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_oculto" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_pix_balance_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:padding="@dimen/dimen_3dp"
            app:layout_constraintBottom_toBottomOf="@id/container_value_pix_balance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/container_value_pix_balance"
            app:layout_constraintTop_toTopOf="@id/container_value_pix_balance"
            tools:srcCompat="@drawable/ic_eye" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>