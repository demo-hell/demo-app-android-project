<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/dimen_10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_type_key_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_document_key_pix" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_type_key_selector"
        style="@style/label_14_brand_400_montserrat_pix_home"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:textSize="@dimen/dimen_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_type_key_selector"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow_type_key_selector"
        app:layout_constraintStart_toEndOf="@id/iv_type_key_selector"
        app:layout_constraintTop_toTopOf="@+id/iv_type_key_selector"
        tools:text="@string/text_pix_my_keys_email" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_arrow_type_key_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_type_key_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_type_key_selector"
        app:layout_constraintTop_toTopOf="@id/iv_type_key_selector"
        app:srcCompat="@drawable/ic_chevron_right_gray" />

</androidx.constraintlayout.widget.ConstraintLayout>