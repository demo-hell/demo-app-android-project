<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/limitsContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_my_limits_daytime"
        style="@style/Heading_300_bold_14_display_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:lineSpacingExtra="@dimen/dimen_3dp"
        android:text="@string/text_pix_new_limit_start_nighttime"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_my_limits_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/background_stroke_1dp_round_color_c5ced7"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_limits_daytime">

        <RadioGroup
            android:id="@+id/radioGroupChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rb22Hours"
                style="@style/Paragraph_400_regular_16_display_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/custom_circle_radio_button"
                android:checked="true"
                android:layoutDirection="ltr"
                android:paddingStart="@dimen/dimen_8dp"
                android:text="@string/text_pix_checking_start"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rb20Hours"
                style="@style/Paragraph_400_regular_16_display_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:button="@drawable/custom_circle_radio_button"
                android:drawablePadding="@dimen/dimen_8dp"
                android:layoutDirection="ltr"
                android:paddingStart="@dimen/dimen_8dp"
                android:text="@string/text_pix_checking_end"
                tools:ignore="RtlSymmetry" />

        </RadioGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPendingChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:drawableStart="@drawable/ic_alert_16dp"
            android:drawablePadding="@dimen/dimen_8dp"
            android:text="@string/text_pix_summary_qrcode_debtor_document"
            android:textColor="@color/alert_500"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/radioGroupChange" />

        <br.com.cielo.libflue.button.CieloRegularBlueButton
            android:id="@+id/btn_apply_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/blue_0774E7"
            android:text="@string/text_apply_change"
            android:textColor="@drawable/text_color_change_state"
            app:layout_constraintTop_toBottomOf="@+id/tvPendingChange" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>