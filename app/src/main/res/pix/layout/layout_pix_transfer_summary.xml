<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_transfer_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_stroke_1dp_round_color_c5ced7"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_value_title"
            style="@style/label_12_display_400_ubuntu_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_pix_summary_transfer_value_title"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_value"
            style="@style/label_14_brand_400_ubuntu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:drawableEnd="@drawable/ic_edit_16dp"
            android:drawablePadding="@dimen/dimen_8dp"
            android:text="@string/text_pix_enter_amount_value_zero"
            android:textSize="@dimen/dimen_24sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_value_title" />

        <include
            android:id="@+id/container_tax_information"
            layout="@layout/layout_pix_tax_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_value" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/display_200"
            app:layout_constraintTop_toBottomOf="@+id/container_tax_information" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_user_data_title"
            style="@style/label_12_brand_600_ubuntu_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:text="@string/text_pix_summary_transfer_destination"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <include
            android:id="@+id/container_destination_information"
            layout="@layout/layout_pix_payment_destination_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_data_title" />

        <View
            android:id="@+id/view_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@color/display_200"
            app:layout_constraintTop_toBottomOf="@+id/container_destination_information" />

        <include
            android:id="@+id/container_payment_information"
            layout="@layout/layout_pix_payment_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view_two" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>