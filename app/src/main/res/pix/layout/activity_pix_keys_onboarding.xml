<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pix.ui.keys.onboarding.PixKeysOnboardingActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_pix_keys_onboarding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintBottom_toTopOf="@+id/indicator_pix_keys_onboarding"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator_pix_keys_onboarding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        app:ci_drawable="@drawable/circle_indicator_tutorial_cancel"
        app:ci_drawable_unselected="@drawable/circle_indicator_unselected"
        app:layout_constraintBottom_toTopOf="@id/container_actions_pix_keys_onboarding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_actions_pix_keys_onboarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <br.com.cielo.libflue.button.CieloRegularWhiteButton
            android:id="@+id/btn_next_keys_pix_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_0774E7"
            android:text="@string/text_pix_next"
            app:layout_constraintBottom_toBottomOf="parent" />

        <br.com.cielo.libflue.button.CieloRegularBlueButton
            android:id="@+id/btn_show_keys_pix_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_0774E7"
            android:text="@string/text_btn_show_my_keys_pix"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progress_keys_pix_onboarding_"
        android:layout_width="@dimen/dimen_150dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>