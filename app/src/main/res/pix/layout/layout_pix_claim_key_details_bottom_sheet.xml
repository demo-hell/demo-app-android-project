<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/ic_drag_bottom_sheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                style="@style/Heading_500_Bold_18_display_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Você solicitou a reivindicação desta chave." />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_key_type"
                android:layout_width="@dimen/dimen_22dp"
                android:layout_height="@dimen/dimen_22dp"
                app:layout_constraintBottom_toBottomOf="@+id/container_key_information"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/container_key_information"
                tools:srcCompat="@drawable/ic_email_pix_16dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_key_information"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_18dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_key_type"
                app:layout_constraintTop_toBottomOf="@+id/tv_title">

                <TextView
                    android:id="@+id/tv_key_name"
                    style="@style/Paragraph_400_regular_16_display_500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Chave aleatória" />

                <TextView
                    android:id="@+id/tv_key_value"
                    style="@style/Paragraph_300_bold_14_display_400"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_key_name"
                    tools:text="d8cadd08-88db-4bc7-a9c3-b844e6147a95" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@color/color_C5CED7"
                app:layout_constraintTop_toBottomOf="@+id/container_key_information" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_reply_date_information"
                style="@style/label_14_display_400_ubuntu_pix_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:lineSpacingExtra="@dimen/dimen_8sp"
                app:layout_constraintTop_toBottomOf="@+id/view_divider"
                tools:text="Confirme a portabilidade até o dia 04/08/2021 na instituição financeira em que esta chave está cadastrada. Após a confirmação, você poderá utilizá-la como chave Pix na Cielo." />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cancel_claim"
                style="@style/label_16_display_300_montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18dp"
                android:drawableStart="@drawable/x_circle"
                android:drawablePadding="@dimen/dimen_18dp"
                android:paddingVertical="@dimen/dimen_10dp"
                android:text="@string/text_pix_claims_details_cancel"
                android:textColor="@color/danger_400"
                app:drawableTint="@color/danger_400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_reply_date_information" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>