<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameMenuOthersItemContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageItemMenuIcon"
        android:layout_width="2dp"
        android:layout_height="24dp"
        android:layout_marginBottom="@dimen/dimen_18dp"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/dimen_18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_item_others_my_account"
        android:tint="@color/color_5A646E"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_item_submenu_label"
        style="@style/Paragraph_400_Regular_16_display_400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:textColor="@color/blue_0774E7"
        app:layout_constraintLeft_toRightOf="@id/imageItemMenuIcon"
        app:layout_constraintRight_toLeftOf="@id/imageArrowSubItems"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Taxas e planos" />


    <ImageView
        android:id="@+id/imageArrowSubItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/blue_0774E7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_rigth" />

    <View
        android:id="@+id/viewLineSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color_C5CED7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageItemMenuIcon"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>