<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_transfer_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_stroke_1dp_round_color_c5ced7"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_purchase_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_20dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_purchase_title"
                style="@style/label_12_display_400_ubuntu_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/screen_read_qr_code_summary_purchase_title"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_purchase_value"
                style="@style/label_14_display_400_ubuntu_pix_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/text_pix_enter_amount_value_zero"
                android:textSize="@dimen/dimen_18sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_purchase_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_value_title"
            style="@style/label_12_display_400_ubuntu_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/screen_text_read_qr_code_summary_pay_value"
            app:layout_constraintTop_toBottomOf="@id/container_purchase_value" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_value"
            style="@style/label_14_brand_400_ubuntu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:drawableEnd="@drawable/ic_edit_16dp"
            android:drawablePadding="@dimen/dimen_8dp"
            android:text="@string/text_pix_enter_amount_value_zero"
            android:textSize="@dimen/dimen_24sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_value_title" />

        <include
            android:id="@+id/container_billing_details"
            layout="@layout/layout_pix_billing_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/tv_value"
            tools:visibility="visible" />

        <include
            android:id="@+id/container_tax_information"
            layout="@layout/layout_pix_tax_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/container_billing_details" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/display_200"
            app:layout_constraintTop_toBottomOf="@+id/container_tax_information" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_recipient_title"
            style="@style/label_12_brand_600_ubuntu_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:text="@string/screen_text_read_qr_code_summary_pay_recipient"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <include
            android:id="@+id/container_destination_information"
            layout="@layout/layout_pix_payment_destination_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_recipient_title" />

        <include
            android:id="@+id/container_more_payment_information"
            layout="@layout/layout_pix_message_and_identifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            app:layout_constraintTop_toBottomOf="@+id/container_destination_information" />

        <include
            android:id="@+id/container_debtor_information"
            layout="@layout/layout_pix_debtor_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/container_more_payment_information" />

        <View
            android:id="@+id/view_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@color/display_200"
            app:layout_constraintTop_toBottomOf="@+id/container_debtor_information" />

        <include
            android:id="@+id/container_payment_information"
            layout="@layout/layout_pix_payment_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view_two" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>