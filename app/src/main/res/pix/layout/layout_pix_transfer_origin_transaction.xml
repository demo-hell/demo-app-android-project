<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_origin_receipt"
        style="@style/label_16_brand_600_montserrat_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/text_pix_transfer_receipt_origin_amount"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_from_title_receipt"
        style="@style/label_16_display_300_montserrat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/text_pix_transfer_receipt_from"
        app:layout_constraintTop_toBottomOf="@+id/tv_origin_receipt" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_from_receipt"
        style="@style/label_16_display_400_ubuntu_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_from_title_receipt"
        tools:text="Ana Skywalker" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_document_origin_title_receipt"
        style="@style/label_16_display_300_montserrat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/text_pix_summary_transfer_destination_document"
        app:layout_constraintTop_toBottomOf="@+id/tv_from_receipt" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_document_origin_receipt"
        style="@style/label_16_display_400_ubuntu_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_document_origin_title_receipt"
        tools:text="***.222.962-**" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_bank_origin_title_receipt"
        style="@style/label_16_display_300_montserrat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/text_pix_summary_transfer_destination_bank"
        app:layout_constraintTop_toBottomOf="@+id/tv_document_origin_receipt" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_bank_origin_receipt"
        style="@style/label_16_display_400_ubuntu_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_bank_origin_title_receipt"
        tools:text="Cielo S.A." />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_bank_origin_agency_title"
            style="@style/label_16_display_300_montserrat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_bank_origin_receipt"
            android:text="@string/text_pix_transfer_receipt_agency" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_bank_origin_agency_subtitle"
            style="@style/label_16_display_400_ubuntu_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_bank_origin_agency_title"
            android:fontFamily="@font/ubuntu_bold"
            tools:text="0001" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_bank_origin_account_title"
            style="@style/label_16_display_300_montserrat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_bank_origin_agency_subtitle"
            android:text="@string/text_pix_transfer_receipt_account" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_bank_origin_account_subtitle"
            style="@style/label_16_display_400_ubuntu_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            app:layout_constraintTop_toBottomOf="@+id/tv_bank_origin_account_title"
            tools:text="0000000-5" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/accountAndAgencyOriginGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tv_bank_origin_agency_title, tv_bank_origin_agency_subtitle, tv_bank_origin_account_title, tv_bank_origin_account_subtitle"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMerchantNumberTitleOrigin"
        style="@style/label_16_display_300_montserrat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/text_pix_transfer_merchant_sending_payment"
        app:layout_constraintTop_toBottomOf="@+id/tv_bank_origin_account_subtitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMerchantNumberOrigin"
        style="@style/label_16_display_400_ubuntu_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        app:layout_constraintTop_toBottomOf="@+id/tvMerchantNumberTitleOrigin"
        tools:text="2014097009" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/merchantNumberGroupOrigin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:constraint_referenced_ids="tvMerchantNumberTitleOrigin, tvMerchantNumberOrigin"/>

</androidx.constraintlayout.widget.ConstraintLayout>