<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pix.ui.terms.onboarding.PixTermOnboardingFragment">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_pix_term_onboarding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintBottom_toTopOf="@+id/indicator_pix_term_onboarding"
        app:layout_constraintTop_toTopOf="parent" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator_pix_term_onboarding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        app:ci_drawable="@drawable/circle_indicator_tutorial_cancel"
        app:ci_drawable_unselected="@drawable/circle_indicator_unselected"
        app:layout_constraintBottom_toTopOf="@id/btn_next_pix_term_onboarding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_pager_pix_term_onboarding" />

    <br.com.cielo.libflue.button.CieloRegularWhiteButton
        android:id="@+id/btn_next_pix_term_onboarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:background="@color/blue_0774E7"
        android:text="@string/text_pix_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indicator_pix_term_onboarding"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>