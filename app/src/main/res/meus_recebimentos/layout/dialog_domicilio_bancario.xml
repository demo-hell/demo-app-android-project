<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/text_view_meus_recebimentos_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/meus_recebimentos_dialog_lacamento"
            android:textColor="@color/blue"
            android:textSize="20sp"
            app:typeface="Museo700-Regular.ttf" />


        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/text_view_meus_recebimentos_dialog_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/text_color_263238"
            android:textSize="16sp"
            app:typeface="MuseoSans-700.ttf" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_meus_recebimentos_dialog_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp">

        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceButtonView
                android:id="@+id/button_meus_recebimentos_dialog_fechar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:text="@string/meus_recebimentos_dialog_fechar"
                android:textColor="@color/purple"
                android:textSize="14sp"
                app:typeface="MuseoSans-700.ttf" />

        </RelativeLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
