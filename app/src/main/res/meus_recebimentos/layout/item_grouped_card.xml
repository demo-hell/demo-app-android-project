<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/date_grouped_card_resumo_operacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:text="@string/meus_recebimentos_detalhe_data_venda"
        android:textColor="@color/gray_light"
        android:textSize="12sp"
        app:typeface="MuseoSans-700.ttf" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_grouped_card_resumo_operacoes"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="match_parent" />
</LinearLayout>

