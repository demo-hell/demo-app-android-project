<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <FrameLayout
        android:id="@+id/frameInteractLeaderboardBannersOffers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_16dp"
        android:visibility="gone" />

    <br.com.mobicare.cielo.component.CieloActionServiceGridWidget
        android:id="@+id/actionsWidgetView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/dimen_10dp" />

    <include
        android:id="@+id/frameServicesProgress"
        layout="@layout/frame_progress" />

    <br.com.mobicare.cielo.commons.ui.widget.AlertHandlerCieloView
        android:id="@+id/errorHandlerServicesMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:cieloErrorButtonLabel="@string/rm_fl_button_update"
        app:cieloErrorContentImage="@drawable/ic_07"
        app:cieloErrorMessage="@string/banner_error_subtitle"
        app:cieloErrorTitle="@string/banner_error_title" />

</LinearLayout>