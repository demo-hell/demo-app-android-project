<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearErrorHandlerContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/img_lock" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_48dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/title_primeiro_acesso_mfa"
            android:textAlignment="center"
            android:textColor="@color/cielo_400"
            android:textSize="@dimen/dimen_16sp"
            android:lineSpacingExtra="@dimen/dimen_8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:fontFamily="@font/ubuntu"
            android:text="@string/text_primeiro_acesso_mfa"
            android:textAlignment="center"
            android:textColor="@color/black_5A646E"
            android:textSize="@dimen/dimen_14sp"
            android:lineSpacingExtra="@dimen/dimen_7sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>