<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Selecione um domicílio bancário"
            android:textSize="@dimen/dimen_18sp"
            android:textColor="@color/display_500"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewInfo"
            style="@style/Paragraph_300_Regular_14_Display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="Para registrar este dispositivo enviaremos um valor na conta que você selecionar" />

        <br.com.cielo.libflue.button.CieloRadioGroup
            android:id="@+id/radioGroupView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:id="@+id/optionsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="6dp"
                android:paddingEnd="6dp" />
        </br.com.cielo.libflue.button.CieloRadioGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:fontFamily="@font/ubuntu"
            android:textSize="@dimen/dimen_12sp"
            android:text="Contas cadastradas e sem atividades nos últimos 45 dias não estão elegíveis para configurar o token"
            android:textColor="@color/display_500"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>