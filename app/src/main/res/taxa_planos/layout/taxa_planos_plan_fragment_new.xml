<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:shimmer_duration="800"
                tools:visibility="gone">

                <include layout="@layout/layout_fee_and_plan_shimmer_holder" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <include android:id="@+id/layout_error_fee_and_plan" layout="@layout/layout_error_fee_and_plan" />

            <include android:id="@+id/layout_overview" layout="@layout/layout_overview" />

            <include android:id="@+id/layout_change_incoming_sale" layout="@layout/layout_change_incoming_sale" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewRRCancellation"
                style="@style/Paragraph_300_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:visibility="gone"
                tools:text="Você poderá cancelar o Recebimento Automático a qualquer momento."
                tools:visibility="visible" />

            <FrameLayout
                android:id="@+id/frameInteractLeaderboardBannersOffers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_16dp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <br.com.mobicare.cielo.component.feeandplans.ComponentLayoutFeeAndPlans
                android:id="@+id/componentTax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:visibility="gone"
                app:showFooter="false" />

            <br.com.mobicare.cielo.component.feeandplans.ComponentLayoutFeeAndPlans
                android:id="@+id/componentFeeAndPlanIncoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:showFooter="true" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewPlanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/text_view_more_machines"
                android:textColor="@color/black_231f20"
                android:textSize="@dimen/dimen_16sp" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:shimmer_duration="800"
                tools:visibility="gone">

                <include layout="@layout/layout_fee_and_plan_shimmer_holder" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_machines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:clipToPadding="true"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                tools:visibility="visible" />

            <include android:id="@+id/layout_error_machines" layout="@layout/layout_error_machines" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
