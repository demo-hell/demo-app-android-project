<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="visible"
        tools:visibility="gone" />

    <ScrollView
        android:id="@+id/container_rental"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView1"
                style="@style/Paragraph_400_bold_16_display_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/receive_discount_on_rent"
                android:textSize="@dimen/dimen_16sp"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lastUpdate"
                style="@style/Paragraph_200_regular_12_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:textSize="@dimen/dimen_12sp"
                app:layout_constraintTop_toBottomOf="@+id/textView1"
                tools:text="Última atualização: 23/11/2021 às 10:00." />

            <br.com.cielo.libflue.progress.ValueProgressView
                android:id="@+id/valueProgressView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                app:layout_constraintTop_toBottomOf="@+id/lastUpdate" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/statusIcon"
                android:layout_width="@dimen/dimen_18dp"
                android:layout_height="@dimen/dimen_18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/goalStatus"
                app:layout_constraintTop_toTopOf="@id/goalStatus"
                app:srcCompat="@drawable/x_circle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/goalStatus"
                style="@style/Paragraph_300_regular_14_display_400"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:textSize="@dimen/dimen_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/statusIcon"
                app:layout_constraintTop_toBottomOf="@+id/valueProgressView"
                tools:text="Você atingiu sua meta! Esse mês o valor do seu aluguel será de R$ 10,00." />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_14dp"
                android:layout_marginBottom="@dimen/dimen_13dp"
                app:layout_constraintBottom_toTopOf="@+id/llBillingDetails"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/trending_up" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView5"
                style="@style/Heading_400_Bold_16_display_500"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:text="@string/billing_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/goalStatus" />

            <include
                android:id="@+id/llBillingDetails"
                layout="@layout/layout_billing_details_postecipado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivEquipmentIcon"
                android:layout_width="@dimen/dimen_18dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llBillingDetails"
                app:srcCompat="@drawable/ic_pos_card"
                app:tint="@color/cielo_500" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEquipmentTraded"
                style="@style/Heading_400_Bold_16_display_500"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:text="@string/equipment_trade"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageView2"
                app:layout_constraintTop_toBottomOf="@id/llBillingDetails" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEquipments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                app:layout_constraintTop_toBottomOf="@id/tvEquipmentTraded"
                tools:itemCount="2"
                tools:listitem="@layout/equipment_trade_postecipado_item" />

            <TextView
                android:id="@+id/tvSeeAllEquipments"
                style="@style/Label_400_Alternate_regular_16_brand_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:gravity="center"
                android:text="@string/see_all_equipments"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/rvEquipments"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/calendarIcon"
                android:layout_width="@dimen/dimen_18dp"
                android:layout_height="@dimen/dimen_18dp"
                android:layout_marginTop="@dimen/dimen_28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSeeAllEquipments"
                app:srcCompat="@drawable/ic_flui_calendar"
                app:tint="@color/cielo_500" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/billingHistoryTitle"
                style="@style/Heading_400_Bold_16_display_500"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:text="@string/billing_history"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageView2"
                app:layout_constraintTop_toBottomOf="@id/tvSeeAllEquipments" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@id/billingHistoryTitle"
                tools:itemCount="2"
                tools:listitem="@layout/item_view_billing_history" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Paragraph_200_regular_12_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_13dp"
                android:text="@string/consult_yout_manager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvHistory" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <br.com.mobicare.cielo.commons.ui.widget.AlertHandlerCieloView
        android:id="@+id/errorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:cieloErrorButtonLabel="@string/text_try_again_label"
        app:cieloErrorContentImage="@drawable/ic_generic_error_image"
        app:cieloErrorMessage="@string/text_message_generic_error"
        app:cieloErrorTitle="@string/text_title_generic_error" />

</RelativeLayout>