<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sl_background_with_border_grey"
    android:paddingTop="@dimen/dimen_8dp"
    android:paddingBottom="@dimen/dimen_8dp"
    android:paddingStart="@dimen/dimen_16dp"
    android:paddingEnd="@dimen/dimen_16dp"
    android:orientation="vertical">
        <TextView
            style="@style/Heading_400_Bold_16_display_600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/taxas"
            />
        <br.com.cielo.libflue.inputtext.CieloTextInputView
            android:id="@+id/filtroInputView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:hint="@string/buscar_por_bandeira"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lvBandeiras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            />
</LinearLayout>
