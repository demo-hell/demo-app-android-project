<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_99000000">

    <LinearLayout
        android:id="@+id/content_constrant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_welcome_notification"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:background="@drawable/ic_drag_bottom_sheet" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNomeBandeira"
                    style="@style/Heading_500_Bold_18_display_600"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    tools:text="Visa" />

                <LinearLayout
                    android:id="@+id/llTaxasLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_cloud_50"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:padding="@dimen/dimen_16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLabelMDR"
                        style="@style/Label_200_Regular_12_Display_500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvLabelRR"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        style="@style/Label_200_Regular_12_Display_500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvLabelPix"
                        style="@style/Label_200_Regular_12_Display_500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>
