<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/outline_rounded_shape_color_c5ced7"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_16dp"
    android:paddingEnd="@dimen/dimen_16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuantityTitle"
        style="@style/Paragraph_300_bold_14_display_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:layout_weight="3"
        android:text="@string/quantidade"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuantityValue"
        style="@style/Paragraph_300_regular_14_display_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_weight="2"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintTop_toBottomOf="@id/tvQuantityTitle"
        tools:text="3 equipamentos" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@color/nublado_200"
        app:layout_constraintTop_toBottomOf="@id/tvQuantityValue" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRentTitle"
        style="@style/Paragraph_300_bold_14_display_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:layout_weight="3"
        android:text="@string/rent_contracted"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintTop_toBottomOf="@id/divider1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRentValue"
        style="@style/Paragraph_300_regular_14_display_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_weight="2"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintTop_toBottomOf="@id/tvRentTitle"
        tools:text="R$ 2.0000,00" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@color/nublado_200"
        app:layout_constraintTop_toBottomOf="@id/tvRentValue" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDiscountRentTitle"
        style="@style/Paragraph_300_bold_14_display_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:layout_weight="3"
        android:text="@string/discounted_rent"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintTop_toBottomOf="@id/divider2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvValueDiscount"
        style="@style/Paragraph_300_regular_14_display_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginBottom="@dimen/dimen_14dp"
        android:layout_weight="2"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDiscountRentTitle"
        tools:text="R$ 200,00" />

</androidx.constraintlayout.widget.ConstraintLayout>
