<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_99000000">

    <LinearLayout
        android:id="@+id/content_constrant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_16dp"
        android:background="@drawable/background_welcome_notification"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_drag_bottom_sheet"
            />

        <TextView
            style="@style/Heading_500_Bold_18_display_600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/bandeiras_eleg_veis_para_meta_e_a_taxa_fixa_do_cielo_livre"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingStart="@dimen/dimen_16dp"
            android:paddingEnd="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:orientation="vertical"
            android:background="@drawable/sl_background_with_border_grey">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBrands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                />
        </LinearLayout>

        <TextView
            style="@style/Paragraph_200_display_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/bandeiras_n_o_eleg_veis_para_o_plano_cielo_livre_n_o_contam_para_a_meta_de_faturamento_e_podem_ter_taxas_diferenciadas"
            android:textAlignment="center"
            />
    </LinearLayout>

    </LinearLayout>