<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/outline_rounded_shape_color_c5ced7"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_16dp"
    android:paddingEnd="@dimen/dimen_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_17dp"
        android:paddingBottom="@dimen/dimen_12dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Paragraph_300_regular_14_display_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/referring_month"
            android:textSize="@dimen/dimen_14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMonth"
            style="@style/Paragraph_300_bold_14_display_500"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:textSize="@dimen/dimen_14sp"
            tools:text="Novembro" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/nublado_200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_12dp"
        android:paddingBottom="@dimen/dimen_17dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Paragraph_300_regular_14_display_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/negotiation_date"
            android:textSize="@dimen/dimen_14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/currentDate"
            style="@style/Paragraph_300_bold_14_display_500"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:textSize="@dimen/dimen_14sp"
            tools:text="20/02/2021" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/nublado_200" />

    <LinearLayout
        android:id="@+id/endOfTermContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_12dp"
        android:paddingBottom="@dimen/dimen_12dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Paragraph_300_regular_14_display_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/end_of_term_plan"
            android:textSize="@dimen/dimen_14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEndOfTermDate"
            style="@style/Paragraph_300_bold_14_display_500"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:textSize="@dimen/dimen_14sp"
            tools:text="06/2022" />
    </LinearLayout>
</LinearLayout>
