<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_16dp">

    <ImageButton
        android:id="@+id/closeButton"
        android:background="@color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:srcCompat="@drawable/ic_close_gray"
        android:contentDescription="@string/content_description_close_button" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/bold_700_montserrat_18"
        android:textColor="@color/cloud_600"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/closeButton"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/ra_cancel_whatsapp_dialog_title" />

    <TextView
        android:id="@+id/tvMessage"
        style="@style/Paragraph_300_display_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:paddingBottom="@dimen/dimen_16dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:text="@string/ra_cancel_whatsapp_dialog_message" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/whatsappButton"
        style="@style/semibold_montserrat_16_brand_400"
        app:theme="@style/Theme.MaterialComponents.Light.Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/cielo_white_button_view_selector"
        android:drawablePadding="@dimen/dimen_8dp"
        android:gravity="center"
        app:iconTint="@color/brand_400"
        app:icon="@drawable/ic_whatsapp_blue"
        app:iconGravity="textStart"
        app:iconSize="@dimen/dimen_24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage"
        android:text="@string/ra_cancel_whatsapp_dialog_talk_to_specialist" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tvCallCenter"
        style="@style/semi_bold_montserrat_14"
        app:theme="@style/Theme.MaterialComponents.Light.Dialog"
        android:textColor="@color/brand_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:padding="@dimen/dimen_0dp"
        android:background="@drawable/cielo_white_button_view_selector"
        app:icon="@drawable/ic_external_link"
        app:iconGravity="textEnd"
        app:iconTint="@color/brand_400"
        android:text="@string/ra_cancel_whatsapp_dialog_contact_center"
        android:gravity="start|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whatsappButton" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPhoneNumberCapitals"
        style="@style/semibold_montserrat_16_brand_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dimen_16dp"
        android:textColor="@color/cloud_600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCallCenter"
        android:text="@string/ra_cancel_whatsapp_dialog_phone_capitals" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPhoneNumberOthers"
        style="@style/semibold_montserrat_16_brand_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:drawablePadding="@dimen/dimen_16dp"
        android:textColor="@color/cloud_600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumberCapitals"
        android:text="@string/ra_cancel_whatsapp_dialog_phone" />
</androidx.constraintlayout.widget.ConstraintLayout>
