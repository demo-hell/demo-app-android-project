<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginBottom="@dimen/dimen_12dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Paragraph_400_Regular_16_display_400"
            android:id="@+id/textViewLabel"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textViewValue"
            app:layout_constraintBottom_toTopOf="@id/textViewLabelSubtitle"
            android:text="Debito"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLabelSubtitle"
            style="@style/Paragraph_100_Regular_10_display_300"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/textViewLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textViewValue"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="Subtitle Label"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewValue"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/black_5A646E"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="5%"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/viewLineSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_C5CED7"/>
</androidx.appcompat.widget.LinearLayoutCompat>