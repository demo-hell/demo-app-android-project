<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerItemProblem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="@dimen/dimen_2dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp">

        <TextView
            android:id="@+id/tvTitleItemView"
            style="@style/regular_montserrat_16_neutral_800_spacing_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintStart_toStartOf="@id/containerItemProblem"
            app:layout_constraintTop_toTopOf="@id/containerItemProblem"
            tools:text="Problema de comunicação" />

        <ImageView
            android:id="@+id/ivArrowRight"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_marginVertical="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_6dp"
            android:src="@drawable/ic_arrow_right_gray"
            app:layout_constraintEnd_toEndOf="@id/containerItemProblem"
            app:layout_constraintTop_toTopOf="@id/containerItemProblem"
            app:layout_constraintBottom_toBottomOf="@id/containerItemProblem"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            app:layout_constraintBottom_toBottomOf="@id/containerItemProblem"
            android:layout_marginBottom="@dimen/dimen_1dp"
            android:background="@color/cloud_300"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>