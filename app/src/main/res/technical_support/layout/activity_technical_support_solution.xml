<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey_f4f8f9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/toolbar_technical_support_solution"
        android:id="@+id/toolbarTechnicalSupportSolutionWebView"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="?attr/actionBarSize"/>


    <include
        android:id="@+id/toolbarTechnicalSupportSolution"
        layout="@layout/toolbar_main" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardTechnicalSupportSolutionsListWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        tools:visibility="gone"
        android:layout_below="@+id/toolbarTechnicalSupportSolution"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/card_corner"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTechnicalSupportSolutionsMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearTechnicalSupportContent"
        android:orientation="horizontal"
        android:layout_below="@+id/toolbarTechnicalSupportSolution"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/webviewTechnicalSupportSolution"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressTechnicalSolution"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>