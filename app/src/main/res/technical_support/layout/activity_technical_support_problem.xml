<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_f4f8f9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/toolbarTechnicalSupportProblem"
        layout="@layout/toolbar_main" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTechnicalSupportProblemsListWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/toolbarTechnicalSupportProblem"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/card_corner"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTechnicalSupportProblemsMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>