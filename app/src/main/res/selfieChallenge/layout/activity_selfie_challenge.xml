<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back"
            android:paddingVertical="@dimen/dimen_16dp"
            android:paddingStart="@dimen/dimen_21dp"
            android:paddingEnd="@dimen/dimen_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_left_brand_400_24_dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/bold_montserrat_20_cloud_800"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/selfie_challenge_title"
            app:layout_constraintTop_toBottomOf="@id/btBackArrow" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSubtitle"
            style="@style/regular_montserrat_16_neutral_600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:lineSpacingExtra="@dimen/dimen_4dp"
            android:text="@string/selfie_challenge_subtitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_marginVertical="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/instructionsLayout"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_32dp"
                    android:background="@drawable/shape_solid_white_border_color_c5ced7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivSelfieChallengeGlasses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:importantForAccessibility="no"
                        app:layout_constraintBottom_toBottomOf="@id/tvSelfieChallengeGlasses"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvSelfieChallengeGlasses"
                        app:srcCompat="@drawable/ic_selfie_instruction_glass" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSelfieChallengeGlasses"
                        style="@style/regular_montserrat_14_neutral_600_spacing_3"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:layout_marginEnd="@dimen/dimen_16dp"
                        android:text="@string/selfie_challenge_glasses"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivSelfieChallengeGlasses"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/glassesSeparator"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="@dimen/dimen_1dp"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:background="@color/border_neutral"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvSelfieChallengeGlasses" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivSelfieChallengeSun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:importantForAccessibility="no"
                        app:layout_constraintBottom_toBottomOf="@+id/tvSelfieChallengeSun"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvSelfieChallengeSun"
                        app:srcCompat="@drawable/ic_selfie_instruction_light" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSelfieChallengeSun"
                        style="@style/regular_montserrat_14_neutral_600_spacing_3"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:layout_marginEnd="@dimen/dimen_16dp"
                        android:text="@string/selfie_challenge_sun"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivSelfieChallengeSun"
                        app:layout_constraintTop_toBottomOf="@id/glassesSeparator" />

                    <View
                        android:id="@+id/sunSeparator"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="@dimen/dimen_1dp"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:background="@color/border_neutral"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvSelfieChallengeSun" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivSelfieChallengePosition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:importantForAccessibility="no"
                        app:layout_constraintBottom_toBottomOf="@+id/tvSelfieChallengePosition"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvSelfieChallengePosition"
                        app:srcCompat="@drawable/ic_selfie_instruction_phone" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSelfieChallengePosition"
                        style="@style/regular_montserrat_14_neutral_600_spacing_3"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_marginVertical="@dimen/dimen_16dp"
                        android:layout_marginEnd="@dimen/dimen_16dp"
                        android:text="@string/selfie_challenge_position"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivSelfieChallengePosition"
                        app:layout_constraintTop_toBottomOf="@+id/sunSeparator"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/tvSelfieChallengePrivacy"
                    style="@style/regular_montserrat_12_neutral_600_spacing_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:layout_marginEnd="@dimen/dimen_28dp"
                    android:layout_marginBottom="@dimen/dimen_23dp"
                    app:layout_constraintTop_toBottomOf="@id/instructionsLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="@string/selfie_challenge_privacy" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <br.com.cielo.libflue.button.v2.CieloButton
            android:id="@+id/btNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:text="@string/selfie_challenge_button"
            app:layout_constraintBottom_toBottomOf="parent" />

        <br.com.mobicare.cielo.commons.ui.widget.MessageProgressView
            android:id="@+id/messageProgressView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>