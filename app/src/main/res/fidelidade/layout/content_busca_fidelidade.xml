<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_busca_fidelidade"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/container_busca_fidelidade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/gray_light"
                    app:srcCompat="@drawable/ic_mearchant_search" />

                    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                        android:id="@+id/edit_text_busca_fidelidade"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:hint="@string/busca"
                        android:inputType="text"
                        android:maxLines="1"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_color_263238"
                        android:textColorHint="@color/gray_light"
                        android:textSize="12sp"
                        app:typeface="MuseoSans-500.ttf" />

            </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
