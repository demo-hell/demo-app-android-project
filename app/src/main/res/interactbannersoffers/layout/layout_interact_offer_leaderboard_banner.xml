<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameBannerIncomingFast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dimen_16dp"
        android:background="@drawable/background_shape_banner_incoming_fast"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_12dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingBottom="@dimen/dimen_12dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewInteractOfferBannerTitle"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:fontFamily="@font/montserrat"
            tools:text="@string/banner_incoming_fast_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textViewIncomingFastBannerContractNow"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewInteractOfferBannerDescription"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/banner_incoming_fast_content"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textViewIncomingFastBannerContractNow"
            app:layout_constraintTop_toBottomOf="@id/textViewInteractOfferBannerTitle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewIncomingFastBannerContractNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_inconming_fast_contract_now"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="@dimen/dimen_12dp"
            android:paddingTop="@dimen/dimen_6dp"
            android:paddingRight="@dimen/dimen_12dp"
            android:paddingBottom="@dimen/dimen_6dp"
            android:text="@string/banner_incoming_fast_text_view_contract_now"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>