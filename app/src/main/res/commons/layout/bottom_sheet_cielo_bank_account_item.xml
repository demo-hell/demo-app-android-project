<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_16dp"
    android:layout_marginVertical="@dimen/dimen_4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_stroke_1dp_round_color_c5ced7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/bankIcon"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/ic_bank_brand_banco_do_brasil_square" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBankName"
                style="@style/label_16_display_400_ubuntu_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                app:layout_constraintStart_toEndOf="@id/bankIcon"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Banco do Brasil" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBankBranchLabel"
                style="@style/Label_300_Regular_14_display_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/branch_label"
                app:layout_constraintStart_toEndOf="@+id/bankIcon"
                app:layout_constraintTop_toBottomOf="@+id/tvBankName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBankBranchNumber"
                style="@style/Label_300_Bold_14_display_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tvBankBranchLabel"
                app:layout_constraintStart_toEndOf="@id/tvBankBranchLabel"
                app:layout_constraintTop_toTopOf="@+id/tvBankBranchLabel"
                tools:text="004132-5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBankAccountLabel"
                style="@style/Label_300_Regular_14_display_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/account_label"
                app:layout_constraintStart_toEndOf="@id/bankIcon"
                app:layout_constraintTop_toBottomOf="@id/tvBankBranchLabel" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBankAccountNumber"
                style="@style/Label_300_Bold_14_display_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tvBankAccountLabel"
                app:layout_constraintStart_toEndOf="@id/tvBankAccountLabel"
                app:layout_constraintTop_toTopOf="@+id/tvBankAccountLabel"
                tools:text="004132-5" />

            <RadioButton
                android:id="@+id/radioButton"
                style="@style/Paragraph_400_regular_16_display_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/custom_circle_radio_button"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="@+id/bankIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bankIcon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvReceiveToday"
        style="@style/bold_montserrat_18_display_500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:layout_marginEnd="@dimen/dimen_32dp"
        android:background="@drawable/background_alert_100_radius_16_dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="1sp"
        android:paddingHorizontal="@dimen/dimen_8dp"
        android:text="@string/receive_today"
        android:textColor="@color/alert_600"
        android:textSize="@dimen/dimen_12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/main_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/main_container"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>