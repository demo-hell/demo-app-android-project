<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_shape_tracking_machines"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Paragraph_300_Regular_14_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_site_preencha_o_campo_solicitante_com_os_n_meros_exibidos_abaixo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDigito01"
                style="@style/TxtOtpDigito"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                tools:text="0" />

            <View
                android:layout_width="@dimen/dimen_8dp"
                android:layout_height="@dimen/dimen_48dp" />

            <TextView
                android:id="@+id/tvDigito02"
                style="@style/TxtOtpDigito"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                tools:text="1" />

            <View
                android:layout_width="@dimen/dimen_8dp"
                android:layout_height="@dimen/dimen_48dp" />

            <TextView
                android:id="@+id/tvDigito03"
                style="@style/TxtOtpDigito"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                tools:text="2" />

            <View
                android:layout_width="@dimen/dimen_0dp"
                android:layout_weight="0.5"
                android:layout_height="@dimen/dimen_48dp" />

            <TextView
                android:id="@+id/tvDigito04"
                style="@style/TxtOtpDigito"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                tools:text="3" />

            <View
                android:layout_width="@dimen/dimen_8dp"
                android:layout_height="@dimen/dimen_48dp" />

            <TextView
                android:id="@+id/tvDigito05"
                style="@style/TxtOtpDigito"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                tools:text="4" />

            <View
                android:layout_width="@dimen/dimen_8dp"
                android:layout_height="@dimen/dimen_48dp" />

            <TextView
                android:id="@+id/tvDigito06"
                style="@style/TxtOtpDigito"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                tools:text="5" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbCountDownView"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="16dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progressbar_brand400_drawable" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>