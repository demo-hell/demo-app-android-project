<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_99000000">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_welcome_notification">

            <View
                android:id="@+id/view1"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_4dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@drawable/ic_drag_bottom_sheet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_bottom_sheet"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/txt_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintHeight_max="@dimen/dimen_250dp"
                app:layout_constraintHeight_min="@dimen/dimen_140dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                app:layout_constraintVertical_chainStyle="packed"
                tools:srcCompat="@drawable/ic_29" />

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/txt_title"
                style="@style/TxtTitleBlueBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/txt_subtitle"
                app:layout_constraintTop_toBottomOf="@+id/img_bottom_sheet"
                tools:text="@string/text_arv_contract" />

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/txt_subtitle"
                style="@style/TxtSubtitleBlackNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_30dp"
                app:layout_constraintBottom_toTopOf="@+id/container_action_btn"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                tools:text="Você realizou a solicitação da antecipação programada." />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_action_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent">

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceButtonView
                    android:id="@+id/retryButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:textAllCaps="false"
                    android:textSize="@dimen/dimen_16sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceButtonView
                    android:id="@+id/retryButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:textAllCaps="false"
                    android:textSize="@dimen/dimen_16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/retryButton1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>