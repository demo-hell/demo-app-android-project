<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_litle_error_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:gravity="center"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/content_litle_error_image_smile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ic_sad_smile"/>

    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/content_litle_error_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:text="Ops! Houve uma falha na comunicação."
        style="@style/TextPurple12sp900Bold"/>

    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/content_litle_error_text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextPurple12sp500"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:text="Verifique se você está conectado com a internet."/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/content_litle_error_button_retry"
        style="@style/ButtonShapedPurpleStyle"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        app:fb_disabledTextColor="@color/transparent_50"
        app:fb_text="@string/text_error_update" />

</LinearLayout>
