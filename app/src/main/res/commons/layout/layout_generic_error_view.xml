<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_link_pgto_empty_state" />

    <TextView
        android:id="@+id/tv_sorry_message"
        style="@style/Paragraph_400_regular_16_display_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:gravity="center_horizontal"
        android:text="@string/anticipation_error"
        app:layout_constraintTop_toBottomOf="@id/ic_empty_state"
        tools:layout_editor_absoluteX="@dimen/dimen_16dp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintBottom_toTopOf="@id/btnReload"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintTop_toBottomOf="@id/tv_sorry_message" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReload"
        style="@style/Heading_500_18"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:background="@drawable/button_full_width_brand_border_selector"
        android:text="@string/text_recharge"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>