<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dimen_24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include android:id="@+id/toolbarVersionBlock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/errorHandlerCieloVersionBlock"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/toolbar_rounded_white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color_C5CED7"
        app:layout_constraintTop_toBottomOf="@+id/toolbarVersionBlock"/>

    <br.com.mobicare.cielo.commons.ui.widget.AlertHandlerCieloView
        android:id="@+id/errorHandlerCieloVersionBlock"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:cieloErrorContentImage="@drawable/img_update_app"
        app:cieloErrorMessage="@string/text_message_version_block_error"
        app:cieloErrorButtonLabel="@string/btn_version_block_update"
        app:cieloErrorTitle="@string/text_title_version_block"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarVersionBlock"/>

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:fontFamily="@font/ubuntu"
        android:textSize="@dimen/dimen_12sp"
        android:textColor="@color/display_300"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/spaceVersionBottom"
        tools:text="Versão disponível: 0.0.0"/>

    <Space
        android:id="@+id/spaceVersionBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>