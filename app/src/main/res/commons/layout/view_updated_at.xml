<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvUpdatedAt"
        style="@style/Label_200_Regular_12_Display_500"
        tools:text="Atualizado Ã s 09h50"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9" />

    <LinearLayout
        android:id="@+id/llRefreshSales"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:clickable="true"
        android:gravity="end"
        android:focusable="true">

        <TextView
            style="@style/Label_200_Alternate_12_Brand_400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_6dp"
            android:gravity="end"
            android:text="@string/home_minhas_vendas_atualizar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/ic_refresh_new" />

    </LinearLayout>
</LinearLayout>