<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sl_background_with_border_grey"
    android:paddingTop="@dimen/dimen_8dp"
    android:paddingStart="@dimen/dimen_16dp"
    android:paddingEnd="@dimen/dimen_16dp"
    android:paddingBottom="@dimen/dimen_16dp"
    android:orientation="vertical">

    <TextView
        style="@style/Heading_400_Bold_16_display_600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_dc_bandeiras"
        />

    <TextView
        style="@style/Paragraph_300_Regular_14_display_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/veja_todas_as_bandeiras_que_entram_para_a_meta_de_faturamento_m_nimo_do_cielo_livre"
        />

    <br.com.cielo.libflue.button.CieloRegularSecondaryButton
        android:id="@+id/showAllBrandsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/consulte_as_bandeiras_dispon_veis"
        />

</LinearLayout>