<?xml version="1.0" encoding="utf-8"?>
<merge>
    <androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayoutOrderStatusError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_16dp"
        android:background="@drawable/background_status_order_error"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_light_others_info"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewStatusOrderError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:textColor="@color/display_400"
            android:fontFamily="@font/ubuntu"
            android:textSize="@dimen/dimen_12sp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
</merge>