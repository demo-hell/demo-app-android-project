<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_99000000">

    <LinearLayout
        android:id="@+id/content_constrant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_welcome_notification"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16dp">

        <View
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp"
            android:background="@drawable/ic_drag_bottom_sheet" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/Heading_500_Bold_18_display_600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bandeiras_eleg_veis_para_meta_e_a_taxa_fixa_do_cielo_livre" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollViewContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintBank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp">

                    <br.com.cielo.libflue.inputtext.CieloTextInputView
                        android:id="@+id/filtroInputView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        app:hint="@string/buscar_por_bandeira"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageViewSearchIcon"
                        android:layout_width="@dimen/dimen_18dp"
                        android:layout_height="@dimen/dimen_18dp"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/filtroInputView"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/filtroInputView"
                        app:srcCompat="@drawable/ic_search_br" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <br.com.mobicare.cielo.commons.ui.widget.AlertHandlerCieloView
            android:id="@+id/errorLayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="gone"
            app:cieloErrorTitle="@string/text_title_generic_error"
            app:cieloErrorMessage="@string/text_message_generic_error"
            app:cieloErrorButtonLabel="@string/text_try_again_label"
            app:cieloErrorContentImage="@drawable/ic_generic_error_image" />
    </LinearLayout>

</RelativeLayout>