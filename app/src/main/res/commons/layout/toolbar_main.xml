<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_main"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/brand_400"
    android:theme="@style/AppTheme.AppBarOverlay"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textToolbarMainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/finishButtonToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:paddingTop="13.25dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingBottom="12.75dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/toolbar_button_title"
            style="@style/TextBlack12spUbuntuRegularWhite"
            android:layout_width="@dimen/dimen_81dp"
            android:layout_height="@dimen/dimen_30dp"
            android:background="@drawable/shape_around_text_toolbar"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_9dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_9dp" />
    </LinearLayout>

</androidx.appcompat.widget.Toolbar>