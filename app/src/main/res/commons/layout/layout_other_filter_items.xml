<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_nsu_sales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLabelDetail"
            style="@style/Paragraph_400_regular_16_display_400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:text="@string/text_outer_filter"
            android:textColor="@color/color_5A646E"
            android:textSize="@dimen/dimen_16sp" />

        <br.com.cielo.libflue.inputtext.CieloTextInputView
            android:id="@+id/editTextSalesNsuDoc"
            style="@style/Paragraph_300_display_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:digits="1234567890.,"
            android:gravity="center_vertical"
            android:imeOptions="actionDone"
            android:importantForAutofill="noExcludeDescendants"
            android:inputType="numberDecimal"
            android:maxLength="13"
            android:maxLines="1"
            app:textColorHint="@color/color_cloud_300"
            app:hint="@string/text_outer_nsu_doc_filter"
            app:typeface="MuseoSans-500.ttf" />

        <br.com.cielo.libflue.inputtext.CieloTextInputView
            android:id="@+id/editTextSaleAuthorizationCode"
            style="@style/Paragraph_300_display_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:digits="1234567890abcdefghijlmnopqrstuvxzwyk"
            android:gravity="center_vertical"
            android:imeOptions="actionDone"
            android:importantForAutofill="noExcludeDescendants"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            app:textColorHint="@color/color_cloud_300"
            app:hint="@string/text_outer_code_filter"
            app:typeface="MuseoSans-500.ttf" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>