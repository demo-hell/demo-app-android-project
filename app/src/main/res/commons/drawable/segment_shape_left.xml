<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@color/white" android:state_checked="true" android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="8dp" android:topLeftRadius="8dp" />
            <solid android:color="@color/blue" />

        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:color="@color/white" android:shape="rectangle">
            <corners android:bottomLeftRadius="8dp" android:topLeftRadius="8dp" />
            <solid android:color="@color/blue" />
        </shape>
    </item>

    <item android:color="@color/blue" android:state_checked="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="8dp" android:topLeftRadius="8dp" />
            <solid android:color="@color/white" />
            <stroke android:width="2px" android:color="@color/blue" />
        </shape>
    </item>


</selector>