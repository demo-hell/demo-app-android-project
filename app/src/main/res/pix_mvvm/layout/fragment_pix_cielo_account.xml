<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/medium_montserrat_16_neutral_600"
        android:lineSpacingExtra="@dimen/dimen_4dp"
        android:text="@string/pix_account_cielo_account_description" />

    <TextView
        android:id="@+id/tvDocument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:textAppearance="@style/medium_montserrat_16_neutral_600"
        android:lineSpacingExtra="@dimen/dimen_4dp"
        tools:text="Esta alteração valerá para todos os ECs do CNPJ: 99.999.999/9999-99." />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:src="@drawable/ic_brand_pix_cloud_400_24_dp"
        app:tint="@color/neutral_600"
        android:importantForAccessibility="no" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textAppearance="@style/bold_montserrat_16_neutral_800_spacing_4"
        android:text="@string/pix_account_cielo_account_info_1_title"
        tools:textAppearance="@style/semi_bold_montserrat_16"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textAppearance="@style/medium_montserrat_14"
        android:textColor="@color/cloud_400"
        android:lineSpacingExtra="@dimen/dimen_3dp"
        android:text="@string/pix_account_cielo_account_info_1_description" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:src="@drawable/ic_money_note_arrow_down_24_dp"
        app:tint="@color/neutral_600"
        android:importantForAccessibility="no" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textAppearance="@style/bold_montserrat_16_neutral_800_spacing_4"
        android:text="@string/pix_account_cielo_account_info_2_title"
        tools:textAppearance="@style/semi_bold_montserrat_16"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textAppearance="@style/medium_montserrat_14"
        android:textColor="@color/cloud_400"
        android:lineSpacingExtra="@dimen/dimen_3dp"
        android:text="@string/pix_account_cielo_account_info_2_description" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:src="@drawable/ic_coin_dual_24_dp"
        app:tint="@color/neutral_600"
        android:importantForAccessibility="no" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textAppearance="@style/bold_montserrat_16_neutral_800_spacing_4"
        android:text="@string/pix_account_cielo_account_info_3_title"
        tools:textAppearance="@style/semi_bold_montserrat_16"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textAppearance="@style/medium_montserrat_14"
        android:textColor="@color/cloud_400"
        android:lineSpacingExtra="@dimen/dimen_3dp"
        android:text="@string/pix_account_cielo_account_info_3_description" />

    <br.com.cielo.libflue.card.CieloCardInformation
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:cardInformationType="information"
        app:cardTextAppearance="@style/medium_montserrat_14"
        app:cardTextLineSpacingExtra="@dimen/dimen_3dp"
        app:textColor="@color/contrast_1000"
        app:cardText="@string/pix_account_cielo_account_information" />

    <LinearLayout
        android:id="@+id/llTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:padding="@dimen/dimen_16dp"
        android:background="@color/cloud_100"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/medium_montserrat_14"
            android:textColor="@color/neutral_600"
            android:lineSpacingExtra="@dimen/dimen_3dp"
            android:text="@string/pix_account_cielo_account_terms_description" />

        <TextView
            android:id="@+id/btTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dimen_12dp"
            android:clickable="true"
            android:focusable="true"
            app:drawableStartCompat="@drawable/ic_circle_arrow_blue"
            android:drawablePadding="@dimen/dimen_4dp"
            android:text="@string/pix_account_cielo_account_terms_button"
            android:textAppearance="@style/semi_bold_montserrat_14"
            android:textColor="@color/brand_400" />

        <LinearLayout
            android:id="@+id/llAcceptTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbAcceptTerms"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:background="@drawable/selector_checkbox_brand"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:importantForAccessibility="no"
                tools:checked="true" />

            <TextView
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_weight="1"
                android:textAppearance="@style/medium_montserrat_14_neutral_800"
                android:text="@string/pix_account_cielo_account_terms_checkbox"
                tools:ignore="InefficientWeight" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>