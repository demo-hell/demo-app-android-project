<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/medium_montserrat_16_neutral_600"
        android:text="@string/pix_refund_receipts_message" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:textAppearance="@style/semi_bold_montserrat_12"
        android:textColor="@color/neutral_800"
        android:text="@string/pix_refund_receipts_last_refunds" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRefundReceipts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/containerReload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/medium_montserrat_14_cloud_400"
            android:lineSpacingExtra="@dimen/dimen_3dp"
            android:text="@string/pix_refund_receipts_reload" />

        <TextView
            android:id="@+id/btReload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dimen_12dp"
            android:textAppearance="@style/semi_bold_montserrat_14_brand_400_spacing_3"
            android:text="@string/bt_reload"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="@dimen/dimen_4dp"
            app:drawableStartCompat="@drawable/ic_arrows_refresh_brand_400_16_dp" />

    </LinearLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerReload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_auto_start="true"
        app:shimmer_base_alpha="1"
        app:shimmer_highlight_alpha="0"
        android:visibility="gone"
        tools:duration="200"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="@dimen/dimen_14dp"
                    android:layout_weight=".9"
                    android:background="@drawable/background_solid_cloud_100_radius_4dp"
                    tools:ignore="InefficientWeight" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:weightSum="1">

                <View
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="@dimen/dimen_14dp"
                    android:layout_weight=".5"
                    android:background="@drawable/background_solid_cloud_100_radius_4dp"
                    tools:ignore="InefficientWeight" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp"
                app:layout_constraintTop_toBottomOf="@id/stripDivider" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</LinearLayout>
