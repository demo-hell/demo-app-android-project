<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dimen_12dp"
    android:paddingBottom="@dimen/dimen_16dp"
    android:background="@color/white">

    <include layout="@layout/include_pix_home_section_balance"
        android:id="@+id/includeSectionBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp" />

    <include layout="@layout/include_pix_home_section_transactions"
        android:id="@+id/includeSectionTransactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:layout_constraintTop_toBottomOf="@id/includeSectionBalance" />

    <include layout="@layout/include_pix_home_section_keys"
        android:id="@+id/includeSectionKeys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:layout_constraintTop_toBottomOf="@id/includeSectionTransactions" />

    <View
        android:id="@+id/dividerOptions"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@color/cloud_50"
        app:layout_constraintTop_toBottomOf="@id/includeSectionKeys" />

    <include layout="@layout/include_pix_home_section_options"
        android:id="@+id/includeSectionOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:layout_constraintTop_toBottomOf="@id/dividerOptions" />

</androidx.constraintlayout.widget.ConstraintLayout>