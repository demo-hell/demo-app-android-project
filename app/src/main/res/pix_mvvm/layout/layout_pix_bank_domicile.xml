<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:paddingBottom="@dimen/dimen_16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/medium_montserrat_16_neutral_600"
        android:lineSpacingExtra="@dimen/dimen_4dp"
        android:text="@string/pix_extract_bank_domicile_description" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerBankDomicile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:padding="@dimen/dimen_16dp"
        android:background="@drawable/background_stroke_cloud_300_radius_8_dp">

        <ImageView
            android:id="@+id/ivBankBrand"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_bank_brand_cielo_square" />

        <TextView
            android:id="@+id/tvBankName"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:textAppearance="@style/bold_montserrat_14_neutral_800"
            app:layout_constraintStart_toEndOf="@id/ivBankBrand"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Cielo S.A - Instituição de pagamento" />

        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_6dp"
            app:layout_constraintTop_toBottomOf="@id/tvBankName"
            app:layout_constraintStart_toStartOf="@id/tvBankName"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvAgencyNumber"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:textAppearance="@style/medium_montserrat_14"
                android:textColor="@color/neutral_600"
                tools:text="Agência: 102132" />

            <TextView
                android:id="@+id/tvAccountNumber"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:textAppearance="@style/medium_montserrat_14"
                android:textColor="@color/neutral_600"
                tools:text="Conta: 875982-5" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>