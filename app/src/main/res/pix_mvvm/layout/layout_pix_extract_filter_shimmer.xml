<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dimen_16dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/viewFirstSquareShimmer"
            android:layout_width="@dimen/dimen_140dp"
            android:layout_height="@dimen/dimen_36dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:background="@drawable/background_cloud_100_radius_4_dp" />

        <View
            android:id="@+id/viewSecondSquareShimmer"
            android:layout_width="@dimen/dimen_140dp"
            android:layout_height="@dimen/dimen_36dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:background="@drawable/background_cloud_100_radius_4_dp" />

        <View
            android:id="@+id/viewThirdSquareShimmer"
            android:layout_width="@dimen/dimen_140dp"
            android:layout_height="@dimen/dimen_36dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:background="@drawable/background_cloud_100_radius_4_dp" />

    </LinearLayout>

</HorizontalScrollView>