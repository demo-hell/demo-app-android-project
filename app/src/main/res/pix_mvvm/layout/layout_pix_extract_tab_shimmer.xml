<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/pix_extract_content_description_loading"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_auto_start="true"
        app:shimmer_base_alpha="1"
        app:shimmer_highlight_alpha="0"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_pix_extract_filter_shimmer" />

            <include layout="@layout/layout_pix_extract_transaction_item_shimmer" />

            <include layout="@layout/layout_pix_extract_transaction_item_shimmer" />

            <include layout="@layout/layout_pix_extract_transaction_item_shimmer" />

            <include layout="@layout/layout_pix_extract_transaction_item_shimmer" />

            <include layout="@layout/layout_pix_extract_transaction_item_shimmer" />

            <include layout="@layout/layout_pix_extract_transaction_item_shimmer" />

            <include layout="@layout/layout_pix_extract_transaction_item_shimmer" />

            <include layout="@layout/layout_pix_extract_transaction_item_shimmer" />

            <include layout="@layout/layout_pix_extract_transaction_item_shimmer" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>