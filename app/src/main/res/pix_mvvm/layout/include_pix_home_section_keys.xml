<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sectionKeys"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvMyKeysLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:text="@string/pix_home_my_keys"
        android:textAppearance="@style/bold_montserrat_14_neutral_800"
        app:layout_constraintTop_toTopOf="parent"
        tools:textAppearance="@style/semi_bold_montserrat_14" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_16dp"
        android:background="@drawable/background_stroke_cloud_200_radius_12dp"
        app:layout_constraintTop_toBottomOf="@id/tvMyKeysLabel">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="visible">

                <LinearLayout
                    android:id="@+id/containerTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tagMainKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_8dp"
                        android:background="@color/purple_alpha_16"
                        android:drawablePadding="@dimen/dimen_4dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/dimen_8dp"
                        android:paddingVertical="@dimen/dimen_4dp"
                        android:text="@string/pix_home_main_key"
                        android:textAppearance="@style/semi_bold_montserrat_14"
                        android:textColor="@color/purple_800"
                        app:drawableStartCompat="@drawable/ic_key"
                        app:drawableTint="@color/purple_800" />

                    <TextView
                        android:id="@+id/tagActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_8dp"
                        android:paddingVertical="@dimen/dimen_4dp"
                        android:paddingHorizontal="@dimen/dimen_8dp"
                        android:gravity="center_vertical"
                        android:background="@color/purple_alpha_16"
                        android:text="@string/pix_home_active"
                        android:textAppearance="@style/semi_bold_montserrat_14"
                        android:textColor="@color/purple_700" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerKeyCopy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="@string/pix_home_content_description_copy_key_button"
                    app:layout_constraintTop_toBottomOf="@id/containerTags">

                    <TextView
                        android:id="@+id/tvKey"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/semi_bold_montserrat_14"
                        android:textColor="@color/neutral_800"
                        android:lineSpacingExtra="@dimen/dimen_3sp"
                        tools:text="AleatÃ³ria: d8cadd08-88db-4bc7-a9c3-b844e6147a95"
                        tools:ignore="InefficientWeight"
                        android:importantForAccessibility="no" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_actions_copy_24dp"
                        app:tint="@color/brand_400"
                        android:importantForAccessibility="no" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/containerNoMainKeyMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/bold_montserrat_14"
                    android:textColor="@color/neutral_600"
                    android:lineSpacingExtra="@dimen/dimen_3sp"
                    android:text="@string/pix_home_no_main_key_message_1"
                    tools:textAppearance="@style/semi_bold_montserrat_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:textAppearance="@style/medium_montserrat_14"
                    android:textColor="@color/neutral_600"
                    android:lineSpacingExtra="@dimen/dimen_3sp"
                    android:text="@string/pix_home_no_main_key_message_2" />

            </LinearLayout>

            <View
                android:id="@+id/dividerKey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@color/cloud_200" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/pix_home_content_description_manage_keys_button">

                <TextView
                    android:id="@+id/btnManageKeys"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dimen_12dp"
                    android:gravity="center_vertical"
                    android:text="@string/pix_home_manage_keys"
                    android:textAppearance="@style/semi_bold_montserrat_14"
                    android:textColor="@color/brand_400"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:drawableEndCompat="@drawable/ic_chevron_right_24_brand_400"
                    android:importantForAccessibility="no" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/medium_montserrat_14"
                android:textColor="@color/neutral_600"
                android:text="@string/pix_home_keys_error" />

            <View
                android:id="@+id/dividerError"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@color/cloud_200"
                app:layout_constraintTop_toBottomOf="@id/tvBalanceUpdatedAt" />

            <TextView
                android:id="@+id/btnReload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dimen_12dp"
                android:gravity="center_vertical"
                android:text="@string/text_recharge"
                android:textAppearance="@style/semi_bold_montserrat_14"
                android:textColor="@color/brand_400"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:drawableEndCompat="@drawable/ic_arrows_refresh_brand_400_24_dp"
                app:layout_constraintTop_toBottomOf="@id/divider" />

        </LinearLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_16dp"
            app:shimmer_auto_start="true"
            app:shimmer_base_alpha="1"
            app:shimmer_highlight_alpha="0"
            tools:duration="200"
            tools:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/stripTags"
                    android:layout_width="@dimen/dimen_190dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:background="@drawable/background_solid_cloud_100_radius_4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/stripKey"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:background="@drawable/background_solid_cloud_100_radius_4dp"
                    app:layout_constraintTop_toBottomOf="@id/stripTags"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/stripButtonCopy" />

                <View
                    android:id="@+id/stripButtonCopy"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:background="@drawable/background_solid_cloud_100_radius_4dp"
                    app:layout_constraintTop_toTopOf="@id/stripKey"
                    app:layout_constraintBottom_toBottomOf="@id/stripKey"
                    app:layout_constraintStart_toEndOf="@id/stripKey"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/stripDivider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:background="@color/cloud_200"
                    app:layout_constraintTop_toBottomOf="@id/stripKey" />

                <View
                    android:id="@+id/stripAccessExtractPix"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:background="@drawable/background_solid_cloud_100_radius_4dp"
                    app:layout_constraintTop_toBottomOf="@id/stripDivider" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>