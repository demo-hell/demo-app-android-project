<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:textAppearance="@style/medium_montserrat_16_neutral_600"
        android:lineSpacingExtra="@dimen/dimen_4sp"
        android:text="@string/pix_authorization_status_subtitle"
        app:layout_constraintTop_toTopOf="parent"
        tools:textAppearance="@style/regular_montserrat_16_neutral_600_spacing_4" />

    <TextView
        android:id="@+id/tvStatusLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:textAppearance="@style/medium_montserrat_12_neutral_600"
        android:includeFontPadding="false"
        android:text="@string/status"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        tools:textAppearance="@style/regular_montserrat_12_cloud_400" />

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:importantForAccessibility="no"
        app:srcCompat="@drawable/ic_date_time_clock_alert_500_16_dp"
        app:layout_constraintStart_toStartOf="@id/tvStatusLabel"
        app:layout_constraintTop_toBottomOf="@id/tvStatusLabel" />

    <TextView
        android:id="@+id/tvStatusValue"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/bold_montserrat_16_neutral_600"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:text="@string/status"
        app:layout_constraintTop_toTopOf="@id/ivStatus"
        app:layout_constraintBottom_toBottomOf="@id/ivStatus"
        app:layout_constraintStart_toEndOf="@id/ivStatus"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Solicitação em progresso" />
    
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_8dp"
        android:background="@color/cloud_50"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatusValue" />

    <TextView
        android:id="@+id/tvGeneralInfoLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:textAppearance="@style/bold_montserrat_14_neutral_800_spacing_3"
        android:text="@string/general_information"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardGeneralInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:padding="@dimen/dimen_16dp"
        android:background="@drawable/background_8dp_radius_stroke_cloud_200"
        app:layout_constraintTop_toBottomOf="@id/tvGeneralInfoLabel">

        <TextView
            android:id="@+id/tvDateLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/medium_montserrat_12_neutral_600"
            android:includeFontPadding="false"
            android:text="@string/pix_authorization_status_date"
            app:layout_constraintTop_toTopOf="parent"
            tools:textAppearance="@style/regular_montserrat_12_cloud_400" />

        <ImageView
            android:id="@+id/ivDateIcon"
            android:layout_width="@dimen/dimen_16dp"
            android:layout_height="@dimen/dimen_16dp"
            app:srcCompat="@drawable/ic_date_time_calendar_cloud_300_16_dp"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="@id/tvDateLabel"
            app:layout_constraintTop_toTopOf="@id/tvDateValue"
            app:layout_constraintBottom_toBottomOf="@id/tvDateValue" />

        <TextView
            android:id="@+id/tvDateValue"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textAppearance="@style/bold_montserrat_16_neutral_600"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tvDateLabel"
            app:layout_constraintStart_toEndOf="@id/ivDateIcon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="30/08/2023" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvAccessDocument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:textAppearance="@style/medium_montserrat_16_neutral_600"
        android:lineSpacingExtra="@dimen/dimen_4sp"
        android:text="@string/pix_authorization_status_access_document"
        app:layout_constraintTop_toBottomOf="@id/cardGeneralInformation"
        tools:textAppearance="@style/regular_montserrat_16_neutral_600_spacing_4" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linkContractAuthorization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:paddingVertical="@dimen/dimen_8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/tvAccessDocument">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_circle_arrow_blue"
            android:importantForAccessibility="no" />

        <TextView
            android:textAppearance="@style/semi_bold_montserrat_14_brand_400_spacing_minus_3"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:text="@string/pix_authorization_status_contract" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>