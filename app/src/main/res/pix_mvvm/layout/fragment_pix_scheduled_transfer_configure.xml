<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/medium_montserrat_16_neutral_600"
        android:lineSpacingExtra="@dimen/dimen_4dp"
        android:text="@string/pix_account_scheduled_transfer_configure_description_1" />

    <TextView
        android:id="@+id/tvDescription2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:textAppearance="@style/medium_montserrat_16_neutral_600"
        android:lineSpacingExtra="@dimen/dimen_4dp"
        android:text="@string/pix_account_scheduled_transfer_configure_description_2" />

    <TextView
        android:id="@+id/tvDisplayingInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:padding="@dimen/dimen_16dp"
        android:background="@color/cloud_100"
        android:textAppearance="@style/medium_montserrat_14"
        android:textColor="@color/black"
        android:lineSpacingExtra="@dimen/dimen_3dp"
        tools:text="Você está visualizando informações do CNPJ: 999.999.999/0001-99" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:paddingVertical="@dimen/dimen_8dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <br.com.cielo.libflue.card.CieloCardInformation
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:cardInformationType="information"
        app:cardTitleAppearance="@style/bold_montserrat_14"
        app:cardTextAppearance="@style/medium_montserrat_14"
        app:cardTextLineSpacingExtra="@dimen/dimen_3dp"
        app:textColor="@color/contrast_1000"
        app:cardTitle="@string/pix_account_scheduled_transfer_configure_info_title"
        app:cardText="@string/pix_account_scheduled_transfer_configure_info_description" />

    <LinearLayout
        android:id="@+id/llAgreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cbAgreement"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:background="@drawable/selector_checkbox_brand"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:importantForAccessibility="no"
            tools:checked="true" />

        <TextView
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_weight="1"
            android:textAppearance="@style/medium_montserrat_16_neutral_800"
            android:text="@string/pix_account_scheduled_transfer_configure_agreement"
            tools:ignore="InefficientWeight" />

    </LinearLayout>

</LinearLayout>