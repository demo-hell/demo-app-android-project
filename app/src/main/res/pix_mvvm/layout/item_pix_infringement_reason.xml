<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_6dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tvReason"
        style="@style/regular_montserrat_16_neutral_800_spacing_3"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_13dp"
        android:drawablePadding="@dimen/dimen_13dp"
        app:drawableEndCompat="@drawable/ic_directions_chevron_right_neutral_soft_12_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Fiz o Pix sob ameaça, coação ou sequestro" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_13dp"
        android:background="@color/cloud_200"
        app:layout_constraintTop_toBottomOf="@id/tvReason" />

</androidx.constraintlayout.widget.ConstraintLayout>