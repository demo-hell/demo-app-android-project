<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/dimen_16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:textAppearance="@style/medium_montserrat_14"
        android:textColor="@color/neutral_600"
        android:text="@string/pix_refund_review_label_amount_to_refund" />

    <br.com.cielo.libflue.button.CieloTextButton
        android:id="@+id/tbAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:textSize="@dimen/dimen_32sp"
        app:cieloTypeFace="bold"
        tools:text="R$ 120,00" />

    <LinearLayout
        android:id="@+id/llRefundData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:padding="@dimen/dimen_16dp"
        android:orientation="vertical"
        android:background="@drawable/background_stroke_cloud_200_radius_12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/bold_montserrat_14"
            android:textColor="@color/neutral_800"
            android:text="@string/pix_refund_review_data_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/medium_montserrat_14"
                android:textColor="@color/neutral_600"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/pix_refund_review_data_label_recipient"
                tools:ignore="InefficientWeight" />

            <TextView
                android:id="@+id/tvRecipientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:textAppearance="@style/semi_bold_montserrat_14"
                android:textColor="@color/neutral_800"
                tools:text="Luisa Amaral" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/medium_montserrat_14"
                android:textColor="@color/neutral_600"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/pix_refund_review_data_label_document"
                tools:ignore="InefficientWeight" />

            <TextView
                android:id="@+id/tvDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:textAppearance="@style/semi_bold_montserrat_14"
                android:textColor="@color/neutral_800"
                tools:text="***.123.345-**" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/medium_montserrat_14"
                android:textColor="@color/neutral_600"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/pix_refund_review_data_label_institution"
                tools:ignore="InefficientWeight" />

            <TextView
                android:id="@+id/tvInstitution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:textAppearance="@style/semi_bold_montserrat_14"
                android:textColor="@color/neutral_800"
                tools:text="Bradesco S.A." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/medium_montserrat_14"
                android:textColor="@color/neutral_600"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/pix_refund_review_data_label_transaction_type"
                tools:ignore="InefficientWeight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:textAppearance="@style/semi_bold_montserrat_14"
                android:textColor="@color/neutral_800"
                android:text="@string/pix_refund_review_data_value_transaction_type" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/medium_montserrat_14"
                android:textColor="@color/neutral_600"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/pix_refund_review_data_label_refund_date"
                tools:ignore="InefficientWeight" />

            <TextView
                android:id="@+id/tvRefundDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:textAppearance="@style/semi_bold_montserrat_14"
                android:textColor="@color/neutral_800"
                tools:text="DD/MM/AAAA" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/cloud_100"
            android:layout_marginTop="@dimen/dimen_20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:textAppearance="@style/medium_montserrat_14"
            android:textColor="@color/neutral_600"
            android:text="@string/pix_refund_review_label_message" />

        <br.com.cielo.libflue.button.CieloTextButton
            android:id="@+id/tbMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cieloTypeFace="semi_bold"
            android:text="@string/pix_refund_review_button_message" />

    </LinearLayout>

    <br.com.cielo.libflue.button.v2.CieloButton
        android:id="@+id/btCancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_28dp"
        app:buttonType="outlined_danger"
        android:text="@string/pix_refund_review_button_cancel" />

    <br.com.cielo.libflue.button.v2.CieloButton
        android:id="@+id/btRefund"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/pix_refund_review_button_refund" />

</LinearLayout>