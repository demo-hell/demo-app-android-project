<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/flIcon"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@color/danger_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_money_note_arrow_up_24_dp"
            android:importantForAccessibility="no"
            app:tint="@color/danger_dark" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_8dp"
        android:textAppearance="@style/medium_montserrat_12_neutral_600"
        app:layout_constraintTop_toTopOf="@id/flIcon"
        app:layout_constraintStart_toEndOf="@id/flIcon"
        app:layout_constraintEnd_toStartOf="@id/tvAmount"
        android:text="@string/pix_refund_receipts_item_title" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/medium_montserrat_12_neutral_600"
        app:layout_constraintBottom_toBottomOf="@id/flIcon"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="@id/tvTitle"
        tools:text="00/00/0000 00:00" />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/bold_montserrat_14_neutral_800"
        app:layout_constraintTop_toTopOf="@id/flIcon"
        app:layout_constraintBottom_toBottomOf="@id/flIcon"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="- R$ 50,00" />

</androidx.constraintlayout.widget.ConstraintLayout>