<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/medium_montserrat_16_neutral_600"
        android:lineSpacingExtra="@dimen/dimen_4dp"
        android:text="@string/pix_account_scheduled_transfer_balance_description" />

    <br.com.cielo.libflue.card.CieloCardInformation
        android:id="@+id/cciAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:cardInformationType="alert"
        app:cardTitleAppearance="@style/bold_montserrat_14"
        app:cardTextAppearance="@style/medium_montserrat_14"
        app:cardTextLineSpacingExtra="@dimen/dimen_3dp"
        app:textColor="@color/contrast_1000"
        app:cardTitle="@string/pix_account_scheduled_transfer_balance_alert_title"
        app:cardText="@string/pix_account_scheduled_transfer_balance_alert_message" />

    <br.com.cielo.libflue.check.CieloCheckBox
        android:id="@+id/cbAgreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp" />

</LinearLayout>