<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp"
    android:background="@color/cloud_100">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:textAppearance="@style/semi_bold_montserrat_16_cloud_0_spacing_4"
        android:textColor="@color/neutral_800"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivStatus"
        tools:text="Processando • Pix" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:textAppearance="@style/medium_montserrat_12_neutral_600"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivStatus"
        tools:text="Realizado em 19/12/2023 às 08:34:01" />

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:src="@drawable/ic_date_time_clock_neutral_soft_20_dp"
        android:background="@color/color_2F363E_alpha_12"
        android:padding="@dimen/dimen_10dp"
        android:importantForAccessibility="no"
        app:tint="@color/neutral_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:textAppearance="@style/medium_montserrat_14"
        android:textColor="@color/neutral_600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        tools:text="Valor" />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/bold_montserrat_16_neutral_800_spacing_4"
        app:layout_constraintTop_toTopOf="@id/tvLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:textAppearance="@style/semi_bold_montserrat_16"
        tools:text="- R$ 500,00" />

    <LinearLayout
        android:id="@+id/containerAdditionalInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvLabel"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tvAdditionalInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/medium_montserrat_14"
            android:textColor="@color/neutral_600"
            android:lineSpacingExtra="@dimen/dimen_3sp"
            tools:text="O valor transferido é o líquido de um recebimento descontado a tarifa. Para mais informações, veja os detalhes do recebimento." />

        <TextView
            android:id="@+id/btnAccessOriginalTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:paddingVertical="@dimen/dimen_4dp"
            android:gravity="center_vertical"
            android:text="@string/pix_extract_detail_status_access_original_transaction"
            android:textAppearance="@style/semi_bold_montserrat_14"
            android:textColor="@color/brand_400"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:importantForAccessibility="no"
            app:drawableEndCompat="@drawable/ic_directions_chevron_right_brand_400_16_dp"
            android:drawablePadding="@dimen/dimen_4dp"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color_B8C1CC"
        android:layout_marginTop="@dimen/dimen_26dp"
        app:layout_constraintTop_toBottomOf="@id/containerAdditionalInformation" />

    <TextView
        android:id="@+id/tvSentTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:textAppearance="@style/semi_bold_montserrat_14"
        android:textColor="@color/neutral_800"
        app:layout_constraintTop_toBottomOf="@id/divider"
        tools:text="Enviado para Cielo S.A." />

    <TextView
        android:id="@+id/tvDocument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textAppearance="@style/semi_bold_montserrat_12"
        android:textColor="@color/neutral_600"
        app:layout_constraintTop_toBottomOf="@id/tvSentTo"
        tools:text="***.123.567-** / NU Pagamentos" />

    <LinearLayout
        android:id="@+id/containerMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvDocument"
        tools:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:src="@drawable/ic_chat_balloon_grey_16dp"
            app:tint="@color/neutral_600"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:textAppearance="@style/semi_bold_montserrat_14"
            android:textColor="@color/neutral_600"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dimen_3sp"
            app:layout_constraintTop_toBottomOf="@id/tvSentTo"
            tools:text="O valor que recebi não está de acordo com o combinado." />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>