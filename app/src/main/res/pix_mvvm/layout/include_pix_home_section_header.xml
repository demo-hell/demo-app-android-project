<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sectionHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:paddingTop="@dimen/dimen_10dp"
    android:paddingBottom="@dimen/dimen_16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tvMerchantName"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:textAppearance="@style/semi_bold_montserrat_14"
            android:textColor="@color/neutral_800"
            android:lineSpacingExtra="@dimen/dimen_3sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ibBankDomicile"
            tools:text="Gomide Burgers" />

        <ImageView
            android:id="@+id/ivMerchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintStart_toStartOf="@id/tvMerchantName"
            app:layout_constraintTop_toBottomOf="@id/tvMerchantName"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_places_store_cloud_300_16_dp" />

        <TextView
            android:id="@+id/tvDocument"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_8dp"
            android:textAppearance="@style/semi_bold_montserrat_12"
            android:textColor="@color/neutral_600"
            android:lineSpacingExtra="@dimen/dimen_1sp"
            app:layout_constraintStart_toEndOf="@id/ivMerchant"
            app:layout_constraintEnd_toStartOf="@id/ibBankDomicile"
            app:layout_constraintTop_toTopOf="@id/ivMerchant"
            app:layout_constraintBottom_toBottomOf="@id/ivMerchant"
            tools:text="11.222.111/0001-21 â€¢ EC 111222" />

        <ImageButton
            android:id="@+id/ibBankDomicile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:paddingVertical="@dimen/dimen_10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_places_bank_accent_500_24_dp"
            app:tint="@color/brand_400"
            android:contentDescription="@string/pix_home_content_description_bank_domicile_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_auto_start="true"
        app:shimmer_base_alpha="1"
        app:shimmer_highlight_alpha="0"
        tools:duration="200"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="@dimen/dimen_14dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp" />

            <View
                android:layout_width="@dimen/dimen_190dp"
                android:layout_height="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</FrameLayout>