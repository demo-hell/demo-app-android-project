<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_16dp"
    android:layout_marginBottom="@dimen/dimen_16dp"
    android:background="@drawable/background_solid_white_12_dp_radius"
    android:padding="@dimen/dimen_16dp">

    <View
        android:id="@+id/viewIconShimmer"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_0dp"
        android:background="@drawable/background_cloud_100_radius_4_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewFirstSquareShimmer"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_13dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_160dp"
        android:background="@drawable/background_cloud_100_radius_4_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewIconShimmer"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewSecondSquareShimmer"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_17dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_190dp"
        android:background="@drawable/background_cloud_100_radius_4_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewIconShimmer"
        app:layout_constraintTop_toBottomOf="@id/viewFirstSquareShimmer" />

    <View
        android:id="@+id/viewThirdSquareShimmer"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_17dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_140dp"
        android:background="@drawable/background_cloud_100_radius_4_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewIconShimmer"
        app:layout_constraintTop_toBottomOf="@id/viewSecondSquareShimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>