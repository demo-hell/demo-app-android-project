<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">

    <br.com.cielo.libflue.button.v2.CieloButton
        android:id="@+id/buttonSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pix_qr_code_copy_paste_toolbar_label_footer_paste_code_button"
        app:buttonType="outlined" />

    <br.com.cielo.libflue.button.v2.CieloButton
        android:id="@+id/buttonPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:text="@string/text_next_label" />

</LinearLayout>