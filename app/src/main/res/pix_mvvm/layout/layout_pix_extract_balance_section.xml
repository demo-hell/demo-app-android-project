<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_92dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_92dp"
        android:layout_gravity="center_vertical"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tvBalanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/semi_bold_montserrat_14"
            android:textColor="@color/neutral_600"
            android:lineSpacingExtra="@dimen/dimen_3sp"
            android:text="@string/pix_home_account_balance" />

        <FrameLayout
            android:id="@+id/containerBalanceAmount"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/tvBalanceLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnBalanceVisibility">

            <TextView
                android:id="@+id/tvBalanceAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:textAppearance="@style/bold_montserrat_20_cloud_800_spacing_8"
                tools:text="R$ 23.849,80"
                tools:textAppearance="@style/medium_montserrat_18"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tvBalanceAmountHidden"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_26dp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="⬤⬤⬤⬤⬤⬤⬤"
                android:letterSpacing=".2"
                android:textSize="@dimen/dimen_8sp"
                android:textAppearance="@style/bold_montserrat_20_cloud_800_spacing_8"
                tools:textAppearance="@style/medium_montserrat_18"
                tools:visibility="visible"
                tools:ignore="HardcodedText" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvBalanceUpdatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@id/containerBalanceAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/medium_montserrat_12"
            android:textColor="@color/neutral_600"
            android:lineSpacingExtra="@dimen/dimen_1sp"
            tools:text="Atualizado em 28/11 às 09:50" />

        <ImageButton
            android:id="@+id/btnBalanceVisibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8dp"
            android:padding="@dimen/dimen_8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_interface_eye_off_24dp"
            app:tint="@color/brand_400"
            android:contentDescription="@string/pix_home_content_description_show_balance_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_92dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_8dp"
        tools:visibility="gone">

        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/medium_montserrat_14"
            android:textColor="@color/neutral_600"
            android:lineSpacingExtra="@dimen/dimen_4sp"
            android:text="@string/pix_extract_balance_error" />

        <TextView
            android:id="@+id/btnReload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:text="@string/text_recharge"
            android:textAppearance="@style/semi_bold_montserrat_14"
            android:textColor="@color/brand_400"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:drawableEndCompat="@drawable/ic_arrows_refresh_brand_400_16_dp"
            android:drawablePadding="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@id/tvError" />

    </LinearLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLoading"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_92dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_gravity="center_vertical"
        app:shimmer_auto_start="true"
        app:shimmer_base_alpha="1"
        app:shimmer_highlight_alpha="0"
        tools:duration="200"
        tools:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <View
                android:id="@+id/stripBalanceLabel"
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="@dimen/dimen_14dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/stripBalanceAmount"
                android:layout_width="@dimen/dimen_136dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp"
                app:layout_constraintTop_toBottomOf="@id/stripBalanceLabel"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/stripBalanceUpdatedAt"
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp"
                app:layout_constraintTop_toBottomOf="@id/stripBalanceAmount"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/stripBalanceVisibility"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</FrameLayout>