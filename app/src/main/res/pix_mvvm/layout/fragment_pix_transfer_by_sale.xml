<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/medium_montserrat_16_neutral_600"
        android:lineSpacingExtra="@dimen/dimen_4dp"
        android:text="@string/pix_account_transfer_by_sale_description" />

    <TextView
        android:id="@+id/tvDocument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:textAppearance="@style/medium_montserrat_16_neutral_600"
        android:lineSpacingExtra="@dimen/dimen_4dp"
        tools:text="Esta alteração valerá para todos os ECs do CNPJ: 99.999.999/9999-99." />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:src="@drawable/ic_places_bank_accent_500_24_dp"
        app:tint="@color/neutral_600"
        android:importantForAccessibility="no" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textAppearance="@style/bold_montserrat_16_neutral_800_spacing_4"
        android:text="@string/pix_account_transfer_by_sale_info_1_title"
        tools:textAppearance="@style/semi_bold_montserrat_16"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textAppearance="@style/medium_montserrat_14"
        android:textColor="@color/cloud_400"
        android:lineSpacingExtra="@dimen/dimen_3dp"
        android:text="@string/pix_account_transfer_by_sale_info_1_description" />

    <br.com.cielo.libflue.card.CieloCardInformation
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:cardInformationType="alert"
        app:cardTextAppearance="@style/medium_montserrat_14"
        app:cardTextLineSpacingExtra="@dimen/dimen_3dp"
        app:textColor="@color/contrast_1000"
        app:cardText="@string/pix_account_transfer_by_sale_warning" />

    <LinearLayout
        android:id="@+id/llAgreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cbAgreement"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:background="@drawable/selector_checkbox_brand"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:importantForAccessibility="no"
            tools:checked="true" />

        <TextView
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_weight="1"
            android:textAppearance="@style/medium_montserrat_16_neutral_800"
            android:text="@string/pix_account_transfer_by_sale_agreement_checkbox"
            tools:ignore="InefficientWeight" />

    </LinearLayout>

</LinearLayout>