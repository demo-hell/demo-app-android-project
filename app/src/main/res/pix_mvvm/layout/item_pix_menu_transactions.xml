<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_4dp"
    android:background="@drawable/background_stroke_cloud_200_radius_12dp">

    <LinearLayout
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_100dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/ivMenuIcon"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:importantForAccessibility="no"
            app:tint="@color/brand_400"
            tools:srcCompat="@drawable/ic_money_note_arrow_up_neutral_soft_20_dp" />

        <TextView
            android:id="@+id/tvMenuName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:gravity="center"
            android:textAppearance="@style/semi_bold_montserrat_12"
            android:textColor="@color/neutral_800"
            tools:text="Transferir"
            android:importantForAccessibility="no"/>

    </LinearLayout>

</FrameLayout>