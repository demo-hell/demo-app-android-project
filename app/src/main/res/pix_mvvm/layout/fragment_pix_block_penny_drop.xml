<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_handler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56dp"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/dimen_8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ivBtnClose"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="@dimen/dimen_48dp"
            android:background="@drawable/background_transparent_stroke_transparent_90_dp_radius"
            android:clickable="true"
            android:contentDescription="@string/content_description_close"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_symbol_close_brand_400_24_dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/btnClose"
        app:layout_constraintTop_toBottomOf="@id/clHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivIllustration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:importantForAccessibility="no"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintHeight_max="@dimen/dimen_240dp"
                app:layout_constraintHeight_min="@dimen/dimen_40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.3"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/img_90_celular_atencao" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/bold_montserrat_20_cloud_800_spacing_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:includeFontPadding="false"
                android:text="@string/pix_block_penny_drop_title"
                app:layout_constraintTop_toBottomOf="@id/ivIllustration" />

            <TextView
                android:id="@+id/tvIntroduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_29dp"
                android:lineSpacingExtra="@dimen/dimen_4dp"
                android:text="@string/pix_block_penny_drop_introduction"
                android:textAppearance="@style/medium_montserrat_16_neutral_600_spacing_4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_6dp"
                    android:text="@string/txt_pix_block_penny_drop_dot"
                    android:textAppearance="@style/medium_montserrat_16_neutral_600_spacing_4" />

                <TextView
                    android:id="@+id/tvLinkMyCadastre"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:breakStrategy="balanced"
                    android:lineSpacingExtra="@dimen/dimen_4dp"
                    android:textAppearance="@style/medium_montserrat_16_neutral_600_spacing_4"
                    tools:ignore="InefficientWeight"
                    tools:text="@string/pix_block_penny_drop_link_my_cadastre" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_6dp"
                    android:text="@string/txt_pix_block_penny_drop_dot"
                    android:textAppearance="@style/medium_montserrat_16_neutral_600_spacing_4" />

                <TextView
                    android:id="@+id/tvLinkChangeTypeAccount"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:breakStrategy="balanced"
                    android:lineSpacingExtra="@dimen/dimen_4dp"
                    android:textAppearance="@style/medium_montserrat_16_neutral_600_spacing_4"
                    tools:ignore="InefficientWeight"
                    tools:text="@string/pix_block_penny_drop_link_change_type_account" />

            </LinearLayout>

            <br.com.cielo.libflue.card.CieloCardInformation
                android:id="@+id/cciCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                app:cardInformationType="information"
                app:cardText="@string/pix_block_penny_drop_text_card_information"
                app:cardTextAppearance="@style/regular_montserrat_14_contrast_1000_spacing_3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLinkChangeTypeAccount" />

        </LinearLayout>

    </ScrollView>

    <br.com.cielo.libflue.button.v2.CieloButton
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingVertical="@dimen/dimen_20dp"
        android:text="@string/text_close"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>