<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">

    <br.com.cielo.libflue.card.CieloCardInformation
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardTitle="@string/pix_extract_detail_status_schedule_canceled_title"
        app:cardText="@string/pix_extract_detail_status_schedule_canceled_description"
        app:cardTextAppearance="@style/medium_montserrat_14"
        app:cardTextLineSpacingExtra="@dimen/dimen_3dp"/>

    <include
        layout="@layout/include_pix_extract_detail_status_content"
        android:id="@+id/includeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp" />

</LinearLayout>