<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dimen_16dp">

    <br.com.cielo.libflue.inputtext.CieloTextInputField
        android:id="@+id/tifAgency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pix_key_bank_account_data_agency"
        android:inputType="number"
        android:maxLength="20"
        app:layout_constraintTop_toTopOf="parent" />

    <br.com.cielo.libflue.inputtext.CieloTextInputField
        android:id="@+id/tifAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:hint="@string/pix_key_bank_account_data_account"
        android:inputType="number"
        android:maxLength="20"
        app:layout_constraintTop_toBottomOf="@id/tifAgency" />

    <br.com.cielo.libflue.inputtext.CieloTextInputField
        android:id="@+id/tifAccountDigit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:hint="@string/pix_key_bank_account_data_account_digit"
        android:inputType="number"
        android:maxLength="1"
        android:imeOptions="actionDone"
        app:helperText="@string/pix_key_bank_account_data_helper_account_digit"
        app:layout_constraintTop_toBottomOf="@id/tifAccount" />

    <TextView
        android:id="@+id/tvBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:textAppearance="@style/medium_montserrat_16_neutral_800"
        app:layout_constraintTop_toBottomOf="@id/tifAccountDigit"
        tools:text="Instituição: Banco Bradesco" />

    <TextView
        android:id="@+id/tvAccountType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textAppearance="@style/medium_montserrat_16_neutral_800"
        app:layout_constraintTop_toBottomOf="@id/tvBank"
        tools:text="Tipo de conta: Conta Corrente" />

</androidx.constraintlayout.widget.ConstraintLayout>

