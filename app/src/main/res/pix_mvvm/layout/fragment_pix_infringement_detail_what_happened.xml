<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dimen_16dp">

    <TextView
        style="@style/regular_montserrat_16_neutral_600_spacing_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_13dp"
        android:includeFontPadding="false"
        android:text="@string/pix_infringement_detail_what_happened_description" />

    <br.com.cielo.libflue.inputtext.CieloInputTextMultiline
        android:id="@+id/itDetailWhatHappened"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_13dp"
        android:hint="@string/pix_infringement_detail_what_happened_input_hint"
        android:lines="4"
        android:maxLength="200"
        app:helperText="@string/pix_infringement_detail_what_happened_helper" />

    <TextView
        style="@style/regular_montserrat_14_contrast_1000_spacing_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@drawable/background_cloud_100_radius_8_dp"
        android:includeFontPadding="false"
        android:padding="@dimen/dimen_16dp"
        android:text="@string/pix_infringement_detail_what_happened_example_detail" />

</LinearLayout>