<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dimen_16dp">

    <TextView
        android:id="@+id/tvDescription"
        style="@style/regular_montserrat_16_neutral_600_spacing_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/pix_insert_all_keys_description"
        app:layout_constraintTop_toTopOf="parent" />

    <br.com.cielo.libflue.inputtext.CieloTextInputField
        android:id="@+id/tifKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescription" />

    <br.com.cielo.libflue.button.CieloTextButton
        android:id="@+id/btnChangeKeyType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:drawable="@drawable/ic_directions_chevron_right_brand_400_16_dp"
        android:text="@string/pix_insert_all_keys_label_button_change_key_type"
        android:textSize="@dimen/dimen_14sp" />

</LinearLayout>