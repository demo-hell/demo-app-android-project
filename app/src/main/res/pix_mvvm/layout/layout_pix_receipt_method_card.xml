<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen_16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/dimen_16dp"
        android:background="@drawable/background_ripple_effect_radius_16dp_cloud_300">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/brand_400"
            android:importantForAccessibility="no"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/ic_date_time_clock_24_dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivArrowEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:tint="@color/neutral_400"
            android:src="@drawable/ic_chevron_right_24_cloud_400" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:textAppearance="@style/medium_montserrat_16_neutral_800"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivIcon"
            app:layout_constraintEnd_toStartOf="@id/ivArrowEnd"
            tools:text="Transferência programada" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:textAppearance="@style/medium_montserrat_12_neutral_600"
            android:lineSpacingExtra="@dimen/dimen_2dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="@id/tvTitle"
            tools:text="Receba suas vendas na conta cadastrada e no horário escolhido." />

        <TextView
            android:id="@+id/tvActiveModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_56dp"
            android:gravity="center_vertical"
            android:background="@color/green_100"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:paddingVertical="@dimen/dimen_4dp"
            android:textAppearance="@style/semi_bold_montserrat_14"
            android:textColor="@color/green_800"
            android:text="@string/pix_account_receipt_method_active_model"
            android:drawablePadding="@dimen/dimen_4dp"
            android:visibility="gone"
            app:drawableTint="@color/green_800"
            app:drawableStartCompat="@drawable/ic_symbol_check_round_16_dp"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:layout_constraintStart_toStartOf="@id/tvDescription"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tvScheduleList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_56dp"
            android:gravity="center_vertical"
            android:background="@color/purple_alpha_16"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:paddingVertical="@dimen/dimen_4dp"
            android:textAppearance="@style/semi_bold_montserrat_14"
            android:textColor="@color/purple_800"
            android:drawablePadding="@dimen/dimen_4dp"
            android:visibility="gone"
            app:drawableTint="@color/purple_800"
            app:drawableStartCompat="@drawable/ic_date_time_clock_16_dp"
            app:layout_constraintTop_toBottomOf="@id/tvActiveModel"
            app:layout_constraintStart_toStartOf="@id/tvActiveModel"
            tools:text="06:00, 17:30 e 12:00"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
