<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/viewLineStart"
        android:layout_width="@dimen/dimen_1dp"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginBottom="@dimen/dimen_4dp"
        android:background="@color/green_43B977"
        app:layout_constraintBottom_toTopOf="@id/imageViewStatus"
        app:layout_constraintLeft_toLeftOf="@id/imageViewStatus"
        app:layout_constraintRight_toRightOf="@id/imageViewStatus"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/textViewStatusTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewStatus"
        app:srcCompat="@drawable/ic_check" />

    <View
        android:id="@+id/viewLineEnd"
        android:layout_width="@dimen/dimen_1dp"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:background="@color/green_43B977"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/imageViewStatus"
        app:layout_constraintRight_toRightOf="@id/imageViewStatus"
        app:layout_constraintTop_toBottomOf="@id/imageViewStatus" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:textColor="@color/green_43B977"
        android:fontFamily="@font/ubuntu"
        android:textSize="@dimen/dimen_16sp"
        android:lineSpacingExtra="@dimen/dimen_4sp"
        app:layout_constraintBottom_toTopOf="@id/textViewStatusTime"
        app:layout_constraintLeft_toRightOf="@id/imageViewStatus"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Em separação de estoque" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewStatusTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:textColor="@color/color_8A99A8"
        android:fontFamily="@font/ubuntu"
        android:textSize="@dimen/dimen_14sp"
        android:lineSpacingExtra="@dimen/dimen_4sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageViewStatus"
        app:layout_constraintTop_toBottomOf="@id/textViewStatus"
        tools:text="02/02/2020\n13:35" />

</androidx.constraintlayout.widget.ConstraintLayout>