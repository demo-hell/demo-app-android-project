<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/bg_flui_rounded_border"
    android:layout_marginTop="@dimen/dimen_8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageMachineThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/linearMachineOrderedInformations"
        tools:srcCompat="@drawable/ic_img_pos"/>

    <LinearLayout
        android:id="@+id/linearMachineOrderedInformations"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        app:layout_constraintStart_toEndOf="@id/imageMachineThumbnail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageMoreActionArrow"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textOrderedMachineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text16spUbuntuDisplay400"
            tools:text="Cielo ZIP"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textOrderMachineDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextBlack12spUbuntuRegularDisplay400"
                android:layout_marginEnd="@dimen/dimen_5dp"
                android:text="@string/text_ordered_machine_date_labels"
                tools:text="Data da compra:"/>

            <TextView
                android:id="@+id/textOrderMachineDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextBlack12spUbuntuRegularDisplay400Bold"
                tools:text="02/02/2020"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textOrderIdMachineLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextBlack12spUbuntuRegularDisplay400"
                android:layout_marginEnd="@dimen/dimen_5dp"
                android:text="@string/text_ordered_machine_id_label"
                tools:text="NÂº do pedido:"/>

            <TextView
                android:id="@+id/textOrderMachineId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextBlack12spUbuntuRegularDisplay400Bold"
                tools:text="0123456789"/>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/imageMoreActionArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/linearMachineOrderedInformations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="21dp"
        app:srcCompat="@drawable/ic_arrow_flui"/>

</androidx.constraintlayout.widget.ConstraintLayout>