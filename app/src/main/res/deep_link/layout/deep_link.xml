<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_99000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_welcome_notification"
        android:orientation="vertical"
        android:weightSum="5">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="0.35"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:weightSum="5">

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    style="@style/TextBlack24spTitle"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="left|center"
                    android:text="@string/dp_title_toolbar"
                    android:textColor="#2b2f33"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    app:typeface="Museo300-Regular.ttf" />

                <LinearLayout
                    android:id="@+id/btn_dp_close"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_icon_close" />

                </LinearLayout>
            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="0.01"
            android:background="#B8B8B8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2"
            app:layout_constraintVertical_bias="0.0" />

        <ViewFlipper
            android:id="@+id/vf_deep_link"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="4.8">

            <!-- view 01 -->
            <include
                android:id="@+id/view_01"
                layout="@layout/frame_progress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_first"
                app:layout_constraintVertical_bias="0.0" />

            <!-- view 02 -->
            <LinearLayout
                android:id="@+id/view_02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/dc_iv_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="75dp"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/dp_send_email" />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/dp_title_sucess"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:layout_marginTop="20dp"
                    android:text="@string/dp_title_sucess"
                    android:textColor="@color/color_145EB3"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:typeface="MuseoSans-700.ttf" />

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/dp_subtitle_sucess"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="0.85"
                    android:gravity="top|center"
                    android:text="@string/dp_subtitle_sucess_01"
                    android:textColor="@color/color_5A646E"
                    android:textSize="14sp"
                    app:typeface="MuseoSans-500.ttf" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/ft_btn_ok"
                    style="@style/ButtonShapedPurpleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="0.17"
                    android:padding="8sp"
                    app:fb_text="@string/dp_btn_send"
                    app:typeface="Museo700-Regular.ttf" />

            </LinearLayout>


        </ViewFlipper>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>