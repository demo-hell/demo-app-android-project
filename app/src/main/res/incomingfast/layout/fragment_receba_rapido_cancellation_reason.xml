<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dimen_16dp"
    android:layout_marginRight="@dimen/dimen_16dp"
    tools:context="br.com.mobicare.cielo.recebaRapido.cancellation.selectreason.RecebaRapidoCancellationReasonFragment">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextTitleHeading500Bold18spDisplay500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/incomint_fast_cancellation_reason_title" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/background_blue_corners_8dp"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_info_highlight_blue" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewInfo"
            style="@style/Paragraph_200_display_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:lineSpacingExtra="@dimen/dimen_4sp"
            tools:text="@string/incomint_fast_cancellation_reason_info" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radioButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_radio_button"
                android:layout_marginTop="@dimen/dimen_16sp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layoutDirection="rtl"
                android:textAppearance="@style/TextAppearanceButtonRadio"
                android:text="@string/incomint_fast_cancellation_reason_text1"
                android:textColor="@drawable/selector_text_radio"
                android:theme="@style/RadioButtonStyle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/color_C5CED7" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_radio_button"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layoutDirection="rtl"
                android:textAppearance="@style/TextAppearanceButtonRadio"
                android:text="@string/incomint_fast_cancellation_reason_text2"
                android:textColor="@drawable/selector_text_radio"
                android:theme="@style/RadioButtonStyle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/color_C5CED7" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_radio_button"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layoutDirection="rtl"
                android:textAppearance="@style/TextAppearanceButtonRadio"
                android:text="@string/incomint_fast_cancellation_reason_text3"
                android:textColor="@drawable/selector_text_radio"
                android:theme="@style/RadioButtonStyle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/color_C5CED7" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_radio_button"
                android:layoutDirection="rtl"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:textAppearance="@style/TextAppearanceButtonRadio"
                android:text="@string/incomint_fast_cancellation_reason_text4"
                android:textColor="@drawable/selector_text_radio"
                android:theme="@style/RadioButtonStyle" />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>