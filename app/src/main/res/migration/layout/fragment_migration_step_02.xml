<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearInputFragmentMigrationStep02"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="0.85"
        android:layout_height="@dimen/dimen_0dp">


        <TextView
            android:id="@+id/text_subtitle"
            style="@style/TextBlack24spTitleMigration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/migration_02_subtitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />



        <TextView
            android:id="@+id/text_description"
            style="@style/TextGrey14spNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/migration_02_description" />

        <LinearLayout
            android:id="@+id/linearForeignUserMigration"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <CheckBox
                android:id="@+id/checkboxUserForeign"
                android:layout_width="wrap_content"
                android:layout_marginStart = "-7dp"
                android:text="@string/text_user_foreign_label"
                app:buttonTint="@drawable/checkbox_selected_color"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            app:errorTextAppearance="@style/error_appearance">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                android:id="@+id/edit_text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_shape"
                android:hint="E-mail"
                android:imeOptions="actionNext"
                android:importantForAutofill="noExcludeDescendants"
                android:inputType="text"
                android:maxLength="100"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/text_color_263238"
                android:textColorHint="@color/gray_light"
                android:textSize="16sp"
                app:typeface="MuseoSans-500.ttf" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_email_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            app:errorTextAppearance="@style/error_appearance">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                android:id="@+id/edit_text_email_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_shape"
                android:hint="Confirme seu E-mail"
                android:imeOptions="actionNext"
                android:importantForAutofill="noExcludeDescendants"
                android:inputType="text"
                android:maxLength="100"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/text_color_263238"
                android:textColorHint="@color/gray_light"
                android:textSize="16sp"
                app:typeface="MuseoSans-500.ttf" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_cpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            app:errorTextAppearance="@style/error_appearance">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                android:id="@+id/edit_text_cpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_shape"
                android:hint="@string/sr_cpf_hint"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/text_color_263238"
                android:textColorHint="@color/gray_light"
                android:textSize="16sp"
                app:typeface="MuseoSans-500.ttf" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_weight="0.15"
        android:layout_height="@dimen/dimen_0dp">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/button_migration_next"
            style="@style/ButtonShapedPurpleStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="bottom"
            android:text="@string/migration_button_next" />
    </LinearLayout>

</LinearLayout>