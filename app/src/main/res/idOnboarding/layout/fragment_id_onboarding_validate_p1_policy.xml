<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingVertical="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_21dp"
        android:paddingEnd="@dimen/dimen_48dp"
        android:contentDescription="@string/back"
        app:srcCompat="@drawable/ic_left_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:srcCompat="@drawable/img_group_5478_loading_construction"
        app:layout_constraintTop_toBottomOf="@id/btBackArrow"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:theme="@style/PregressBar_brand_400"
        android:layout_height="@dimen/dimen_48dp"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="@id/ivLoading"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/Heading_500_Bold_18_display_600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_48dp"
        android:textColor="@color/brand_600"
        android:lineSpacingExtra="@dimen/dimen_6sp"
        android:text="@string/id_onboarding_validate_p1_loading_title"
        app:layout_constraintTop_toBottomOf="@id/ivLoading"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMessage"
        style="@style/Paragraph_400_Regular_16_display_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/id_onboarding_validate_p1_loading_subtitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>