<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMainContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:paddingHorizontal="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/includePersonalInfo"
                layout="@layout/view_id_onboarding_access_details_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvAccessExplanation"
                style="@style/Paragraph_400_regular_16_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/id_onboarding_p1_with_this_profile_you_can"
                app:layout_constraintTop_toBottomOf="@id/includePersonalInfo" />

            <include
                android:id="@+id/includeViewerAccessBenefits"
                layout="@layout/view_id_onboarding_viewer_access_benefits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                app:layout_constraintTop_toBottomOf="@id/tvAccessExplanation" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@drawable/round_square_banner_shape"
                android:paddingHorizontal="@dimen/dimen_16dp"
                android:paddingVertical="@dimen/dimen_11dp"
                app:layout_constraintTop_toBottomOf="@+id/includeViewerAccessBenefits">

                <ImageView
                    android:id="@+id/ivIconInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_info_white"
                    app:tint="@color/brand_600" />

                <TextView
                    android:id="@+id/tvInfoText"
                    style="@style/Paragraph_200_Bold_12_display_400"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:text="@string/id_onboarding_p1_do_you_miss_some_feature"
                    android:textColor="@color/brand_600"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivIconInfo"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSubtitleText"
                    style="@style/Paragraph_200_regular_12_display_400"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:lineSpacingExtra="@dimen/dimen_4sp"
                    android:text="@string/id_onboarding_p1_viewer_ask_to_admin"
                    android:textColor="@color/brand_600"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivIconInfo"
                    app:layout_constraintTop_toBottomOf="@id/tvInfoText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvDataUpdatedInfo"
                style="@style/Paragraph_400_regular_16_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:text="@string/id_onboarding_p1_personal_data_updated_info"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/btGoToHelpCenter"
                app:layout_constraintTop_toBottomOf="@id/clInfo" />

            <TextView
                android:id="@+id/tvDoubts"
                style="@style/Paragraph_400_regular_16_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:text="@string/id_onboarding_p1_do_you_still_have_doubts"
                app:layout_constraintBottom_toTopOf="@id/btGoToHelpCenter"
                app:layout_constraintTop_toBottomOf="@id/clInfo" />

            <br.com.cielo.libflue.button.CieloRegularSecondaryButton
                android:id="@+id/btGoToHelpCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/id_onboarding_p1_go_to_help_center"
                app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/helpContainerGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tvDoubts, btGoToHelpCenter" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAction"
            style="@style/Heading_500_18"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:background="@drawable/button_full_width_brand_selector"
            android:text="@string/meus_recebimentos_dialog_fechar"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clMainContent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>