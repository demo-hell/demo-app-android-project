<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_stroke_1dp_round_color_c5ced7"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:paddingTop="@dimen/dimen_16dp"
    android:paddingBottom="@dimen/dimen_6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerAddAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:background="@drawable/background_transparent_border_brand_400_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAddAttachment"
            style="@style/regular_montserrat_16_brand_400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_attachment"
            android:drawablePadding="@dimen/dimen_8dp"
            android:paddingVertical="@dimen/dimen_10dp"
            android:text="@string/id_onboarding_digital_doc_guide_attach_document_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerMyAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMyAttachment"
            style="@style/regular_ubuntu_16_brand_400_spacing_6"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:drawableStart="@drawable/ic_attachment_16dp_cloud_400"
            android:drawablePadding="@dimen/dimen_8dp"
            app:layout_constraintEnd_toStartOf="@id/ivRemoveAttachment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="111111111.jpg" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivRemoveAttachment"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:contentDescription="@string/chargeback_refuse_attachment_remove_content_description"
            app:layout_constraintBottom_toBottomOf="@id/tvMyAttachment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@id/tvMyAttachment"
            app:layout_constraintTop_toTopOf="@id/tvMyAttachment"
            app:srcCompat="@drawable/ic_cielo_facilita_brand_trash" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFileTypeError"
            style="@style/regular_ubuntu_12_danger_400_spacing_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:drawableStart="@drawable/ic_close_round_16dp_danger_400"
            android:drawablePadding="@dimen/dimen_4dp"
            android:text="@string/chargeback_refuse_attachment_error"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/ivRemoveAttachment" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAttachmentError"
            style="@style/regular_ubuntu_12_danger_400_spacing_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:drawableStart="@drawable/ic_close_round_16dp_danger_400"
            android:drawablePadding="@dimen/dimen_4dp"
            android:text="@string/chargeback_refuse_attachment_error"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvFileTypeError" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@color/color_cloud_200"
            app:layout_constraintTop_toBottomOf="@id/tvAttachmentError" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvChangeAttachment"
            style="@style/regular_montserrat_16_brand_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:contentDescription="@string/chargeback_refuse_change_attachment_content_description"
            android:drawableEnd="@drawable/ic_exchange_24dp_brand_400"
            android:drawablePadding="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_14dp"
            android:text="@string/chargeback_refuse_change_attachment"
            app:layout_constraintTop_toBottomOf="@id/view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>