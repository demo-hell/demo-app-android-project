<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_99000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:background="@drawable/background_welcome_notification"
        android:padding="@dimen/dimen_16dp">

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_4dp"
            android:background="@drawable/ic_drag_bottom_sheet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_66dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:srcCompat="@drawable/ic_cpf_already_used" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/Heading_600_bold_18_brand_600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:text="@string/id_onboarding_cpf_already_used_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@drawable/rounded_outline_display_200"
            android:padding="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle">

            <TextView
                android:id="@+id/tvLogoutTitle"
                style="@style/label_16_display_400_ubuntu_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/id_onboarding_cpf_already_used_logout_title"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvLogoutContent"
                style="@style/label_16_display_400_ubuntu_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/id_onboarding_cpf_already_used_logout_subtitle"
                app:layout_constraintTop_toBottomOf="@+id/tvLogoutTitle" />

            <TextView
                android:id="@+id/tvLogoutAction"
                style="@style/label_14_brand_400_ubuntu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:text="@string/id_onboarding_cpf_already_used_logout_action"
                app:drawableEndCompat="@drawable/ic_chevron_right_gray"
                app:layout_constraintTop_toBottomOf="@id/tvLogoutContent" />

            <View
                android:id="@+id/viewLineSeparator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:background="@color/color_C5CED7"
                app:layout_constraintTop_toBottomOf="@id/tvLogoutAction"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tvHelpCenterTitle"
                style="@style/label_16_display_400_ubuntu_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/id_onboarding_cpf_already_used_help_center_title"
                app:layout_constraintTop_toBottomOf="@+id/viewLineSeparator" />

            <TextView
                android:id="@+id/tvHelpCenterContent"
                style="@style/label_16_display_400_ubuntu_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/id_onboarding_cpf_already_used_help_center_subtitle"
                app:layout_constraintTop_toBottomOf="@+id/tvHelpCenterTitle" />

            <TextView
                android:id="@+id/tvHelpCenterAction"
                style="@style/label_14_brand_400_ubuntu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/text_call_center_action"
                app:drawableEndCompat="@drawable/ic_chevron_right_gray"
                app:layout_constraintTop_toBottomOf="@id/tvHelpCenterContent" />

            <View
                android:id="@+id/viewLineSeparator2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@color/color_C5CED7"
                app:layout_constraintTop_toBottomOf="@id/tvHelpCenterAction"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tvReturnTitle"
                style="@style/label_16_display_400_ubuntu_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/id_onboarding_cpf_already_used_return_title"
                app:layout_constraintTop_toTopOf="@+id/viewLineSeparator2" />

            <TextView
                android:id="@+id/tvReturnContent"
                style="@style/label_16_display_400_ubuntu_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/id_onboarding_cpf_already_used_return_subtitle"
                app:layout_constraintTop_toBottomOf="@+id/tvReturnTitle" />

            <TextView
                android:id="@+id/tvReturnAction"
                style="@style/label_14_brand_400_ubuntu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/id_onboarding_cpf_already_used_return_action"
                app:drawableEndCompat="@drawable/ic_chevron_right_gray"
                app:drawableTint="@color/brand_400"
                app:layout_constraintTop_toBottomOf="@id/tvReturnContent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
