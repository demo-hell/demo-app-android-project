<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_26dp"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_16dp"
        android:text="@string/tv_title_select_period"
        android:textColor="@color/color_204986"
        android:textSize="@dimen/dimen_14sp"
        android:fontFamily="@font/ubuntu_bold"/>

    <RelativeLayout
        android:id="@+id/periodoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPeriodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:theme="@style/TextInputHintPrepago">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                android:id="@+id/tiePeriodo"
                style="@style/TextInputHintMeuCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="@string/hint_selecione_periodo"
                android:imeOptions="actionNext"
                android:importantForAutofill="noExcludeDescendants"
                android:inputType="text"
                android:maxLines="1"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/image_view_arrow"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:rotation="90"
            app:srcCompat="@drawable/ic_arrow" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/txtInformacoesEstabelecimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:paddingStart="@dimen/dimen_16dp"
            android:paddingEnd="@dimen/dimen_16dp"
            android:text="@string/dados_contato"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/ubuntu_bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNomeDaFachada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtInformacoesEstabelecimento"
            android:layout_marginStart="16dp"
            android:hint="@string/hint_nome_fachada"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:theme="@style/TextInputHintPrepago"
            app:errorTextAppearance="@style/ErrorAppearance">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                android:id="@+id/tieNomeDaFachada"
                style="@style/TextInputHintMeuCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:importantForAutofill="noExcludeDescendants"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPontoDeReferencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tilNomeDaFachada"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:hint="@string/hint_ponto_referencia"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:theme="@style/TextInputHintPrepago"
            app:errorTextAppearance="@style/ErrorAppearance">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                android:id="@+id/tiePontoDeReferencia"
                style="@style/TextInputHintMeuCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:importantForAutofill="noExcludeDescendants"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>