<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/constraint_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/text_title_machine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Primeiro, confirme as informações da maquininha que deseja a solicitação"
        android:textColor="@color/color_204986"
        android:textSize="14sp"
        app:typeface="MuseoSans-500.ttf"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_view_title_version_machine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:theme="@style/TextInputHintMeuCadastro"
        android:visibility="gone"
        app:errorTextAppearance="@style/ErrorAppearance"
        >

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
            android:id="@+id/edittext_view_version_machine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_shape"
            android:hint="Versão da maquininha"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="16sp"
            app:typeface="MuseoSans-500.ttf" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/layoutMachineDataRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:paddingBottom="24dp"
        android:visibility="visible">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSerialNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextInputHintMeuCadastro"
            app:errorTextAppearance="@style/ErrorAppearance">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                android:id="@+id/tieSerialNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_shape"
                android:hint="Número de série"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="60"
                android:maxLines="1"
                android:textSize="16sp"
                app:typeface="MuseoSans-500.ttf" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilOrderNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:theme="@style/TextInputHintMeuCadastro"
            app:errorTextAppearance="@style/ErrorAppearance">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
                android:id="@+id/tieOrderNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_shape"
                android:hint="Número do pedido"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="10"
                android:maxLines="1"
                android:textSize="16sp"
                app:typeface="MuseoSans-500.ttf" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <View
        android:id="@+id/spacerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />

    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/text_view_version_machine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:text="Como ver a versão da maquininha"
        android:textColor="@color/color_017CEB"
        android:textSize="12sp"
        android:visibility="gone"
        android:textAlignment="center"
        app:typeface="MuseoSans-500.ttf"
        tools:ignore="MissingConstraints" />

    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/linkWhereToFindSerieOrderNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:text="Onde encontro número de série e pedido?"
        android:textColor="@color/color_017CEB"
        android:textSize="12sp"
        android:visibility="visible"
        android:textAlignment="center"
        app:typeface="MuseoSans-500.ttf"
        tools:ignore="MissingConstraints" />

</LinearLayout>