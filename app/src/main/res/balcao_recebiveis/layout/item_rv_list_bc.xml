<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_bandeiras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/item_bandeira_bc"
            style="@style/Paragraph_300_display_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight=".2"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:gravity="right"
            android:textStyle="bold"
            app:srcCompat="@drawable/ic_hipercard"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/item_name_bc"
            style="@style/Paragraph_300_display_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:gravity="left"
            android:text="@string/text_br_history_ba"
            android:textSize="@dimen/dimen_16dp" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:background="@color/nublado_200" />

</LinearLayout>
