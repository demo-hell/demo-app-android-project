<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="@dimen/dimen_16dp"
        android:contentDescription="@string/content_description_return_button"
        app:srcCompat="@drawable/ic_arrow_left_brand_400_24_dp_flui"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/bold_montserrat_20_cloud_800"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:text="@string/txt_title_forgot_my_password_insert_info"
        app:layout_constraintTop_toBottomOf="@id/ibBack"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:paddingBottom="@dimen/dimen_24dp"
        app:layout_constraintBottom_toTopOf="@+id/btnContinue"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSubtitle"
            style="@style/regular_montserrat_16_neutral_600_spacing_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_14dp"
            android:text="@string/txt_label_button_forgot_my_password_insert_info_message"
            app:layout_constraintBottom_toTopOf="@id/containerFields"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_18dp"
            android:paddingBottom="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSubtitle">

            <br.com.cielo.libflue.inputtext.CieloTextInputField
                android:id="@+id/tifPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/first_access_create_password_label"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                app:endIconType="password_toggle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <br.com.cielo.libflue.inputtext.CieloTextInputField
                android:id="@+id/tifPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:enabled="false"
                android:hint="@string/first_access_create_password_password_confirm"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                app:endIconType="password_toggle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tifPassword" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <br.com.cielo.libflue.validator.CieloRuleValidator
            android:id="@+id/passwordValidator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_6dp"
            android:paddingBottom="@dimen/dimen_24dp"
            app:layout_constraintTop_toBottomOf="@id/containerFields" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/includeResponse"
        layout="@layout/view_forgot_my_password_response"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupFields"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="clContainer, btnContinue, ibBack, tvTitle" />

    <br.com.cielo.libflue.button.v2.CieloButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44dp"
        android:layout_margin="@dimen/dimen_16dp"
        android:text="@string/txt_title_forgot_my_password_insert_info"
        app:buttonEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>