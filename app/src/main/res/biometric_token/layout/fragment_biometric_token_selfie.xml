<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back"
        android:paddingVertical="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_21dp"
        android:paddingEnd="@dimen/dimen_48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_left_18_16_brand_400" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/bold_montserrat_20_cloud_800"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/biometric_token_pictures_selfie_guide_title"
        app:layout_constraintTop_toBottomOf="@id/btBackArrow" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubtitle"
        style="@style/regular_montserrat_16_neutral_600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:lineSpacingExtra="@dimen/dimen_4dp"
        android:text="@string/biometric_token_pictures_selfie_guide_subtitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginVertical="@dimen/dimen_8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:paddingBottom="@dimen/dimen_24dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSelfieGlasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_selfie_instruction_glass" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSelfieGlasses"
                style="@style/regular_montserrat_14_neutral_600_spacing_3"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:text="@string/biometric_token_pictures_selfie_guide_glasses"
                android:layout_marginStart="@dimen/dimen_8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivSelfieGlasses"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/vDividerGlasses"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@id/tvSelfieGlasses"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:background="@color/border_neutral"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSelfieSun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="@+id/tvSelfieSun"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvSelfieSun"
                app:srcCompat="@drawable/ic_selfie_instruction_light" />

            <View
                android:id="@+id/vDividerSun"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@id/tvSelfieSun"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:background="@color/border_neutral"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSelfieSun"
                style="@style/regular_montserrat_14_neutral_600_spacing_3"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/ivSelfieSun"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vDividerGlasses"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:text="@string/biometric_token_pictures_selfie_guide_sun" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSelfiePosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="@+id/tvSelfiePosition"
                app:layout_constraintTop_toTopOf="@+id/tvSelfiePosition"
                app:srcCompat="@drawable/ic_selfie_instruction_phone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSelfiePosition"
                style="@style/regular_montserrat_14_neutral_600_spacing_3"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_8dp"
                app:layout_constraintStart_toEndOf="@id/ivSelfieSun"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vDividerSun"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:text="@string/biometric_token_pictures_selfie_guide_position" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/tfTermsReadConditions"
        style="@style/regular_montserrat_12_neutral_600_spacing_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_28dp"
        android:layout_marginBottom="@dimen/dimen_23dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        tools:text="@string/biometric_token_selfie_security_primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btNext" />

    <br.com.cielo.libflue.button.v2.CieloButton
        android:id="@+id/btNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/biometric_token_open_camera"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>