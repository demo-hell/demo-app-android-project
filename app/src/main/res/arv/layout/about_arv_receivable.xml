<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_16dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_success_100_radius_8"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAboutScheduleLabel"
        style="@style/regular_ubuntu_12_display_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/arv_about_schedule"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAboutScheduleMessage"
        style="@style/bold_ubuntu_16_cloud_400"
        android:textColor="@color/display_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        app:layout_constraintTop_toBottomOf="@id/tvAboutScheduleLabel"
        android:text="@string/arv_about_schedule_message" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFeeLabel"
        style="@style/regular_ubuntu_12_display_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/tvAboutScheduleMessage"
        android:text="@string/arv_efective_fee" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFeeValue"
        style="@style/bold_ubuntu_16_cloud_400"
        android:textColor="@color/display_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        app:layout_constraintTop_toBottomOf="@id/tvFeeLabel"
        tools:text="X,XX%" />

</androidx.constraintlayout.widget.ConstraintLayout>