<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:layout_marginStart="@dimen/dimen_16dp"
    android:layout_marginEnd="@dimen/dimen_16dp">

    <ImageButton
        android:id="@+id/ivAcquirerBrandsArrowIndicator"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:contentDescription="@string/expand_brands_button_description"
        android:rotation="90"
        android:background="@null"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tvItemName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvItemName"
        app:srcCompat="@drawable/ic_chevron_rgt"
        app:tint="@color/cielo_accent_500"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tvItemName"
        style="@style/medium_montserrat_14"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/cloud_800"
        app:layout_constraintBottom_toBottomOf="@+id/totalValueTextView"
        app:layout_constraintEnd_toStartOf="@+id/netValueTextView"
        app:layout_constraintStart_toEndOf="@+id/ivAcquirerBrandsArrowIndicator"
        app:layout_constraintTop_toTopOf="@+id/netValueTextView"
        tools:text="Rede" />

    <TextView
        android:id="@+id/netValueTextView"
        style="@style/medium_montserrat_16"
        android:layout_width="@dimen/dimen_144dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/cloud_800"
        app:layout_constraintEnd_toStartOf="@+id/checkedItemCheckBox"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="R$ 100.0000000000,00" />

    <TextView
        android:id="@+id/totalValueTextView"
        style="@style/medium_montserrat_12"
        android:layout_width="@dimen/dimen_144dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_neutral_main"
        app:layout_constraintStart_toStartOf="@+id/netValueTextView"
        app:layout_constraintTop_toBottomOf="@id/netValueTextView"
        tools:text="R$ 100.0000000000,00" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkedItemCheckBox"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:background="@drawable/checkbox_terms_add_ec"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="@+id/totalValueTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/netValueTextView"
        tools:checked="true" />

    <View
        android:id="@+id/barView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color_C5CED7"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:layout_constraintTop_toBottomOf="@id/checkedItemCheckBox" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCardBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/barView"
        tools:itemCount="5"
        tools:listitem="@layout/item_filter_selection_card_brand"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>