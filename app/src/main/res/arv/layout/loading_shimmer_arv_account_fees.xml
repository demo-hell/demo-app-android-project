<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingVertical="@dimen/dimen_16dp"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/tvHighlightTitleShimmer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_18dp"
        android:layout_marginVertical="@dimen/dimen_8dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:background="@drawable/shimmer_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tvGrossValueLabelShimmer"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_22dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:background="@drawable/shimmer_background"
        app:layout_constraintTop_toBottomOf="@id/tvHighlightTitleShimmer" />

    <View
        android:id="@+id/tvGrossValueShimmer"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_22dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/tvGrossValueLabelShimmer"
        android:background="@drawable/shimmer_background"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/tvFeesShimmer"
        android:layout_width="@dimen/dimen_240dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/tvGrossValueShimmer"
        android:background="@drawable/shimmer_background"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/tvDiscountTotalShimmer"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_22dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/tvFeesShimmer"
        android:background="@drawable/shimmer_background"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/tvNetValueLabelShimmer"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/tvDiscountTotalShimmer"
        android:background="@drawable/shimmer_background"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/tvNetValueShimmer"
        android:layout_width="@dimen/dimen_220dp"
        android:layout_height="@dimen/dimen_32dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/tvNetValueLabelShimmer"
        android:background="@drawable/shimmer_background"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/tvBrandsShimmer"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/tvNetValueShimmer"
        android:background="@drawable/shimmer_background"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/tvEditBrandsShimmer"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/tvBrandsShimmer"
        android:background="@drawable/shimmer_background"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>