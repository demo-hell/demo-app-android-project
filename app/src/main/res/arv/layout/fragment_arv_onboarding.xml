<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".arv.presentation.onboarding.ArvOnboardingFragment">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpArvOnboarding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintBottom_toTopOf="@+id/indicatorArvOnboarding"
        app:layout_constraintTop_toTopOf="parent" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicatorArvOnboarding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        app:ci_drawable="@drawable/circle_indicator_tutorial_cancel"
        app:ci_drawable_unselected="@drawable/circle_indicator_unselected"
        app:layout_constraintBottom_toTopOf="@id/containerButton"
        app:layout_constraintTop_toBottomOf="@id/vpArvOnboarding"
        app:layout_constraintVertical_bias="1" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/containerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/indicatorArvOnboarding"
        app:layout_constraintVertical_bias="1">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/display_200" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNextArvOnboarding"
            style="@style/Heading_500_18"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:background="@color/white"
            android:text="@string/text_pix_next"
            android:textStyle="bold"
            android:textColor="@color/brand_400"
            android:textSize="@dimen/dimen_16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLetsGoArvHome"
            style="@style/Heading_500_18"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:background="@drawable/button_full_width_brand_selector"
            android:text="@string/anticipation_start_btn"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>