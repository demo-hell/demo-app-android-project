<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_stroke_cloud_200_8dp_radius"
    android:contentDescription="@string/programmed_anticipation_button"
    android:paddingVertical="@dimen/dimen_16dp"
    android:paddingStart="@dimen/dimen_16dp"
    android:paddingEnd="@dimen/dimen_10dp">

    <ImageView
        android:id="@+id/ivProgrammedIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@id/tvProgrammedSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvProgrammedTitle"
        app:srcCompat="@drawable/ic_money_rotate_plus_flui" />

    <TextView
        android:id="@+id/tvProgrammedTitle"
        style="@style/regular_400_ubuntu_16_cloud_500"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:text="@string/programmed_anticipation"
        app:layout_constraintStart_toEndOf="@id/ivProgrammedIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProgrammedSubtitle"
        style="@style/regular_ubuntu_12_cloud_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/programmed_anticipation_info"
        app:layout_constraintEnd_toStartOf="@+id/ivProgrammedAction"
        app:layout_constraintStart_toEndOf="@id/ivProgrammedIcon"
        app:layout_constraintTop_toBottomOf="@id/tvProgrammedTitle" />

    <ImageView
        android:id="@+id/ivProgrammedAction"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvProgrammedTitle"
        app:srcCompat="@drawable/ic_arrow_right_gray"
        app:tint="@color/color_cloud_200" />

</androidx.constraintlayout.widget.ConstraintLayout>