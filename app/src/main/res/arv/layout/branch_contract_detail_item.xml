<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_16dp"
    android:layout_marginTop="@dimen/dimen_16dp"
    android:background="@drawable/background_display_50_radius_8_dp">

    <TextView
        android:id="@+id/tvBranchCnpj"
        style="@style/bold_montserrat_14_cloud_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="01.027.058/0001" />

    <TextView
        android:id="@+id/tvScheduleLabel"
        style="@style/medium_montserrat_14_cloud_400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintTop_toBottomOf="@id/tvBranchCnpj"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Agenda:" />

    <TextView
        android:id="@+id/tvSchedule"
        style="@style/bold_montserrat_14_cloud_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        app:layout_constraintBottom_toBottomOf="@id/tvScheduleLabel"
        app:layout_constraintTop_toTopOf="@id/tvScheduleLabel"
        app:layout_constraintStart_toEndOf="@id/tvScheduleLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Cielo"/>

    <TextView
        android:id="@+id/tvFeeLabel"
        style="@style/medium_montserrat_14_cloud_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintTop_toBottomOf="@id/tvScheduleLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvHireDateLabel"
        android:text="@string/arv_applied_fee" />

    <TextView
        android:id="@+id/tvFee"
        style="@style/medium_montserrat_14_cloud_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        app:layout_constraintBottom_toBottomOf="@id/tvFeeLabel"
        app:layout_constraintTop_toTopOf="@id/tvFeeLabel"
        app:layout_constraintStart_toEndOf="@id/tvFeeLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1,34%"/>

    <TextView
        android:id="@+id/tvHireDateLabel"
        style="@style/medium_montserrat_14_cloud_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintTop_toBottomOf="@id/tvFeeLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/arv_hired_since" />

    <TextView
        android:id="@+id/tvHireDate"
        style="@style/medium_montserrat_14_cloud_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        app:layout_constraintBottom_toBottomOf="@id/tvHireDateLabel"
        app:layout_constraintTop_toTopOf="@id/tvHireDateLabel"
        app:layout_constraintStart_toEndOf="@id/tvHireDateLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="19/12/2019"/>
</androidx.constraintlayout.widget.ConstraintLayout>