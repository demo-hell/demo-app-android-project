<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/tvAnticipationHistoryTitle"
        style="@style/Label_400_Alternate_regular_14_danger_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/anticipation_history_title"
        android:textColor="@color/cloud_500"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/includeFullHistory"
        layout="@layout/anticipation_full_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvAnticipationHistoryTitle" />

    <TextView
        android:id="@+id/emptyAnticipationHistoryTitle"
        style="@style/Label_100_ubuntu_regular_16_cloud_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/empty_anticipation_history_title"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvAnticipationHistoryTitle" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/anticipationHistoryLoadingShimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/tvAnticipationHistoryTitle"
        app:shimmer_auto_start="true"
        app:shimmer_base_alpha="1"
        android:visibility="gone"
        app:shimmer_highlight_alpha="0"
        shimmer:duration="800">

        <include layout="@layout/loading_shimmer_anticipation_history" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <include
        android:id="@+id/includeHistoryError"
        layout="@layout/full_history_reload_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvAnticipationHistoryTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>


