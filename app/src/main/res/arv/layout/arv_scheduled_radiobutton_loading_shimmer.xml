<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/shimmerCieloRadioButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56dp"
        android:background="@drawable/background_cloud_100_radius_4_dp"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmerMarketRadioButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/background_cloud_100_radius_4_dp"
        app:layout_constraintTop_toBottomOf="@id/shimmerCieloRadioButton" />

    <View
        android:id="@+id/shimmerBothRadioButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/background_cloud_100_radius_4_dp"
        app:layout_constraintTop_toBottomOf="@id/shimmerMarketRadioButton" />

</androidx.constraintlayout.widget.ConstraintLayout>