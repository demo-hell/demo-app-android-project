<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context="br.com.mobicare.cielo.arv.presentation.anticipation.ArvCancelScheduledAnticipationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clFullContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp">

        <TextView
            android:id="@+id/tvArvSubtitle"
            style="@style/regular_ubuntu_16_cloud_400_spacing_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/arv_cancel_subtitle"
            android:translationY="@dimen/dimen_3sp"
            app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/reasonsGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvArvSubtitle"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle|end"
                android:layout_marginTop="@dimen/dimen_24dp">

                <RadioButton
                    style="@style/medium_montserrat_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableEnd="@drawable/custom_circle_radio_button"
                    android:minHeight="@dimen/dimen_80dp"
                    android:drawablePadding="@dimen/dimen_16dp"
                    android:text="@string/arv_cancel_reason_1" />

                <RadioButton
                    android:id="@+id/RBCielo"
                    style="@style/medium_montserrat_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableEnd="@drawable/custom_circle_radio_button"
                    android:minHeight="@dimen/dimen_80dp"
                    android:drawablePadding="@dimen/dimen_16dp"
                    android:text="@string/arv_cancel_reason_2" />

                <RadioButton
                    style="@style/medium_montserrat_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableEnd="@drawable/custom_circle_radio_button"
                    android:minHeight="@dimen/dimen_80dp"
                    android:drawablePadding="@dimen/dimen_16dp"
                    android:text="@string/arv_cancel_reason_3"/>

                <RadioButton
                    style="@style/medium_montserrat_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableEnd="@drawable/custom_circle_radio_button"
                    android:minHeight="@dimen/dimen_80dp"
                    android:drawablePadding="@dimen/dimen_16dp"
                    android:text="@string/arv_cancel_reason_4"/>

                <RadioButton
                    android:id="@+id/RBOther"
                    style="@style/medium_montserrat_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableEnd="@drawable/custom_circle_radio_button"
                    android:minHeight="@dimen/dimen_80dp"
                    android:drawablePadding="@dimen/dimen_16dp"
                    android:text="@string/arv_cancel_reason_other"/>
            </RadioGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCancelReason"
            style="@style/Label_700_Bold_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:text="@string/arv_cancel_write_reason"
            app:layout_constraintTop_toBottomOf="@id/reasonsGroup"
            android:visibility="gone"
            tools:visibility="visible"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/itCancelReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@drawable/custom_edit_text_selector"
            android:minHeight="@dimen/dimen_104dp"
            android:padding="@dimen/dimen_8dp"
            app:counterEnabled="true"
            app:counterMaxLength="100"
            app:hintEnabled="false"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@+id/tvCancelReason"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCancelReason"
                style="@style/Input_400_regular_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:maxLength="100"
                android:focusable="true"
                android:gravity="top"
                android:hint="@string/arv_write_reason_here"
                android:imeOptions="actionGo|actionDone"
                android:inputType="textMultiLine"
                android:minHeight="@dimen/dimen_104dp"
                android:textSize="@dimen/dimen_16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <br.com.cielo.libflue.card.CieloCardInformation
            android:id="@+id/cieloCardInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            app:cardInformationType="information"
            app:cardText="@string/arv_cancel_fees_alert"
            app:layout_constraintTop_toBottomOf="@id/itCancelReason" />

        <br.com.cielo.libflue.button.CieloRegularBlueButton
            android:id="@+id/btConfirm"
            style="@style/label_16_montserrat_semi_bold_cloud_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dimen_40dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:layout_marginBottom="@dimen/dimen_40dp"
            android:text="@string/confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cieloCardInformation"
            android:enabled="false"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>