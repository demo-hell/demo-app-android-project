<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_260dp"
    android:layout_height="@dimen/dimen_170dp"
    android:background="@drawable/background_stroke_cloud_200_8dp_radius"
    android:padding="@dimen/dimen_16dp">

    <View
        android:id="@+id/shimmerAnticipationTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:background="@drawable/background_solid_cloud_100_radius_4dp"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmerValue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_32dp"
        android:layout_marginTop="@dimen/dimen_28dp"
        android:layout_marginEnd="@dimen/dimen_50dp"
        android:background="@drawable/background_solid_cloud_100_radius_4dp"
        app:layout_constraintTop_toBottomOf="@id/shimmerAnticipationTitle" />

    <View
        android:id="@+id/shimmerInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_14dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:background="@drawable/background_solid_cloud_100_radius_4dp"
        app:layout_constraintTop_toBottomOf="@id/shimmerValue" />

    <View
        android:id="@+id/shimmerStatus"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_14dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginEnd="@dimen/dimen_43dp"
        android:background="@drawable/background_solid_cloud_100_radius_4dp"
        app:layout_constraintTop_toBottomOf="@id/shimmerInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>