<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_16dp"
    android:background="@drawable/background_solid_white_8dp_radius"
    android:contentDescription="@string/content_description_arv_historic_shimmer_card"
    android:padding="@dimen/dimen_16dp">

    <View
        android:id="@+id/shimmerTitleCard"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_77dp"
        android:background="@drawable/background_solid_cloud_100_radius_4dp"
        app:layout_constraintEnd_toStartOf="@id/shimmerIconButtonDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmerAmount"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_110dp"
        android:background="@drawable/background_solid_cloud_100_radius_4dp"
        app:layout_constraintEnd_toStartOf="@id/shimmerIconButtonDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerTitleCard" />

    <View
        android:id="@+id/shimmerDate"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:background="@drawable/background_solid_cloud_100_radius_4dp"
        app:layout_constraintEnd_toStartOf="@id/shimmerIconButtonDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerAmount" />

    <View
        android:id="@+id/shimmerStatus"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_124dp"
        android:background="@drawable/background_solid_cloud_100_radius_4dp"
        app:layout_constraintEnd_toStartOf="@id/shimmerIconButtonDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerDate" />

    <ImageView
        android:id="@+id/shimmerIconButtonDetails"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chevron_right_gray" />

</androidx.constraintlayout.widget.ConstraintLayout>