<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_EFF1F3">

    <ImageView
        android:id="@+id/ivCardBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/tvCardBrandName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCardBrandName"
        app:srcCompat="@drawable/ic_visa_regular"
        android:visibility="gone"
        android:layout_marginStart="@dimen/dimen_20dp"/>

    <TextView
        android:id="@+id/tvCardBrandName"
        style="@style/semi_bold_montserrat_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/cloud_800"
        app:layout_constraintBottom_toBottomOf="@+id/totalValueTextView"
        app:layout_constraintEnd_toStartOf="@+id/netValueTextView"
        app:layout_constraintStart_toEndOf="@+id/ivCardBrand"
        app:layout_constraintTop_toTopOf="@+id/netValueTextView"
        tools:text="Mastercard" />

    <TextView
        android:id="@+id/netValueTextView"
        style="@style/regular_montserrat_16_cloud_600"
        android:layout_width="@dimen/dimen_148dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:textColor="@color/cloud_800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="R$ 100.0000000000,00" />

    <TextView
        android:id="@+id/totalValueTextView"
        style="@style/regular_montserrat_12"
        android:textColor="@color/color_neutral_main"
        android:layout_width="@dimen/dimen_148dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/netValueTextView"
        app:layout_constraintTop_toBottomOf="@id/netValueTextView"
        app:layout_constraintEnd_toStartOf="@id/totalValueTextView"
        tools:text="R$ 100.0000000000,00" />

    <View
        android:id="@+id/barView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color_C5CED7"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/totalValueTextView"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>