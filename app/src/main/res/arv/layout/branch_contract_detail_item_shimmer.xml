<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_16dp"
    android:layout_marginTop="@dimen/dimen_16dp"
    android:background="@drawable/background_cloud_200_radius_8_dp">

    <View
        android:id="@+id/tvBranchCnpjShimmer"
        android:layout_width="@dimen/dimen_120dp"
        android:layout_height="@dimen/dimen_20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_display_50_radius_8"/>

    <View
        android:id="@+id/tvScheduleLabelShimmer"
        android:layout_width="@dimen/dimen_120dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintTop_toBottomOf="@id/tvBranchCnpjShimmer"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_display_50_radius_8" />

    <View
        android:id="@+id/tvFeeLabelShimmer"
        android:layout_width="@dimen/dimen_190dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintTop_toBottomOf="@id/tvScheduleLabelShimmer"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_display_50_radius_8" />

    <View
        android:id="@+id/tvHireDateLabelShimmer"
        android:layout_width="@dimen/dimen_190dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintTop_toBottomOf="@id/tvFeeLabelShimmer"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_display_50_radius_8"/>

</androidx.constraintlayout.widget.ConstraintLayout>