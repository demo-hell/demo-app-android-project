<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_280dp"
    android:layout_height="@dimen/dimen_170dp"
    android:layout_marginStart="@dimen/dimen_16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clUserInformation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_170dp"
        android:background="@drawable/background_solid_brand_100_radius_8dp"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitleUserInformation"
            style="@style/Heading_400_regular_14_brand_600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/anticipation_user_data_info"
            android:textFontWeight="800"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTitleUserInformation">

            <TextView
                android:id="@+id/tvNameUserInformation"
                style="@style/medium_montserrat_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:textColor="@color/brand_300"
                app:layout_constraintTop_toTopOf="parent"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Pedro Parker da Silva" />

            <TextView
                android:id="@+id/tvNumberEstablishment"
                style="@style/medium_montserrat_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/dimen_8dp"
                app:layout_constraintTop_toBottomOf="@id/tvNameUserInformation"
                tools:text="NÂº do Estabelecimento: 2012359939995" />

            <TextView
                android:id="@+id/tvCpnjEstablishment"
                style="@style/medium_montserrat_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_14dp"
                app:layout_constraintTop_toBottomOf="@id/tvNumberEstablishment"
                tools:text="CNPJ raiz: 28.208.601/0000-00" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvTitleUserInformation">

            <TextView
                android:id="@+id/tvErrorMessage"
                style="@style/Label_100_ubuntu_12_cloud_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_22dp"
                android:lineSpacingExtra="@dimen/dimen_2sp"
                android:text="@string/anticipation_me_information_error"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvReload"
                style="@style/Label_600_montserrat_14_brand_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_13dp"
                android:drawableEnd="@drawable/ic_refresh_blue"
                android:drawablePadding="@dimen/dimen_4dp"
                android:lineSpacingExtra="@dimen/dimen_2sp"
                android:text="@string/text_recharge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvErrorMessage"
                tools:ignore="UseCompatTextViewDrawableXml" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayoutUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_auto_start="true"
        app:shimmer_base_alpha="1"
        app:shimmer_highlight_alpha="0"
        tools:duration="800">

        <include layout="@layout/loading_shimmer_anticipation_values" />

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>