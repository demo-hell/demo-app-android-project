<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_stroke_cloud_50_8dp_radius"
    android:contentDescription="@string/programmed_anticipation_button"
    android:paddingVertical="@dimen/dimen_16dp"
    android:paddingStart="@dimen/dimen_16dp"
    android:paddingEnd="@dimen/dimen_10dp">

    <ImageView
        android:id="@+id/ivProgrammedIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvProgrammedTitle"
        app:srcCompat="@drawable/ic_money_rotate_plus_flui" />

    <TextView
        android:id="@+id/tvProgrammedTitle"
        style="@style/regular_400_ubuntu_16_cloud_500"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:text="@string/programmed_anticipation"
        app:layout_constraintStart_toEndOf="@id/ivProgrammedIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProgrammedType"
        style="@style/regular_ubuntu_12"
        android:textColor="@color/success_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        tools:text="@string/arv_type_scheduled_cielo_label"
        app:layout_constraintStart_toEndOf="@id/ivProgrammedIcon"
        app:layout_constraintTop_toBottomOf="@id/tvProgrammedTitle" />

    <TextView
        android:id="@+id/tvStatus"
        style="@style/regular_ubuntu_12_cloud_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/arv_status_active"
        app:layout_constraintStart_toEndOf="@id/ivProgrammedIcon"
        app:layout_constraintTop_toBottomOf="@id/tvProgrammedType" />

</androidx.constraintlayout.widget.ConstraintLayout>