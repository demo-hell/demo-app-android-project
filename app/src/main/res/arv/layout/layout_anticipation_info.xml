<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_260dp"
    android:layout_height="@dimen/dimen_170dp"
    android:layout_marginStart="@dimen/dimen_16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHistory"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_170dp"
        android:background="@drawable/background_solid_brand_100_radius_8dp"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvGrossValueTitle"
            style="@style/Heading_400_regular_14_brand_600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/available_gross_value"
            android:textFontWeight="800"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/tvCieloGrossValue"
            style="@style/medium_montserrat_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/brand_300"
            app:layout_constraintTop_toBottomOf="@id/tvGrossValueTitle"
            tools:text="R$ 999999999999910.000,00" />

        <TextView
            android:id="@+id/tvCieloTypeLabel"
            style="@style/medium_montserrat_12_cloud_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/arv_cielo_schedule_label"
            app:layout_constraintTop_toBottomOf="@id/tvCieloGrossValue" />

        <TextView
            android:id="@+id/tvMarketGrossValue"
            style="@style/medium_montserrat_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/brand_300"
            app:layout_constraintTop_toBottomOf="@id/tvCieloTypeLabel"
            tools:text="R$ 1999999999999999999990.000,00" />

        <TextView
            android:id="@+id/tvMarketTypeLabel"
            style="@style/medium_montserrat_12_cloud_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/arv_market_schedule_label"
            app:layout_constraintTop_toBottomOf="@id/tvMarketGrossValue" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_auto_start="true"
        app:shimmer_base_alpha="1"
        app:shimmer_highlight_alpha="0"
        tools:duration="800">

        <include layout="@layout/loading_shimmer_anticipation_values" />

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>