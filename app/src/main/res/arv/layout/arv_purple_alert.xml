<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/purpleAlertContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_purple_100_radius_12_dp"
    android:paddingHorizontal="@dimen/dimen_12dp">

    <ImageView
        android:id="@+id/ivPurpleAlert"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_circle_alert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivPurpleAlert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/purple_6f18bf" />

    <TextView
        android:id="@+id/tvPurpleAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3sp"
        android:padding="@dimen/dimen_16dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPurpleAlert"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/arv_purple_alert" />

</androidx.appcompat.widget.LinearLayoutCompat>