<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_detached_anticipation_gross_value_avaliable"
        style="@style/bold_ubuntu_24_alert_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="R$ 600,00"
         />

    <ImageView
        android:id="@+id/iv_warning_detached"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_detached_anticipation_gross_value_avaliable"
        app:srcCompat="@drawable/ic_warning_orange"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_simulate_detached_anticipation_liquid_label_avaliable"
        style="@style/regular_ubuntu_12_alert_500"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:text="@string/simulate_detached_anticipation_not_available"
        app:layout_constraintBottom_toBottomOf="@+id/iv_warning_detached"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_warning_detached"
        app:layout_constraintTop_toTopOf="@id/iv_warning_detached"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>