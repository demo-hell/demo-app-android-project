<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context="br.com.mobicare.cielo.arv.presentation.home.ArvHomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvArvSubtitle"
            style="@style/regular_ubuntu_16_cloud_400_spacing_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/anticipation_explanation_text"
            android:translationY="@dimen/dimen_3sp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clFullContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_32dp"
            app:layout_constraintTop_toBottomOf="@id/tvArvSubtitle">

            <HorizontalScrollView
                android:id="@+id/horizontalScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <include
                        android:id="@+id/includeAnticipationValue"
                        layout="@layout/layout_anticipation_info"
                        android:layout_width="@dimen/dimen_260dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        app:layout_constraintEnd_toStartOf="@id/includeUserInformation"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <include
                        android:id="@+id/includeUserInformation"
                        layout="@layout/layout_anticipation_user_information"
                        android:layout_width="@dimen/dimen_280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/includeAnticipationValue"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tvAnticipationTypeTitle"
                style="@style/semibold_montserrat_14_display_400_spacing_8"
                android:textColor="@color/cloud_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/anticipation_select_the_type_of"
                app:layout_constraintBottom_toTopOf="@id/anticipationTypeContainer"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScroll" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/anticipationTypeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                app:layout_constraintBottom_toTopOf="@id/divider"
                app:layout_constraintTop_toBottomOf="@+id/tvAnticipationTypeTitle">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerAnticipationType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_24dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0"
                    app:shimmer_auto_start="true"
                    app:shimmer_base_alpha="1"
                    app:shimmer_highlight_alpha="0"
                    shimmer:duration="200">

                    <include layout="@layout/loading_shimmer_anticipation_type" />

                </com.facebook.shimmer.ShimmerFrameLayout>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerScheduledAnticipationType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0"
                    app:shimmer_auto_start="true"
                    app:shimmer_base_alpha="1"
                    app:shimmer_highlight_alpha="0"
                    shimmer:duration="200">

                    <include layout="@layout/loading_shimmer_scheduled_anticipation_type" />

                </com.facebook.shimmer.ShimmerFrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clSingleAnticipationContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:background="@drawable/background_stroke_cloud_200_8dp_radius"
                    android:contentDescription="@string/single_anticipation_button"
                    android:paddingVertical="@dimen/dimen_16dp"
                    android:paddingStart="@dimen/dimen_16dp"
                    android:paddingEnd="@dimen/dimen_10dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ivIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        app:layout_constraintBottom_toBottomOf="@id/tvSingleSubtitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvSingleTitle"
                        app:srcCompat="@drawable/ic_money_sign_flui" />

                    <TextView
                        android:id="@+id/tvSingleTitle"
                        style="@style/Label_100_ubuntu_regular_16_cloud_500"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_18dp"
                        android:text="@string/single_anticipation"
                        app:layout_constraintStart_toEndOf="@id/ivIcon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvSingleSubtitle"
                        style="@style/regular_ubuntu_12_cloud_400"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_18dp"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:text="@string/single_anticipation_date_zero"
                        app:layout_constraintEnd_toStartOf="@+id/ivAction"
                        app:layout_constraintStart_toEndOf="@id/ivIcon"
                        app:layout_constraintTop_toBottomOf="@id/tvSingleTitle" />

                    <ImageView
                        android:id="@+id/ivAction"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:importantForAccessibility="no"
                        app:layout_constraintBottom_toBottomOf="@+id/tvSingleSubtitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvSingleTitle"
                        app:srcCompat="@drawable/ic_arrow_right_gray"
                        app:tint="@color/color_cloud_200" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <include
                    android:id="@+id/clScheduledAnticipationContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/layout_arv_scheduled_container"
                    app:layout_constraintTop_toBottomOf="@id/clSingleAnticipationContainer"
                    android:layout_margin="@dimen/dimen_16dp">
                </include>

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/anticipationContainersGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:constraint_referenced_ids="clSingleAnticipationContainer" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_8dp"
                android:layout_marginVertical="@dimen/dimen_24dp"
                android:background="@color/display_50"
                app:layout_constraintBottom_toTopOf="@id/anticipationHistoryInclude"
                app:layout_constraintTop_toBottomOf="@id/anticipationTypeContainer" />

            <include
                android:id="@+id/anticipationHistoryInclude"
                layout="@layout/item_anticipation_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginBottom="@dimen/dimen_40dp"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/errorInclude"
            layout="@layout/layout_generic_error_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvArvSubtitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>