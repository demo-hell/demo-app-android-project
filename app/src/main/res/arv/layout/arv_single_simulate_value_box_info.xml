<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_brand_100_radius_8"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_title_arv_simulate_value_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/regular_montserrat_14_cloud_600_spacing_3"
        android:text="@string/arv_simulate_value_available_label"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_value_arv_simulate_value_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/bold_montserrat_20_success_500_spacing_4"
        android:text="@string/arv_simulate_value_available"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_arv_simulate_value_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="R$ 900.000,00"/>

    <TextView
        android:id="@+id/tv_value_not_surpass_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/regular_montserrat_14_cloud_500_spacing_3"
        android:text="@string/arv_simulate_value_not_surpass"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_value_arv_simulate_value_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_value_not_available_brands"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/regular_montserrat_14_cloud_500_spacing_3"
        android:text="@string/arv_simulate_value_not_available_choose_brands"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_value_not_surpass_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>