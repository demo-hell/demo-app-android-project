<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f8f9"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/address_title_correios"
        android:textColor="@color/black_353A40"
        android:textSize="@dimen/dimen_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_arround"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:padding="@dimen/dimen_16dp">

        <br.com.cielo.libflue.inputtext.CieloTextInputView
            android:id="@+id/cepTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:hint="CEP (Origem)" />

        <br.com.cielo.libflue.inputtext.CieloTextInputView
            android:id="@+id/weightTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLength="8"
            android:inputType="number"
            app:hint="Peso em gramas" />
    </LinearLayout>
</LinearLayout>