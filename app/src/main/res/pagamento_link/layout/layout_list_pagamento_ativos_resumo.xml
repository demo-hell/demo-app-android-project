<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/man_list_payment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linear_view_ativos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/container_see_more_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <include
                android:id="@+id/linearSeeMoreAction"
                layout="@layout/ver_todos_links" />
        </LinearLayout>

        <include
            android:id="@+id/linearError"
            layout="@layout/linear_loan_simulation_error"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/text_not_found"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_90dp"
            android:layout_marginHorizontal="@dimen/dimen_32dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/bg_flui_rounded_border">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_34dp"
                android:fontFamily="@font/ubuntu"
                android:textColor="@color/color_5A646E"
                android:textSize="@dimen/dimen_16sp"
                android:maxLines="1"
                android:text="@string/no_active_links"
                />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="@dimen/dimen_40dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>