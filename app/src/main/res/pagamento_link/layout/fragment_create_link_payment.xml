<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/display_50"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedCreateLinKContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:paddingBottom="@dimen/dimen_20dp"
        android:scrollbarFadeDuration="2"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@id/frameCreateLinkPaymentButton"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_16dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textCreateLinkInputLabel"
                style="@style/Heading_400_Bold_16_display_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_create_link_payment_input_label"
                android:fontFamily="@font/montserrat_bold"
                />

            <br.com.cielo.libflue.inputtext.CieloTextInputView
                android:id="@+id/textInputEditCreateLinkTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:ellipsize="end"
                android:inputType="textNoSuggestions"
                android:imeOptions="actionNext"
                android:maxLength="60"
                android:maxLines="1"
                app:hint="@string/nome_do_produto"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textLinkValueLabel"
                style="@style/Heading_400_Bold_16_display_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/text_create_link_value_label"
                android:fontFamily="@font/montserrat_bold" />

            <LinearLayout
                android:id="@+id/cardCreateLinkValueInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@drawable/bg_flui_rounded_border"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Label_600_regular_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dimen_12sp"
                    android:text="@string/cifrao"
                    android:textColor="@color/display_300" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/textInputEditCreateLinkValue"
                    style="@style/Label_800_regular_28"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_12sp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="end|center_vertical"
                    android:inputType="numberDecimal"
                    android:maxLength="13"
                    android:maxLines="1"
                    android:selectAllOnFocus="true"
                    android:text="@string/text_create_link_value_hint"
                    android:textColor="@color/display_600"
                    android:textColorHint="@color/grey_c6c6c6" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Label_200_Regular_12_Brand_400"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:textColor="@color/display_400"
                android:text="@string/sale_value_range_info"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textPlusFiveShortcut"
                    style="@style/RoundedPriceButton"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_create_link_value_button_shortcut_one"
                    tools:text="@string/text_create_link_value_button_shortcut_one" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textPlusTenShortcut"
                    style="@style/RoundedPriceButton"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_create_link_value_button_shortcut_two"
                    tools:text="@string/text_create_link_value_button_shortcut_two" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textPlusFiftyShortcut"
                    style="@style/RoundedPriceButton"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_create_link_value_button_shortcut_three"
                    tools:text="@string/text_create_link_value_button_shortcut_three" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textPlusOneHundredShortcut"
                    style="@style/RoundedPriceButton"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_create_link_value_button_shortcut_four"
                    tools:text="@string/text_create_link_value_button_shortcut_four" />
            </LinearLayout>

            <include
                android:id="@+id/layoutPeriodicyCharge"
                layout="@layout/layout_periodicy_charge"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Paragraph_200_regular_12_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/text_view_contested"
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/txt_super_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Paragraph_300_bold_14_display_400"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:text="@string/link_safety_tips"
                    android:textAlignment="center"
                    android:textColor="@color/brand_400" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/frameCreateLinkPaymentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buttonAdvancedOption"
            style="@style/HelpCenterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:gravity="center"
            android:padding="@dimen/dimen_16dp"
            android:text="@string/text_advanced_options_link_button_label" />

        <br.com.cielo.libflue.button.CieloRegularBlueButton
            android:id="@+id/buttonGenerateLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/text_create_link_button_label" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <FrameLayout
        android:id="@+id/frameCreateLinkProgress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nestedCreateLinKContent">

        <include layout="@layout/frame_progress" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>