<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/bold_montserrat_16_neutral_800_spacing_4"
        android:text="@string/text_freight_cost_input_label" />

    <br.com.cielo.libflue.inputtext.CieloTextInputView
        android:id="@+id/textInputCostOfFreight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:inputType="numberDecimal"
        app:hint="@string/text_freight_cost_input_hint" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:textAppearance="@style/bold_montserrat_16_neutral_800_spacing_4"
        android:text="@string/text_freight_name_input_label" />

    <br.com.cielo.libflue.inputtext.CieloTextInputView
        android:id="@+id/textInputNameOfFreight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:inputType="textCapWords"
        app:hint="@string/text_freight_name_input_hint" />

</LinearLayout>