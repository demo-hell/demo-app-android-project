<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Heading_400_Bold_16_display_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/link_detail_sale_label"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/background_card_cielo_default"
            android:padding="@dimen/dimen_12dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDateLabel"
                style="@style/payment_link_order_details_label"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:text="@string/link_detail_sale_content_date"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/textViewDate"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDate"
                style="@style/payment_link_order_details_data"
                android:layout_marginTop="@dimen/dimen_4dp"
                tools:text="03/04/2020"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/textViewDateLabel"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewOrderLabel"
                style="@style/payment_link_order_details_label"
                android:text="@string/link_detail_sale_content_order"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewDateLabel"
                app:layout_constraintRight_toLeftOf="@id/textViewOrderData"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewOrderData"
                style="@style/payment_link_order_details_data"
                tools:text="23554912345678f"
                app:layout_constraintTop_toBottomOf="@id/textViewDate"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/textViewOrderLabel"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewPaymentWayLabel"
                style="@style/payment_link_order_details_label"
                android:text="@string/link_detail_sale_content_payment_way"
                app:layout_constraintBottom_toBottomOf="@+id/textViewPaymentWayData"
                app:layout_constraintEnd_toStartOf="@+id/textViewPaymentWayData"
                app:layout_constraintHorizontal_bias="0.071"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewPaymentWayData"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewPaymentWayData"
                style="@style/payment_link_order_details_data"
                app:layout_constraintEnd_toEndOf="@+id/textViewOrderData"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textViewOrderData"
                app:layout_constraintTop_toBottomOf="@id/textViewOrderData"
                tools:text="Cartão de Crédito" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDeliveryLabel"
                style="@style/payment_link_order_details_label"
                android:text="@string/link_detail_sale_content_delivery"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewPaymentWayLabel"
                app:layout_constraintRight_toLeftOf="@id/textViewDeliveryData"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDeliveryData"
                style="@style/payment_link_order_details_data"
                tools:text="Loggi"
                app:layout_constraintTop_toBottomOf="@id/textViewPaymentWayData"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/textViewDeliveryLabel"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTotal"
                style="@style/payment_link_order_details_label"
                android:text="@string/link_detail_sale_content_total_value"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewDeliveryLabel"
                app:layout_constraintRight_toLeftOf="@id/textViewTotalData"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTotalData"
                style="@style/payment_link_order_details_data"
                tools:text="R$ 34,00"
                app:layout_constraintTop_toBottomOf="@id/textViewDeliveryData"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/textViewTotal"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</merge>