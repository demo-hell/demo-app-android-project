<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_flui_rounded_border"
        android:layout_marginBottom="@dimen/dimen_8dp"
        app:layout_constraintTop_toTopOf="parent">

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/text_fantasy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:ellipsize="end"
            android:fontFamily="@font/ubuntu"
            android:maxWidth="340dp"
            android:maxLines="1"
            android:scrollHorizontally="false"
            tools:text="Assinatura 01 (4 pedidos)"
            android:textColor="@color/color_017CEB"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:fontFamily="@font/ubuntu_bold"
            tools:text="R$ 200,90"
            android:textColor="@color/color_353A40"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_arrow"
            app:layout_constraintEnd_toStartOf="@+id/imageView_arrow"
            app:layout_constraintTop_toTopOf="@+id/imageView_arrow" />

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/text_type_delivere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_24dp"
            android:ellipsize="end"
            android:fontFamily="@font/ubuntu"
            android:maxWidth="340dp"
            android:maxLines="1"
            android:scrollHorizontally="false"
            android:text="@string/tv_sl_entrega_via"
            android:textColor="@color/color_353A40"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_fantasy_name" />

        <ImageView
            android:id="@+id/im_type"
            android:layout_width="43dp"
            android:layout_height="13dp"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/text_type_delivere"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/text_type_delivere"
            app:layout_constraintTop_toTopOf="@+id/text_type_delivere" />

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:text="Lojista"
            android:textColor="@color/color_353A40"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/text_type_delivere"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/text_type_delivere"
            app:layout_constraintTop_toTopOf="@+id/text_type_delivere" />

        <ImageView
            android:id="@+id/imageView_arrow"
            android:layout_width="@dimen/dimen_8dp"
            android:layout_height="@dimen/dimen_18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_flui" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>