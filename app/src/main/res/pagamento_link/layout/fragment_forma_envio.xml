<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_48dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Heading_400_Bold_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_title_shipping_method"
            android:fontFamily="@font/montserrat_bold" />

        <br.com.cielo.libflue.button.CieloRadioGroup
            android:id="@+id/radioGroupView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <br.com.cielo.libflue.button.CieloRegularTextOutlineSelectRadioButton
                android:id="@+id/loggyOptionButtonView"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:tag="1"
                android:text="@string/txt_loggi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/instructionsButtonView"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:textSize="@dimen/dimen_10sp"
                android:paddingTop="@dimen/dimen_11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loggyOptionButtonView"
                tools:text="Consultar as instruções sobre gestão dos links e como solicitar a Loggi" />

            <br.com.cielo.libflue.button.CieloRegularTextOutlineSelectRadioButton
                android:id="@+id/correiosOptionButtonView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:tag="2"
                android:text="@string/txt_shipping"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/instructionsButtonView" />

            <TextView
                android:id="@+id/tvCorreiosUnavailable"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:textAppearance="@style/medium_montserrat_12_cloud_400"
                android:text="@string/pagamento_link_correios_unavailable"
                android:drawablePadding="@dimen/dimen_4dp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_symbol_info_cloud_400_16_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/correiosOptionButtonView"
                tools:visibility="visible" />

            <br.com.cielo.libflue.button.CieloRegularTextOutlineSelectRadioButton
                android:id="@+id/freightOptionsButtonView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/txt_labl_shipping_fix"
                android:tag="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCorreiosUnavailable"
                tools:layout_editor_absoluteX="@dimen/dimen_0dp" />

            <br.com.cielo.libflue.button.CieloRegularTextOutlineSelectRadioButton
                android:id="@+id/freeOptionsButtonView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/txt_free_transport"
                android:tag="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/freightOptionsButtonView"
                tools:layout_editor_absoluteX="@dimen/dimen_0dp" />

        </br.com.cielo.libflue.button.CieloRadioGroup>

    </LinearLayout>

</LinearLayout>