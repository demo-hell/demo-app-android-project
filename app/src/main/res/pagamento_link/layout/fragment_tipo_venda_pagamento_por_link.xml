<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/display_50">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView2"
        style="@style/Heading_400_Bold_16_display_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/text_link_type_text_subtitle"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toTopOf="parent" />

    <br.com.cielo.libflue.button.CieloRegularTextOutlineIconButton
        android:id="@+id/deliveryProductButtonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/text_view_finality_superlink_send_product"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2" />

    <br.com.cielo.libflue.button.CieloRegularTextOutlineIconButton
        android:id="@+id/chargeAmountButtonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/text_view_finality_superlink_charge_value"
        app:layout_constraintTop_toBottomOf="@+id/deliveryProductButtonView" />

    <br.com.cielo.libflue.button.CieloRegularTextOutlineIconButton
        android:id="@+id/recurrentSalesButtonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/text_view_finality_superlink_recurrent_sale"
        app:layout_constraintTop_toBottomOf="@+id/chargeAmountButtonView" />

</androidx.constraintlayout.widget.ConstraintLayout>