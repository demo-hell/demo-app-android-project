<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_whatsapp_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:textAppearance="@style/regular_ubuntu_16_cloud_800"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow_chev_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Gerente Virtual (das 9h Ã s 17h)" />

    <TextView
        android:id="@+id/tv_whatsapp_item_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:textAppearance="@style/regular_montserrat_16_display_300"
        android:textColor="@color/color_neutral_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow_chev_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_whatsapp_item_title"
        tools:text="Precisa falar sobre assuntos comerciais? Contate agora o Gerente Virtual." />

    <ImageView
        android:id="@+id/iv_arrow_chev_right"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_chevron_rgt"
        app:layout_constraintBottom_toBottomOf="@+id/tv_whatsapp_item_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_whatsapp_item_title"
        app:tint="@color/color_neutral_soft" />

</androidx.constraintlayout.widget.ConstraintLayout>