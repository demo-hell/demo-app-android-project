<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grey_F2F4F8"
    tools:context=".internaluser.InternalUserActivity">

    <br.com.mobicare.cielo.component.CieloToolbar
        android:id="@+id/cieloToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cielo_400"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:paddingEnd="@dimen/dimen_8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:srcCompat="@drawable/ic_user" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textToolbarMainTitle"
                style="@style/Heading_400_bold_16"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginEnd="@dimen/dimen_4dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dimen_16sp"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toEndOf="@id/appCompatImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                android:text="@string/text_name_internal_user"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </br.com.mobicare.cielo.component.CieloToolbar>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSearchTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Heading_500_Bold_18_display_500"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/cieloToolbar"
        android:text="@string/text_search_stablishment_title"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSearchSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Paragraph_300_Regular_14_Display_500"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewSearchTitle"
        android:text="@string/text_search_stablishment_subtitle"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/outline_rounded_solid_white_color_c5ced7"
        android:fontFamily="@font/ubuntu"
        android:hint="Buscar por NÂº de estabelecimento ou nome"
        android:lineSpacingExtra="6sp"
        android:paddingStart="8dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSearchSubtitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewButtonSearch"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_0dp"
        android:gravity="center"
        style="@style/Paragraph_300_Regular_14_Brand_400"
        android:textColor="@color/display_300"
        app:layout_constraintRight_toRightOf="@+id/edit_search"
        app:layout_constraintTop_toTopOf="@id/edit_search"
        app:layout_constraintBottom_toBottomOf="@id/edit_search"
        android:padding="@dimen/dimen_12dp"
        android:text="@string/text_find"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewEmptyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Label_200_Regular_12_Danger_400"
        app:layout_constraintTop_toBottomOf="@id/edit_search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:text="@string/text_search_empty_list"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmptyList"
        app:layout_constraintBottom_toTopOf="@id/progressBarLoadingMore"/>

    <ProgressBar
        android:id="@+id/progressBarLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressBarLoadingMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>