<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools"
    xmlns:tools="urn:oasis:names:tc:xliff:document:1.2">

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/my_requests_title"
            style="@style/bold_montserrat_20_cloud_600"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/my_requests_title_string"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toStartOf="@+id/help_icon"
            app:layout_constraintStart_toStartOf="@+id/navigation_icon"
            app:layout_constraintTop_toBottomOf="@id/navigation_icon"
            tools:text="@string/my_requests_title_string" />

        <Constraint
            android:id="@+id/my_requests_subtitle"
            style="@style/regular_montserrat_16_cloud_400_spacing_4"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/my_requests_subtitle_string"
            android:textAlignment="viewStart"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/help_icon"
            app:layout_constraintStart_toStartOf="@+id/my_requests_title"
            app:layout_constraintTop_toBottomOf="@id/my_requests_title"
            tools:text="@string/my_requests_subtitle_string" />

        <!-- Ignora a visibilidade para poder controlar manualmente -->
        <Constraint android:id="@+id/cl_inner_view_my_requests">
            <PropertySet app:visibilityMode="ignore" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end"
        motion:deriveConstraintsFrom="@+id/start">

        <Constraint
            android:id="@+id/my_requests_title"
            style="@style/bold_montserrat_20_cloud_600"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="@string/my_requests_title_string"
            android:textAlignment="viewStart"
            android:transformPivotX="@dimen/dimen_0dp"
            android:transformPivotY="@dimen/dimen_10sp"
            app:layout_constraintBottom_toBottomOf="@+id/navigation_icon"
            app:layout_constraintEnd_toStartOf="@id/help_icon"
            app:layout_constraintStart_toEndOf="@+id/navigation_icon"
            app:layout_constraintTop_toTopOf="@+id/navigation_icon"
            tools:text="@string/my_requests_title_string" />

        <Constraint
            android:id="@+id/my_requests_subtitle"
            style="@style/regular_montserrat_16_cloud_400_spacing_4"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/my_requests_subtitle_string"
            android:textAlignment="viewStart"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/help_icon"
            app:layout_constraintStart_toStartOf="@+id/my_requests_title"
            app:layout_constraintTop_toBottomOf="@id/my_requests_title"
            tools:text="@string/my_requests_subtitle_string" />

    </ConstraintSet>


    <Transition
        android:id="@+id/startToEnd"
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start"
        app:motionInterpolator="linear">
        <OnSwipe app:touchAnchorId="@+id/cl_inner_view_my_requests" />
    </Transition>
</MotionScene>