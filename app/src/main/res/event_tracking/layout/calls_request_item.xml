<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_call_request"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_16dp"
        app:cardElevation="@dimen/dimen_0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_16dp"
                android:theme="@style/AppMaterialComponentsNoActionBar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_call_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:ellipsize="end"
                    android:maxEms="8"
                    android:maxLines="2"
                    android:textAppearance="@style/bold_montserrat_16"
                    android:textColor="@color/neutral_dark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Cancelamento do plano Cielo controle" />


                <TextView
                    android:id="@+id/tv_call_code_label"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:text="@string/request_protocol"
                    android:textAppearance="@style/regular_montserrat_12"
                    android:textColor="@color/color_neutral_main"
                    app:layout_constraintEnd_toStartOf="@+id/tv_call_guideline_50"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_call_title" />

                <TextView
                    android:id="@+id/tv_call_code_value"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/bold_montserrat_14"
                    android:textColor="@color/neutral_dark"
                    app:layout_constraintEnd_toStartOf="@+id/tv_call_guideline_50"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_call_code_label"
                    tools:text="2123" />

                <TextView
                    android:id="@+id/tv_call_solicitation_date_label"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/request_date"
                    android:textAppearance="@style/regular_montserrat_12"
                    android:textColor="@color/color_neutral_main"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_call_guideline_50"
                    app:layout_constraintTop_toBottomOf="@+id/tv_call_title" />

                <TextView
                    android:id="@+id/tv_call_solicitation_date_value"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:textAppearance="@style/bold_montserrat_14"
                    android:textColor="@color/neutral_dark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_call_guideline_50"
                    app:layout_constraintTop_toTopOf="@+id/tv_call_code_value"
                    tools:text="16/07/2023" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_call_status_tag"
                    style="@style/Chip.Events.Status"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:ellipsize="end"
                    android:ems="3"
                    android:maxLines="1"
                    app:layout_constraintEnd_toStartOf="@+id/tv_call_guideline_50"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_call_code_value"
                    tools:text="Exemplo" />

                <TextView
                    android:id="@+id/tv_call_deadline_label"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/dimen_1sp"
                    android:maxLines="1"
                    android:text="@string/solution_deadline"
                    android:textAppearance="@style/regular_montserrat_12"
                    android:textColor="@color/color_neutral_main"
                    android:translationY="@dimen/dimen_4dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_call_deadline_value"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_call_guideline_50" />

                <TextView
                    android:id="@+id/tv_call_deadline_value"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/bold_montserrat_14"
                    android:textColor="@color/neutral_dark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_call_deadline_label"
                    tools:text="16/07/2023" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/tv_call_guideline_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.50" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>