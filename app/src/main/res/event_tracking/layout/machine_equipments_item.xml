<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/machine_detail_photo"
        android:layout_width="@dimen/dimen_130dp"
        android:layout_height="@dimen/dimen_130dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/lio_on" />

    <TextView
        android:id="@+id/machine_detail_name_value"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textAppearance="@style/bold_montserrat_16"
        android:textColor="@color/neutral_dark"
        app:layout_constraintEnd_toStartOf="@+id/machine_detail_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="LIO ON V2" />

    <TextView
        android:id="@+id/machine_detail_technical_id_value"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textAppearance="@style/semi_bold_montserrat_12"
        android:textColor="@color/neutral_dark"
        app:layout_constraintEnd_toStartOf="@+id/machine_detail_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/machine_detail_name_value"
        tools:text="ID 456789-9" />

    <TextView
        android:id="@+id/machine_detail_solicitation_type"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:ellipsize="end"
        android:text="@string/request_type"
        android:textAppearance="@style/regular_montserrat_12"
        android:textColor="@color/color_neutral_main"
        app:layout_constraintEnd_toStartOf="@+id/machine_detail_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/machine_detail_technical_id_value"
        tools:text="Tipo da solicitação" />

    <TextView
        android:id="@+id/item_machine_solicitation_type_value"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textAppearance="@style/bold_montserrat_16"
        android:textColor="@color/neutral_dark"
        app:layout_constraintEnd_toStartOf="@+id/machine_detail_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/machine_detail_solicitation_type"
        tools:text="Desinstalação" />

</androidx.constraintlayout.widget.ConstraintLayout>