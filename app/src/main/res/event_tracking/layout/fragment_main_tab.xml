<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/display_50"
    android:orientation="vertical"
    tools:context=".eventTracking.presentation.ui.MainTabFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/events_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        app:tabBackground="@drawable/view_pager_event_tab_selector"
        app:tabIndicator="@android:color/transparent"
        app:tabIndicatorFullWidth="true"
        app:tabSelectedTextColor="@color/cielo_400"
        app:tabTextAppearance="@style/Tab.Appearance.Events"
        app:tabTextColor="@color/color_cloud_600" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/event_view_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintTop_toBottomOf="@id/events_tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>