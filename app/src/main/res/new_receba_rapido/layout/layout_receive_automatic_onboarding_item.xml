<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_receive_auto_onboarding_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/tv_title_receive_auto_onboarding_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHeight_max="@dimen/dimen_272dp"
        app:layout_constraintHeight_min="@dimen/dimen_40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        android:importantForAccessibility="no"
        tools:srcCompat="@drawable/ic_ilustra" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_receive_auto_onboarding_item"
        style="@style/bold_montserrat_20_cloud_800_spacing_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/tv_subtitle_receive_auto_onboarding_item"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintTop_toBottomOf="@+id/iv_receive_auto_onboarding_item"
        app:layout_constraintVertical_bias="0"
        tools:text="@string/receive_auto_intro_title_one" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_subtitle_receive_auto_onboarding_item"
        style="@style/regular_montserrat_16_neutral_600_spacing_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_receive_auto_onboarding_item"
        app:layout_constraintVertical_bias="0"
        tools:text="@string/receive_auto_intro_description_one" />

</androidx.constraintlayout.widget.ConstraintLayout>