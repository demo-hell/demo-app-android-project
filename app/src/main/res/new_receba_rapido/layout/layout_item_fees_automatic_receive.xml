<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dimen_170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_8dp"
        app:cardElevation="@dimen/dimen_4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:strokeColor="@color/color_C5CED7"
        app:strokeWidth="@dimen/dimen_1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivBrand"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:importantForAccessibility="no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/ic_generic_brand" />

            <TextView
                android:id="@+id/tvBrandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/display_500"
                android:textSize="@dimen/dimen_14sp"
                app:layout_constraintEnd_toEndOf="@+id/ivBrand"
                app:layout_constraintStart_toStartOf="@+id/ivBrand"
                app:layout_constraintTop_toBottomOf="@id/ivBrand"
                tools:text="Hipercard" />

            <TextView
                android:id="@+id/tvCashLabel"
                style="@style/bold_ubuntu_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/text_cash_taxes_receba_rapido"
                android:textColor="@color/black_000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBrandName" />

            <TextView
                android:id="@+id/tvCashFeeValue"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="end"
                android:textColor="@color/display_heavy"
                android:textSize="@dimen/dimen_12sp"
                app:layout_constraintBottom_toBottomOf="@id/tvCashLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvCashLabel"
                app:layout_constraintTop_toTopOf="@id/tvCashLabel"
                tools:text="1,89%" />

            <TextView
                android:id="@+id/tvInstallmentLabel"
                style="@style/bold_ubuntu_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/text_installment_taxes_receba_rapido"
                android:textColor="@color/black_000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCashLabel" />

            <TextView
                android:id="@+id/tvInstallmentsTotalValue"
                style="@style/bold_ubuntu_12"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/display_heavy"
                app:layout_constraintBottom_toBottomOf="@id/tvInstallmentLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvInstallmentLabel"
                app:layout_constraintTop_toTopOf="@id/tvInstallmentLabel"
                tools:text="48x" />

            <View
                android:id="@+id/dividerInstallments"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@color/display_300"
                app:layout_constraintTop_toBottomOf="@id/tvInstallmentLabel" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvInstallments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/dividerInstallments"
                tools:itemCount="12"
                tools:listitem="@layout/layout_item_installment_automatic_receive" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>