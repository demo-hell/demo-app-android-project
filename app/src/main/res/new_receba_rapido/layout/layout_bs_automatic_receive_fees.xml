<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/feesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/regular_ubuntu_14_cloud_400_spacing_6"
            android:gravity="start"
            android:text="@string/receive_auto_bottom_sheet_subtitle"
            android:textColor="@color/display_400"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRAFees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:spanCount="2"
            tools:itemCount="4"
            android:padding="@dimen/dimen_16dp"
            tools:listitem="@layout/layout_item_fees_automatic_receive" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_description_loading"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <View
                android:layout_width="@dimen/dimen_170dp"
                android:layout_height="@dimen/dimen_170dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp" />

            <View
                android:layout_width="@dimen/dimen_170dp"
                android:layout_height="@dimen/dimen_170dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp" />

            <View
                android:layout_width="@dimen/dimen_170dp"
                android:layout_height="@dimen/dimen_170dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp" />

            <View
                android:layout_width="@dimen/dimen_170dp"
                android:layout_height="@dimen/dimen_170dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp" />

            <View
                android:layout_width="@dimen/dimen_170dp"
                android:layout_height="@dimen/dimen_170dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp" />

            <View
                android:layout_width="@dimen/dimen_170dp"
                android:layout_height="@dimen/dimen_170dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp" />

            <View
                android:layout_width="@dimen/dimen_170dp"
                android:layout_height="@dimen/dimen_170dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp" />

            <View
                android:layout_width="@dimen/dimen_170dp"
                android:layout_height="@dimen/dimen_170dp"
                android:background="@drawable/background_solid_cloud_100_radius_4dp" />

           </GridLayout>


    </com.facebook.shimmer.ShimmerFrameLayout>

    <include
        android:id="@+id/errorInclude"
        layout="@layout/layout_receive_auto_bs_error_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>