<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cloud_50"
    android:clickable="true"
    android:focusable="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_16dp"
            android:layout_marginHorizontal="@dimen/dimen_2dp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@id/container"
            app:layout_constraintEnd_toStartOf="@+id/tvFrequencyChose"
            app:layout_constraintStart_toStartOf="@id/container"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_111_receba_rapido" />


        <TextView
            android:id="@+id/tvFrequencyChose"
            style="@style/regular_montserrat_14_cloud_400_spacing_3"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="@+id/ivIcon"
            app:layout_constraintStart_toEndOf="@+id/ivIcon"
            app:layout_constraintTop_toTopOf="@+id/ivIcon"
            tools:text="@string/receive_auto_details_choose_plan_one_day" />

        <ImageView
            android:id="@+id/ivIconArrowRight"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@+id/tvFrequencyChose"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvFrequencyChose"
            app:srcCompat="@drawable/ic_chevron_right_24_cloud_400" />

        <View
            android:id="@+id/dividerGray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/cloud_200"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivIcon" />

        <View
            android:id="@+id/dividerBlue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/brand_400"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>