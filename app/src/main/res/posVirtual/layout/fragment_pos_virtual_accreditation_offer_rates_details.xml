<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cloud_0"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:paddingBottom="@dimen/dimen_32dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBrands"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="2"
        tools:listitem="@layout/layout_pos_virtual_accreditation_rates_details_card" />

    <TextView
        style="@style/bold_montserrat_14_cloud_500_spacing_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/pos_virtual_rates_details_title_receipt_of_sales" />

    <TextView
        android:id="@+id/tvPeriodDebit"
        style="@style/regular_montserrat_14_cloud_400_spacing_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_14dp"
        tools:text="Débito: em 1 dia útil" />

    <TextView
        android:id="@+id/tvPeriodCashCredit"
        style="@style/regular_montserrat_14_cloud_400_spacing_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_14dp"
        tools:text="Crédito à Vista: em 30 dias úteis" />

    <TextView
        android:id="@+id/tvPeriodInstallmentCredit"
        style="@style/regular_montserrat_14_cloud_400_spacing_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_14dp"
        tools:text="Crédito Parcelado: no vencimento de cada parcela" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCardRR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_29dp"
        android:paddingVertical="@dimen/dimen_13dp"
        android:paddingStart="@dimen/dimen_4dp"
        android:paddingEnd="@dimen/dimen_12dp">

        <ImageView
            android:id="@+id/ivIconCardRR"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_symbol_info_brand_600_24_dp"
            app:tint="@color/purple_700" />

        <TextView
            android:id="@+id/tvTitleCardRR"
            style="@style/bold_montserrat_14_contrast_1000_spacing_3"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivIconCardRR"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Contrate o Recebimento Automático em 2 dias úteis" />

        <TextView
            android:id="@+id/tvDescriptionCardRR"
            style="@style/regular_montserrat_14_contrast_1000_spacing_3"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_12dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivIconCardRR"
            app:layout_constraintTop_toBottomOf="@id/tvTitleCardRR"
            tools:text="Diminua o prazo de recebimento das vendas no crédito ao contratar o Recebimento Automático em 2 dias na tela anterior." />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvBtnOpenFAQ"
        style="@style/semi_bold_montserrat_14_brand_400_spacing_minus_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:contentDescription="@string/pos_virtual_rates_details_content_description_label_button_open_help_center"
        android:paddingVertical="@dimen/dimen_8dp"
        android:text="@string/pos_virtual_rates_details_label_button_open_help_center" />

</LinearLayout>