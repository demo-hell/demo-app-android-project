<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_8dp"
    android:paddingBottom="@dimen/dimen_16dp">

    <TextView
        android:id="@+id/tvTitleErrorOffers"
        style="@style/bold_montserrat_16_cloud_500_spacing_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:text="@string/pos_virtual_accreditation_error_title_offers"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvMessageErrorOffers"
        style="@style/regular_montserrat_16_cloud_400_spacing_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/pos_virtual_accreditation_error_message_offers"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvBtnReloadOffers"
        style="@style/semi_bold_montserrat_14_brand_400_spacing_minus_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:contentDescription="@string/pos_virtual_accreditation_content_description_button_reload_"
        android:drawablePadding="@dimen/dimen_4dp"
        android:gravity="center_vertical"
        android:text="@string/pos_virtual_accreditation_label_button_reload"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/ic_arrows_refresh_brand_400_16_dp" />

    <br.com.cielo.libflue.cardbutton.CieloCardButton
        android:id="@+id/ccbCieloTap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:icon="@drawable/ic_cielo_system_cielo_tap_cloud_400_24_dp"
        app:labelButton="@string/pos_virtual_accreditation_label_bottom_card_rates"
        app:showArrowIndicator="false"
        app:showLabelButton="true"
        app:title="@string/txt_item_cielo_tap_pos_virtual_home_title"
        tools:firstSubtitle="Débito: 7,90%"
        tools:secondSubtitle="Crédito à vista: 8,90%" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerCieloTap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:contentDescription="@string/pos_virtual_accreditation_content_description_loading_infos"
        android:visibility="gone">

        <include layout="@layout/layout_pos_virtual_accreditation_card_button_products_shimmer" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <br.com.cielo.libflue.cardbutton.CieloCardButton
        android:id="@+id/ccbSuperLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:icon="@drawable/ic_cielo_system_super_link_cloud_400_24_dp"
        app:labelButton="@string/pos_virtual_accreditation_label_bottom_card_rates"
        app:showArrowIndicator="false"
        app:showLabelButton="true"
        app:title="@string/txt_item_payment_link_pos_virtual_home_title"
        tools:firstSubtitle="Débito: 7,90%"
        tools:secondSubtitle="Crédito à vista: 8,90%" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerSuperLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:contentDescription="@string/pos_virtual_accreditation_content_description_loading_infos"
        android:visibility="gone">

        <include layout="@layout/layout_pos_virtual_accreditation_card_button_products_shimmer" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <br.com.cielo.libflue.cardbutton.CieloCardButton
        android:id="@+id/ccbQRCodePix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:icon="@drawable/ic_brand_pix_cloud_400_24_dp"
        app:showArrowIndicator="false"
        app:title="@string/txt_item_qr_code_pix_pos_virtual_home_title"
        tools:firstSubtitle="Débito: 7,90%" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerQRCodePix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:contentDescription="@string/pos_virtual_accreditation_content_description_loading_infos"
        android:visibility="gone">

        <include layout="@layout/layout_pos_virtual_accreditation_card_button_qr_code_pix_shimmer" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_8dp"
        android:layout_marginVertical="@dimen/dimen_24dp"
        android:background="@color/cloud_50" />

    <TextView
        style="@style/bold_montserrat_14_cloud_500_spacing_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:text="@string/pos_virtual_accreditation_title_automatic_receipt" />

    <TextView
        style="@style/regular_montserrat_14_cloud_500_spacing_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="@string/pos_virtual_accreditation_description_automatic_receipt" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llAcceptAutomaticReceipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginVertical="@dimen/dimen_21dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cbAcceptAutomaticReceipt"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:background="@drawable/regular_checkbox"
            android:button="@null"
            android:checked="true"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:importantForAccessibility="no" />

        <TextView
            style="@style/regular_ubuntu_16_cloud_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:importantForAccessibility="no"
            android:text="@string/pos_virtual_accreditation_label_check_box_automatic_receipt" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        style="@style/regular_montserrat_14_cloud_400_spacing_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:text="@string/pos_virtual_accreditation_alert_automatic_receipt" />

    <br.com.cielo.libflue.button.CieloRegularBlueButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_21dp"
        android:enabled="false"
        android:text="@string/continuar" />

</androidx.appcompat.widget.LinearLayoutCompat>