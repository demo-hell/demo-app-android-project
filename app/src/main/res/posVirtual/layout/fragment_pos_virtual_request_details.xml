<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".posVirtual.presentation.home.PosVirtualRequestDetailsFragment">

    <TextView
        style="@style/medium_montserrat_16_cloud_400"
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:lineSpacingExtra="@dimen/dimen_4sp"
        android:text="@string/pos_virtual_request_details_description"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/medium_montserrat_12_cloud_400"
        android:id="@+id/tvLabelService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/pos_virtual_request_details_label_service"
        app:layout_constraintTop_toBottomOf="@id/tvDescription" />

    <ImageView
        android:id="@+id/ivIconService"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="@id/tvLabelService"
        app:layout_constraintTop_toTopOf="@id/tvService"
        app:layout_constraintBottom_toBottomOf="@id/tvService"
        tools:src="@drawable/ic_cielo_system_super_link_cloud_400_24_dp" />

    <TextView
        style="@style/bold_montserrat_16_cloud_400"
        android:id="@+id/tvService"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelService"
        app:layout_constraintStart_toEndOf="@id/ivIconService"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Super Link"/>

    <TextView
        style="@style/medium_montserrat_12_cloud_400"
        android:id="@+id/tvLabelStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/pos_virtual_request_details_label_status"
        app:layout_constraintTop_toBottomOf="@id/tvService" />

    <ImageView
        android:id="@+id/ivIconStatus"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        android:importantForAccessibility="no"
        app:srcCompat="@drawable/ic_date_time_clock_alert_500_16_dp"
        app:layout_constraintStart_toStartOf="@id/tvLabelService"
        app:layout_constraintTop_toTopOf="@id/tvStatus"
        app:layout_constraintBottom_toBottomOf="@id/tvStatus" />

    <TextView
        style="@style/bold_montserrat_16_cloud_400"
        android:id="@+id/tvStatus"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:text="@string/pos_virtual_text_pending"
        app:layout_constraintTop_toBottomOf="@id/tvLabelStatus"
        app:layout_constraintStart_toEndOf="@id/ivIconStatus"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_28dp"
        android:background="@color/cloud_50"
        app:layout_constraintTop_toBottomOf="@id/tvStatus" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sectionRehabilitateService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <TextView
            style="@style/medium_montserrat_16_cloud_400"
            android:id="@+id/tvRehabilitateService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:lineSpacingExtra="@dimen/dimen_4sp"
            android:text="@string/pos_virtual_request_details_text_rehabilitate_service"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/btnCallCenter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dimen_16dp"
            android:gravity="center"
            android:background="@drawable/cielo_blue_button_view_selector"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/tvRehabilitateService">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_communication_phone_white_24_dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:importantForAccessibility="no" />

            <TextView
                style="@style/semi_bold_montserrat_16_cloud_0_spacing_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_call_center_action" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sectionGeneralInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <TextView
            style="@style/bold_montserrat_14_cloud_500"
            android:id="@+id/tvTitleGeneralInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:text="@string/pos_virtual_request_details_title_general_information"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardGeneralInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:padding="@dimen/dimen_16dp"
            android:background="@drawable/background_8dp_radius_stroke_cloud_200"
            app:layout_constraintTop_toBottomOf="@id/tvTitleGeneralInformation">

            <TextView
                style="@style/medium_montserrat_12_cloud_400"
                android:id="@+id/tvLabelMerchantNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pos_virtual_request_details_label_merchant_number"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivIconMerchantNumber"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_places_store_cloud_300_16_dp"
                app:layout_constraintStart_toStartOf="@id/tvLabelMerchantNumber"
                app:layout_constraintTop_toTopOf="@id/tvMerchantNumber"
                app:layout_constraintBottom_toBottomOf="@id/tvMerchantNumber" />

            <TextView
                style="@style/bold_montserrat_16_cloud_400"
                android:id="@+id/tvMerchantNumber"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelMerchantNumber"
                app:layout_constraintStart_toEndOf="@id/ivIconMerchantNumber"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="1234567" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>