<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_transparent_stroke_cloud_200_radius_8_dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">

    <TextView
        style="@style/bold_ubuntu_center_12_cloud_300_spacing_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_label_pos_virtual_qr_code_view_amount" />

    <TextView
        android:id="@+id/tvAmount"
        style="@style/regular_ubuntu_center_24_cloud_500_spacing_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/background_cloud_100_radius_8_dp"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingVertical="@dimen/dimen_11dp"
        tools:text="R$ 150,00" />

    <TextView
        style="@style/bold_ubuntu_center_12_cloud_300_spacing_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/txt_label_pos_virtual_qr_code_view_name" />

    <TextView
        android:id="@+id/tvName"
        style="@style/bold_ubuntu_center_16_cloud_500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        tools:text="Temporal Tintas" />

    <TextView
        style="@style/bold_ubuntu_center_12_cloud_300_spacing_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/txt_label_pos_virtual_qr_code_view_doc" />

    <TextView
        android:id="@+id/tvDoc"
        style="@style/bold_ubuntu_center_16_cloud_500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        tools:text="114.88.686/0001-21" />

</LinearLayout>