<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_transparent_stroke_cloud_200_radius_8_dp"
    android:padding="@dimen/dimen_16dp">

    <View
        android:id="@+id/viewIconShimmer"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@drawable/background_cloud_100_radius_4_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewFirstSquareShimmer"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_130dp"
        android:background="@drawable/background_cloud_100_radius_4_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewIconShimmer"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewSecondSquareShimmer"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_144dp"
        android:background="@drawable/background_cloud_100_radius_4_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewIconShimmer"
        app:layout_constraintTop_toBottomOf="@id/viewFirstSquareShimmer" />

    <View
        android:id="@+id/viewThirdSquareShimmer"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_120dp"
        android:background="@drawable/background_cloud_100_radius_4_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewIconShimmer"
        app:layout_constraintTop_toBottomOf="@id/viewSecondSquareShimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>