<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivBackButton"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_margin="@dimen/dimen_16dp"
        android:contentDescription="@string/content_description_return_button"
        android:padding="@dimen/dimen_1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_directions_arrow_left_brand_400_24_dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpOnboarding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintBottom_toTopOf="@id/ciOnboarding"
        app:layout_constraintTop_toBottomOf="@id/ivBackButton" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/ciOnboarding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        app:ci_animator="@animator/circle_indicator_animator"
        app:ci_drawable="@drawable/circle_indicator_tutorial_cancel"
        app:ci_drawable_unselected="@drawable/circle_indicator_unselected_display_200"
        app:ci_height="@dimen/dimen_8dp"
        app:ci_width="@dimen/dimen_8dp"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vpOnboarding"
        app:layout_constraintVertical_bias="1" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/cloud_200"
        app:layout_constraintBottom_toTopOf="@id/llButtons"
        app:layout_constraintTop_toBottomOf="@id/ciOnboarding" />

    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnJump"
            style="@style/semi_bold_montserrat_14_brand_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cielo_white_button_view_selector"
            android:text="@string/label_button_jump_pos_virtual_onboarding_"
            android:textColor="@color/brand_400" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:background="@color/cloud_200" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            style="@style/semi_bold_montserrat_14_brand_400"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cielo_white_button_view_selector"
            android:text="@string/label_button_next_pos_virtual_onboarding"
            android:textColor="@color/brand_400" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>