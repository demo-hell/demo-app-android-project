<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_transparent_stroke_cloud_200_radius_8_dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvErrorMessage"
        style="@style/regular_montserrat_14_cloud_400_spacing_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        tools:text="Pedimos desculpas, ocorreu um erro para carregar o seu domicÃ­lio. Por favor, recarregar." />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:background="@color/cloud_200" />

    <TextView
        android:id="@+id/tvBtnReload"
        style="@style/semi_bold_montserrat_14_brand_400_spacing_minus_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/pos_virtual_accreditation_content_description_button_reload_"
        android:gravity="center_vertical"
        android:padding="@dimen/dimen_16dp"
        android:text="@string/pos_virtual_accreditation_label_button_reload"
        app:drawableEndCompat="@drawable/ic_arrows_refresh_brand_400_24_dp" />

</LinearLayout>