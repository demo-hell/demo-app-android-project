<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_man"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_meu_cadastro">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_solucoes_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/linearMySolutionsHeader"
            android:layout_height="wrap_content">


            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/ms_tv_title_solucoes_contratadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/ms_title_solucoes_contratadas"
                style="@style/Text18sp700Black263238Bold" />

            <!-- Texto observação -->
            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/ms_tv_subtitle_solucoes_contratadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/ms_subtitle_solucoes_contratadas"
                style="@style/TextGrey12spNormal" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_view_solucoes_contratadas"
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_solucoes_contratadas" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearBrandsAndTaxes"
            android:orientation="vertical"
            android:layout_marginTop="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearMySolutionsHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/ms_tv_title_bandeiras_taxas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ms_title_bandeiras_taxas"
                android:textColor="@color/title_black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:typeface="MuseoSans-700.ttf"
                />

            <LinearLayout
                android:id="@+id/layout_rv_circle"
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:orientation="vertical">


                <br.com.mobicare.cielo.commons.presentation.utils.CustomViewPager
                    android:id="@+id/vp_bandeiras_habilitadas"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:clipToPadding="false"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                </br.com.mobicare.cielo.commons.presentation.utils.CustomViewPager>

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator_band_hab"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:animateLayoutChanges="true"
                    android:animationCache="true"
                    app:ci_drawable="@drawable/circle_indicator"
                    app:ci_drawable_unselected="@drawable/circle_indicator_unselected"  />

            </LinearLayout>


        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
