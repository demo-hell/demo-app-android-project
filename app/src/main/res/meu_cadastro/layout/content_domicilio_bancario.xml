<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_domicilio_bancario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:text="@string/meu_cadastro_domicilio_bancario"
            android:textColor="@color/text_color_263238"
            android:textSize="18sp"
            android:textStyle="bold"
            app:typeface="Museo700-Regular.ttf" />

        <LinearLayout
            android:id="@+id/layout_domicilio_bancario_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <br.com.mobicare.cielo.commons.presentation.utils.CustomViewPager
                android:id="@+id/viewpager_domicilio_bancario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

            </br.com.mobicare.cielo.commons.presentation.utils.CustomViewPager>

            <br.com.mobicare.cielo.commons.presentation.utils.CircleIndicator
                android:id="@+id/indicator_domicilio_bancario"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:ci_drawable="@drawable/circle_indicator"
                app:ci_drawable_unselected="@drawable/circle_indicator_unselected" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_domicilio_bancario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/card_corner"
            app:cardUseCompatPadding="true">

            <include
                android:id="@+id/content_item_domicilio_bancario"
                layout="@layout/content_item_domicilio_bancario" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>
</layout>
