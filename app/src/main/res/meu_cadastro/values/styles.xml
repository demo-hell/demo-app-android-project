<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="FullScreenDialogFloatinStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CardBrandTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#2B2F33</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/CardBrandTabTextAppearence</item>
    </style>

    <style name="CardBrandTabTextAppearence" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="CadastroTabLayout" parent="@style/AppTheme">
        <item name="android:singleLine">true</item>
    </style>

    <style name="CadastroTabTextAppearence" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>