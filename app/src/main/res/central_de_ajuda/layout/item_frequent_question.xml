<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardFrequentQuestionContent"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginEnd="@dimen/dimen_4dp"
    android:foreground="?selectableItemBackground"
    app:elevation="@dimen/dimen_2dp"
    app:cardCornerRadius="@dimen/dimen_16dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/dimen_12dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:minHeight="@dimen/dimen_80dp">

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/textQuestionContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxWidth="@dimen/dimen_241dp"
            style="@style/Text12sp500Display500"
            android:scrollHorizontally="false"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="3"
            tools:text="O que é o número do estabelecimento?"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>