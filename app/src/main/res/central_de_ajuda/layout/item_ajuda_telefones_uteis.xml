<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_item_ajuda_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="vertical">

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/textview_item_ajuda_telefone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="13dp"
            android:clickable="true"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:typeface="MuseoSans-700.ttf" />

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/textview_item_ajuda_telefone_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="17dp"
            android:textColor="@color/gray_light"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/textview_item_ajuda_telefone_number"
            android:ellipsize="end"
            android:textSize="13sp"
            app:typeface="MuseoSans-500.ttf" />


    </RelativeLayout>


</layout>
