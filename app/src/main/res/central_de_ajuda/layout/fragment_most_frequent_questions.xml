<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMostFrequentQuestions"
        android:layout_width="match_parent"
        tools:visibility="gone"
        android:layout_height="match_parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFrequentQuestionsLoading"
        android:layout_height="@dimen/dimen_80dp"
        style="@style/CardRoundedStyle"
        tools:visibility="visible"
        android:visibility="gone">

        <include
            android:id="@+id/frameFrequentQuestionsLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/frame_progress"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFrequentQuestionsError"
        style="@style/CardWrapHeightRoundedStyle"
        tools:visibility="visible"
        android:visibility="gone">
        <include
            android:id="@+id/linearFrequentQuestionsError"
            layout="@layout/linear_loan_simulation_error"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>