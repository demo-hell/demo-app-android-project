<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/display_50"
    tools:context=".centralDeAjuda.search.HelpCenterSearchActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etQuestionSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:maxLength="80"
            android:background="@drawable/shape_solid_white_border_color_c5ced7"
            android:drawableStart="@drawable/ic_mearchant_search"
            android:drawablePadding="@dimen/dimen_10dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_16dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingEnd="@dimen/dimen_48dp"
            android:hint="@string/central_ajuda_hint_text"
            android:theme="@style/InputHintCentralAjuda"
            android:textColorHint="@color/color_8A99A8"
            android:fontFamily="@font/ubuntu"
            android:textSize="@dimen/dimen_14sp"
            android:lineSpacingExtra="@dimen/dimen_8sp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClearSearch"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="@dimen/dimen_48dp"
            app:layout_constraintTop_toTopOf="@id/etQuestionSearch"
            app:layout_constraintBottom_toBottomOf="@id/etQuestionSearch"
            app:layout_constraintEnd_toEndOf="@id/etQuestionSearch"
            app:srcCompat="@drawable/ic_close_gray"
            android:paddingVertical="@dimen/dimen_16dp"
            android:clickable="true"
            android:focusable="true"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Paragraph_200_display_400"
            android:layout_marginVertical="@dimen/dimen_8dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/etQuestionSearch"
            android:visibility="gone"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvQuestions"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_4dp"
            android:clipChildren="false"
            android:paddingBottom="@dimen/dimen_16dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:scrollbarStyle="outsideOverlay"
            android:overScrollMode="never"
            tools:listitem="@layout/item_help_center_search_question"
            app:layout_constraintTop_toBottomOf="@id/tvResults"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <br.com.mobicare.cielo.commons.ui.widget.AlertHandlerCieloView
        android:id="@+id/errorView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:visibility="gone"
        app:cieloErrorButtonLabel="@string/text_try_again_label"
        app:cieloErrorContentImage="@drawable/ic_generic_error_image"
        app:cieloErrorMessage="@string/text_message_generic_error_information_not_loaded"
        app:cieloErrorTitle="@string/text_title_generic_error"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>