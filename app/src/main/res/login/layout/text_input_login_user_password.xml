<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.textfield.TextInputLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textInpuLayoutLoginPassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/text_new_login_password_label"
    android:textColorHint="@color/white"
    android:theme="@style/TextInputHintStyle"
    app:passwordToggleEnabled="true"
    app:passwordToggleTint="@color/color_text_common"
    tools:showIn="@layout/fragment_new_login">

    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceEditTextView
        android:id="@+id/textInputEditLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="noExcludeDescendants"
        android:imeOptions="actionDone"
        style="@style/TextInputEditCieloStyle"
        app:typeface="MuseoSans-500.ttf"
        android:background="@drawable/edit_text_shape_login"
        android:inputType="textPassword" />

</com.google.android.material.textfield.TextInputLayout>