<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="bottom">

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/textview_login_seja_cliente"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/login_seja_cliente"
            android:padding="16dp"
            android:clickable="true"
            android:textColor="@color/purple"
            android:textSize="14sp"
            app:typeface="MuseoSans-500.ttf" />

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
            android:id="@+id/textview_login_criar_usuario"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/login_criar_usuario"
            android:clickable="true"
            android:textColor="@color/purple"
            android:textSize="14sp"
            app:typeface="MuseoSans-500.ttf" />

    </LinearLayout>



</layout>
