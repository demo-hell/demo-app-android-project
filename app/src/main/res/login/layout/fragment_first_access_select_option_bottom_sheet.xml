<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_99000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_bottomsheet"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_max="@dimen/dimen_362dp"
        app:layout_constraintHeight_min="@dimen/dimen_362dp"
        app:layout_constraintHeight_percent="0.35">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvTitle"
            android:layout_width="@dimen/dimen_72dp"
            android:layout_height="@dimen/dimen_72dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:background="@drawable/ic_content_symbol_info_purple_600_72_dp"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/bold_montserrat_20_cloud_800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_18dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_18dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center_horizontal"
            android:text="@string/first_access_option_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imvTitle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSubTitle"
            style="@style/regular_montserrat_16_neutral_600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_18dp"
            android:layout_marginEnd="@dimen/dimen_18dp"
            android:layout_marginBottom="@dimen/dimen_26dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:lineHeight="@dimen/dimen_24sp"
            android:text="@string/first_access_option_subtitle"
            app:layout_constraintBottom_toTopOf="@+id/btnBackLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <br.com.cielo.libflue.button.v2.CieloButton
            android:id="@+id/btnBackLogin"
            style="@style/semibold_montserrat_16_constrast_1000"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44dp"
            android:text="@string/first_access_option_back_login"
            app:buttonType="outlined"
            android:layout_marginBottom="@dimen/dimen_12dp"
            app:layout_constraintBottom_toTopOf="@id/btnCreateAccess" />

        <br.com.cielo.libflue.button.v2.CieloButton
            android:id="@+id/btnCreateAccess"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44dp"
            android:text="@string/first_access_option_create_access"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>