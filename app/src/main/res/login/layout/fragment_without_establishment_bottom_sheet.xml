<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/content_description_return_button"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_left_brand_400_24_dp_flui" />

    <ImageView
        android:id="@+id/ivIllustration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ibBack"
        app:srcCompat="@drawable/ic_10_218_dp" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/bold_montserrat_center_18_brand_600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:lineSpacingExtra="@dimen/dimen_4dp"
        android:padding="@dimen/dimen_16dp"
        android:text="@string/without_number_ec_title"
        app:layout_constraintTop_toBottomOf="@id/ivIllustration"
        tools:text="@string/without_number_ec_title" />

    <TextView
        android:id="@+id/tvMessage"
        style="@style/Label_400_Regular_16_Ubuntu_cloud_400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dimen_4dp"
        android:padding="@dimen/dimen_16dp"
        android:text="@string/without_number_ec_subTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="@string/without_number_ec_subTitle" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/display_200"
        app:layout_constraintBottom_toTopOf="@id/btnConfirm" />

    <br.com.cielo.libflue.button.CieloRegularWhiteButton
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:background="@color/blue_0774E7"
        android:text="@string/entendi"
        android:textSize="@dimen/dimen_16sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>