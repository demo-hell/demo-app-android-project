<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameDiscoverTitleAndDescription"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:isScrollContainer="true"
    android:focusableInTouchMode="true"
    android:layout_height="wrap_content"
    tools:showIn="@layout/fragment_new_login">

    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/textLoginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="Login Cielo"
        android:textColor="@color/color_text_common"
        android:textSize="24sp"
        app:typeface="Museo700-Regular.ttf"
         />


    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/textLoginDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Entre com seus dados de acesso"
        android:textAlignment="center"
        android:textColor="@color/color_text_common"
        android:textSize="14sp"
        app:typeface="MuseoSans-500.ttf"
        />

</LinearLayout>