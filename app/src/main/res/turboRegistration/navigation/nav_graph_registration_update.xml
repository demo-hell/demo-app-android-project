<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_registration_update"
    app:startDestination="@id/nav_address">

    <fragment
        android:id="@+id/nav_address"
        android:name="br.com.mobicare.cielo.turboRegistration.presentation.address.AddressFragment"
        tools:layout="@layout/fragment_address">
        <action
            android:id="@+id/action_nav_address_to_nav_monthly_income"
            app:destination="@id/nav_monthly_income" />
    </fragment>
    <fragment
        android:id="@+id/nav_monthly_income"
        android:name="br.com.mobicare.cielo.turboRegistration.presentation.monthlyIncome.MonthlyIncomeFragment"
        tools:layout="@layout/fragment_monthly_income">
        <action
            android:id="@+id/action_nav_monthly_income_to_nav_line_business"
            app:destination="@id/nav_line_business" />
        <action
            android:id="@+id/action_nav_monthly_income_to_nav_bank_data"
            app:destination="@id/nav_bank_data" />
    </fragment>
    <fragment
        android:id="@+id/nav_line_business"
        android:name="br.com.mobicare.cielo.turboRegistration.presentation.businessSector.BusinessSectorFragment"
        tools:layout="@layout/fragment_line_business">
        <action
            android:id="@+id/action_nav_line_business_to_nav_bank_data"
            app:destination="@id/nav_bank_data" />
    </fragment>

    <fragment
        android:id="@+id/nav_bank_data"
        android:name="br.com.mobicare.cielo.turboRegistration.presentation.bankData.BankDataFragment"
        tools:layout="@layout/fragment_bank_data">
        <action
            android:id="@+id/action_nav_bank_data_to_nav_registration"
            app:destination="@id/nav_registration"
            app:popUpTo="@id/nav_bank_data"
            app:popUpToSaveState="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_registration"
        android:name="br.com.mobicare.cielo.turboRegistration.presentation.registration.RegistrationFragment"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/action_nav_registration_to_nav_error"
            app:destination="@id/nav_error"
            app:popUpTo="@id/nav_bank_data"
            app:popUpToSaveState="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_error"
        android:name="br.com.mobicare.cielo.turboRegistration.presentation.registration.ErrorFragment"
        tools:layout="@layout/fragment_error">
        <argument
            android:name="apiError"
            app:argType="string" />
    </fragment>
</navigation>