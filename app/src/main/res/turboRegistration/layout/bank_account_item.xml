<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/dimen_16dp"
    android:id="@+id/constraintLayout">

    <ImageView
        android:id="@+id/iv_icon_bank"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_gravity="center_vertical"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_bank_brand_banco_do_brasil_square" />

    <TextView
        android:id="@+id/tv_bank_name"
        style="@style/regular_ubuntu_16_cloud_500"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@id/iv_icon_bank"
        app:layout_constraintEnd_toStartOf="@id/rb_choose"
        app:layout_constraintStart_toEndOf="@id/iv_icon_bank"
        app:layout_constraintTop_toTopOf="@id/iv_icon_bank"
        tools:text="Banco do Brasil" />

    <ImageButton
        android:id="@+id/rb_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_radio_button_account_bank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>