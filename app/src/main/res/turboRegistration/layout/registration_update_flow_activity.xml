<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layoutDescription="@xml/registration_update_header_scene"
    tools:context=".turboRegistration.RegistrationUpdateNavigationFlowActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_icon"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_margin="@dimen/dimen_16dp"
            android:contentDescription="@string/content_description_return_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_direction_arrow_left" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/registration_update_title"
        style="@style/bold_montserrat_16"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAlignment="viewStart"
        android:textColor="@color/cloud_800"
        android:textSize="@dimen/dimen_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/cl_progress"
        app:layout_constraintTop_toBottomOf="@id/cl_progress"
        tools:text="@string/title_your_data" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/registration_update_subtitle"
        style="@style/bold_montserrat_16"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/subtitle_whats_your_address"
        android:textAlignment="viewStart"
        android:textColor="@color/cloud_800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/registration_update_title"
        app:layout_constraintTop_toBottomOf="@id/registration_update_title"
        tools:text="@string/subtitle_whats_your_address" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_arrow">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/pb_steps"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:background="@color/white"
            android:max="100"
            android:outlineProvider="none"
            android:visibility="visible"
            app:indicatorColor="@color/blue_0774E7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/current_step"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:trackColor="@color/cloud_100"
            app:trackCornerRadius="@dimen/dimen_16dp"
            tools:progress="25"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/current_step"
            style="@style/medium_montserrat_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/pb_steps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pb_steps"
            tools:text="1/4"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/subtitle_and_steps_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="registration_update_subtitle, cl_progress" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_update_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle_and_steps_barrier">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/hostFragmentContainer"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/nav_graph_registration_update" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.motion.widget.MotionLayout>