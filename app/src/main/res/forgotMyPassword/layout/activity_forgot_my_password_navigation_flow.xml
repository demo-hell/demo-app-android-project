<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_forgot_my_password" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/btnNext"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:navGraph="@navigation/nav_graph_forgot_my_password" />

    <br.com.cielo.libflue.button.v2.CieloButton
        android:id="@+id/btnNext"
        style="@style/Heading_400_regular_16_brand_600"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_48dp"
        app:buttonEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Redefinir senha" />

    <br.com.cielo.libflue.loading.TokenLoadingViewFlui
        android:id="@+id/loadingProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>