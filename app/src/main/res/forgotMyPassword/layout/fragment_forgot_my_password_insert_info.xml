<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:paddingVertical="@dimen/dimen_8dp">

    <TextView
        android:id="@+id/txtTitle"
        style="@style/bold_montserrat_20_cloud_800"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dimen_2sp"
        android:text="@string/txt_title_forgot_my_password_insert_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDescription"
        style="@style/regular_montserrat_16_neutral_600_spacing_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/txt_description_forgot_my_password_insert_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitle" />

    <br.com.cielo.libflue.inputtext.CieloTextInputField
        android:id="@+id/itUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:hint="@string/txt_hint_input_default_forgot_my_password_insert_info"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        app:endIconType="none"
        app:layout_constraintTop_toBottomOf="@id/txtDescription" />

    <include
        android:id="@+id/includeResponse"
        layout="@layout/view_forgot_my_password_response"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupFields"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="txtTitle, txtDescription, itUser" />

</androidx.constraintlayout.widget.ConstraintLayout>