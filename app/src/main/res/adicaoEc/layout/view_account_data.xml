<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/typefaceTextView15"
        style="@style/Heading_300_bold_14_display_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:text="@string/account_data" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp">

        <br.com.cielo.libflue.inputtext.CieloTextInputView
            android:id="@+id/inputBankName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hint="@string/bank_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewBankAgency"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/dimen_10dp"
            app:srcCompat="@drawable/ic_chevron_down" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintAccountType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp">

        <br.com.cielo.libflue.inputtext.CieloTextInputView
            android:id="@+id/inputAccountType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            app:hint="@string/item_dc_tipo_conta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewAccountType"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/dimen_10dp"
            app:srcCompat="@drawable/ic_chevron_down" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <br.com.cielo.libflue.inputtext.CieloTextInputView
        android:id="@+id/inputBankAgency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="20"
        android:maxLines="1"
        app:hint="@string/agency" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <br.com.cielo.libflue.inputtext.CieloTextInputView
            android:id="@+id/accountNumber"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_weight="2"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="20"
            android:maxLines="1"
            app:hint="@string/account_number" />

        <br.com.cielo.libflue.inputtext.CieloTextInputView
            android:id="@+id/accountDigit"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:imeOptions="actionDone"
            android:layout_weight="1"
            android:digits="QWERTYYUIOPASDFGHJKLZXCVBNM1234567890"
            android:maxLines="1"
            android:inputType="number|textCapCharacters|textNoSuggestions"
            android:maxLength="5"
            app:hint="@string/account_digit" />
    </LinearLayout>

</LinearLayout>