<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llContentFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/background_stroke_cloud_300_radius_8_dp"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_13dp">

            <TextView
                style="@style/regular_montserrat_12_cloud_600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/technical_support_predictive_battery_label_info_problem" />

            <TextView
                style="@style/bold_montserrat_16_neutral_dark_spacing_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:includeFontPadding="false"
                android:text="@string/technical_support_predictive_battery_value_info_problem" />

            <TextView
                style="@style/regular_montserrat_12_cloud_600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18dp"
                android:includeFontPadding="false"
                android:text="@string/technical_support_predictive_battery_label_info_logical_number" />

            <TextView
                android:id="@+id/tvLogicalNumber"
                style="@style/bold_montserrat_16_neutral_dark_spacing_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:includeFontPadding="false"
                tools:text="7777777" />

            <TextView
                style="@style/regular_montserrat_12_cloud_600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18dp"
                android:includeFontPadding="false"
                android:text="@string/technical_support_predictive_battery_label_info_action" />

            <TextView
                style="@style/bold_montserrat_16_neutral_dark_spacing_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:includeFontPadding="false"
                android:text="@string/technical_support_predictive_battery_value_info_action" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_8dp"
            android:layout_marginVertical="@dimen/dimen_24dp"
            android:background="@color/surface_neutral" />

        <TextView
            style="@style/bold_montserrat_14_neutral_800_spacing_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:includeFontPadding="false"
            android:text="@string/technical_support_predictive_battery_label_input_phone_number" />

        <br.com.cielo.libflue.inputtext.CieloInputText
            android:id="@+id/itPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_13dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:maxLines="1"
            android:textAppearance="@style/regular_montserrat_16_cloud_600_spacing_4"
            app:hint="@string/technical_support_predictive_battery_hint_input_phone_number" />

        <TextView
            android:id="@+id/tvMessageErrorItPhoneNumber"
            style="@style/regular_montserrat_12_danger_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_24dp"
            android:layout_marginBottom="@dimen/dimen_2dp"
            android:includeFontPadding="false"
            android:text="@string/technical_support_predictive_battery_error_message_input_phone_number"
            android:visibility="gone" />

        <TextView
            style="@style/regular_montserrat_14_contrast_1000_spacing_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_11dp"
            android:background="@drawable/background_cloud_100_radius_8_dp"
            android:padding="@dimen/dimen_16dp"
            android:text="@string/technical_support_predictive_battery_alert_message" />

    </LinearLayout>

    <br.com.cielo.libflue.loading.TokenLoadingViewFlui
        android:id="@+id/loadingProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>