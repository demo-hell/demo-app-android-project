<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dimen_16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_5A646E"
        style="@style/Paragraph_300_display_400"
        android:layout_weight="1"
        tools:text="Data da negociação"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewValue"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        style="@style/Paragraph_300_display_400"
        android:textStyle="bold"
        android:gravity="right"
        android:maxLines="1"
        android:textColor="@color/color_353A40"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/textViewLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="21/09/2019"/>

    <View
        android:id="@+id/viewLineSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@color/color_eaeef3"
        app:layout_constraintTop_toBottomOf="@id/textViewLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>