<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/custom_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/blue"
        android:text="@string/ajuda_alert_title"
        android:textSize="20sp"
        app:typeface="Museo700-Regular.ttf" />


    <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
        android:id="@+id/custom_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/text_color_263238"
        android:textSize="16sp"
        android:text="@string/ajuda_alert_description"
        app:typeface="MuseoSans-700.ttf" />

    <RadioGroup
        android:id="@+id/radio_group_ajuda_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceRadioButtonView
            android:id="@+id/radio_button_ajuda_alert_pessoa_juridica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textColor="@color/text_color_263238"
            android:paddingLeft="16dp"
            android:textSize="16sp"
            android:buttonTint="@drawable/radio_button_custom"
            android:text="@string/ajuda_alert_pessoa_juridica"
            app:typeface="MuseoSans-700.ttf" />

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceRadioButtonView
            android:id="@+id/radio_button_ajuda_alert_pessoa_fisica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_263238"
            android:paddingLeft="16dp"
            android:textSize="16sp"
            android:buttonTint="@drawable/radio_button_custom"
            android:text="@string/ajuda_alert_pessoa_fisica"
            app:typeface="MuseoSans-700.ttf" />

    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceButtonView
            android:id="@+id/custom_dialog_button_prosseguir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:textColor="@color/purple"
            android:textSize="14sp"
            android:text="@string/ajuda_alert_proximo"
            app:typeface="MuseoSans-700.ttf" />

        <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceButtonView
            android:id="@+id/custom_dialog_button_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/custom_dialog_button_prosseguir"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:textColor="@color/purple"
            android:text="@string/ajuda_alert_cancelar"
            android:textSize="14sp"
            app:typeface="MuseoSans-700.ttf" />


    </RelativeLayout>


</LinearLayout>