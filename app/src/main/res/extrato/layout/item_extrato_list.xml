<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_item_extrato_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.2"
            android:background="@color/gray_light" />

        <LinearLayout
            android:id="@+id/layout_item_extrato_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/item_shape"
            android:orientation="horizontal">

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/textview_item_extrato_list_date"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_263238"
                android:textAllCaps="true"
                android:text="21 ABR"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="16dp"
                app:typeface="MuseoSans-700.ttf" />

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/textview_item_extrato_list_quantity"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_263238"
                android:text="15 vendas"
                android:gravity="left"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:typeface="MuseoSans-500.ttf" />

            <RelativeLayout
                android:id="@+id/layout_item_extrato_content"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content">

                <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                    android:id="@+id/textview_item_extrato_list_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/imageview_item_list"
                    android:textColor="@color/text_color_263238"
                    android:layout_centerInParent="true"
                    android:text="R$ 7.000,00"
                    android:textSize="14sp"
                    app:typeface="MuseoSans-700.ttf" />

                <ImageView
                    android:id="@+id/imageview_item_list"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/ic_arrow" />


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
</layout>
