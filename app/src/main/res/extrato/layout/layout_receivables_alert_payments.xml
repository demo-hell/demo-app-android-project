<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_card_expansivel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/card_background"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Título do card -->
    <LinearLayout
        android:id="@+id/layout_card_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_alert_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/imageview_warning" />

        <TextView
            android:id="@+id/textview_card_titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dimen_22dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/title_receivables_payments_credit"
            android:lineHeight="20dp"
            android:textColor="@android:color/black"
            android:textFontWeight="700"
            android:textSize="14sp" />

        <!-- Seta de expansão -->
        <ImageView
            android:id="@+id/imageview_expander"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="Expandir"
            android:src="@drawable/ic_arrow_down_tax" />

    </LinearLayout>

    <!-- Descrição do card (inicialmente invisível) -->
    <LinearLayout
        android:id="@+id/layout_card_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textview_card_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_55dp"
            android:layout_marginEnd="@dimen/dimen_44dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/body_receivables_payments"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textFontWeight="500"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>