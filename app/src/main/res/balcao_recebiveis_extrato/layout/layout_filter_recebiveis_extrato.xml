<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/et_date_init"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_date_end"
            android:background="@drawable/date_white_filter_arround"
            android:paddingEnd="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date_init"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:hint="@string/filter_calendar_init"
                style="@style/TextBlack14spUbuntuRegular_353A40"
                android:drawableEnd="@drawable/ic_calendar"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/et_date_end"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/et_date_init"
            android:layout_marginEnd="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/date_white_filter_arround"
            android:layout_marginBottom="@dimen/dimen_10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date_end"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                style="@style/TextBlack14spUbuntuRegular_353A40"
                android:hint="@string/filter_calendar_end"
                android:drawableEnd="@drawable/ic_calendar"
                android:paddingEnd="@dimen/dimen_10dp"/>
        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>