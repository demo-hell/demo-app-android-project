<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/layoutCard"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_brand_pix_square"/>

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewCnpjCpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Paragraph_300_display_300"
        android:textSize="@dimen/dimen_12sp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        app:layout_constraintTop_toTopOf="@id/layoutCard"
        app:layout_constraintLeft_toRightOf="@id/layoutCard"
        app:layout_constraintBottom_toTopOf="@id/textViewType"
        tools:text="01.027.058/0001"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Paragraph_300_display_400"
        android:textColor="@color/color_231F20"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintLeft_toRightOf="@id/layoutCard"
        app:layout_constraintBottom_toBottomOf="@id/layoutCard"
        app:layout_constraintTop_toBottomOf="@id/textViewCnpjCpf"
        tools:text="Mastercard"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        style="@style/Paragraph_400_Regular_16_display_400"
        android:textColor="@color/color_017CEB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageViewArrowDown"
        app:layout_constraintBottom_toTopOf="@id/textViewTax"
        tools:text="R$ 100,00"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        style="@style/TextGray12spUbuntuRegular_5A646E"
        android:layout_marginLeft="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageViewArrowDown"
        app:layout_constraintTop_toBottomOf="@id/textViewValue"
        tools:text="Taxa 2,4%"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewArrowDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        app:srcCompat="@drawable/ic_extract_arrow_down"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/viewLineSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_EAEEF3"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayoutContent" />

</androidx.constraintlayout.widget.ConstraintLayout>