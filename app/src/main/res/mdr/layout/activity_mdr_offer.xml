<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <br.com.cielo.libflue.collapsingToolbarLayout.CieloCollapsingToolbarLayout
        android:id="@+id/cieloCollapsingToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttonLayout"
        android:layout_marginBottom="@dimen/dimen_negative_20dp">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMdrSubtitle"
                    style="@style/medium_montserrat_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/mdr_offer_description" />

                <TextView
                    android:id="@+id/tvTaxTitle"
                    style="@style/semi_bold_montserrat_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:text="@string/mdr_offer_fee_title"
                    android:textColor="@color/cloud_800"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dimen_16dp"
                    android:paddingBottom="@dimen/dimen_40dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTaxTitle"
                    tools:ignore="RtlSymmetry"
                    tools:itemCount="3"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/brands_tax_mdr_item" />

                <LinearLayout
                    android:id="@+id/averageRentViewGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvAverageRent"
                        style="@style/bold_montserrat_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/dimen_24dp"
                        android:text="@string/mdr_offer_average_rent"
                        android:textColor="@color/cloud_500" />

                    <TextView
                        android:id="@+id/tvAverageRentValue"
                        style="@style/bold_montserrat_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:textColor="@color/brand_400"
                        tools:text="@string/mdr_offer_average_rent_value" />

                    <TextView
                        android:id="@+id/tvEquipmentQuantityTitle"
                        style="@style/bold_montserrat_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:text="@string/mdr_offer_available_for_use_title"
                        android:textColor="@color/cloud_500" />

                    <TextView
                        android:id="@+id/tvEquipmentQuantityValue"
                        style="@style/bold_montserrat_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:textColor="@color/brand_400"
                        android:translationY="@dimen/dimen_3sp"
                        tools:text="4 Maquininhas" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/receiveAutomaticViewGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvReceiveAutomaticTitle"
                        style="@style/bold_montserrat_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/dimen_17dp"
                        android:text="@string/mdr_offer_fee_receive_automatic_title"
                        android:textColor="@color/cloud_500" />

                    <TextView
                        android:id="@+id/tvOfferCashCredit"
                        style="@style/semi_bold_montserrat_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:textColor="@color/neutral_600"
                        tools:text="@string/mdr_offer_cash_credit" />

                    <TextView
                        android:id="@+id/tvOfferInstallmentCredit"
                        style="@style/semi_bold_montserrat_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:textColor="@color/neutral_600"
                        tools:text="@string/mdr_offer_installment_credit" />

                </LinearLayout>

                <br.com.cielo.libflue.card.CieloCardInformation
                    android:id="@+id/cieloOfferAlert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    app:cardInformationType="note"
                    app:cardText="@string/mdr_offer_alert_postponed" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </br.com.cielo.libflue.collapsingToolbarLayout.CieloCollapsingToolbarLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/transparent_90"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingVertical="@dimen/dimen_20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDecline"
            style="@style/semi_bold_montserrat_center_16_brand_400_spacing_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_12dp"
            android:background="@drawable/background_white_stroke_1_5_dp_cielo_accent_500_radius_1000_dp"
            android:stateListAnimator="@null"
            android:text="@string/mdr_offer_button_do_not_show_again" />

        <br.com.cielo.libflue.button.CieloLargeBlueButton
            android:id="@+id/btnAccept"
            style="@style/semi_bold_montserrat_center_16_brand_400_spacing_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mdr_offer_button_accept" />
    </LinearLayout>

    <br.com.cielo.libflue.screen.HandlerViewFluiV2
        android:id="@+id/customHandlerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:backImage="@drawable/ic_direction_arrow_left"
        app:backgroundButtonContained="@drawable/button_background_selector_brand_400"
        app:headerImage="@drawable/ic_symbol_close_brand_400_24_dp"
        app:isShowContainerButton="true"
        app:labelColorButtonContained="@color/white"
        app:labelColorButtonOutlined="@color/brand_400"
        app:message="@string/commons_generic_error_message"
        app:messageStyle="@style/medium_montserrat_16_cloud_400"
        app:title="@string/commons_generic_error_title"
        app:titleStyle="@style/bold_montserrat_20_cloud_600_spacing_8" />

    <br.com.cielo.libflue.loading.TokenLoadingViewFlui
        android:id="@+id/animatedProgressView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>



