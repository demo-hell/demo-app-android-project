<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/color_99000000">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_550dp"
    android:background="@drawable/background_welcome_notification"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintVertical_bias="0"
    android:padding="@dimen/dimen_16dp">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/ic_drag_bottom_sheet" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Heading_500_Bold_18_display_600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:ellipsize="end"
        android:text="@string/account_selector_title"
        android:textSize="@dimen/dimen_16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAccounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnNext"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintVertical_bias="0"
        tools:itemCount="3"
        tools:listitem="@layout/account_item_radio_button" />

    <br.com.cielo.libflue.button.CieloLargeBlueButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_alignParentBottom="true"
        android:text="@string/confirmar" />

</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
