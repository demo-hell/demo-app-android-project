<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_99000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_welcome_notification">

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_4dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/ic_drag_bottom_sheet"
            android:padding="@dimen/dimen_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBottomSheetTitle"
            style="@style/label_18_display_500_montserrat_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:text="@string/tap_on_phone_sale_total_select_installments_quantity"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvInstallmentQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:isScrollContainer="true"
            android:nestedScrollingEnabled="true"
            android:paddingStart="@dimen/dimen_16dp"
            app:layout_constraintBottom_toTopOf="@id/btConfirm"
            app:layout_constraintTop_toBottomOf="@+id/tvBottomSheetTitle"
            app:layout_constraintVertical_bias="0"
            tools:ignore="RtlSymmetry"
            tools:itemCount="05"
            tools:listitem="@layout/layout_tap_on_phone_choose_installments_item" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btConfirm"
            style="@style/Heading_500_18"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:background="@drawable/button_full_width_brand_selector"
            android:enabled="false"
            android:text="@string/confirmar"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>