<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPaymentTitle"
            style="@style/Heading_600_regular_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:text="@string/tap_on_phone_select_the_payment_type"
            android:textColor="@color/brand_600"
            app:layout_constraintTop_toTopOf="parent" />

        <br.com.cielo.libflue.field.TextFieldFlui
            android:id="@+id/tvTotalValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:focusable="false"
            android:paddingHorizontal="@dimen/dimen_16dp"
            app:hintTopText="@string/text_view_sales_detail_item_sales_value"
            app:iconAction="@drawable/ic_edit"
            app:iconActionContentDescription="@string/description_accessibility_sale_value"
            app:isShowAction="true"
            app:isShowHintTop="true"
            app:isShowPrefix="true"
            app:layout_constraintTop_toBottomOf="@id/tvPaymentTitle"
            app:maskTextField="money"
            app:prefixTextMargin="@dimen/dimen_0dp"
            app:prefixTextStyle="@style/Prefix_text_field_brand_400"
            app:textStyle="@style/Text_field_flui_brand_400_size_24" />

        <br.com.cielo.libflue.card.CieloCardInformation
            android:id="@+id/cardInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            app:cardInformationType="information"
            app:cardText="@string/tap_on_phone_informative_card_reader"
            app:layout_constraintTop_toBottomOf="@id/tvTotalValue" />

        <View
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@color/display_50"
            app:layout_constraintTop_toBottomOf="@id/cardInformation" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/Label_400_bold_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:text="@string/tap_on_phone_payment_type_client"
            android:textColor="@color/cloud_400"
            app:layout_constraintTop_toBottomOf="@id/dividerView" />

        <include
            android:id="@+id/tvRadioButtonInclude"
            layout="@layout/layout_payment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>