<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintBottom_toTopOf="@+id/containerFooter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="55dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dimen_16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/Heading_600_regular_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:text="@string/tap_on_phone_almost_finished"
                android:textColor="@color/brand_600"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubTitle"
                style="@style/Paragraph_400_Regular_16_display_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/tap_on_phone_review_information"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTaxesLabel"
                style="@style/Heading_300_bold_14_display_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/tap_on_phone_sales_fees"
                app:layout_constraintTop_toBottomOf="@id/tvSubTitle" />

            <include
                android:id="@+id/offer"
                layout="@layout/layout_offer_fees_tap_on_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@id/tvTaxesLabel"
                tools:layout_editor_absoluteX="16dp" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/btnSeeMoreDetailsShimmer"
                android:layout_width="@dimen/dimen_148dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/tvReceivingObservation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/offer"
                tools:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shimmer_background" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnSeeMoreDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:drawableEnd="@drawable/ic_chevron_right_blue_flui"
                android:drawablePadding="@dimen/dimen_4dp"
                android:enabled="false"
                android:text="@string/tap_on_phone_see_installments_fees"
                android:textAppearance="@style/semi_bold_montserrat_14_brand_400"
                android:textColor="@color/brand_400"
                android:textSize="@dimen/dimen_14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/tvReceivingObservation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/offer"
                tools:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnReloadOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:drawableEnd="@drawable/ic_refresh_blue"
                android:drawablePadding="@dimen/dimen_4dp"
                android:enabled="false"
                android:text="@string/bt_reload"
                android:textAppearance="@style/semi_bold_montserrat_14_brand_400"
                android:textColor="@color/brand_400"
                android:textSize="@dimen/dimen_14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/tvReceivingObservation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/offer"
                tools:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvReceivingObservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:lineSpacingExtra="@dimen/dimen_1sp"
                android:textAppearance="@style/medium_montserrat_12_cloud_400"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/btnSeeMoreDetails"
                tools:text="* Receba em até 2 dias"
                tools:textAppearance="@style/regular_montserrat_12_cloud_400" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@color/cloud_50"
                app:layout_constraintTop_toBottomOf="@id/tvReceivingObservation" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvReceivingTitle"
                style="@style/bold_montserrat_14_cloud_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/dimen_3sp"
                app:layout_constraintTop_toBottomOf="@id/divider"
                tools:text="Deseja contratar o Recebimento Automático em 2 dias?" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvReceivingDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/dimen_3sp"
                android:text="@string/tap_on_phone_receiving_description"
                android:textAppearance="@style/medium_montserrat_14_cloud_400"
                app:layout_constraintTop_toBottomOf="@id/tvReceivingTitle"
                tools:textAppearance="@style/regular_montserrat_14_cloud_400" />

            <LinearLayout
                android:id="@+id/containerReceivingAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvReceivingDescription">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbReceivingAgree"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:background="@drawable/regular_checkbox"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:importantForAccessibility="no" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/regular_ubuntu_16_cloud_400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:importantForAccessibility="no"
                    android:text="@string/tap_on_phone_receiving_checkbox_description"
                    tools:ignore="InefficientWeight" />

            </LinearLayout>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupAutomaticReceiptOptional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="containerReceivingAgree, tvReceivingDescription, tvReceivingTitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAccountSelectedLabel"
                style="@style/Heading_300_bold_14_display_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/tap_on_phone_receiving"
                app:layout_constraintTop_toBottomOf="@id/containerReceivingAgree" />

            <include
                android:id="@+id/account"
                layout="@layout/layout_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@id/tvAccountSelectedLabel" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/btnAccountsShimmer"
                android:layout_width="@dimen/dimen_272dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/account"
                tools:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shimmer_background" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnAccounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:drawableEnd="@drawable/ic_chevron_right_blue_flui"
                android:drawablePadding="@dimen/dimen_4dp"
                android:enabled="false"
                android:text="@string/tap_on_phone_select_account_button_label"
                android:textAppearance="@style/semi_bold_montserrat_14_brand_400"
                android:textColor="@color/brand_400"
                android:textSize="@dimen/dimen_14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/account"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnAccountsReload"
                style="@style/Heading_500_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:drawableEnd="@drawable/ic_refresh_blue"
                android:drawablePadding="@dimen/dimen_16dp"
                android:enabled="false"
                android:text="@string/bt_reload"
                android:textColor="@color/brand_400"
                android:textSize="@dimen/dimen_14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/account"
                tools:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/containerFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <br.com.cielo.libflue.button.CieloRegularBlueButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:enabled="false"
            android:text="@string/text_next_label" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>