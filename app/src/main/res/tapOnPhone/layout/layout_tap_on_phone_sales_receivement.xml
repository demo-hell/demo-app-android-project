<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_8dp_radius_stroke_cloud_200"
    android:paddingVertical="@dimen/dimen_18dp">

    <ImageView
        android:id="@+id/ivRRIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_19dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/tvCreditWithInstallmentTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDebit"
        app:srcCompat="@drawable/ic_receba_rapido_flui" />

    <TextView
        android:id="@+id/tvDebit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:fontFamily="@font/ubuntu"
        android:textColor="@color/display_400"
        android:text="@string/tap_on_phone_rr_receivement_debit"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintStart_toEndOf="@+id/ivRRIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCreditAtOnceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_9dp"
        android:fontFamily="@font/ubuntu"
        android:text="@string/credit_at_once"
        android:textColor="@color/display_400"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintStart_toEndOf="@+id/ivRRIcon"
        app:layout_constraintTop_toBottomOf="@id/tvDebit" />

    <TextView
        android:id="@+id/tvCreditAtOnceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/dimen_9dp"
        android:fontFamily="@font/ubuntu"
        android:textColor="@color/display_400"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintStart_toEndOf="@id/tvCreditAtOnceTitle"
        app:layout_constraintTop_toBottomOf="@id/tvDebit"
        tools:text="em 2 dias úteis" />

    <TextView
        android:id="@+id/tvCreditWithInstallmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_9dp"
        android:fontFamily="@font/ubuntu"
        android:text="@string/credit_with_installments"
        android:textSize="@dimen/dimen_14sp"
        android:textColor="@color/display_400"
        app:layout_constraintStart_toEndOf="@+id/ivRRIcon"
        app:layout_constraintTop_toBottomOf="@id/tvCreditAtOnceTitle" />

    <TextView
        android:id="@+id/tvCreditWithInstallmentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/dimen_9dp"
        android:fontFamily="@font/ubuntu"
        android:textSize="@dimen/dimen_14sp"
        android:textColor="@color/display_400"
        app:layout_constraintStart_toEndOf="@+id/tvCreditWithInstallmentTitle"
        app:layout_constraintTop_toBottomOf="@id/tvCreditAtOnceTitle"
        tools:text="em 2 dias úteis" />

</androidx.constraintlayout.widget.ConstraintLayout>