<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_400"
    android:paddingHorizontal="@dimen/dimen_16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContainerReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_marginVertical="@dimen/dimen_16dp"
            android:contentDescription="@string/description_accessibility_close_button"
            android:padding="@dimen/dimen_5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:srcCompat="@drawable/ic_close_white" />

        <include
            android:id="@+id/includeReceipt"
            layout="@layout/layout_tap_on_phone_receipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivClose"
            android:layout_marginTop="@dimen/dimen_30dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btShareReceipt"
        style="@style/Label_400_Alternate_16_display_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginVertical="@dimen/dimen_24dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:background="@drawable/background_stroke_white_radius_8dp"
        android:text="@string/extrato_menu_shared"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btNewSale"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btNewSale"
        style="@style/Label_400_Alternate_16_display_400"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginVertical="@dimen/dimen_24dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:background="@drawable/shape_round_square_button"
        android:contentDescription="@string/ec_switch_button_description_home"
        android:text="@string/tap_on_phone_payment_new_sale"
        android:textAllCaps="false"
        android:textColor="@color/brand_400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintStart_toEndOf="@+id/btShareReceipt" />

</androidx.constraintlayout.widget.ConstraintLayout>