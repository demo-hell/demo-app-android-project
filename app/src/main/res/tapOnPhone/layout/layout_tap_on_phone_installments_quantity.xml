<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_round_8dp_radius_cloud_50"
    android:paddingHorizontal="@dimen/dimen_12dp"
    android:paddingTop="@dimen/dimen_12dp"
    android:paddingBottom="@dimen/dimen_16dp">

    <TextView
        android:id="@+id/tvInstallments"
        style="@style/Label_200_Regular_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tap_on_phone_sale_total_installments_quantity"
        android:textColor="@color/cloud_400"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivCardIcon"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInstallments"
        app:srcCompat="@drawable/ic_credit_card_new"
        app:tint="@color/primary" />

    <TextView
        android:id="@+id/tvPaymentInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        style="@style/Label_400_Regular_16"
        android:textColor="@color/brand_400"
        app:layout_constraintBottom_toBottomOf="@+id/ivCardIcon"
        app:layout_constraintStart_toEndOf="@id/ivCardIcon"
        app:layout_constraintTop_toBottomOf="@id/tvInstallments"
        tools:text="2x de R$ 75,00" />

    <ImageView
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_15dp"
        android:contentDescription="@string/description_accessibility_edit_installment_quantity"
        android:importantForAccessibility="yes"
        app:layout_constraintBottom_toBottomOf="@+id/tvPaymentInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPaymentInfo"
        app:srcCompat="@drawable/ic_arrow_end"
        app:tint="@color/primary" />

</androidx.constraintlayout.widget.ConstraintLayout>