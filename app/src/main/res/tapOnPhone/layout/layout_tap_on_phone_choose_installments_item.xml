<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/rbValue"
        style="@style/Paragraph_400_regular_16_display_300"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@drawable/default_custom_selector_radio_button_padding"
        android:layoutDirection="rtl"
        android:paddingVertical="@dimen/dimen_18dp"
        android:textColor="@color/cloud_400"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2x de R$ 75,00" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:background="@color/color_cloud_200"
        app:layout_constraintTop_toBottomOf="@id/rbValue" />

</androidx.constraintlayout.widget.ConstraintLayout>
