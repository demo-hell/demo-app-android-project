<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/radioGroupAccountType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbDebit"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_radius8dp_stroke_gray_204986"
            android:button="@drawable/default_custom_selector_radio_button_padding"
            android:drawableEnd="@drawable/ic_money_real"
            android:drawablePadding="@dimen/dimen_16dp"
            android:layoutDirection="rtl"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_24dp"
            android:text="@string/tv_mtv_debito"
            android:textColor="@color/display_500" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbCreditAtOnce"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/background_radius8dp_stroke_gray_204986"
            android:button="@drawable/default_custom_selector_radio_button_padding"
            android:drawableEnd="@drawable/ic_credit_card_hand"
            android:drawablePadding="@dimen/dimen_16dp"
            android:layoutDirection="rtl"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:paddingVertical="@dimen/dimen_20dp"
            android:text="@string/text_view_credit_on_cash_label" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbInstallment"
            style="@style/Paragraph_400_regular_16_display_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/background_radius8dp_stroke_gray_204986"
            android:button="@drawable/default_custom_selector_radio_button_padding"
            android:drawableEnd="@drawable/ic_double_card"
            android:drawablePadding="@dimen/dimen_14dp"
            android:layoutDirection="rtl"
            android:paddingHorizontal="@dimen/dimen_20dp"
            android:paddingVertical="@dimen/dimen_28dp"
            android:text="@string/tap_on_phone_credit_installment_sale" />

        <include
            android:id="@+id/includeInstallmentsInfo"
            layout="@layout/layout_tap_on_phone_installments_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_32dp"
            android:visibility="gone" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>
