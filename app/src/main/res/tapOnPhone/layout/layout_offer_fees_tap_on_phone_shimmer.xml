<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/ivPercentageShimmer"
        android:layout_width="@dimen/dimen_32dp"
        android:layout_height="@dimen/dimen_32dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAccessibility="no"
        android:background="@drawable/shimmer_background"/>

    <View
        android:id="@+id/tvDebitTaxLabelShimmer"
        style="@style/Label_300_Regular_14_display_400"
        android:layout_width="@dimen/dimen_98dp"
        android:layout_height="@dimen/dimen_14dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/shimmer_background"
        app:layout_constraintStart_toEndOf="@id/ivPercentageShimmer"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tvCreditTaxLabelShimmer"
        android:layout_width="@dimen/dimen_114dp"
        android:layout_height="@dimen/dimen_14dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/shimmer_background"
        style="@style/Label_300_Regular_14_display_400"
        app:layout_constraintStart_toEndOf="@+id/ivPercentageShimmer"
        app:layout_constraintTop_toBottomOf="@id/tvDebitTaxLabelShimmer" />

    <View
        android:id="@+id/tvTermLabelShimmer"
        android:layout_width="@dimen/dimen_230dp"
        android:layout_height="@dimen/dimen_14dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/shimmer_background"
        style="@style/Label_300_Regular_14_display_400"
        app:layout_constraintStart_toEndOf="@+id/ivPercentageShimmer"
        app:layout_constraintTop_toBottomOf="@id/tvCreditTaxLabelShimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>