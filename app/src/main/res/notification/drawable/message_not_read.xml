<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <gradient
        android:type="radial"
        android:startColor="#00aeef"
        android:endColor="#2cd3c9"
        android:gradientRadius="40dp"
        android:angle="270"
        android:centerX=".5"
        android:centerY=".5"/>


    <stroke
        android:width="1dp"
        android:color="#ffffff"/>

    <size
        android:width="15dp"
        android:height="15dp"/>
