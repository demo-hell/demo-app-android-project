<?xml version="1.0" encoding="utf-8"?><!-- card conta correte -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_first"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="4dp"
    android:visibility="visible"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon_taxas_bandeiras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/iv_conta_banner"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_appicon" />

        <ListView
            android:id="@+id/lv_quantidade_parcelas"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:divider="@null"
            tools:listitem="@layout/item_taxas_bandeiras_qtd_parcelas" />

        <LinearLayout
            android:id="@+id/layout_load_more"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_838383" />

            <br.com.mobicare.cielo.commons.presentation.utils.custom.TypefaceTextView
                android:id="@+id/db_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tv_item_tx_bandeiras_ver_mais"
                android:textColor="@color/blue"
                android:textSize="11sp"
                android:textStyle="bold"
                app:typeface="MuseoSans-500.ttf" />

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
